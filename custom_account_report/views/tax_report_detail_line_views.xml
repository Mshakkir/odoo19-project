<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_report_detail_list" model="ir.ui.view">
        <field name="name">tax.report.detail.list</field>
        <field name="model">tax.report.detail.line</field>
        <field name="arch" type="xml">
            <list string="Tax Report Summary" create="false" delete="false">
                <field name="type" />
                <!-- hide tax_id for summary rows -->
                <field name="tax_id" options="{'no_create': True}" attrs="{'invisible': [('is_summary_row','=',True)]}"/>
                <!-- tax_name always visible (will show "Total Sales", etc.) -->
                <field name="tax_name"/>
                <!-- show base_amount for both detail and summary -->
                <field name="base_amount"/>
                <field name="tax_amount"/>
                <!-- Show Invoices button visible only when NOT summary AND there are moves -->
<!--                <button name="open_moves" type="object" string="Show Invoices"-->
<!--                        attrs="{'invisible': ['|', ('is_summary_row','=',True), ('move_ids','=',False)]}"/>-->
            </list>
        </field>
    </record>
</odoo>




