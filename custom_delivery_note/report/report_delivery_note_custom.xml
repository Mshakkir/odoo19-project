<odoo>
    <template id="custom_delivery_note" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="header"
                             style="border:2px solid white; border-radius: 6px; background: white; margin-bottom: 15px;">

                            <!-- Company Names in One Row -->
                            <table style="width: 100%; border-collapse: collapse;border:none">
                                <tr>
                                    <td style="width: 50%; padding: 10px 20px; text-align: left; vertical-align: middle; border-bottom: 0px solid white;border-top: 0px solid white;border-right: 0px solid white;border-left: 0px solid white;padding-left:0px;">
                                        <div style="color: #8B1538; font-size: 16px; font-weight: bold; text-transform: uppercase;">
                                            SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                        </div>
                                    </td>
                                    <td style="width: 50%; padding: 10px 20px; text-align: right; vertical-align: middle; border-bottom: 0px solid white;border-top: 0px solid white;border-right: 0px solid white;border-left: 0px solid white;padding-right:0px;">
                                        <div style="color: #8B1538; font-size: 17px; font-weight: 900; direction: rtl; font-family: 'Tajawal', sans-serif;"
                                             class="arabic-word">
                                            شركة سمير شرف العتيبي التجارية
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            <!-- Details and Logo Row -->
                            <table style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <!-- Left Column: English Info -->
                                    <td style="width: 33%; text-align: left; font-size: 16px; color: #333; vertical-align: top;
                        border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;padding-top:0px;padding-left:0px;">
                                        <div style="line-height: 1.3; font-weight: 500;padding-left:0px;padding-top:0px;margin-top:0px;">
                                            C.R. 4030216154
                                            <br/>
                                            VAT Regd: 311299944700003
                                        </div>
                                    </td>

                                    <!-- Center Column: Company Logo -->
                                    <td style="width: 34%; text-align: center; vertical-align: top;
                        padding: 5px 10px; border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;">
                                        <t t-if="o.company_id.logo">
                                            <img t-att-src="image_data_uri(o.company_id.logo)"
                                                 style="max-height: 140px; max-width: 100%; object-fit: contain; display: block; margin: -23px auto;padding-top:8px;padding-top:5px;"/>
                                        </t>
                                    </td>

                                    <!-- Right Column: Arabic Info -->
                                    <td style="width: 33%; text-align: right; font-size: 15px; color: #333; vertical-align: top;
                        direction: rtl; padding: 0px 10px 6px 10px; border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;">
                                        <div style="line-height: 1.3; font-family: 'Tajawal', sans-serif; font-weight:900; padding-right:0px; margin-top:0px; text-align: right; direction: rtl;">
                                            س.ت: ٤٠٣٠٢١٦١٥٤
                                            <br/>
                                            الرقم الضريبي: ٣١١٢٩٩٩٤٤٧٠٠٠٠٣
                                            <br/>
                                        </div>
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </t>

                <div class="footer"
                     style=" font-size:13px; background:#fff;width:854px;margin-top:10px;padding-top:10px;">
                    <!-- ===== Branch Details ===== -->
                    <table width="100%" style="border-collapse: collapse; margin-bottom:5px; font-size:10px;">
                        <tr>
                            <td style="width:33%; padding:4px;border-right: 1px solid black;">
                                <strong>Jeddah Al Fayha Branch:</strong>
                                7655 Al Fayha Al Fayha Dist., Jeddah 22244-3108, Saudi Arabia
                                <br/>
                                Tel/Mobile: +966 571 313 243
                                <br/>
                                Email: ssaoe.jeddah@gmail.com
                            </td>
                            <td style="width:33%; padding:4px;">
                                <strong>Jeddah Baladiya Branch:</strong>
                                Sookul Anwar, Al Baladeah, Aziziyah, Jeddah 31303, Saudi Arabia
                                <br/>
                                Tel/Mobile: +966 536 122 833
                                <br/>Email:ssaoe.jeddah@gmail.com
                            </td>
                            <td style="width:33%; padding:4px;border-left: 1px solid black;">
                                <strong>Dammam Branch:</strong>
                                8515 Qutaibah bin Muslim St., Al Souq, Dammam 4525-32242, Saudi Arabia
                                <br/>
                                Tel/Mobile: +966 535 081 008
                                <br/>
                                Email: ssaoe.jeddah@gmail.com
                            </td>
                        </tr>
                    </table>

                    <!-- ===== Footer Logos ===== -->
                    <div style="text-align:center; margin-top:8px;">
                        <img t-att-src="request.httprequest.host_url + 'custom_sa_quotation/static/src/img/footer_companies_names.jpg'"
                             style="max-width:100%; height:auto;"/>
                    </div>
                </div>
            </t>

            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">

                    <div style="padding-top:10px;">
                        <div style=" background-color:#d3d3d3; color:black; padding:8px ; text-align:center; margin-bottom:10px ; font-weight:bold; font-size:16px;">
                            Delivery Note /
                            <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">
                                مذكرة التسليم
                            </span>
                        </div>
                    </div>

                    <!-- ===== Sold To + Ship To Side by Side ===== -->
                    <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 5px; border: 0;">
                        <tr>
                            <!-- SOLD TO -->
                            <td style="width: 50%; vertical-align: top; padding-right: 4px; border: 0;">
                                <table width="100%" border="1"
                                       style="border-collapse: collapse; font-size: 11px; border: 1px solid #000;"
                                       cellpadding="0" cellspacing="0">
                                    <tr style="background-color: #d3d3d3; height: 28px;">
                                        <td style="padding: 4px; font-weight: bold; border: 1px solid #000;">
                                            Sold To /
                                            <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">
                                                اسم العميل
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid #000; vertical-align: top;">
                                            <strong>
                                                <span t-field="o.partner_id.name"/>
                                            </strong>
                                            <br/>
                                            <t t-if="o.partner_id.street">
                                                <span t-field="o.partner_id.street"/>
                                                <br/>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                <span t-field="o.partner_id.street2"/>
                                                <br/>
                                            </t>
                                            <t t-if="o.partner_id.city or o.partner_id.state_id or o.partner_id.zip">
                                                <span t-if="o.partner_id.city" t-field="o.partner_id.city"/>
                                                <span t-if="o.partner_id.state_id">,
                                                    <span t-field="o.partner_id.state_id.name"/>
                                                </span>
                                                <span t-if="o.partner_id.zip"> -
                                                    <span t-field="o.partner_id.zip"/>
                                                </span>
                                                <br/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                <span t-field="o.partner_id.country_id.name"/>
                                                <br/>
                                            </t>
                                            <br/>
                                            <strong>VAT NO:</strong>
                                            <span t-field="o.partner_id.vat"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>

                            <!-- SHIP TO (Delivery Address) -->
                            <td style="width: 50%; vertical-align: top; padding-left: 4px; border: 0;">
                                <table width="100%" border="1"
                                       style="border-collapse: collapse; font-size: 11px; border: 1px solid #000;"
                                       cellpadding="0" cellspacing="0">
                                    <tr style="background-color: #d3d3d3; height: 28px;">
                                        <td style="padding: 4px; font-weight: bold; border: 1px solid #000;">
                                            Ship To /
                                            <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">
                                                عنوان التسليم
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid #000; vertical-align: top;">
                                            <t t-if="o.partner_shipping_id">
                                                <strong>
                                                    <span t-field="o.partner_shipping_id.name"/>
                                                </strong>
                                                <br/>
                                                <t t-if="o.partner_shipping_id.street">
                                                    <span t-field="o.partner_shipping_id.street"/>
                                                    <br/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.street2">
                                                    <span t-field="o.partner_shipping_id.street2"/>
                                                    <br/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.city or o.partner_shipping_id.state_id or o.partner_shipping_id.zip">
                                                    <span t-if="o.partner_shipping_id.city" t-field="o.partner_shipping_id.city"/>
                                                    <span t-if="o.partner_shipping_id.state_id">,
                                                        <span t-field="o.partner_shipping_id.state_id.name"/>
                                                    </span>
                                                    <span t-if="o.partner_shipping_id.zip"> -
                                                        <span t-field="o.partner_shipping_id.zip"/>
                                                    </span>
                                                    <br/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.country_id">
                                                    <span t-field="o.partner_shipping_id.country_id.name"/>
                                                    <br/>
                                                </t>
                                                <br/>
                                                <strong>VAT NO:</strong>
                                                <span t-field="o.partner_shipping_id.vat"/>
                                            </t>
                                            <t t-else="">
                                                <span style="color: #999;">—</span>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <!-- BOTTOM INFO TABLE -->
                    <table width="100%" border="1"
                           style="border-collapse: collapse; font-size: 11px; margin-top: 5px; border: 1px solid #000;"
                           cellpadding="0" cellspacing="0">
                        <tr style="background-color: #d3d3d3; height: 28px;">
                            <td style="padding: 4px; font-weight: bold; border: 1px solid #000; width: 20%;">
                                Delivery Note No. /
                                <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">رقم
                                    الفاتورة
                                </span>
                                <br/>
                                <span t-field="o.name"/>
                            </td>
                            <td style="padding: 4px; font-weight: bold; border: 1px solid #000; width: 20%;">
                                Date /
                                <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">
                                    تاريخ الفاتورة
                                </span>
                                <br/>
                                <span t-field="o.scheduled_date" t-options="{'widget': 'date'}"/>
                            </td>
                            <td style="padding: 4px; font-weight: bold; border: 1px solid #000; width: 20%;">
                                Delivery Date /
                                <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">
                                    تاريخ التسليم
                                </span>
                                <br/>
                                <span t-if="o.date_deadline" t-field="o.date_deadline" t-options="{'widget': 'date'}"/>
                            </td>
                            <td style="padding: 4px; font-weight: bold; border: 1px solid #000;width: 20%;">
                                AWB NO /
                                <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">رقم
                                    الشحنة
                                </span>
                                <br/>
                                <span t-field="o.awb_number"/>
                            </td>
                            <td style="padding: 4px; font-weight: bold; border: 1px solid #000;">
                                P.O No /
                                <span style="font-family: 'Tajawal', sans-serif; font-weight: 900; direction: rtl;">
                                    رقم الطلب
                                </span>
                                <br/>
                                <span t-if="o.sale_id" t-field="o.ref"/>
                            </td>
                        </tr>
                    </table>

                    <!-- ===== Products Table ===== -->
                    <table width="100%" style="border-collapse:collapse; margin-top:15px; font-size:14px;" border="2">
                        <thead style="background-color: #9e9d9d;">
                            <tr>
                                <th style="text-align:center; padding:8px 4px; color:#080808; line-height:1.3;width:25px;">
                                    SN/
                                    <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl; font-size:13px;">
                                        الرقم
                                    </span>
                                </th>
                                <th style="text-align:center; padding:8px 4px; color:#080808; line-height:1.3;">
                                    Product/
                                    <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl; font-size:13px;">
                                        المنتج
                                    </span>
                                </th>
                                <th style="text-align:center; padding:8px 4px; color:#080808; line-height:1.3;width:50px;">
                                    Quantity/
                                    <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl; font-size:13px;">
                                        الكمية
                                    </span>
                                </th>
                                <th style="text-align:center; padding:8px 4px; color:#080808; line-height:1.3;width:50px;">
                                    Unit/
                                    <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl; font-size:13px;">
                                        الوحدة
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="enumerate(o.move_ids)" t-as="line">
                                <td style="text-align:center; padding:6px 4px;">
                                    <t t-esc="line[0] + 1"/>
                                </td>
                                <td style="text-align:left; padding:6px 4px;">
                                    <span t-field="line[1].product_id.default_code"/>
                                    -
                                    <span t-field="line[1].product_id.name"/>
                                </td>
                                <td style="text-align:left; padding:6px 4px;">
                                    <span t-field="line[1].product_uom_qty"/>
                                </td>
                                <td style="text-align:left; padding:6px 4px;">
                                    <span t-field="line[1].product_uom.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- ===== Signature Table ===== -->
                    <table width="100%" border="1"
                           style="border-collapse: collapse; font-size: 14px; margin-top: 15px;"
                           cellpadding="5">
                        <tr>
                            <td width="33%" style="padding-left:3px;">
                                <strong>Delivered by :</strong>
                                Administrator
                                <br/>
                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">
                                    سلمت بواسطة
                                </span>
                            </td>
                            <td width="33%" style="padding-left:3px;">
                                <strong>Received By :</strong>
                                <br/>
                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">
                                    المستلم
                                </span>
                            </td>
                            <td width="34%" rowspan="3">
                                <strong style="padding-left:6px;padding-top:6px;">
                                    Total Qty:/
                                    <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">
                                        إجمالي الكمية:
                                    </span>
                                </strong>
                                <span t-esc="sum(line.product_uom_qty for line in o.move_ids)"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-left:3px;">
                                <strong>Name :</strong>
                                Administrator
                                <br/>
                                <span>الاسم</span>
                            </td>
                            <td style="padding-left:3px;">
                                <strong>Name :</strong>
                                <br/>
                                <span>الاسم</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-left:3px;">
                                <strong>Signature :</strong>
                                <br/>
                                <span>التوقيع</span>
                            </td>
                            <td style="padding-left:3px;">
                                <strong>Signature :</strong>
                                <br/>
                                <span>التوقيع</span>
                                <br/>
                                <br/>
                                <strong>Date :</strong>
                                <br/>
                                <span>التاريخ</span>
                                <br/>
                                <strong>ID NO :</strong>
                                <br/>
                                <span>رقم الهوية</span>
                            </td>
                        </tr>
                    </table>

                </t>
            </t>
        </xpath>
    </template>
</odoo>