<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Extended Products Website Page View -->
        <record id="website_products_page_view" model="ir.ui.view">
            <field name="name">Products Page with Inventory</field>
            <field name="type">qweb</field>
            <field name="key">website.products</field>
            <field name="inherit_id" ref="website.website_products" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='wrap']" position="replace">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt-5 pb-5">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h1 class="text-center mb-4">Our Products</h1>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Products Grid with Inventory Details -->
                        <section class="s_products_block pb-5">
                            <div class="container">
                                <div class="row" id="products_list">
                                    <t t-foreach="products" t-as="product">
                                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                            <div class="card h-100 shadow-sm">
                                                <!-- Product Image -->
                                                <div class="card-img-top position-relative bg-light" style="height: 250px; overflow: hidden;">
                                                    <t t-if="product.image_1920">
                                                        <img t-attf-src="data:image/png;base64,{{ product.image_1920.decode() }}"
                                                             class="w-100 h-100" style="object-fit: cover;" />
                                                    </t>
                                                    <t t-else="">
                                                        <div class="d-flex align-items-center justify-content-center w-100 h-100 bg-secondary">
                                                            <span class="text-white">No Image</span>
                                                        </div>
                                                    </t>
                                                    <!-- Stock Badge -->
                                                    <span t-attf-class="badge {{
                                                        'badge-success' if product.qty_available > 10 else
                                                        'badge-warning' if product.qty_available > 0 else
                                                        'badge-danger'
                                                    }} position-absolute top-0 end-0 m-2">
                                                        <t t-if="product.qty_available > 0">
                                                            In Stock
                                                        </t>
                                                        <t t-else="">
                                                            Out of Stock
                                                        </t>
                                                    </span>
                                                </div>

                                                <!-- Product Info -->
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <a t-attf-href="/shop/product/{{ product.id }}" class="text-decoration-none">
                                                            <t t-esc="product.name" />
                                                        </a>
                                                    </h5>

                                                    <!-- Description -->
                                                    <p class="card-text text-muted small" t-if="product.description">
                                                        <t t-esc="product.description[:100] + '...'" />
                                                    </p>

                                                    <!-- Inventory Details -->
                                                    <div class="inventory-details border-top pt-3">
                                                        <div class="row mb-2">
                                                            <div class="col-6">
                                                                <small class="text-muted">Quantity Available:</small>
                                                                <p class="mb-0 font-weight-bold">
                                                                    <t t-esc="product.qty_available" />
                                                                </p>
                                                            </div>
                                                            <div class="col-6">
                                                                <small class="text-muted">Reserved:</small>
                                                                <p class="mb-0 font-weight-bold">
                                                                    <t t-esc="product.reserved_quantity" />
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row mb-2">
                                                            <div class="col-6">
                                                                <small class="text-muted">Incoming:</small>
                                                                <p class="mb-0 font-weight-bold">
                                                                    <t t-esc="product.incoming_qty" />
                                                                </p>
                                                            </div>
                                                            <div class="col-6">
                                                                <small class="text-muted">Outgoing:</small>
                                                                <p class="mb-0 font-weight-bold">
                                                                    <t t-esc="product.outgoing_qty" />
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <!-- Stock Status Bar -->
                                                        <div class="progress mt-2" style="height: 20px;">
                                                            <t t-set="stock_percentage"
                                                               t-value="min(100, (product.qty_available / 100) * 100)" />
                                                            <div class="progress-bar" role="progressbar"
                                                                 t-attf-style="width: {{ stock_percentage }}%"
                                                                 t-attf-aria-valuenow="{{ stock_percentage }}"
                                                                 aria-valuemin="0" aria-valuemax="100">
                                                                <small t-esc="'{:.0f}%'.format(stock_percentage)" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Price and Action Button -->
                                                    <div class="mt-3 border-top pt-3">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <h6 class="mb-0">
                                                                <span class="text-primary font-weight-bold">
                                                                    <t t-esc="product.list_price" />
                                                                </span>
                                                            </h6>
                                                            <a t-attf-href="/shop/product/{{ product.id }}"
                                                               class="btn btn-sm btn-primary">
                                                                View Details
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </section>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Python Controller for Products Page -->
        <record id="website_products_controller" model="ir.http">
            <field name="name">Products Website Controller</field>
        </record>
    </data>
</odoo>