<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Purchase Order List View -->
        <record id="purchase_order_view_list_extended" model="ir.ui.view">
            <field name="name">purchase.order.list.extended</field>
            <field name="model">purchase.order</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Purchase Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <field name="amount_total" sum="Total"/>
                    <field name="partially_billed_amount" sum="Total"/>
                    <field name="partially_billed_status"/>
                </list>
            </field>
        </record>

        <!-- Extend Purchase Order Form View -->
        <record id="purchase_order_view_form_extended" model="ir.ui.view">
            <field name="name">purchase.order.form.extended</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Purchase Order">
                    <sheet>
                        <group>
                            <field name="partially_billed_amount" readonly="1"/>
                            <field name="partially_billed_status" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>