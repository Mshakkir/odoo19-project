<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override portal to show ONLY custom report -->
    <template id="custom_portal_sale_order" inherit_id="sale.sale_order_portal_content" priority="100">

        <!-- Hide the introduction section -->
        <xpath expr="//div[@id='introduction']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Hide the informations section -->
        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Hide the default table -->
        <xpath expr="//div[@name='sol_table']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Hide the totals -->
        <xpath expr="//div[@id='total']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Hide signature section if exists -->
        <xpath expr="//section[@id='signature']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Hide terms section -->
        <xpath expr="//section[@id='terms']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Add JavaScript and CSS to hide header and footer -->
        <xpath expr="//div[@id='content']" position="before">
            <style type="text/css">
                /* Hide header and footer */
                body header,
                body #wrapwrap > header,
                body .o_portal_header,
                body footer,
                body #wrapwrap > footer,
                body #o_shared_blocks,
                header#top,
                #top,
                div#top {
                    display: none !important;
                    visibility: hidden !important;
                    height: 0 !important;
                    overflow: hidden !important;
                }

                /* Adjust content spacing */
                body, #wrapwrap, #wrap {
                    padding-top: 0 !important;
                    margin-top: 0 !important;
                }

                /* Make the custom quotation wrapper full width */
                .custom-quotation-wrapper {
                    width: 100%;
                    max-width: 100%;
                    padding: 20px;
                }
            </style>

            <script type="text/javascript">
                // Hide header and footer on page load
                document.addEventListener('DOMContentLoaded', function() {
                    // Hide all possible header elements
                    var headers = document.querySelectorAll('header, #top, div[id="top"], #wrapwrap > header');
                    headers.forEach(function(header) {
                        if (header) {
                            header.style.display = 'none';
                            header.style.visibility = 'hidden';
                            header.style.height = '0';
                        }
                    });

                    // Hide all possible footer elements
                    var footers = document.querySelectorAll('footer, #wrapwrap > footer, #footer');
                    footers.forEach(function(footer) {
                        if (footer) {
                            footer.style.display = 'none';
                            footer.style.visibility = 'hidden';
                            footer.style.height = '0';
                        }
                    });

                    // Remove top padding from body
                    document.body.style.paddingTop = '0';

                    // Remove top margin/padding from wrap elements
                    var wraps = document.querySelectorAll('#wrapwrap, #wrap');
                    wraps.forEach(function(wrap) {
                        if (wrap) {
                            wrap.style.paddingTop = '0';
                            wrap.style.marginTop = '0';
                        }
                    });
                });

                // Also hide immediately (backup)
                window.onload = function() {
                    var elementsToHide = ['header', 'footer', '#top', '#wrapwrap > header', '#wrapwrap > footer'];
                    elementsToHide.forEach(function(selector) {
                        var elements = document.querySelectorAll(selector);
                        elements.forEach(function(el) {
                            if (el) el.style.display = 'none';
                        });
                    });
                };
            </script>
        </xpath>

        <!-- Add our custom report at the beginning of content -->
        <xpath expr="//div[@id='content']" position="before">
            <div class="custom-quotation-wrapper">
                <t t-set="o" t-value="sale_order"/>
                <t t-set="docs" t-value="[sale_order]"/>
                <t t-call="custom_sa_quotation.custom_saleorder_report"/>
            </div>
        </xpath>

    </template>
</odoo>