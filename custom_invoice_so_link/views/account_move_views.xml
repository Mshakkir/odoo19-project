<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_so_link" model="ir.ui.view">
        <field name="name">account.move.form.inherit.so.link</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add Sales Order field right after Customer field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="available_sale_order_ids" invisible="1"/>
                <field name="sale_order_id"
                       widget="selection"
                       options="{'no_create': True, 'no_open': True}"
                       domain="[('id', 'in', available_sale_order_ids)]"
                       invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id"
                       placeholder="Select a Sales Order..."/>
            </xpath>

            <!-- Add Related Deliveries as a separate page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Related Deliveries"
                      invisible="not partner_id">
                    <group>
                        <field name="delivery_note_ids"
                               nolabel="1"
                               readonly="1">
                            <tree string="Delivery Orders" create="false" edit="false" delete="false">
                                <field name="name"/>
                                <field name="origin"/>
                                <field name="scheduled_date"/>
                                <field name="date_done"/>
                                <field name="state" widget="badge"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>