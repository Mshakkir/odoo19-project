<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_purchase_vendor_report_list" model="ir.ui.view">
        <field name="name">purchase.vendor.report.list</field>
        <field name="model">purchase.vendor.report</field>
        <field name="arch" type="xml">
            <list string="Purchase Vendor Report" create="false" edit="false" delete="false">
                <header>
                    <button name="%(action_purchase_vendor_report_wizard)d"
                            string="Back to Filter"
                            type="action"
                            class="btn-primary"/>
                </header>
                <field name="invoice_date"/>
                <field name="invoice_number"/>
                <field name="vendor_id"/>
                <field name="analytic_account_id"/>
                <field name="purchase_account_id"/>
                <field name="warehouse_id"/>
                <field name="net_amount" sum="Total Net Amount"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_purchase_vendor_report_search" model="ir.ui.view">
        <field name="name">purchase.vendor.report.search</field>
        <field name="model">purchase.vendor.report</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Vendor Report">
                <field name="invoice_number"/>
                <field name="vendor_id"/>
                <field name="analytic_account_id"/>
                <field name="warehouse_id"/>
                <filter name="group_by_vendor" string="Vendor" context="{'group_by': 'vendor_id'}"/>
                <filter name="group_by_warehouse" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                <filter name="group_by_analytic" string="Analytic Account" context="{'group_by': 'analytic_account_id'}"/>
            </search>
        </field>
    </record>
</odoo>