<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the Bank Book Report Wizard Form -->
    <record id="account_bankbook_report_view_form_inherit" model="ir.ui.view">
        <field name="name">account.bankbook.report.form.inherit</field>
        <field name="model">account.bankbook.report</field>
        <field name="inherit_id" ref="om_account_daily_reports.account_report_bankbook_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_account']" position="after">
                <field name="report_type" widget="radio"/>
                <field name="analytic_account_ids" widget="many2many_tags"
                       options="{'no_create': True, 'no_open': True}"
                       placeholder="Select analytic accounts (leave empty for all)"/>
                <field name="show_without_analytic"
                       invisible="report_type == 'combined'"
                       string="Include Transactions Without Analytic Account"/>
            </xpath>
            <xpath expr="//button[@name='check_report']" position="after">
                <button name="show_details" string="Show Details" type="object" class="btn btn-info"/>
            </xpath>
        </field>
    </record>

    <!-- Report Action - Summary -->
    <record id="action_report_bankbook_analytic" model="ir.actions.report">
        <field name="name">Bank Book with Analytic</field>
        <field name="model">account.bankbook.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bank_book_analytic.report_bankbook_analytic</field>
        <field name="report_file">bank_book_analytic.report_bankbook_analytic</field>
        <field name="binding_model_id" ref="om_account_daily_reports.model_account_bankbook_report"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Bank Book - %s' % (object.date_from)</field>
    </record>

    <!-- Report Action - Details -->
    <record id="action_report_bankbook_analytic_details" model="ir.actions.report">
        <field name="name">Bank Book Details with Analytic</field>
        <field name="model">account.bankbook.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bank_book_analytic.report_bankbook_analytic_details</field>
        <field name="report_file">bank_book_analytic.report_bankbook_analytic_details</field>
        <field name="binding_model_id" ref="om_account_daily_reports.model_account_bankbook_report"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Bank Book Details - %s' % (object.date_from)</field>
    </record>

</odoo>











