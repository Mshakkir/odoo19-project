<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add delivery_period field to Sale Order form -->
    <record id="view_order_form_delivery_period" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.period</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add inside Other Info > Delivery section -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="delivery_period"/>
            </xpath>
        </field>
    </record>
</odoo>