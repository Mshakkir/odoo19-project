<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_filter_custom" model="ir.ui.view">
        <field name="name">sale.order.search.custom.date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='sales']" position="before">
                <separator/>
                <filter string="Custom Date Range" name="custom_date_range"
                        domain="[]" context="{'show_date_filter': 1}"/>
                <separator/>
            </xpath>
        </field>
    </record>
</odoo>