<template id="portal_layout_hide_header_footer"
          inherit_id="portal.portal_layout"
          priority="100">

    <xpath expr="." position="inside">
        <t t-if="'/my/orders/' in request.httprequest.path">
            <style>
                header,
                .o_portal_navbar,
                .o_main_navbar,
                footer,
                .o_footer {
                    display: none !important;
                }

                #wrapwrap {
                    padding-top: 0 !important;
                }
            </style>
        </t>
    </xpath>

</template>
