<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View - Alternative Simple Version -->
    <record id="view_purchase_order_merge_wizard_form" model="ir.ui.view">
        <field name="name">purchase.order.merge.wizard.form</field>
        <field name="model">purchase.order.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Merge Purchase Orders into One Bill">
                <sheet>
                    <div class="oe_title">
                        <h1>Merge Purchase Orders</h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id" readonly="1" force_save="1"/>
                            <field name="order_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_amount" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>

                    <group string="Selected Purchase Orders">
                        <field name="purchase_order_ids" nolabel="1" readonly="1" widget="many2many_tags"/>
                    </group>

                    <div class="alert alert-warning mb-3" role="alert" invisible="not warning_message">
                        <field name="warning_message" nolabel="1" readonly="1"/>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <p class="mb-0">
                            <i class="fa fa-info-circle"/> <strong>Note:</strong> This will create a single vendor bill containing all lines from the <field name="order_count" readonly="1" nolabel="1" class="oe_inline"/> selected purchase orders.
                        </p>
                    </div>
                </sheet>
                <footer>
                    <button name="action_merge_bills"
                            string="Create Merged Bill"
                            type="object"
                            class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_purchase_order_merge_wizard" model="ir.actions.act_window">
        <field name="name">Merge into One Bill</field>
        <field name="res_model">purchase.order.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>