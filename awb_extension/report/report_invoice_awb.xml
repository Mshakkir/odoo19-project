<odoo>
    <template id="report_invoice_awb_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']" position="inside">
            <div class="mt16 mb16">
                <h4>Air Waybill Details</h4>
                <p><strong>AWB Number:</strong> <span t-field="o.awb_number"/></p>
                <p><strong>Carrier:</strong> <span t-field="o.carrier_name"/></p>
            </div>
        </xpath>
    </template>
</odoo>
