<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Scheduled Action: Check Reorder Rules Every Hour -->
        <record id="ir_cron_check_reorder_rules_hourly" model="ir.cron">
            <field name="name">Check Reorder Rules - Hourly</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="state">code</field>
            <field name="code">model.check_all_reorder_rules()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Scheduled Action: Check Reorder Rules Every 15 Minutes (for critical monitoring) -->
        <record id="ir_cron_check_reorder_rules_frequent" model="ir.cron">
            <field name="name">Check Reorder Rules - Every 15 Minutes</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="state">code</field>
            <field name="code">model.check_all_reorder_rules()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False"/>
        </record>

        <!-- Scheduled Action: Daily Summary Report at 9 AM -->
        <record id="ir_cron_daily_reorder_summary" model="ir.cron">
            <field name="name">Send Daily Reorder Summary</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="state">code</field>
            <field name="code">model.send_daily_summary()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>