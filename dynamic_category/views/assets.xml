<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hide_shop_category_description_assets" name="Hide Shop Category Description CSS" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <style>
                /* Aggressively hide category descriptions on /shop pages */
                .oe_website_sale .o_wsale_products_section_header_content {
                    display: none !important;
                    visibility: hidden !important;
                    height: 0 !important;
                    overflow: hidden !important;
                }

                .oe_website_sale .o_wsale_products_section_header_content * {
                    display: none !important;
                }

                /* Hide product category header text */
                .oe_website_sale > section > div > h1:first-child + p,
                .oe_website_sale > section > div > p.lead,
                .oe_website_sale > section > div > p:first-of-type {
                    display: none !important;
                }

                /* Ensure we don't break the layout */
                .oe_website_sale #products_grid {
                    display: grid !important;
                }
            </style>
        </xpath>
    </template>
</odoo>