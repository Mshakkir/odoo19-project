<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit account.move search view -->
    <record id="view_account_invoice_filter_date_range" model="ir.ui.view">
        <field name="name">account.invoice.search.date.range</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Add custom date range filters -->
            <xpath expr="//field[@name='name']" position="after">
                <separator/>
                <field name="invoice_date" string="From Date"
                       filter_domain="[('invoice_date', '&gt;=', self)]"/>
                <field name="invoice_date" string="To Date"
                       filter_domain="[('invoice_date', '&lt;=', self)]"/>
            </xpath>

            <!-- Add filter buttons for quick date ranges -->
            <xpath expr="//filter[@name='draft']" position="after">
                <separator/>
                <filter string="Today" name="filter_today"
                        domain="[('invoice_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('invoice_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d')),
                                ('invoice_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="filter_last_month"
                        domain="[('invoice_date', '&gt;=', (context_today().replace(day=1) - relativedelta(months=1)).strftime('%Y-%m-%d')),
                                ('invoice_date', '&lt;', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
            </xpath>
        </field>
    </record>
</odoo>