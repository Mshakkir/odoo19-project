<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Delivery Order Form View -->
        <record id="view_picking_form_custom_fields" model="ir.ui.view">
            <field name="name">stock.picking.form.custom.fields</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" client_order_ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Add fields in the header area, next to scheduled date -->
                <xpath expr="//field[@name='scheduled_date']" position="after">
                    <field name="delivery_note_number"
                           placeholder="Enter delivery note number..."
                           invisible="picking_type_code != 'outgoing'"/>
                    <field name="awb_number"
                           placeholder="Enter shipping reference..."
                           invisible="picking_type_code != 'outgoing'"/>
                </xpath>
            </field>
        </record>

        <!-- Add fields to delivery order tree view -->
        <record id="view_picking_tree_custom_fields" model="ir.ui.view">
            <field name="name">stock.picking.tree.custom.fields</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" client_order_ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="delivery_note_number" optional="hide"/>
                    <field name="awb_number" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Add search filters for delivery orders -->
        <record id="view_picking_search_custom_fields" model="ir.ui.view">
            <field name="name">stock.picking.search.custom.fields</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" client_order_ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="delivery_note_number" string="Delivery Note"
                           filter_domain="[('delivery_note_number', 'ilike', self)]"/>
                    <field name="awb_number" string="Shipping Ref"
                           filter_domain="[('awb_number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>