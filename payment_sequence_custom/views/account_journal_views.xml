<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add custom sequence fields to journal form -->
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.payment.sequence</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <!-- Find the Advanced Settings page and add our fields inside -->
            <xpath expr="//page[@name='advanced_settings']//group[last()]" position="after">
                <group string="Payment Sequences" invisible="type not in ['bank', 'cash']">
                    <group>
                        <field name="inbound_payment_sequence_id"/>
                        <field name="outbound_payment_sequence_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>