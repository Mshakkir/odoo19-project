<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override the PORTAL template (customer view) -->
    <template id="custom_portal_sale_order" inherit_id="sale.sale_order_portal_content" priority="100">

        <!-- Replace the entire portal content with our custom design -->
        <xpath expr="//div[hasclass('o_portal_sale_sidebar')]" position="replace">
            <!-- Keep the sidebar as is -->
            <div class="o_portal_sale_sidebar col-lg-auto pe-0 d-print-none">
                <t t-set="o_portal_sidebar_val" t-value="sale_order"/>
                <t t-call="portal.portal_record_sidebar"/>
            </div>
        </xpath>

        <!-- Replace the main content area -->
        <xpath expr="//div[@id='portal_sale_content']" position="replace">
            <div id="portal_sale_content" class="col-12 col-lg d-flex flex-column">
                <t t-set="o" t-value="sale_order"/>
                <t t-set="docs" t-value="[sale_order]"/>

                <!-- Call our custom report template -->
                <t t-call="custom_sa_quotation.custom_saleorder_report"/>
            </div>
        </xpath>

    </template>
</odoo>