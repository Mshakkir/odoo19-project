<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Menu item for Balance Sheet -->
    <menuitem id="menu_balance_sheet"
              name="Balance Sheet"
              parent="account.menu_finance_reports"
              sequence="10"/>

    <!-- Action to open the balance sheet -->
    <record id="action_balance_sheet" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">account.balance.sheet</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="balance_sheet_report.balance_sheet_form_view"/>
    </record>
</odoo>
