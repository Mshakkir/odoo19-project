<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fix for warehouse switching in product forecasted report -->
    <record id="stock_product_template_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.stock_product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="context">{'search_default_warehouse_id': warehouse_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>