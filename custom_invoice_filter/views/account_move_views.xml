<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add action to invoices action window -->
    <record id="view_move_form_inherit_date_filter" model="ir.ui.view">
        <field name="name">account.move.form.inherit.date.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(custom_invoice_filter.action_invoice_date_filter_wizard)d"
                        string="Filter by Date Range"
                        type="action"
                        groups="base.group_user"/>
            </xpath>
        </field>
    </record>
</odoo>