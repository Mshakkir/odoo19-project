<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <group name="customer_balance_group" string="Customer Balance" class="oe_inline">
                    <field name="customer_total_invoiced" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"
                           class="oe_link"
                           style="cursor: pointer; color: #007bff; text-decoration: underline;"
                           on_click="action_view_customer_invoices"/>
                    <field name="customer_total_received" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"
                           class="oe_link"
                           style="cursor: pointer; color: #007bff; text-decoration: underline;"
                           on_click="action_view_customer_payments"/>
                    <field name="customer_balance_due" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>


