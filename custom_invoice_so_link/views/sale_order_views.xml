<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_hide_invoice_button_conditional" model="ir.ui.view">
        <field name="name">sale.order.form.hide.invoice.button.conditional</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Hide the Create Invoice button ONLY if invoice already exists -->
            <xpath expr="//button[@id='create_invoice']" position="attributes">
                <attribute name="invisible">invoice_ids and len(invoice_ids) > 0</attribute>
            </xpath>

            <!-- Add informational message about the custom workflow -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" invisible="invoice_ids and len(invoice_ids) > 0">
                    <strong>üìù Custom Invoice Workflow Available</strong>
                    <p>
                        You can create invoices in two ways:<br/>
                        <strong>1. Direct Way:</strong> Use the "Create Invoice" button above (standard Odoo)<br/>
                        <strong>2. Custom Way:</strong> Go to Invoicing ‚Üí Invoices and select multiple sales orders
                    </p>
                </div>
            </xpath>

            <!-- Show message when invoice already created -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-success" invisible="not (invoice_ids and len(invoice_ids) > 0)">
                    <strong>‚úÖ Invoice Already Created</strong>
                    <p>This sales order has been linked to an invoice. Create Invoice button is disabled.</p>
                </div>
            </xpath>

        </field>
    </record>
</odoo>

