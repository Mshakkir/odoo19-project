<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="product_purchase_history.PurchaseHistoryDialog">
        <Dialog title="title" size="'xl'">
            <div class="o_purchase_history_dialog">
                <t t-if="hasHistory">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Order Reference</th>
                                    <th>Supplier</th>
                                    <th>Date</th>
                                    <th class="text-end">Quantity</th>
                                    <th>Unit</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Subtotal</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="props.purchaseHistory" t-as="line" t-key="line.id">
                                    <tr>
                                        <td>
                                            <strong t-esc="line.order_name"/>
                                        </td>
                                        <td t-esc="line.partner_name"/>
                                        <td t-esc="line.date_order"/>
                                        <td class="text-end">
                                            <t t-esc="formatNumber(line.product_qty)"/>
                                        </td>
                                        <td t-esc="line.product_uom"/>
                                        <td class="text-end">
                                            <t t-esc="line.currency"/>
                                            <t t-esc="formatNumber(line.price_unit)"/>
                                        </td>
                                        <td class="text-end">
                                            <strong>
                                                <t t-esc="line.currency"/>
                                                <t t-esc="formatNumber(line.price_subtotal)"/>
                                            </strong>
                                        </td>
                                        <td>
                                            <span t-att-class="'badge ' + (line.state === 'done' ? 'bg-success' : 'bg-primary')">
                                                <t t-esc="getStateLabel(line.state)"/>
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-info mt-3" role="alert">
                        <i class="fa fa-info-circle"/> Showing last 50 purchase orders for this product
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-triangle"/> No purchase history found for this product.
                    </div>
                </t>
            </div>
        </Dialog>
    </t>

</templates>