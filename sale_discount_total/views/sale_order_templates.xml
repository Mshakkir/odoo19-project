<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited Template for invoice document-->
    <template id="report_invoice_customized"
              inherit_id="account.report_invoice_document">

        <!-- Add discount row before tax totals -->
        <xpath expr="//t[@t-call='account.document_tax_totals']" position="before">
            <tr t-if="o.amount_discount" class="border-black o_subtotal">
                <td><strong>Discount</strong></td>
                <td class="text-end">
                    <span t-field="o.amount_discount"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>