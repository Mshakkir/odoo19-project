<odoo>
    <!-- Add discount_fixed to sale order line tree view -->
    <record id="view_order_line_tree_discount_fixed" model="ir.ui.view">
        <field name="name">sale.order.line.tree.discount.fixed</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <!-- Add after price_unit instead of product_uom_qty -->
            <xpath expr="//field[@name='price_unit']" position="after">
                <field
                    name="discount_fixed"
                    string="Disc.(Fixed)"
                    groups="account_invoice_fixed_discount.group_fixed_discount"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
</odoo>