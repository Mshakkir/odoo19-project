<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_form_custom_lines" model="ir.ui.view">
        <field name="name">account.move.form.custom.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Replace the list view inside invoice_line_ids field -->
            <xpath expr="//field[@name='invoice_line_ids']/list" position="replace">
                <list string="Invoice Lines" editable="bottom" limit="200">
                    <!-- Required invisible fields -->
                    <field name="display_type" column_invisible="True"/>
                    <field name="sequence" widget="handle"/>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="company_id" column_invisible="True"/>
                    <field name="move_id" column_invisible="True"/>

                    <!-- 1. SN (Serial Number) -->
                    <field name="sequence" string="SN" readonly="1" optional="show" width="20px"/>

                    <!-- 2. P. Code (Product Code) -->
                    <field name="product_id"
                           string="P. Code"
                           optional="show"
                           width="30px"
                           attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>

                    <!-- 3. Product (Main Product Field) -->
                    <field name="product_id"
                           string="Product"
                           readonly="parent.state != 'draft'"
                           required="not display_type"
                           context="{'default_list_price': price_unit}"
                           options="{'show_label_warning': True}"
                           optional="show"
                           widget="many2one"
                           placeholder="Type to find a product..."
                           width="90px"/>

                    <!-- 4. Analytic Distribution -->
                    <field name="analytic_distribution"
                           widget="analytic_distribution"
                           options="{'product_field': 'product_id', 'business_domain': 'purchase', 'amount_field': 'price_subtotal'}"
                           optional="show"
                           groups="analytic.group_analytic_accounting"
                           width="70px"/>

                    <!-- 5. Quantity -->
                    <field name="quantity"
                           string="Qty"
                           readonly="parent.state != 'draft'"
                           width="30px"/>

                    <!-- 6. Unit of Measure -->
                    <field name="product_uom_id"
                           string="Unit"
                           force_save="1"
                           readonly="parent.state != 'draft'"
                           required="not display_type"
                           widget="many2one_uom"
                           groups="uom.group_uom"
                           options="{'no_open': True, 'no_create': True}"
                           width="50px"
                           optional="show"/>

                    <!-- 7. Price Unit -->
                    <field name="price_unit"
                           string="Price"
                           readonly="parent.state != 'draft'"
                           width="60px"/>

                    <!-- 8. Tax -->
                    <field name="tax_ids"
                           string="Tax"
                           widget="many2many_tax_tags"
                           options="{'no_create': True}"
                           context="{'active_test': True}"
                           readonly="parent.state != 'draft'"
                           optional="show"
                           width="40px"/>

                    <!-- 9. Discount (Fixed Amount) -->
                    <field name="discount"
                           string="Disc"
                           readonly="parent.state != 'draft'"
                           width="60px"
                           optional="show"/>

                    <!-- 9a. Discount % (Hidden by default) -->
                    <field name="discount"
                           string="Disc%"
                           readonly="parent.state != 'draft'"
                           width="60px"
                           optional="hide"
                           groups="sale.group_discount_per_so_line"/>

                    <!-- 10. Untaxed Amount (Subtotal after discount) -->
                    <field name="price_subtotal"
                           string="Untax Amt"
                           readonly="1"
                           optional="show"
                           width="60px"/>

                    <!-- 11. Tax Value (Tax Amount) -->
                    <field name="price_tax"
                           string="Tax Value"
                           readonly="1"
                           optional="show"
                           width="60px"/>

                    <!-- 12. Total Amount -->
                    <field name="price_total"
                           string="Total"
                           readonly="1"
                           optional="show"
                           width="60px"/>

                    <!-- Description (Hidden by default) -->
                    <field name="name"
                           widget="text"
                           optional="hide"
                           width="200px"/>

                    <!-- Account (Hidden by default) -->
                    <field name="account_id"
                           string="Account"
                           readonly="parent.state != 'draft'"
                           required="1"
                           optional="hide"
                           width="80px"/>

                    <!-- Warehouse (Hidden by default) - for stock module compatibility -->
                    <field name="warehouse_id"
                           string="Warehouse"
                           optional="hide"
                           width="70px"/>

                    <!-- Product Variant Info (Hidden by default) -->
                    <field name="product_id"
                           string="Variant"
                           readonly="parent.state != 'draft'"
                           optional="hide"
                           width="80px"/>

                </list>
            </xpath>
        </field>
    </record>
</odoo>