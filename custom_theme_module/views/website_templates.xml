                    .mobile_toggle.active span:nth-child(1) {
                    transform: rotate(45deg) translateY(10px);
                    }

                    .mobile_toggle.active span:nth-child(2) {
                    opacity: 0;
                    }

                    .mobile_toggle.active span:nth-child(3) {
