<odoo>
    <record id="inherit_tb_wizard_form" model="ir.ui.view">
        <field name="name">inherit.tb.wizard.form</field>
        <field name="model">account.balance.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_balance_report_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='print_report']" position="before">
                <button name="action_show_tb"
                        string="Show Trial Balance"
                        type="object"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
