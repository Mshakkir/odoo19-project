<!-- product_stock_ledger/report/product_stock_ledger_templates.xml -->
<odoo>
    <!-- Report Layout Template -->
    <template id="product_stock_ledger_report_layout">
        <t t-call="web.html_container">
            <!-- Setup Context -->
            <t t-set="company" t-value="company or env.company"/>
            <t t-set="data" t-value="data or {}"/>
            <t t-set="product" t-value="product or None"/>
            <t t-set="lines" t-value="lines or []"/>

            <!-- Load PDF Assets -->
<!--            <t t-call-assets="web.report_assets_pdf" t-js="false"/>-->

            <!-- Custom CSS -->
<!--            <link rel="stylesheet" type="text/css" href="/product_stock_ledger/static/src/css/report_styles.css"/>-->

            <div class="page">
                <!-- Header Section -->
                <div class="header">
                    <div class="company_logo">
                        <img t-if="company.logo"
                             t-att-src="'data:image/png;base64,%s' % (company.logo.decode('utf-8'))"
                             alt="Company Logo"/>
                    </div>

                    <div class="company_info">
                        <h2 t-esc="company.name"/>
                        <div t-esc="company.partner_id.contact_address"/>
                    </div>

                    <div class="report_title">
                        <h3>Product Stock Ledger</h3>
                        <div>
                            <strong>Between:</strong>
                            <span t-esc="data.get('date_from')"/>
                            â€“
                            <span t-esc="data.get('date_to')"/>
                        </div>
                    </div>
                </div>

                <!-- Product Info -->
                <div class="product_info">
                    <table class="product_table">
                        <tr>
                            <td>
                                <strong>Product:</strong>
                            </td>
                            <td>
                                <span t-esc="product.display_name"/>
                            </td>
                        </tr>

                    </table>
                </div>

                <!-- Ledger Table -->
                <table class="ledger_table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Voucher</th>
                            <th>Particulars</th>
                            <th>Type</th>
                            <th>Rec. Qty</th>
                            <th>Rate</th>
                            <th>Issue Qty</th>
                            <th>Rate</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="lines" t-as="l">
                            <tr>
                                <td>
                                    <t t-esc="l['date']"/>
                                </td>
                                <td>
                                    <t t-esc="l['voucher']"/>
                                </td>
                                <td>
                                    <t t-esc="l['particulars']"/>
                                </td>
                                <td>
                                    <t t-esc="l['type']"/>
                                </td>

                                <!-- Received Quantity -->
                                <td class="num">
                                    <t t-if="l['rec_qty']">
                                        <t t-esc="'%.2f' % l['rec_qty']"/>
                                        <t t-if="product.uom_id">
                                            <t t-esc="product.uom_id.name"/>
                                        </t>
                                    </t>
                                </td>

                                <!-- Received Rate -->
                                <td class="num">
                                    <t t-esc="('%.2f' % l['rec_rate']) if l['rec_rate'] else ''"/>
                                </td>

                                <!-- Issued Quantity -->
                                <td class="num">
                                    <t t-if="l['issue_qty']">
                                        <t t-esc="'%.2f' % l['issue_qty']"/>
                                        <t t-if="product.uom_id">
                                            <t t-esc="product.uom_id.name"/>
                                        </t>
                                    </t>
                                </td>

                                <!-- Issued Rate -->
                                <td class="num">
                                    <t t-esc="('%.2f' % l['issue_rate']) if l['issue_rate'] else ''"/>
                                </td>

                                <!-- Balance -->
                                <td class="num">
                                    <t t-if="l['balance'] is not None">
                                        <t t-esc="'%.2f' % l['balance']"/>
                                        <t t-if="product.uom_id">
                                            <t t-esc="product.uom_id.name"/>
                                        </t>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="4" style="text-align:right;">
                                <strong>Sub Total</strong>
                            </td>
                            <td class="num">
                                <t t-esc="('%.2f' % total_rec)"/>
                            </td>
                            <td></td>
                            <td class="num">
                                <t t-esc="('%.2f' % total_issue)"/>
                            </td>
                            <td></td>
                            <td class="num">
                                <t t-esc="('%.2f' % (lines and lines[-1].get('balance', 0.0) or 0.0))"/>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </t>
    </template>

    <!-- Report Definition -->
    <template id="product_stock_ledger_report">
        <t t-call="product_stock_ledger.product_stock_ledger_report_layout"/>
    </template>
</odoo>
