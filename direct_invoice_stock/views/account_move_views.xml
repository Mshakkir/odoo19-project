<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_direct_stock" model="ir.ui.view">
        <field name="name">account.move.form.direct.stock</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="before">
                <div class="alert alert-info"
                     attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                    Posting this invoice will automatically create
                    and validate a delivery order for Goods products.
                </div>
            </xpath>
        </field>
    </record>
</odoo>





