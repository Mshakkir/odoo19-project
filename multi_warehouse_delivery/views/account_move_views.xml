<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to invoice lines (Customer Invoices) -->
    <record id="view_move_form_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.form.warehouse.field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to invoice line tree view - after product_id -->
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Add warehouse field to invoice line form view (popup) - after product_id -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="after">
                <field name="warehouse_id"
                       readonly="0"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>

    <!-- Add warehouse field to vendor bills -->
    <record id="view_vendor_bill_form_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.vendor.bill.warehouse.field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to vendor bill line tree view - after product_id -->
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>
</odoo>