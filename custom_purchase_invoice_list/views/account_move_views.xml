<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Purchase Invoice (Vendor Bill) List View -->
        <record id="view_move_list_purchase_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.list.purchase.invoice.custom</field>
            <field name="model">account.move</field>
            <field name="mode">primary</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <list string="Vendor Bills"
                      sample="1"
                      decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- COLUMN ORDER - PRIORITY ORDER -->
                    <!-- 1. Invoice Date -->
                    <field name="invoice_date" string="Bill Date" width="80px"/>

                    <!-- 2. Invoice Number (Bill Number) -->
                    <field name="name" string="Bill Number" readonly="1" width="140px"/>

                    <!-- 3. Vendor -->
                    <field name="partner_id" string="Vendor" width="155px"/>

                    <!-- 4. Warehouse -->
                    <field name="warehouse_id" string="Warehouse" width="120px"/>

                    <!-- 5. Source Document -->
                    <field name="invoice_origin" string="Source Doc." width="110px"/>

                    <!-- 6. Vendor Reference -->
                    <field name="ref" string="Vendor Ref." width="100px"/>

                    <!-- 7. Total Amount -->
                    <field name="amount_total" string="Total" sum="Total Amount" width="120px"/>

                    <!-- 8. Amount Due -->
                    <field name="amount_residual" string="Amount Due" sum="Total Due" width="160px"/>

                    <!-- 9. Due Date -->
                    <field name="invoice_date_due" string="Due Date" width="110px"/>

                    <!-- 10. Buyer - ALWAYS VISIBLE -->
                    <field name="buyer_id" string="Buyer" width="130px"/>

                    <!-- 11. Shipping Reference (AWB Number) - CHANGED TO awb_number_display -->
                    <field name="awb_number_display" string="Shipping Ref #" width="110px"/>

                    <!-- 12. Delivery Note Number - CHANGED TO goods_receipt_number_display -->
                    <field name="goods_receipt_number_display" string="GR Number#" width="120px"/>

                    <!-- 13. Status -->
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'posted'"
                           decoration-info="state == 'draft'"
                           width="90px"/>

                    <!-- 14. Payment Status -->
                    <field name="payment_state" string="Payment Status" widget="badge"
                           decoration-success="payment_state == 'paid'"
                           decoration-warning="payment_state == 'partial'"
                           decoration-danger="payment_state in ('not_paid', 'in_payment')"
                           width="110px"/>

                    <!-- 15. Tax Excluded Amount -->
                    <field name="amount_untaxed" string="Tax Excluded" sum="Total Untaxed" width="120px"/>

                    <!-- 16. Tax Amount -->
                    <field name="amount_tax" string="Tax" sum="Total Tax" width="100px"/>

                    <!-- ADDITIONAL OPTIONAL FIELDS (Hidden by default) -->

                    <!-- 17. PO Number - CHANGED TO po_number_display -->
                    <field name="po_number_display" string="PO Number" optional="hide" width="110px"/>

                    <!-- 18. Accounting Date -->
                    <field name="date" string="Accounting Date" optional="hide" width="120px"/>

                    <!-- 19. Journal -->
                    <field name="journal_id" string="Journal" optional="hide" width="120px"/>

                    <!-- 20. Payment Terms -->
                    <field name="invoice_payment_term_id" string="Payment Terms" optional="hide" width="140px"/>

                    <!-- 21. Currency -->
                    <field name="currency_id" string="Currency" optional="hide" width="80px"/>

                    <!-- 22. Company -->
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"
                           width="120px"/>

                    <!-- 23. Fiscal Position -->
                    <field name="fiscal_position_id" string="Fiscal Position" optional="hide" width="130px"/>

                    <!-- 24. Bank Account -->
                    <field name="partner_bank_id" string="Vendor Bank" optional="hide" width="150px"/>

                    <!-- 25. Invoice Incoterm -->
                    <field name="invoice_incoterm_id" string="Incoterm" optional="hide" width="100px"/>

                    <!-- 26. Narration/Terms and Conditions -->
                    <field name="narration" string="Terms and Conditions" optional="hide" width="180px"/>

                    <!-- 27. Invoice Source Email -->
                    <field name="invoice_source_email" string="Source Email" optional="hide" width="150px"/>

                    <!-- 28. Auto Post -->
                    <field name="auto_post" string="Auto Post" optional="hide" width="90px"/>

                    <!-- 29. Activity -->
                    <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"
                           width="100px"/>

                    <!-- 30. Activity State -->
                    <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                           decoration-success="activity_state == 'today'"
                           decoration-warning="activity_state == 'planned'"
                           decoration-danger="activity_state == 'overdue'"
                           width="110px"/>

                    <!-- 31. Activity User -->
                    <field name="activity_user_id" string="Responsible User" optional="hide" width="130px"/>

                    <!-- 32. Activity Type -->
                    <field name="activity_type_id" string="Next Activity Type" optional="hide" width="140px"/>

                    <!-- 33. Activity Date -->
                    <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide" width="150px"/>

                    <!-- 34. Activity Summary -->
                    <field name="activity_summary" string="Activity Summary" optional="hide" width="150px"/>

                    <!-- 35. Message -->
                    <field name="message_needaction" string="Action Needed" optional="hide" width="110px"/>

                    <!-- Hidden technical fields -->
                    <field name="move_type" column_invisible="1"/>

                </list>
            </field>
        </record>

        <!-- Override the default vendor bill action to use custom view -->
        <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="view_ids" eval="[(6, 0, [ref('view_move_list_purchase_invoice_custom')])]"/>
        </record>

        <!-- Action to Recompute Warehouse for existing bills -->
        <record id="action_recompute_warehouse" model="ir.actions.server">
            <field name="name">Recompute Warehouse</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                records._compute_warehouse_id()
            </field>
        </record>

    </data>
</odoo>













