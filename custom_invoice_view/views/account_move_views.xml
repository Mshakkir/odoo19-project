<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Invoice List View with YOUR column order -->
        <record id="view_move_list_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.list.invoice.custom</field>
            <field name="model">account.move</field>
            <field name="mode">primary</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <list string="Invoices"
                      sample="1"
                      decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- 1. Invoice Date -->
                    <field name="invoice_date" string="Invoice Date"/>

                    <!-- 2. Invoice Number -->
                    <field name="name" string="Invoice Number" readonly="1"/>

                    <!-- 3. Customer -->
                    <field name="partner_id" string="Customer"/>

                    <!-- 4. Warehouse - will add if exists -->
                    <field name="invoice_origin" string="Source Document" optional="show"/>

                    <!-- 5. Reference -->
                    <field name="ref" string="Reference"/>

                    <!-- 6. Tax Excluded Amount -->
                    <field name="amount_untaxed" string="Tax Excluded"/>

                    <!-- 7. Tax -->
                    <field name="amount_tax" string="Tax"/>

                    <!-- 8. Total -->
                    <field name="amount_total" string="Total"/>

                    <!-- 9. Amount Due -->
                    <field name="amount_residual" string="Amount Due"/>

                    <!-- 10. Salesperson -->
                    <field name="invoice_user_id" string="Salesperson" widget="many2one_avatar_user"/>

                    <!-- 11. Shipping Ref -->
                    <field name="l10n_in_shipping_bill_number" string="Shipping Ref #" optional="show"/>

                    <!-- 12. Delivery Note Number -->
                    <field name="l10n_in_shipping_bill_date" string="Delivery Note" optional="show"/>

                    <!-- Additional fields -->
                    <field name="invoice_date_due" string="Due Date"/>
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'posted'"
                           decoration-info="state == 'draft'"/>
                    <field name="payment_state" string="Payment Status" widget="badge" optional="show"
                           decoration-success="payment_state == 'paid'"
                           decoration-warning="payment_state == 'partial'"
                           decoration-danger="payment_state in ('not_paid', 'in_payment')"/>

                    <!-- Hidden fields -->
                    <field name="currency_id" column_invisible="1"/>
                    <field name="move_type" column_invisible="1"/>
                    <field name="company_id" column_invisible="1"/>

                </list>
            </field>
        </record>

        <!-- Override the default action to use our view -->
        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="view_id" ref="view_move_list_invoice_custom"/>
        </record>

    </data>
</odoo>