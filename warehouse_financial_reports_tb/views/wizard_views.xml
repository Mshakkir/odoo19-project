<odoo>
    <!-- Wizard Form View -->
    <record id="view_trial_balance_wizard" model="ir.ui.view">
        <field name="name">trial.balance.wizard.form</field>
        <field name="model">trial.balance.wizard</field>
        <field name="arch" type="xml">
            <form string="Trial Balance Wizard">
                <sheet>
                    <group>
                        <field name="warehouse_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Generate" type="object" name="generate_trial_balance" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_trial_balance_wizard" model="ir.actions.act_window">
        <field name="name">Trial Balance by Warehouse</field>
        <field name="res_model">trial.balance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_trial_balance_wizard"
              name="Trial Balance by Warehouse"
              parent="account.menu_finance_reports"
              action="action_trial_balance_wizard"/>
</odoo>
