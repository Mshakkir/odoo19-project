<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Partner Ledger Wizard View -->
    <record id="account_report_partner_ledger_custom_view" model="ir.ui.view">
        <field name="name">Partner Ledger Custom</field>
        <field name="model">account.report.partner.ledger</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_report_partner_ledger_view"/>
        <field name="arch" type="xml">

            <!-- Add Show Details field after reconciled field -->
            <xpath expr="//field[@name='reconciled']" position="after">
                <field name="show_details" string="Show Transaction Details"/>
            </xpath>

            <!-- Add Show Details Toggle button in footer before Print button -->
            <xpath expr="//footer/button[@name='check_report']" position="before">
                <button string="Toggle Details"
                        name="button_toggle_details"
                        type="object"
                        class="btn-secondary"
                        help="Click to show/hide transaction details"/>
            </xpath>

        </field>
    </record>

</odoo>