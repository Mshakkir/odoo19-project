<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to sale order lines -->
    <record id="view_order_form_warehouse_field" model="ir.ui.view">
        <field name="name">sale.order.form.warehouse.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to the list/tree view of order lines -->
            <xpath expr="//field[@name='order_line']//tree//field[@name='customer_lead']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Add warehouse field to the form view of order lines (popup) -->
            <xpath expr="//field[@name='order_line']//form//field[@name='customer_lead']" position="after">
                <field name="warehouse_id"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>
</odoo>