<odoo>
    <template id="custom_purchaseorder_report_clean" inherit_id="purchase.report_purchaseorder_document">

        <!-- REMOVE DEFAULT HEADER & FOOTER -->
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t>
                <t t-foreach="docs" t-as="o">

                    <head>
                        <meta charset="UTF-8"/>
                        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
                        <style type="text/css">

                            /* Import Google Noto Arabic Font */
                            @import url('https://fonts.googleapis.com/css2?family=Noto+Naskh+Arabic:wght@400;700&amp;display=swap');

                            @page {
                                margin: 20mm;
                            }

                            body {
                                font-family: 'DejaVu Sans', Arial, sans-serif;
                            }

                            .ar, .arabic-word {
                                font-family: 'Noto Naskh Arabic', 'DejaVu Sans', Arial, sans-serif !important;
                                direction: rtl;
                                unicode-bidi: bidi-override;
                                font-weight: 700;
                                display: inline-block;
                            }

                            table {
                                width: 100%;
                                border-collapse: collapse;
                            }

                            * {
                                box-sizing: border-box;
                            }
                        </style>
                    </head>

                    <body>
                        <div class="page">

                            <!-- ===================== HEADER START ===================== -->
                            <div class="header"
                                 style="border:2px solid white; border-radius: 6px; background: white; margin-bottom: 15px;">

                                <!-- Row 1: Company Name EN + AR -->
                                <table style="width: 100%; border-collapse: collapse;border:none">
                                    <tr>
                                        <td style="width: 50%; padding: 10px 20px; text-align: left; padding-left:0px;">
                                            <div style="color: #8B1538; font-size: 16px; font-weight: bold; text-transform: uppercase;">
                                                SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                            </div>
                                        </td>

                                        <td style="width: 50%; padding: 10px 20px; text-align: right; padding-right:0px;">
                                            <div style="color: #8B1538; font-size: 17px; font-weight:900; direction: rtl;"
                                                 class="arabic-word">
                                                شركة سمير شرف العتيبي التجارية
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Row 2: English info + Logo + Arabic info -->
                                <table style="width: 100%; border-collapse: collapse;">
                                    <tr>

                                        <!-- English Info -->
                                        <td style="width: 33%; text-align: left; font-size: 16px; color: #333; vertical-align: top;
                                            border-bottom: 2px solid #8B1538;">
                                            <div style="line-height: 1.3; font-weight: 500;">
                                                C.R. 4030216154 <br/>
                                                VAT Regd: 311299944700003
                                            </div>
                                        </td>

                                        <!-- LOGO -->
                                        <td style="width: 34%; text-align: center; vertical-align: top;
                                            padding: 5px 10px; border-bottom: 2px solid #8B1538;">
                                            <t t-if="o.company_id.logo">
                                                <img t-att-src="image_data_uri(o.company_id.logo)"
                                                     style="max-height: 140px; max-width: 100%; object-fit: contain; margin: -23px auto;"/>
                                            </t>
                                        </td>

                                        <!-- Arabic Info -->
                                        <td style="width: 33%; text-align: right; font-size: 15px; color: #333; vertical-align: top;
                                            direction: rtl; border-bottom: 2px solid #8B1538;">
                                            <div style="line-height: 1.3;" class="arabic-word">
                                                س.ت: ٤٠٣٠٢١٦١٥٤<br/>
                                                الرقم الضريبي: ٣١١٢٩٩٩٤٤٧٠٠٠٠٣
                                            </div>
                                        </td>

                                    </tr>
                                </table>

                            </div>
                            <!-- ===================== HEADER END ===================== -->


                            <!-- ===================== TITLE ===================== -->
                            <div style="background:#ddd; padding:10px; text-align:center; margin-bottom:15px; font-weight:bold; font-size:16px;">
                                Purchase Order /
                                <span class="ar" style="font-size:18px;">أمر شراء</span>
                            </div>


                            <!-- ===================== (YOUR EXISTING CONTENT) ===================== -->
                            <!-- VENDOR & SHIPPING DETAILS -->
                            <table style="margin-top:8px; font-size:13px;">
                                <tr>
                                    <td style="width:50%; vertical-align:top; border:1px solid #575656; padding:8px;">
                                        <div style="font-weight:bold; margin-bottom:5px;">
                                            Vendor &amp; Address /
                                            <span class="ar">البائع والعنوان</span>
                                        </div>
                                        <div><span t-esc="o.partner_id.name"/></div>
                                        <div><span t-esc="o.partner_id.contact_address"/></div>
                                    </td>

                                    <td style="width:50%; vertical-align:top; border:1px solid #575656; padding:8px;">
                                        <div style="font-weight:bold; margin-bottom:5px;">
                                            Ship To Address /
                                            <span class="ar">عنوان الشحن</span>
                                        </div>
                                        <div><span t-esc="o.company_id.partner_id.contact_address"/></div>
                                    </td>
                                </tr>
                            </table>

                            <!-- PO Details -->
                            <table style="margin-top:8px; font-size:12px;">
                                <tr>
                                    <td style="border:1px solid #575656; padding:8px; width:33%;">
                                        <strong>PO Number:</strong> <span t-esc="o.name"/><br/>
                                        <span class="ar" style="font-size:11px;">:رقم أمر الشراء</span>
                                    </td>

                                    <td style="border:1px solid #575656; padding:8px; width:33%;">
                                        <strong>Vendor Reference:</strong>
                                        <span t-esc="o.partner_ref or '-'"/><br/>
                                        <span class="ar" style="font-size:11px;">:مرجع البائع</span>
                                    </td>

                                    <td style="border:1px solid #575656; padding:8px; width:34%;">
                                        <strong>Order Date:</strong>
                                        <span t-esc="o.date_order.strftime('%d-%b-%Y')"/><br/>
                                        <span class="ar" style="font-size:11px;">:تاريخ الطلب</span>
                                    </td>
                                </tr>
                            </table>


                            <!-- ITEMS TABLE -->
                            <table style="margin-top:10px; font-size:12px; text-align:center; border:1px solid #000;">
                                <thead style="background-color:#d9d9d9; color:#080808; font-weight:bold;">
                                    <tr>
                                        <th style="padding:10px; border:1px solid #000;">S.N<br/><span class="ar">م</span></th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            Item / Description<br/>
                                            <span class="ar" style="font-size:11px; display:block;">الصنف والوصف</span>
                                        </th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            Delivery<br/><span class="ar">التوصيل</span>
                                        </th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            QTY<br/><span class="ar">الكمية</span>
                                        </th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            Unit<br/><span class="ar">الوحدة</span>
                                        </th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            Unit Price<br/><span class="ar">سعر الوحدة</span>
                                        </th>

                                        <th style="padding:10px; border:1px solid #000;">
                                            Total Price<br/><span class="ar">السعر الإجمالي</span>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-set="i" t-value="0"/>
                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="i" t-value="i + 1"/>
                                        <tr>
                                            <td style="padding:10px; border:1px solid #000;"><span t-esc="i"/></td>
                                            <td style="padding:10px; border:1px solid #000; text-align:left;"><span t-esc="line.name"/></td>
                                            <td style="padding:10px; border:1px solid #000;"><span t-esc="line.date_planned and line.date_planned.strftime('%d-%b-%Y') or '-'"/></td>
                                            <td style="padding:10px; border:1px solid #000;"><span t-esc="line.product_qty"/></td>
                                            <td style="padding:10px; border:1px solid #000;"><span t-esc="line.product_uom_id.name"/></td>

                                            <td style="padding:10px; border:1px solid #000;">
                                                <span t-field="line.price_unit" t-options='{"widget":"monetary","display_currency":o.currency_id}'/>
                                            </td>

                                            <td style="padding:10px; border:1px solid #000;">
                                                <span t-field="line.price_subtotal" t-options='{"widget":"monetary","display_currency":o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>


                            <!-- TOTALS -->
                            <table style="width:45%; margin-top:20px; float:right; font-size:13px;">
                                <tr>
                                    <td style="padding:10px; border:1px solid #000;">
                                        <strong>Subtotal</strong> / <span class="ar">المجموع الفرعي</span>
                                    </td>
                                    <td style="padding:10px; border:1px solid #000; text-align:right;">
                                        <span t-field="o.amount_untaxed" t-options='{"widget":"monetary","display_currency":o.currency_id}'/>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="padding:10px; border:1px solid #000;">
                                        <strong>VAT</strong> / <span class="ar">ضريبة القيمة المضافة</span>
                                    </td>
                                    <td style="padding:10px; border:1px solid #000; text-align:right;">
                                        <span t-field="o.amount_tax" t-options='{"widget":"monetary","display_currency":o.currency_id}'/>
                                    </td>
                                </tr>

                                <tr style="background:#eee;">
                                    <td style="padding:12px; border:1px solid #000;">
                                        <strong>Net Total</strong> / <span class="ar">الإجمالي الصافي</span>
                                    </td>
                                    <td style="padding:12px; border:1px solid #000; text-align:right;">
                                        <strong><span t-field="o.amount_total" t-options='{"widget":"monetary","display_currency":o.currency_id}'/></strong>
                                    </td>
                                </tr>
                            </table>

                            <div style="clear:both; height:20px;"></div>


                            <!-- ===================== FOOTER START ===================== -->
                            <div class="footer"
                                 style="font-size:13px; background:#fff; width:848px; margin-top:10px; padding-top:10px;">

                                <table width="100%" style="border-collapse: collapse; margin-bottom:5px; font-size:10px;">
                                    <tr>

                                        <!-- Jeddah -->
                                        <td style="width:33%; padding:4px; border-right: 1px solid black;">
                                            <strong>Jeddah</strong><br/>
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            <span class="arabic-word">شركة سمير شرف العتيبي التجارية</span><br/>
                                            Jeddah, 7655 Al Fayha<br/>
                                            Al Fayha Dist. JEDDAH 22244-3108<br/>
                                            Saudi Arabia<br/><br/>
                                            Tel:<br/>
                                            Email:
                                        </td>

                                        <!-- Baladiya -->
                                        <td style="width:33%; padding:4px;">
                                            <strong>Baladiya</strong><br/>
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            <span class="arabic-word">شركة سمير شرف العتيبي التجارية</span><br/>
                                            Sookul Anwar, Al Baladeah, Aziziyah,<br/>
                                            Jeddah 31303<br/>
                                            Tel: 0535081008<br/>
                                            Email: ssaoe.dammam@gmail.com
                                        </td>

                                        <!-- Dammam -->
                                        <td style="width:33%; padding:4px; border-right: 1px solid black;">
                                            <strong>Dammam</strong><br/>
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            8515, Qutaibah bin Muslim ST,<br/>
                                            Al Souq, Dammam 4525-32242<br/>
                                            Saudi Arabia<br/><br/>
                                            Tel/Mobile: 0535081008<br/>
                                            Email: ssaoe.dammam@gmail.com
                                        </td>

                                    </tr>
                                </table>
                            </div>
                            <!-- ===================== FOOTER END ===================== -->

                        </div>
                    </body>

                </t>
            </t>
        </xpath>

    </template>
