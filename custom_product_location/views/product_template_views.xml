<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_location" model="ir.ui.view">
        <field name="name">product.template.form.inherit.location</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                <group string="Storage Location">
                    <field name="default_location_id" options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>