<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Existing account.move list view -->
    <record id="view_tax_report_detail_list" model="ir.ui.view">
        <field name="name">tax.report.detail.list</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Tax Report Details">
                <field name="name"/>
                <field name="invoice_date"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_tax_report_detail_form" model="ir.ui.view">
        <field name="name">tax.report.detail.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Invoice Detail">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="invoice_line_ids"/>
                        <field name="amount_total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tax_report_detail" model="ir.actions.act_window">
        <field name="name">Tax Report Details</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- New summary view for tax.report.detail.line -->
    <record id="view_tax_report_summary_list" model="ir.ui.view">
        <field name="name">tax.report.detail.line.list</field>
        <field name="model">tax.report.detail.line</field>
        <field name="arch" type="xml">
            <list string="Tax Report Summary">
<field name="type"/>
<field name="tax_id" options="{'no_create': True}"/>
<field name="base_amount"/>
<field name="tax_amount"/>
<button name="open_moves" type="object" string="Show Invoices"/>

            </list>
        </field>
    </record>
</odoo>
