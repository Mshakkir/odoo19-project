<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bank Book Details Form View -->
    <record id="view_account_bankbook_details_form" model="ir.ui.view">
        <field name="name">account.bankbook.details.form</field>
        <field name="model">account.bankbook.details</field>
        <field name="arch" type="xml">
            <form string="Bank Book Details">
                <sheet>
                    <div class="oe_title">
                        <h1>Bank Book Details</h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="report_type"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_debit" widget="monetary"/>
                            <field name="total_credit" widget="monetary"/>
                        </group>
                        <group>
                            <field name="total_balance" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transaction Details">
                            <field name="line_ids" nolabel="1">
                                <tree string="Details" create="false" edit="false" delete="false">
                                    <field name="date"/>
                                    <field name="account_code"/>
                                    <field name="account_name"/>
                                    <field name="journal_code"/>
                                    <field name="partner_name"/>
                                    <field name="move_name"/>
                                    <field name="label"/>
                                    <field name="analytic_account_names"/>
                                    <field name="debit" sum="Total Debit"/>
                                    <field name="credit" sum="Total Credit"/>
                                    <field name="balance" sum="Total Balance"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bank Book Details Tree View (Optional) -->
    <record id="view_account_bankbook_details_tree" model="ir.ui.view">
        <field name="name">account.bankbook.details.tree</field>
        <field name="model">account.bankbook.details</field>
        <field name="arch" type="xml">
            <tree string="Bank Book Details" create="false" edit="false" delete="false">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="total_debit"/>
                <field name="total_credit"/>
                <field name="total_balance"/>
            </tree>
        </field>
    </record>

</odoo>