<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Settings Form -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.quick.invoice</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">

                    <app string="Quick Invoice Pro" name="quick_invoice_pro">

                        <block title="Approval Settings">
                            <setting id="quick_invoice_approval_setting"
                                     help="Orders above threshold require manager approval">
                                <field name="quick_invoice_approval_required"/>
                                <div class="content-group" invisible="quick_invoice_approval_required == False">
                                    <div class="mt16">
                                        <label for="quick_invoice_approval_threshold" string="Approval Threshold Amount"/>
                                        <field name="quick_invoice_approval_threshold" class="oe_inline"/>
                                    </div>
                                </div>
                            </setting>
                        </block>

                        <block title="Stock Management">
                            <setting id="quick_invoice_stock_setting"
                                     help="Check stock availability before creating invoice">
                                <field name="quick_invoice_check_stock"/>
                                <div class="content-group" invisible="quick_invoice_check_stock == False">
                                    <div class="mt16">
                                        <label for="quick_invoice_partial_delivery" string="When Stock Unavailable"/>
                                        <field name="quick_invoice_partial_delivery" class="oe_inline"/>
                                    </div>
                                </div>
                            </setting>
                        </block>

                        <block title="Invoice Settings">
                            <setting id="quick_invoice_draft_setting"
                                     help="Create invoices in draft state for review">
                                <field name="quick_invoice_allow_draft"/>
                            </setting>

                            <setting id="quick_invoice_payment_setting"
                                     help="Automatically open payment wizard after invoice creation">
                                <field name="quick_invoice_auto_payment"/>
                            </setting>
                        </block>

                    </app>

                </xpath>
            </field>
        </record>

    </data>
</odoo>