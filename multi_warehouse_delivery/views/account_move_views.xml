<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create a primary list view for account.move.line with warehouse -->
    <record id="view_move_line_list_warehouse" model="ir.ui.view">
        <field name="name">account.move.line.list.warehouse</field>
        <field name="model">account.move.line</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list editable="bottom" string="Invoice Lines">
                <field name="product_id"/>
                <field name="warehouse_id"
                       optional="show"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
                <field name="name"/>
                <field name="account_id"/>
                <field name="analytic_distribution" widget="analytic_distribution"/>
                <field name="quantity"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="price_unit"/>
                <field name="discount" string="Disc.%"/>
                <field name="tax_ids" widget="many2many_tags"/>
                <field name="price_subtotal"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="company_id" column_invisible="True"/>
                <field name="display_type" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Create a primary form view for account.move.line with warehouse -->
    <record id="view_move_line_form_warehouse" model="ir.ui.view">
        <field name="name">account.move.line.form.warehouse</field>
        <field name="model">account.move.line</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Invoice Line">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="warehouse_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="quantity"/>
                            <field name="product_uom_id" groups="uom.group_uom"/>
                        </group>
                        <group>
                            <field name="price_unit"/>
                            <field name="discount"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="account_id"/>
                        <field name="analytic_distribution" widget="analytic_distribution"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>