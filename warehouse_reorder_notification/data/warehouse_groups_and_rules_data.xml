<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================ -->
        <!-- CREATE WAREHOUSE USER GROUPS -->
        <!-- ============================================ -->

        <!-- SSAOCO-Main Users Group -->
        <record id="group_warehouse_main_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Main Users</field>
        </record>

        <!-- SSAOCO-Baladiya Users Group -->
        <record id="group_warehouse_baladiya_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Baladiya Users</field>
        </record>

        <!-- SSAOCO-Dammam Users Group -->
        <record id="group_warehouse_dammam_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Dammam Users</field>
        </record>

        <!-- ============================================ -->
        <!-- RECORD RULES FOR SSAOCO-MAIN WAREHOUSE -->
        <!-- ============================================ -->

        <!-- Main Warehouse: Orderpoint Access Rule -->
        <record id="rule_main_orderpoint_access" model="ir.rule">
            <field name="name">Main Warehouse: Orderpoint Access</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="domain_force">[('warehouse_id.name', '=', 'SSAOCO-Main')]</field>
            <field name="groups" eval="[(4, ref('warehouse_reorder_notification.group_warehouse_main_users'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Main Warehouse: Mail Activity Access Rule -->
        <record id="rule_main_activity_access" model="ir.rule">
            <field name="name">Main Warehouse: Activity Access</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">['|', ('res_model', '!=', 'stock.warehouse.orderpoint'), '&', ('res_model', '=', 'stock.warehouse.orderpoint'), ('res_id.warehouse_id.name', '=', 'SSAOCO-Main')]</field>
            <field name="groups" eval="[(4, ref('warehouse_reorder_notification.group_warehouse_main_users'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- RECORD RULES FOR SSAOCO-BALADIYA WAREHOUSE -->
