<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List (tree) View for Balance Sheet Lines -->
    <record id="view_custom_balance_sheet_line_list" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.list</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Details" decoration-muted="is_total">
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Total Balance"/>
                <!-- Odoo 19: use 'invisible' instead of 'attrs' -->
                <button name="action_view_ledger"
                        string="View Ledger"
                        type="object"
                        icon="fa-book"
                        invisible="is_total == True"/>
            </list>
        </field>
    </record>

