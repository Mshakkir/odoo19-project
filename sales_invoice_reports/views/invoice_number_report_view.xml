<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_invoice_number_report_tree" model="ir.ui.view">
        <field name="name">invoice.number.report.tree</field>
        <field name="model">invoice.number.report</field>
        <field name="arch" type="xml">
            <tree string="Sales Report by Invoice Number" create="false" edit="false" delete="false">
                <field name="invoice_date"/>
                <field name="invoice_number"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="user_id"/>
                <field name="analytic_account_id"/>
                <field name="quantity" sum="Total Quantity"/>
                <field name="price_unit"/>
                <field name="discount"/>
                <field name="price_subtotal" sum="Total Untaxed"/>
                <field name="price_total" sum="Total"/>
                <field name="invoice_state"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_invoice_number_report_search" model="ir.ui.view">
        <field name="name">invoice.number.report.search</field>
        <field name="model">invoice.number.report</field>
        <field name="arch" type="xml">
            <search string="Sales Report by Invoice Number">
                <field name="invoice_number"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="user_id"/>
                <field name="analytic_account_id"/>
                <field name="warehouse_id"/>
                <field name="account_id"/>

                <filter string="Posted" name="posted"
                        domain="[('invoice_state', '=', 'posted')]"/>
                <filter string="Draft" name="draft"
                        domain="[('invoice_state', '=', 'draft')]"/>
                <filter string="Cancelled" name="cancelled"
                        domain="[('invoice_state', '=', 'cancel')]"/>

                <separator/>
                <filter string="Invoices" name="invoices"
                        domain="[('move_type', '=', 'out_invoice')]"/>
                <filter string="Credit Notes" name="refunds"
                        domain="[('move_type', '=', 'out_refund')]"/>

                <separator/>
                <filter string="Invoice Date" name="invoice_date"
                        date="invoice_date"/>

                <group expand="0" string="Group By">
                    <filter string="Invoice Number" name="group_invoice"
                            context="{'group_by': 'invoice_number'}"/>
                    <filter string="Customer" name="group_partner"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Product" name="group_product"
                            context="{'group_by': 'product_id'}"/>
                    <filter string="Salesperson" name="group_salesperson"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Analytic Account" name="group_analytic_account"
                            context="{'group_by': 'analytic_account_id'}"/>
                    <filter string="Warehouse" name="group_warehouse"
                            context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Account" name="group_account"
                            context="{'group_by': 'account_id'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'invoice_state'}"/>
                    <filter string="Invoice Date" name="group_date"
                            context="{'group_by': 'invoice_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_invoice_number_report_pivot" model="ir.ui.view">
        <field name="name">invoice.number.report.pivot</field>
        <field name="model">invoice.number.report</field>
        <field name="arch" type="xml">
            <pivot string="Sales Analysis by Invoice Number">
                <field name="invoice_number" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="price_subtotal" type="measure"/>
                <field name="price_total" type="measure"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_invoice_number_report_graph" model="ir.ui.view">
        <field name="name">invoice.number.report.graph</field>
        <field name="model">invoice.number.report</field>
        <field name="arch" type="xml">
            <graph string="Sales Analysis by Invoice Number" type="bar">
                <field name="invoice_date"/>
                <field name="price_subtotal" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_invoice_number_report" model="ir.actions.act_window">
        <field name="name">Sales by Invoice Number</field>
        <field name="res_model">invoice.number.report</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="context">{'search_default_posted': 1}</field>
    </record>
</odoo>