<!-- custom_balance_sheet/views/balance_sheet_line_views.xml -->
<odoo>
    <record id="view_balance_sheet_line_list" model="ir.ui.view">
        <field name="name">balance.sheet.line.list</field>
        <field name="model">balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Lines">
                <field name="account_id"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_balance_sheet_line_form" model="ir.ui.view">
        <field name="name">balance.sheet.line.form</field>
        <field name="model">balance.sheet.line</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet Line">
                <sheet>
                    <group>
                        <field name="account_id"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="balance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_balance_sheet_line" model="ir.actions.act_window">
        <field name="name">Balance Sheet Lines</field>
        <field name="res_model">balance.sheet.line</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
