<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form - fixed_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <!-- Add global discount field after invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <group>
                    <group>
                        <field
                            name="global_discount_fixed"
                            groups="account_invoice_fixed_discount.group_fixed_discount"
                            widget="monetary"
                            readonly="state != 'draft'"
                        />
                    </group>
                </group>
            </xpath>

            <!-- Modify the totals section - Odoo 19 approach -->
            <!-- Target the tax_totals widget instead of individual fields -->
            <xpath expr="//field[@name='tax_totals']" position="before">
                <!-- Show original untaxed amount if discount exists -->
                <div class="oe_subtotal_footer_separator"
                     invisible="not global_discount_fixed or global_discount_fixed == 0">
                    <label for="amount_undiscounted" string="Subtotal"/>
                    <field name="amount_undiscounted"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           nolabel="1"
                           readonly="1"/>
                </div>

                <!-- Show the discount -->
                <div class="oe_subtotal_footer_separator"
                     invisible="not global_discount_fixed or global_discount_fixed == 0"
                     groups="account_invoice_fixed_discount.group_fixed_discount">
                    <label for="global_discount_fixed" string="Discount"/>
                    <field name="global_discount_fixed"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           nolabel="1"
                           readonly="state != 'draft'"/>
                </div>

                <!-- Show amount after discount -->
                <div class="oe_subtotal_footer_separator"
                     invisible="not global_discount_fixed or global_discount_fixed == 0">
                    <label for="amount_after_discount" string="Subtotal After Discount"/>
                    <field name="amount_after_discount"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           nolabel="1"
                           readonly="1"/>
                </div>
            </xpath>

            <!-- Alternative: If tax_totals doesn't work, try targeting amount_total -->
            <!-- Uncomment this section if the above doesn't work -->
