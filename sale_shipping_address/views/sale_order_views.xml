<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_shipping_to" model="ir.ui.view">
        <field name="name">sale.order.form.shipping.to</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add after Expiration field -->
            <field name="validity_date" position="after">
                <field name="shipping_to" placeholder="Enter shipping address details..."/>
            </field>
        </field>
    </record>
</odoo>