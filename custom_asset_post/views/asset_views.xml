<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Modify Depreciation Line Form View - Add Post Button in Wizard -->
        <record id="custom_depreciation_line_form_view" model="ir.ui.view">
            <field name="name">account.asset.depreciation.line.form - Custom Post Button</field>
            <field name="model">account.asset.depreciation.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_depreciation_line_form"/>
            <field name="arch" type="xml">

                <!-- Add Post Button before footer close button -->
                <xpath expr="//footer/button[@special='cancel']" position="before">
                    <button name="action_post_depreciation"
                            type="object"
                            string="Post Depreciation"
                            invisible="move_check == True"
                            class="btn-success"
                            title="Post this depreciation entry instantly"/>

                    <button name="action_unpost_depreciation"
                            type="object"
                            string="Unpost"
                            invisible="move_check == False"
                            class="btn-warning"
                            title="Unpost this depreciation entry"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>