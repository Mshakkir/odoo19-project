<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the account move line tree view -->
    <record id="view_invoice_line_tree_inherit_purchase_history" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.purchase.history</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Add widget to product_id field in invoice line tree -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="widget">product_purchase_history</attribute>
            </xpath>
        </field>
    </record>
</odoo>