<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Insert at the beginning of the right-side group that contains validity_date -->
            <xpath expr="//field[@name='validity_date']" position="before">

                <!-- Total Invoiced - Clickable when non-zero -->
                <label for="customer_total_invoiced"
                       string="Total Invoiced"
                       invisible="not partner_id"
                       class="fw-normal"/>
                <div class="o_row" invisible="not partner_id">
                    <button name="action_view_customer_invoices"
                            type="object"
                            class="btn btn-link p-0 oe_link"
                            style="text-decoration: underline;"
                            invisible="customer_total_invoiced == 0">
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               nolabel="1"
                               class="text-primary"/>
                    </button>
                    <field name="customer_total_invoiced"
                           widget="monetary"
                           readonly="1"
                           invisible="customer_total_invoiced != 0"
                           nolabel="1"/>
                </div>

                <!-- Amount Received - Clickable when non-zero -->
                <label for="customer_total_paid"
                       string="Amount Received"
                       invisible="not partner_id"
                       class="fw-normal"/>
                <div class="o_row" invisible="not partner_id">
                    <button name="action_view_customer_payments"
                            type="object"
                            class="btn btn-link p-0 oe_link"
                            style="text-decoration: underline;"
                            invisible="customer_total_paid == 0">
                        <field name="customer_total_paid"
                               widget="monetary"
                               readonly="1"
                               decoration-success="customer_total_paid > 0"
                               nolabel="1"
                               class="text-success"/>
                    </button>
                    <field name="customer_total_paid"
                           widget="monetary"
                           readonly="1"
                           invisible="customer_total_paid != 0"
                           nolabel="1"/>
                </div>

                <!-- Balance Due - Not clickable -->
                <label for="customer_balance_due"
                       string="Balance Due"
                       invisible="not partner_id"
                       class="fw-normal"/>
                <div invisible="not partner_id">
                    <field name="customer_balance_due"
                           widget="monetary"
                           readonly="1"
                           decoration-danger="customer_balance_due > 0"
                           decoration-success="customer_balance_due == 0"
                           nolabel="1"/>
                </div>

            </xpath>

        </field>
    </record>
</odoo>