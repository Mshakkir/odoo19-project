<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

        <!-- Add a flag: Does any order line have a fixed discount? -->
        <xpath expr="//table[@class='table table-sm o_main_table']" position="before">
            <t t-set="has_fixed_discount"
               t-value="any(l.discount_fixed for l in doc.order_line)" />
        </xpath>

        <!-- Replace the header of discount column -->
        <xpath expr="//th[contains(@class,'oe_discount')]" position="replace">
            <th class="oe_discount">
                <span t-if="not has_fixed_discount">Discount (%)</span>
                <span t-if="has_fixed_discount">Discount (Fixed)</span>
            </th>
        </xpath>

        <!-- Replace discount value in table rows -->
        <xpath expr="//td[contains(@class,'oe_discount')]" position="replace">
            <td class="oe_discount text-right">
                <!-- Show fixed discount if exists -->
                <t t-if="line.discount_fixed">
                    <span t-esc="line.discount_fixed"/>
                </t>

                <!-- Otherwise show normal % discount -->
                <t t-if="not line.discount_fixed">
                    <span t-field="line.discount"/>
                </t>
            </td>
        </xpath>

    </template>
</odoo>
