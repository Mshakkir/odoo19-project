<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Sale Order List View -->
        <record id="view_order_list_custom" model="ir.ui.view">
            <field name="name">sale.order.list.custom</field>
            <field name="model">sale.order</field>
            <field name="mode">primary</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <list string="Sales Orders"
                      sample="1"
                      decoration-info="state in ('draft', 'sent')"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- YOUR REQUESTED ORDER -->
                    <!-- 1. Order Date -->
                    <field name="date_order" string="Order Date"/>

                    <!-- 2. Number -->
                    <field name="name" string="Number" readonly="1"/>

                    <!-- 3. Customer -->
                    <field name="partner_id" string="Customer"/>

                    <!-- 4. Warehouse -->
                    <field name="warehouse_id" string="Warehouse"/>

                    <!-- 5. Customer Reference -->
                    <field name="client_order_ref" string="Customer Reference"/>

                    <!-- 6. Salesperson -->
                    <field name="user_id" string="Salesperson" widget="many2one_avatar_user"/>

                    <!-- 7. Untaxed Amount -->
                    <field name="amount_untaxed" string="Untaxed Amount" sum="Total Untaxed"/>

                    <!-- 8. Tax -->
                    <field name="amount_tax" string="Tax" sum="Total Tax"/>

                    <!-- 9. Total (Taxed Amount) -->
                    <field name="amount_total" string="Total" sum="Total Amount"/>

                    <!-- 10. Shipping Ref (AWB Number) -->
                    <field name="awb_number" string="Shipping Ref #"/>

                    <!-- 11. PO Number -->
                    <field name="ref" string="PO Number"/>

                    <!-- ADDITIONAL DEFAULT ODOO FIELDS (HIDDEN BY DEFAULT) -->

                    <!-- Invoice Status -->
                    <field name="invoice_status" string="Invoice Status" widget="badge"
                           decoration-success="invoice_status == 'invoiced'"
                           decoration-warning="invoice_status == 'to invoice'"
                           decoration-info="invoice_status == 'no'"/>

                    <!-- Delivery Status (if you have delivery tracking) -->
                    <field name="delivery_status" string="Delivery Status" optional="hide"/>

                    <!-- Expected Date -->
                    <field name="expected_date" string="Expected Date" optional="hide"/>

                    <!-- Commitment Date -->
                    <field name="commitment_date" string="Commitment Date" optional="hide"/>

                    <!-- Delivery Note Number -->
<!--                    <field name="delivery_note_number" string="Delivery Note #" optional="hide"/>-->

<!--                    &lt;!&ndash; Order Source &ndash;&gt;-->
<!--                    <field name="order_source" string="Order Source" optional="hide"/>-->

                    <!-- Payment Terms -->
                    <field name="payment_term_id" string="Payment Terms" optional="hide"/>

                    <!-- Pricelist -->
                    <field name="pricelist_id" string="Pricelist" optional="hide"/>

                    <!-- Currency -->
                    <field name="currency_id" string="Currency" optional="hide"/>

                    <!-- Fiscal Position -->
                    <field name="fiscal_position_id" string="Fiscal Position" optional="hide"/>

                    <!-- Company -->
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"/>

                    <!-- Sales Team -->
                    <field name="team_id" string="Sales Team" optional="hide"/>

                    <!-- Tags -->
                    <field name="tag_ids" string="Tags" widget="many2many_tags" optional="hide"/>

                    <!-- Campaign -->
                    <field name="campaign_id" string="Campaign" optional="hide" groups="base.group_no_one"/>

                    <!-- Medium -->
                    <field name="medium_id" string="Medium" optional="hide" groups="base.group_no_one"/>

                    <!-- Source -->
                    <field name="source_id" string="Source" optional="hide" groups="base.group_no_one"/>

                    <!-- Status -->
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'sale' or state == 'done'"
                           decoration-info="state == 'draft' or state == 'sent'"/>

                    <!-- Activity fields -->
                    <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"/>

                    <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                           decoration-success="activity_state == 'today'"
                           decoration-warning="activity_state == 'planned'"
                           decoration-danger="activity_state == 'overdue'"/>

                    <field name="activity_user_id" string="Responsible User" optional="hide"/>

                    <field name="activity_type_id" string="Next Activity Type" optional="hide"/>

                    <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide"/>

                    <field name="activity_summary" string="Activity Summary" optional="hide"/>

                    <!-- Message -->
                    <field name="message_needaction" string="Action Needed" optional="hide"/>

                    <!-- Invoice Address -->
                    <field name="partner_invoice_id" string="Invoice Address" optional="hide"/>

                    <!-- Delivery Address -->
                    <field name="partner_shipping_id" string="Delivery Address" optional="hide"/>

                    <!-- Incoterm -->
                    <field name="incoterm" string="Incoterm" optional="hide"/>

                    <!-- Validity Date -->
                    <field name="validity_date" string="Expiration" optional="hide"/>

                    <!-- Note -->
                    <field name="note" string="Terms and Conditions" optional="hide"/>

                    <!-- Hidden technical fields -->
                    <field name="partner_invoice_id" column_invisible="1"/>
                    <field name="partner_shipping_id" column_invisible="1"/>

                </list>
            </field>
        </record>

        <!-- Override the default sale order action to use custom view -->
        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="view_id" ref="view_order_list_custom"/>
        </record>

        <!-- Also update quotations view -->
        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="view_id" ref="view_order_list_custom"/>
        </record>

    </data>
</odoo>