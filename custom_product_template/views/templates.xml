<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Modern Shop Header with Brand Colors -->
    <template id="shop_header_custom" inherit_id="website_sale.products" name="Modern Shop Header" priority="10">
        <xpath expr="//div[@id='products_grid']" position="before">
            <div class="container-fluid modern_shop_hero mb-5">
                <div class="container">
                    <div class="row align-items-center py-5">
                        <div class="col-12">
                            <div class="hero_content text-center">
                                <div class="hero_badge mb-3">
                                    <span class="badge_pill">Premium Collection</span>
                                </div>
                                <h1 class="hero_title mb-3">Discover Our Products</h1>
                                <p class="hero_subtitle mb-4">Curated selection of quality items for your needs</p>
                                <div class="hero_stats d-flex justify-content-center gap-4 flex-wrap">
                                    <div class="stat_item">
                                        <div class="stat_number">500+</div>
                                        <div class="stat_label">Products</div>
                                    </div>
                                    <div class="stat_divider"></div>
                                    <div class="stat_item">
                                        <div class="stat_number">50+</div>
                                        <div class="stat_label">Categories</div>
                                    </div>
                                    <div class="stat_divider"></div>
                                    <div class="stat_item">
                                        <div class="stat_number">24/7</div>
                                        <div class="stat_label">Support</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hero_wave">
                    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0,64L48,69.3C96,75,192,85,288,80C384,75,480,53,576,48C672,43,768,53,864,58.7C960,64,1056,64,1152,58.7C1248,53,1344,43,1392,37.3L1440,32L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z" fill="white"/>
                    </svg>
                </div>
            </div>
        </xpath>
    </template>

    <!-- Modern Featured Products Snippet -->
    <template id="s_custom_products" name="Modern Featured Products">
        <section class="s_modern_products py-5">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-12 text-center">
                        <div class="section_badge mb-3">
                            <span class="badge_pill_alt">Featured</span>
                        </div>
                        <h2 class="section_title mb-3">Trending Products</h2>
                        <p class="section_subtitle">Handpicked items just for you</p>
                    </div>
                </div>
                <div class="row g-4">
                    <t t-set="featured_products" t-value="request.env['product.template'].sudo().search([('is_published', '=', True)], limit=8, order='create_date desc')"/>
                    <t t-foreach="featured_products" t-as="product">
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="modern_product_card">
                                <div class="product_card_inner">
                                    <div class="product_badge">New</div>
                                    <a t-attf-href="/shop/product/#{ slug(product) }" class="product_image_link">
                                        <div class="product_image_wrapper">
                                            <img t-attf-src="/web/image/product.template/#{product.id}/image_512"
                                                 class="product_image"
                                                 t-att-alt="product.name"/>
                                            <div class="product_overlay">
                                                <span class="overlay_text">Quick View</span>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="product_content">
                                        <h5 class="product_name">
                                            <a t-attf-href="/shop/product/#{ slug(product) }"
                                               class="product_link">
                                                <t t-out="product.name"/>
                                            </a>
                                        </h5>
                                        <div class="product_meta mb-3">
                                            <div class="product_rating">
                                                <span class="star">★</span>
                                                <span class="star">★</span>
                                                <span class="star">★</span>
                                                <span class="star">★</span>
                                                <span class="star">★</span>
                                                <span class="rating_count">(45)</span>
                                            </div>
                                        </div>
                                        <div class="product_footer">
                                            <div class="product_price">
                                                <span class="price_currency"><t t-out="website.currency_id.symbol"/></span>
                                                <span class="price_amount"><t t-out="'%.2f' % product.list_price"/></span>
                                            </div>
                                            <a t-attf-href="/shop/product/#{ slug(product) }"
                                               class="btn_add_cart">
                                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <circle cx="9" cy="21" r="1"></circle>
                                                    <circle cx="20" cy="21" r="1"></circle>
                                                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <a href="/shop" class="btn_view_all">
                            View All Products
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                <polyline points="12 5 19 12 12 19"></polyline>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>













