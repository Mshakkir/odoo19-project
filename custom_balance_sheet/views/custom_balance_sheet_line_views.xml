<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List (tree) View for Balance Sheet Lines -->
    <record id="view_custom_balance_sheet_line_list" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.tree</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <tree string="Balance Sheet Details" decoration-muted="is_total">
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Total Balance"/>
                <!-- Button is allowed in tree as leaf element -->
                <button name="action_view_ledger"
                        string="View Ledger"
                        type="object"
                        icon="fa-book"
                        attrs="{'invisible': [('is_total','=', True)]}"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_balance_sheet_line_form" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.form</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="account_type"/>
                        <field name="debit"/>
                        <field name="credit"/>
                        <field name="balance"/>
                        <field name="is_total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
