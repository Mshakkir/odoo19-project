<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit and customize the Journal Audit wizard view -->
    <record id="account_report_print_journal_custom_view" model="ir.ui.view">
        <field name="name">Journals Audit Custom</field>
        <field name="model">account.print.journal</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_report_print_journal_view"/>
        <field name="arch" type="xml">

            <!-- Add journal entry number filters after sort_selection -->
            <xpath expr="//field[@name='sort_selection']" position="after">
                <group colspan="4" col="4">
                    <separator string="Journal Entry Number Filter" colspan="4"/>
                    <field name="entry_number_from" placeholder="e.g., INV/2024/0001"/>
                    <field name="entry_number_to" placeholder="e.g., INV/2024/0100"/>
                </group>
            </xpath>

            <!-- Modify footer to add Show Details button -->
            <xpath expr="//footer" position="replace">
                <footer>
                    <button name="check_report" string="Print" type="object" class="btn-primary"/>
                    <button name="action_show_details" string="Show Details" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </xpath>

        </field>
    </record>

    <!-- Optional: Create a separate menu item for custom journal audit -->
    <record id="action_account_print_journal_custom_menu" model="ir.actions.act_window">
        <field name="name">Custom Journals Audit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.print.journal</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_print_journal_custom_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_print_journal_custom"
              name="Custom Journals Audit"
              sequence="41"
              parent="accounting_pdf_reports.menu_finance_audit_reports"
              action="action_account_print_journal_custom_menu"
              groups="account.group_account_manager,account.group_account_user"/>

</odoo>