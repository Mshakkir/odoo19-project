<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_purchase_buyer_report_list" model="ir.ui.view">
        <field name="name">purchase.buyer.report.list</field>
        <field name="model">purchase.buyer.report</field>
        <field name="arch" type="xml">
            <list string="Purchase Buyer Report" create="false" edit="false" delete="false">
                <field name="invoice_date"/>
                <field name="invoice_number"/>
                <field name="buyer_id"/>
                <field name="vendor_id"/>
                <field name="product_id"/>
                <field name="quantity" sum="Total Qty"/>
                <field name="uom_id"/>
                <field name="price_unit"/>
                <field name="net_amount" sum="Total Net Amount"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_purchase_buyer_report_search" model="ir.ui.view">
        <field name="name">purchase.buyer.report.search</field>
        <field name="model">purchase.buyer.report</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Buyer Report">
                <field name="invoice_number"/>
                <field name="buyer_id"/>
                <field name="vendor_id"/>
                <field name="product_id"/>
                <filter name="group_by_buyer" string="Buyer" context="{'group_by': 'buyer_id'}"/>
                <filter name="group_by_vendor" string="Vendor" context="{'group_by': 'vendor_id'}"/>
                <filter name="group_by_product" string="Product" context="{'group_by': 'product_id'}"/>
                <filter name="group_by_date" string="Date" context="{'group_by': 'invoice_date'}"/>
            </search>
        </field>
    </record>
</odoo>