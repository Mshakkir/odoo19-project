<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Purchase Order Form View to add product list link -->
    <record id="view_purchase_order_form_product_list_link" model="ir.ui.view">
        <field name="name">purchase.order.form.product.list.link</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add button in list view after product -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <button name="action_view_product_list"
                        type="object"
                        icon="fa-list-alt"
                        title="View Product Details"
                        string=""
                        width="40px"
                        class="btn-link p-0"
                        invisible="not product_id or display_type in ('line_section', 'line_subsection', 'line_note')"/>
            </xpath>

            <!-- Add button in form view after product field -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <button name="action_view_product_list"
                        type="object"
                        string="ðŸ“‹ View Product"
                        class="btn-link"
                        invisible="not product_id"/>
            </xpath>

            <!-- Add button in kanban view -->
            <xpath expr="//field[@name='order_line']/kanban//field[@name='product_id']" position="after">
                <button name="action_view_product_list"
                        type="object"
                        string="View Product"
                        class="btn-sm btn-secondary mt-1"
                        invisible="not product_id"/>
            </xpath>

        </field>
    </record>

</odoo>













