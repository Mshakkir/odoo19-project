<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form - fixed_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <!-- Add global discount field after invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <group>
                    <group>
                        <field
                            name="global_discount_fixed"
                            groups="account_invoice_fixed_discount.group_fixed_discount"
                            widget="monetary"
                            readonly="state != 'draft'"
                        />
                    </group>
                </group>
            </xpath>

            <!-- Modify the totals section on the right side -->
            <!-- First, we need to find where amount_untaxed is and add our fields before it -->
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <!-- Show original untaxed amount if discount exists -->
                <field name="amount_undiscounted"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       string="Untaxed Amount"
                       invisible="not global_discount_fixed or global_discount_fixed == 0"
                       readonly="1"/>
            </xpath>

            <!-- Add discount field after the original untaxed amount -->
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <!-- Show the discount -->
                <field name="global_discount_fixed"
                       groups="account_invoice_fixed_discount.group_fixed_discount"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       string="Discount"
                       class="oe_subtotal_footer_separator"
                       invisible="not global_discount_fixed or global_discount_fixed == 0"
                       readonly="state != 'draft'"/>

                <!-- Show amount after discount -->
                <field name="amount_after_discount"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       string="Untaxed Amount (After Discount)"
                       class="oe_subtotal_footer_separator"
                       invisible="not global_discount_fixed or global_discount_fixed == 0"
                       readonly="1"/>
            </xpath>

            <!-- Hide the default amount_untaxed when discount is present -->
            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="invisible">global_discount_fixed and global_discount_fixed &gt; 0</attribute>
            </xpath>

        </field>
    </record>
</odoo>
