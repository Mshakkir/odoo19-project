<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Invoice Form View -->
    <record id="view_move_form_customer_balance" model="ir.ui.view">
        <field name="name">account.move.form.customer.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add customer balance in the left column after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">

                <!-- Customer Balance Info (Only for Customer Invoices) - NO HEADING -->
                <label for="customer_total_invoiced"
                       invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id"
                       string="Total Invoiced"/>
                <div class="o_row" invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id">
                    <field name="customer_total_invoiced"
                           widget="monetary"
                           readonly="1"
                           nolabel="1"/>
                    <button name="action_view_customer_invoices"
                            type="object"
                            string="View"
                            class="btn-link"
                            invisible="customer_total_invoiced == 0"/>
                </div>

                <label for="customer_total_paid"
                       invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id"
                       string="Amount Paid"/>
                <div class="o_row" invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id">
                    <field name="customer_total_paid"
                           widget="monetary"
                           readonly="1"
                           decoration-success="customer_total_paid > 0"
                           nolabel="1"/>
                    <button name="action_view_customer_payments"
                            type="object"
                            string="View"
                            class="btn-link"
                            invisible="customer_total_paid == 0"/>
                </div>

                <field name="customer_balance_due"
                       invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id"
                       widget="monetary"
                       readonly="1"
                       decoration-danger="customer_balance_due > 0"
                       decoration-success="customer_balance_due == 0"
                       string="Balance Due"/>

                <!-- Vendor Balance Info (Only for Vendor Bills) - NO HEADING -->
                <label for="vendor_total_billed"
                       invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id"
                       string="Total Billed"/>
                <div class="o_row" invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id">
                    <field name="vendor_total_billed"
                           widget="monetary"
                           readonly="1"
                           nolabel="1"/>
                    <button name="action_view_vendor_bills"
                            type="object"
                            string="View"
                            class="btn-link"
                            invisible="vendor_total_billed == 0"/>
                </div>

                <label for="vendor_total_paid"
                       invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id"
                       string="Amount Paid"/>
                <div class="o_row" invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id">
                    <field name="vendor_total_paid"
                           widget="monetary"
                           readonly="1"
                           decoration-success="vendor_total_paid > 0"
                           nolabel="1"/>
                    <button name="action_view_vendor_payments"
                            type="object"
                            string="View"
                            class="btn-link"
                            invisible="vendor_total_paid == 0"/>
                </div>

                <field name="vendor_balance_due"
                       invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id"
                       widget="monetary"
                       readonly="1"
                       decoration-danger="vendor_balance_due > 0"
                       decoration-success="vendor_balance_due == 0"
                       string="Balance Due"/>

            </xpath>
        </field>
    </record>
</odoo>