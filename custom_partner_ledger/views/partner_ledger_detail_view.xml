<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View for Partner Ledger Details -->
    <record id="view_partner_ledger_detail_tree" model="ir.ui.view">
        <field name="name">partner.ledger.detail.tree</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <tree string="Partner Ledger Details"
                  create="false"
                  edit="false"
                  delete="false"
                  decoration-bf="is_opening_balance == True"
                  decoration-info="move_state == 'draft'"
                  decoration-success="is_opening_balance == True">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="move_id" optional="show"/>
                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="name"/>
                <field name="ref" optional="show"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance"/>
                <field name="amount_currency"
                       optional="hide"
                       groups="base.group_multi_currency"/>
                <field name="currency_id"
                       optional="hide"
                       groups="base.group_multi_currency"/>
                <field name="reconcile_id" optional="hide"/>
                <field name="move_state" optional="show"/>
                <field name="is_opening_balance" column_invisible="1"/>
                <field name="company_currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View for Partner Ledger Details -->
    <record id="view_partner_ledger_detail_search" model="ir.ui.view">
        <field name="name">partner.ledger.detail.search</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <search string="Search Partner Ledger Details">
                <field name="partner_id"/>
                <field name="account_id"/>
                <field name="journal_id"/>
                <field name="move_id"/>
                <field name="date"/>
                <field name="ref"/>
                <field name="name"/>
                <separator/>
                <filter string="Opening Balance"
                        name="filter_opening_balance"
                        domain="[('is_opening_balance', '=', True)]"/>
                <filter string="Transactions"
                        name="filter_transactions"
                        domain="[('is_opening_balance', '=', False)]"/>
                <separator/>
                <filter string="Draft"
                        name="filter_draft"
                        domain="[('move_state', '=', 'draft')]"/>
                <filter string="Posted"
                        name="filter_posted"
                        domain="[('move_state', '=', 'posted')]"/>
                <separator/>
                <filter string="Reconciled"
                        name="filter_reconciled"
                        domain="[('reconcile_id', '!=', False)]"/>
                <filter string="Not Reconciled"
                        name="filter_not_reconciled"
                        domain="[('reconcile_id', '=', False), ('is_opening_balance', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Partner"
                            name="group_by_partner"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Account"
                            name="group_by_account"
                            context="{'group_by': 'account_id'}"/>
                    <filter string="Journal"
                            name="group_by_journal"
                            context="{'group_by': 'journal_id'}"/>
                    <filter string="Date"
                            name="group_by_date"
                            context="{'group_by': 'date'}"/>
                    <filter string="Status"
                            name="group_by_status"
                            context="{'group_by': 'move_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Partner Ledger Details -->
    <record id="action_partner_ledger_detail" model="ir.actions.act_window">
        <field name="name">Partner Ledger Details</field>
        <field name="res_model">partner.ledger.detail</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_partner_ledger_detail_tree"/>
        <field name="search_view_id" ref="view_partner_ledger_detail_search"/>
        <field name="context">{'search_default_group_by_partner': 1}</field>
        <field name="target">current</field>
    </record>

</odoo>