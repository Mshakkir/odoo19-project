<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form - fixed_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">

            <!-- Add global discount field after invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <group>
                    <group string="Discount">
                        <field
                            name="global_discount_fixed"
                            groups="account_invoice_fixed_discount.group_fixed_discount"
                            widget="monetary"
                            readonly="state != 'draft'"
                        />
                    </group>
                    <group string="Discount Breakdown" invisible="not global_discount_fixed or global_discount_fixed == 0">
                        <field name="amount_undiscounted"
                               widget="monetary"
                               string="Amount Before Discount"
                               readonly="1"/>

                        <field name="amount_after_discount"
                               widget="monetary"
                               string="Amount After Discount"
                               readonly="1"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>