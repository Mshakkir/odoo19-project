<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Extension -->
    <record id="view_order_form_cash_customer" model="ir.ui.view">
        <field name="name">sale.order.form.cash.customer</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add invisible field to track if Cash Customer is selected -->
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="is_cash_customer" invisible="1"/>
            </xpath>

            <!-- Add custom fields in a new notebook page -->
            <xpath expr="//notebook" position="inside">
                <page string="Cash Customer Details" invisible="not is_cash_customer">
                    <group>
                        <group string="Customer Information">
                            <field name="actual_customer_name" required="is_cash_customer" placeholder="Enter customer name (e.g., John Doe)"/>
                            <field name="actual_customer_mobile" placeholder="Enter mobile number"/>
                            <field name="actual_customer_email" placeholder="Enter email address"/>
                        </group>
                        <group string="Address">
                            <field name="actual_customer_address" placeholder="Enter complete address"/>
                        </group>
                    </group>
                    <separator/>
                    <div class="alert alert-info" role="alert">
                        <strong>Note:</strong> These details will be printed on the invoice instead of "Cash Customer".
                        The accounting ledger will show "Cash Customer" to keep your records organized.
                    </div>
                </page>
            </xpath>

        </field>
    </record>

</odoo>