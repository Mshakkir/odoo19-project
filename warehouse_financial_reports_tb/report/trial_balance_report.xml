<odoo>
    <template id="trial_balance_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <h2>Trial Balance Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Account</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="data" t-as="line">
                            <tr>
                                <td><t t-esc="line['account']"/></td>
                                <td><t t-esc="line['debit']"/></td>
                                <td><t t-esc="line['credit']"/></td>
                                <td><t t-esc="line['balance']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>
