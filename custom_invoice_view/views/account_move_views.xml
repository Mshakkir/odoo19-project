<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Sales Invoice List View -->
        <record id="view_move_list_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.list.invoice.custom</field>
            <field name="model">account.move</field>
            <field name="mode">primary</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <list string="Invoices"
                      sample="1"
                      decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- YOUR REQUESTED ORDER -->
                    <!-- 1. Invoice Date -->
                    <field name="invoice_date" string="Invoice Date" width="90px"/>

                    <!-- 2. Invoice Number -->
                    <field name="name" string="Invoice Number" readonly="1" width="135px"/>

                    <!-- 3. Customer -->
                    <field name="partner_id" string="Customer" width="160px"/>

                    <!-- 4. Warehouse (NEW - after customer) -->
                    <field name="warehouse_id" string="Warehouse" width="120px"/>

                    <!-- 5. Source Document (like Sales Order) -->
                    <field name="invoice_origin" string="Source Document" width="110px"/>

                    <!-- 6. Reference -->
                    <field name="ref" string="Reference" width="100px"/>

                    <!-- 7. Salesperson -->
                    <field name="invoice_user_id" string="Salesperson" widget="many2one_avatar_user" width="120px"/>

                    <!-- 8. Total -->
                    <field name="amount_total" string="Total" sum="Total Amount" width="100px"/>

                    <!-- 9. Amount Due -->
                    <field name="amount_residual" string="Amount Due" sum="Total Due" width="110px"/>

                    <!-- 10. Due Date -->
                    <field name="invoice_date_due" string="Due Date" width="100px"/>

                    <!-- 11. AWB Number (Shipping Ref) -->
                    <field name="awb_number" string="Shipping Ref #" width="110px"/>

                    <!-- 12. Delivery Note Number -->
                    <field name="delivery_note_number" string="Delivery Note #" width="135px"/>

                    <!-- 13. Status -->
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'posted'"
                           decoration-info="state == 'draft'"
                           width="90px"/>

                    <!-- 14. Payment Status -->
                    <field name="payment_state" string="Payment Status" widget="badge"
                           decoration-success="payment_state == 'paid'"
                           decoration-warning="payment_state == 'partial'"
                           decoration-danger="payment_state in ('not_paid', 'in_payment')"
                           width="110px"/>

                    <!-- ADDITIONAL OPTIONAL FIELDS (Hidden by default) -->

                    <!-- 15. Tax Excluded Amount -->
                    <field name="amount_untaxed" string="Tax Excluded" sum="Total Untaxed" optional="hide" width="120px"/>

                    <!-- 16. Tax -->
                    <field name="amount_tax" string="Tax" sum="Total Tax" optional="hide" width="100px"/>

                    <!-- 17. Accounting Date -->
                    <field name="date" string="Accounting Date" optional="hide" width="120px"/>

                    <!-- 18. Journal -->
                    <field name="journal_id" string="Journal" optional="hide" width="120px"/>

                    <!-- 19. Payment Terms -->
                    <field name="invoice_payment_term_id" string="Payment Terms" optional="hide" width="140px"/>

                    <!-- 20. Currency -->
                    <field name="currency_id" string="Currency" optional="hide" width="80px"/>

                    <!-- 21. Company -->
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide" width="120px"/>

                    <!-- 22. Fiscal Position -->
                    <field name="fiscal_position_id" string="Fiscal Position" optional="hide" width="130px"/>

                    <!-- 23. Bank Account -->
                    <field name="partner_bank_id" string="Recipient Bank" optional="hide" width="150px"/>

                    <!-- 24. Delivery Address -->
                    <field name="partner_shipping_id" string="Delivery Address" optional="hide" width="150px"/>

                    <!-- 25. Invoice Incoterm -->
                    <field name="invoice_incoterm_id" string="Incoterm" optional="hide" width="100px"/>

                    <!-- 26. Narration/Terms and Conditions -->
                    <field name="narration" string="Terms and Conditions" optional="hide" width="180px"/>

                    <!-- 27. Invoice Source Email -->
                    <field name="invoice_source_email" string="Source Email" optional="hide" width="150px"/>

                    <!-- 28. Auto Post -->
                    <field name="auto_post" string="Auto Post" optional="hide" width="90px"/>

                    <!-- 29. Activity -->
                    <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide" width="100px"/>

                    <!-- 30. Activity State -->
                    <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                           decoration-success="activity_state == 'today'"
                           decoration-warning="activity_state == 'planned'"
                           decoration-danger="activity_state == 'overdue'"
                           width="110px"/>

                    <!-- 31. Activity User -->
                    <field name="activity_user_id" string="Responsible User" optional="hide" width="130px"/>

                    <!-- 32. Activity Type -->
                    <field name="activity_type_id" string="Next Activity Type" optional="hide" width="140px"/>

                    <!-- 33. Activity Date -->
                    <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide" width="150px"/>

                    <!-- 34. Activity Summary -->
                    <field name="activity_summary" string="Activity Summary" optional="hide" width="150px"/>

                    <!-- 35. Message -->
                    <field name="message_needaction" string="Action Needed" optional="hide" width="110px"/>

                    <!-- 36. Sales Team (if CRM installed) -->
                    <field name="team_id" string="Sales Team" optional="hide" width="120px"/>

                    <!-- 37. Campaign (if marketing installed) -->
                    <field name="campaign_id" string="Campaign" optional="hide" groups="base.group_no_one" width="120px"/>

                    <!-- 38. Medium -->
                    <field name="medium_id" string="Medium" optional="hide" groups="base.group_no_one" width="100px"/>

                    <!-- 39. Source -->
                    <field name="source_id" string="Source" optional="hide" groups="base.group_no_one" width="100px"/>

                    <!-- Hidden technical fields -->
                    <field name="move_type" column_invisible="1"/>

                </list>
            </field>
        </record>

        <!-- Override the default SALES invoice action to use custom view -->
        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'list', 'view_id': ref('view_move_list_invoice_custom')})]"/>
        </record>

    </data>
</odoo>


















