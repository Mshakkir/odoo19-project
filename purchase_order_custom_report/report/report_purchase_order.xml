<odoo>
    <template id="custom_purchaseorder_report" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <head>
                        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<style type="text/css">
    @font-face {
        font-family: 'Tajawal';
        src: url('/custom_sa_quotation/static/src/fonts/Tajawal-Black.ttf') format('truetype');
        font-weight: 900;
        font-style: normal;
    }
    body, * {
        font-family: 'Tajawal', sans-serif !important;
    }
    .arabic-word {
    font-family: 'Tajawal', sans-serif;
    font-weight: 900;
    direction: rtl;
}

</style>

                    </head>

                    <div style="border: 3px solid black; padding: 15px; border-radius: 5px;">

                        <!-- HEADER SECTION -->
                        <div class="page">
                            <div class="header"
                                 style="display: flex; padding: 15px 20px; border:2px solid #800000; border-radius: 6px; background: white; margin-bottom: 15px;">
                                <table style="width: 100%;  border:2px solid white;">
                                    <tr>

                                        <!-- Left Column: English Info -->
                                        <td style="width: 33%; text-align: left; font-size: 13px; color: #4a4a4a; vertical-align: top;">
                                            <div style="font-weight: 700; font-size: 16px; color: #800000; margin-bottom: 8px;">
                                                SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                            </div>
                                            <div style="line-height: 1.5;">
                                                C.R. 4030216154<br/>
                                                VAT Regd: 311299944700003<br/>
                                                Al Anwar Centre, Showroom No. 12,<br/>
                                                Baladiya Street, Jeddah 23334 - Saudi Arabia<br/>
                                                Tel: 0536122833<br/>
                                                Email: ssaoe.jeddah@gmail.com
                                            </div>
                                        </td>

                                        <!-- Center Column: Company Logo -->
                                        <td style="width: 33%; text-align: center; vertical-align: middle;">
                                            <t t-if="o.company_id.logo">
                                                <img t-att-src="image_data_uri(o.company_id.logo)"
                                                     style="max-height: 130px; max-width: 100%; object-fit: contain;"/>
                                            </t>
                                        </td>

                                        <!-- Right Column: Arabic Info -->
                                        <td style="width: 33%; text-align: right; font-size: 13px; color: #4a4a4a; vertical-align: top; direction: rtl;">
                                            <div style="font-weight: 900; font-size: 18px; color: #800000; margin-bottom: 8px;" class="arabic-word">
                                                شركة سمير شرف العتيبي التجارية
                                            </div>
                                            <div style="line-height: 1.5; font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;" >
                                                ٤٠٣٠٢١٦١٥٤ :س.ت<br/>
                                                ٣١١٢٩٩٩٤٤٧٠٠٠٠٣ :الرقم الضريبي<br/>
                                                مركز الأنوار، رقم محل ١٢<br/>
                                                شارع البلدية، جدة ٢٣٣٣٤ - المملكة العربية السعودية<br/>
                                                ٠٥٣٦١٢٢٨٣٣ :هاتف<br/>
                                                ssaoe.jeddah@gmail.com :البريد الإلكتروني
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- TITLE -->
                        <t t-call="web.external_layout">
                            <div style="padding-top:30px;">
                                <div style="background-color:#581d35; color:white; padding:8px; text-align:center; margin-bottom:10px; font-weight:bold; font-size:16px;">
                                    Purchase Order / <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">أمر شراء</span>
                                </div>
                            </div>

                            <!-- VENDOR AND SHIPPING DETAILS -->
                            <table style="width:100%; border-collapse:collapse; margin-top:10px;">
                                <tr>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Vendor</td>
                                    <td style="border:1px solid #000; padding:5px;">
                                        <span t-esc="o.partner_id.name"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Order Date</td>
                                    <td style="border:1px solid #000; padding:5px;">
                                        <span t-esc="o.date_order and o.date_order.strftime('%d-%b-%Y')"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Vendor Address</td>
                                    <td style="border:1px solid #000; padding:5px;" colspan="3">
                                        <span t-esc="o.partner_id.contact_address"/>
                                    </td>
                                </tr>

<tr>
    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Shipping Address</td>
    <td style="border:1px solid #000; padding:5px;" colspan="3">
        <span t-esc="o.company_id.partner_id.contact_address"/>
    </td>
</tr>

                                <tr>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">PO Number</td>
                                    <td style="border:1px solid #000; padding:5px;">
                                        <span t-esc="o.name"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Vendor Reference</td>
                                    <td style="border:1px solid #000; padding:5px;">
                                        <span t-esc="o.partner_ref or '-'"/>
                                    </td>
                                </tr>
                            </table>

                            <!-- ITEMS TABLE -->
                            <table style="width:100%; border-collapse:collapse; margin-top:10px;">
<tr style="background:#ddd;">
    <th style="border:1px solid #000; padding:5px;">SN</th>
    <th style="border:1px solid #000; padding:5px;">
        Item Description /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">المنتج الوصف</span>
    </th>
    <th style="border:1px solid #000; padding:5px;">
        Delivery /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">مدة</span>
    </th>
    <th style="border:1px solid #000; padding:5px;">
        QTY /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">الكمية</span>
    </th>
    <th style="border:1px solid #000; padding:5px;">
        U/M /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">وحدة</span>
    </th>
    <th style="border:1px solid #000; padding:5px;">
        Unit Price /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">سعر الوحدة</span>
    </th>
    <th style="border:1px solid #000; padding:5px;">
        Line Total /
        <span style="font-family: 'Tajawal', sans-serif; font-weight:900; direction: rtl;">مجموع الخط</span>
    </th>
</tr>


                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <tr>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="counter"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.name"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.date_planned and line.date_planned.strftime('%d-%b-%Y')"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.product_qty"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.product_uom_id.name"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.price_unit"/>
                                        <td style="border:1px solid #000; padding:5px;" t-esc="line.price_subtotal"/>
                                    </tr>
                                </t>
                            </table>

                            <!-- TOTALS -->
                            <table style="width:30%; float:right; border-collapse:collapse; margin-top:10px;">
                                <tr>
                                    <td style="border:1px solid #000; padding:5px;">Subtotal</td>
                                    <td style="border:1px solid #000; padding:5px;" t-esc="o.amount_untaxed"/>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:5px;">VAT</td>
                                    <td style="border:1px solid #000; padding:5px;" t-esc="o.amount_tax"/>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;">Total</td>
                                    <td style="border:1px solid #000; padding:5px; font-weight:bold;" t-esc="o.amount_total"/>0
                                </tr>
                            </table>

                            <!-- FOOTER -->
                            <div style="margin-top:80px; clear:both;">
                                Signed on Behalf of SSAOCO: ___________________<br/>
                                Signed on Behalf of Supplier: ___________________
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
