<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_custom_balance_sheet_form" model="ir.ui.view">
        <field name="name">custom.balance.sheet.form</field>
        <field name="model">custom.balance.sheet</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet">
                <group>
                    <field name="target_moves"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate Report"
                            type="object"
                            name="action_generate_report"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Wizard -->
    <record id="action_custom_balance_sheet_wizard" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">custom.balance.sheet</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_custom_balance_sheet_form"/>
        <field name="target">new</field>
    </record>

    <!-- Custom Menu Items -->
    <menuitem id="menu_custom_reporting_root"
              name="Custom Reporting"
              parent="account.menu_finance"
              sequence="40"/>

    <menuitem id="custom_balance_sheet_menu"
              name="Balance Sheet"
              parent="custom_accounting_reporting_menu"
              sequence="1"
              action="custom_balance_sheet_action"/>

</odoo>









