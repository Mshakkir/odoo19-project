<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create a custom selection field display helper -->
        <record id="view_purchase_order_form_custom_billing" model="ir.ui.view">
            <field name="name">purchase.order.form.custom.billing</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="attributes">
                    <attribute name="widget">badge</attribute>
                    <attribute name="decoration-success">invoice_status == 'invoiced'</attribute>
                    <attribute name="decoration-warning">invoice_status == 'to invoice'</attribute>
                    <attribute name="decoration-info">invoice_status == 'partially_invoice'</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>