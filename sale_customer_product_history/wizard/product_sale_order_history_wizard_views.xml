<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form view for the transient product.sale.order.history -->
        <record id="sale_customer_product_history_product_sale_order_history_view_form"
                model="ir.ui.view">
            <field name="name">product.sale.order.history.form.view</field>
            <field name="model">product.sale.order.history</field>
            <field name="arch" type="xml">
                <form string="Product Sale History" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="product_sale_history_ids" nolabel="1" readonly="1">
                                <tree string="Price History">
                                    <field name="sale_order_id"/>
                                    <field name="history_price"/>
                                    <field name="history_qty"/>
                                    <field name="history_total"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button string="Close" class="btn btn-secondary"
                                    special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action (not strictly required because we return action from code,
             but kept for completeness) -->
        <record id="sale_customer_product_history_product_sale_order_history_action"
                model="ir.actions.act_window">
            <field name="name">Product sale history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.sale.order.history</field>
            <field name="view_id" ref="sale_customer_product_history_product_sale_order_history_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
