<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Definition -->
    <record id="action_report_sales_custom" model="ir.actions.report">
        <field name="name">Sales Invoice Custom Report</field>
        <field name="model">sale.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sales_custom_reports.report_sales_custom_document</field>
        <field name="report_file">sales_custom_reports.report_sales_custom_document</field>
        <field name="binding_model_id" ref="model_sale_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_sales_custom_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">
                            <t t-if="doc.report_type == 'product'">
                                Sales Invoice Report - Product: <span t-field="doc.product_id.name"/>
                            </t>
                            <t t-if="doc.report_type == 'category'">
                                Sales Invoice Report - Category: <span t-field="doc.category_id.name"/>
                            </t>
                            <t t-if="doc.report_type == 'partner'">
                                Sales Invoice Report - Partner: <span t-field="doc.partner_id.name"/>
                            </t>
                            <t t-if="doc.report_type == 'warehouse'">
                                Sales Invoice Report - Warehouse: <span t-field="doc.warehouse_id.name"/>
                            </t>
                            <t t-if="doc.report_type == 'salesman'">
                                Sales Invoice Report - Salesman: <span t-field="doc.salesman_id.name"/>
                            </t>
                        </h2>

                        <div class="row mt-3 mb-3">
                            <div class="col-6">
                                <strong>Date From:</strong>
                                <span t-if="doc.date_from" t-field="doc.date_from"/>
                                <span t-else="">All</span>
                            </div>
                            <div class="col-6">
                                <strong>Date To:</strong>
                                <span t-if="doc.date_to" t-field="doc.date_to"/>
                                <span t-else="">All</span>
                            </div>
                        </div>

                        <t t-set="record_id" t-value="doc.product_id.id if doc.report_type == 'product' else doc.category_id.id if doc.report_type == 'category' else doc.partner_id.id if doc.report_type == 'partner' else doc.warehouse_id.id if doc.report_type == 'warehouse' else doc.salesman_id.id"/>

                        <t t-set="invoices" t-value="doc.env['account.move'].get_sales_report_data(doc.report_type, record_id, doc.date_from, doc.date_to)"/>

                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Invoice Date</th>
                                    <th>Customer</th>
                                    <th>Salesperson</th>
                                    <th class="text-right">Total Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_amount" t-value="0"/>
                                <tr t-foreach="invoices" t-as="invoice">
                                    <td><span t-field="invoice.name"/></td>
                                    <td><span t-field="invoice.invoice_date"/></td>
                                    <td><span t-field="invoice.partner_id.name"/></td>
                                    <td><span t-field="invoice.invoice_user_id.name"/></td>
                                    <td class="text-right">
                                        <span t-field="invoice.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>
                                    <td>
                                        <span t-if="invoice.state == 'posted'">Posted</span>
                                        <span t-else="" t-field="invoice.state"/>
                                    </td>
                                    <t t-set="total_amount" t-value="total_amount + invoice.amount_total"/>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-right"><strong>Total:</strong></td>
                                    <td class="text-right">
                                        <strong>
                                            <t t-if="invoices">
                                                <span t-esc="total_amount"
                                                      t-options='{"widget": "monetary", "display_currency": invoices[0].currency_id}'/>
                                            </t>
                                        </strong>
                                    </td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>

                        <!-- Detailed Invoice Lines Section -->
                        <h3 class="mt-5">Invoice Details</h3>
                        <t t-foreach="invoices" t-as="invoice">
                            <div class="mt-4 mb-4">
                                <h5>Invoice: <span t-field="invoice.name"/> - <span t-field="invoice.partner_id.name"/></h5>
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Description</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right">Unit Price</th>
                                            <th class="text-right">Tax</th>
                                            <th class="text-right">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="invoice.invoice_line_ids.filtered(lambda l: not l.display_type)" t-as="line">
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-right"><span t-field="line.quantity"/></td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"
                                                      t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="', '.join(line.tax_ids.mapped('name'))"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"
                                                      t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="5" class="text-right"><strong>Subtotal:</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="invoice.amount_untaxed"
                                                          t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class="text-right"><strong>Tax:</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="invoice.amount_tax"
                                                          t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class="text-right"><strong>Total:</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="invoice.amount_total"
                                                          t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>