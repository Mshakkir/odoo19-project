<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- POS Config Form View -->
    <record id="view_pos_config_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">pos.config.form.warehouse</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse in Accounting section or create new group -->
            <xpath expr="//group[@name='accounting']" position="inside">
                <group string="Warehouse &amp; Analytics" name="warehouse_analytics">
                    <field name="warehouse_id"
                           options="{'no_create': True, 'no_open': True}"/>
                    <field name="analytic_account_id"
                           options="{'no_create': True, 'no_open': True}"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>