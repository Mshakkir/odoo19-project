<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_warehouse_tb_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Warehouse Trial Balance</h2>

                    <h4>
                        <strong>Warehouse/Branch:</strong> <span t-esc="warehouse_name"/>
                    </h4>

                    <div>
                        <strong>Display Account:</strong>
                        <span t-if="display_account == 'all'">All accounts</span>
                        <span t-if="display_account == 'movement'">With movements</span>
                        <span t-if="display_account == 'not_zero'">With balance not equal to zero</span>
                    </div>

                    <div>
                        <strong>Journals:</strong> <span t-esc="', '.join(print_journal or [])"/>
                    </div>

                    <table class="table table-sm mt16">
                        <thead>
                            <tr style="background-color: #f0f0f0;">
                                <th>Code</th>
                                <th>Account</th>
                                <th class="text-end">Debit</th>
                                <th class="text-end">Credit</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="Accounts" t-as="acc">
                                <td t-esc="acc['code']"/>
                                <td t-esc="acc['name']"/>
                                <td class="text-end" t-esc="acc['debit']"/>
                                <td class="text-end" t-esc="acc['credit']"/>
                                <td class="text-end" t-esc="acc['balance']"/>
                            </tr>
                            <tr style="border-top: 2px solid #000; font-weight: bold;">
                                <td colspan="2" class="text-end">Total:</td>
                                <td class="text-end" t-esc="total_debit"/>
                                <td class="text-end" t-esc="total_credit"/>
                                <td class="text-end" t-esc="total_balance"/>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_warehouse_tb_report" model="ir.actions.report">
        <field name="name">Warehouse Trial Balance</field>
        <field name="model">warehouse.trial.balance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">warehouse_financial_reports.report_warehouse_tb_template</field>
        <field name="report_file">warehouse_financial_reports.report_warehouse_tb_template</field>
        <field name="binding_model_id" ref="model_warehouse_trial_balance"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
