<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================================ -->
        <!-- AUTO-CREATE WAREHOUSE USER GROUPS WITH RULES -->
        <!-- ============================================ -->

        <!-- SSAOCO-Main Users Group -->
        <record id="group_warehouse_ssaoco_main_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Main Users</field>
        </record>

        <!-- SSAOCO-Baladiya Users Group -->
        <record id="group_warehouse_ssaoco_baladiya_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Baladiya Users</field>
        </record>

        <!-- SSAOCO-Dammam Users Group -->
        <record id="group_warehouse_ssaoco_dammam_users" model="res.groups">
            <field name="name">Warehouse SSAOCO-Dammam Users</field>
        </record>

        <!-- ============================================ -->
        <!-- RECORD RULES FOR SSAOCO-MAIN USERS -->
        <!-- ============================================ -->

        <!-- Main Warehouse: Orderpoint Access -->
        <record id="rule_orderpoint_main_warehouse" model="ir.rule">
            <field name="name">Stock User: Main Warehouse Orderpoints</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="domain_force">[('warehouse_id.name', '=', 'SSAOCO-Main')]</field>
            <field name="groups" eval="[(4, ref('warehouse_reorder_notification.group_warehouse_ssaoco_main_users'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Main Warehouse: Activity Access -->
        <record id="rule_activity_main_warehouse" model="ir.rule">
            <field name="name">Stock User: Main Warehouse Activities</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">['|', ('res_model', '!=', 'stock.warehouse.orderpoint'), '&amp;', ('res_model', '=', 'stock.warehouse.orderpoint'), ('res_id.warehouse_id.name', '=', 'SSAOCO-Main')]</field>
            <field name="groups" eval="[(4, ref('warehouse_reorder_notification.group_warehouse_ssaoco_main_users'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

