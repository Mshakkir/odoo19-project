<odoo>
    <record id="view_move_form_inherit_global_discount" model="ir.ui.view">
        <field name="name">account.move.form.inherit.global.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add the global discount field in the totals section -->
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="global_discount_fixed"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}"/>
            </xpath>

            <!-- Optional: Add computed fields to show original and discounted amounts -->
            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="amount_undiscounted"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': ['|', ('global_discount_fixed', '=', 0), ('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>

