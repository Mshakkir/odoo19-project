<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Sale Order List View - Inherit and modify -->
        <record id="view_order_tree_custom" model="ir.ui.view">
            <field name="name">sale.order.tree.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">

                <!-- Replace all fields with new structure -->
                <xpath expr="//list" position="replace">
                    <list string="Sales Orders"
                          sample="1"
                          decoration-info="state == 'draft'"
                          decoration-muted="state == 'cancel'"
                          multi_edit="1">

                        <!-- YOUR REQUESTED ORDER -->
                        <!-- 1. Order Date -->
                        <field name="date_order" string="Order Date"/>

                        <!-- 2. Number (Order Reference) -->
                        <field name="name" string="Number" readonly="1"/>

                        <!-- 3. Customer -->
                        <field name="partner_id" string="Customer"/>

                        <!-- 4. Warehouse -->
                        <field name="warehouse_id" string="Warehouse" optional="show" groups="stock.group_stock_multi_warehouses"/>

                        <!-- 5. Customer Reference (Source Document) -->
                        <field name="ref" string="Customer Reference" optional="show"/>

                        <!-- 6. Salesperson -->
                        <field name="user_id" string="Salesperson" optional="show" widget="many2one_avatar_user"/>

                        <!-- 7. Tax Excluded (Untaxed Amount) -->
<!--                        <field name="amount_untaxed" string="Tax Excluded" optional="show"/>-->

<!--                        &lt;!&ndash; 8. Tax &ndash;&gt;-->
<!--                        <field name="amount_tax" string="Tax" optional="show"/>-->

                        <!-- 9. Total (Taxed Amount) -->
                        <field name="amount_total" string="Total" optional="show"/>

                        <!-- 10. Shipping Ref / Delivery Note -->
<!--                        <field name="delivery_count" string="Delivery" optional="show"/>-->
                        <!-- 9. Total (Taxed Amount) -->
<field name="amount_total" string="Total" optional="show" sum="Total"/>

<!--                         11. PO Number / Origin -->
                        <field name="origin" string="Source Document" optional="hide"/>

                        <!-- ADDITIONAL DEFAULT ODOO FIELDS -->

                        <!-- Status -->
                        <field name="state" string="Status" optional="show" widget="badge"
                               decoration-success="state in ('sale', 'done')"
                               decoration-info="state in ('draft', 'sent')"/>

                        <!-- Invoice Status -->
                        <field name="invoice_status" string="Invoice Status" optional="show" widget="badge"
                               decoration-success="invoice_status == 'invoiced'"
                               decoration-warning="invoice_status == 'to invoice'"
                               decoration-info="invoice_status == 'no'"/>

                              <field name="amount_untaxed" string="Tax Excluded" optional="hide"/>

                        <!-- 8. Tax -->
                        <field name="amount_tax" string="Tax" optional="hide"/>

                        <!-- Confirmation Date -->
                        <field name="commitment_date" string="Delivery Date" optional="hide"/>

                        <!-- Validity Date -->
                        <field name="validity_date" string="Expiration" optional="hide"/>

                        <!-- Pricelist -->
                        <field name="pricelist_id" string="Pricelist" optional="hide" groups="product.group_sale_pricelist"/>

                        <!-- Payment Terms -->
                        <field name="payment_term_id" string="Payment Terms" optional="hide"/>

                        <!-- Fiscal Position -->
                        <field name="fiscal_position_id" string="Fiscal Position" optional="hide"/>

                        <!-- Currency -->
                        <field name="currency_id" string="Currency" optional="hide"/>

                        <!-- Company -->
                        <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"/>

                        <!-- Delivery Status -->
                        <field name="delivery_status" string="Delivery Status" optional="hide" widget="badge"
                               decoration-success="delivery_status == 'full'"
                               decoration-warning="delivery_status == 'partial'"
                               decoration-info="delivery_status == 'pending'"/>

                        <!-- Sales Team -->
                        <field name="team_id" string="Sales Team" optional="hide"/>

                        <!-- Analytic Account -->
<!--                        <field name="analytic_account_id" string="Analytic Account" optional="hide" groups="analytic.group_analytic_accounting"/>-->

                        <!-- Tags -->
                        <field name="tag_ids" string="Tags" optional="hide" widget="many2many_tags"/>

                        <!-- Incoterm -->
                        <field name="incoterm" string="Incoterm" optional="hide"/>

                        <!-- Shipping Policy -->
                        <field name="picking_policy" string="Shipping Policy" optional="hide"/>

                        <!-- Invoice Address -->
                        <field name="partner_invoice_id" string="Invoice Address" optional="hide"/>

                        <!-- Delivery Address -->
                        <field name="partner_shipping_id" string="Delivery Address" optional="hide"/>

                        <!-- Note -->
                        <field name="note" string="Terms and Conditions" optional="hide"/>

                        <!-- Activity -->
                        <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"/>

                        <!-- Activity State -->
                        <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                               decoration-success="activity_state == 'today'"
                               decoration-warning="activity_state == 'planned'"
                               decoration-danger="activity_state == 'overdue'"/>

                        <!-- Activity User -->
                        <field name="activity_user_id" string="Responsible User" optional="hide"/>

                        <!-- Activity Type -->
                        <field name="activity_type_id" string="Next Activity Type" optional="hide"/>

                        <!-- Activity Date -->
                        <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide"/>

                        <!-- Activity Summary -->
                        <field name="activity_summary" string="Activity Summary" optional="hide"/>

                        <!-- Message -->
                        <field name="message_needaction" string="Action Needed" optional="hide"/>

                        <!-- Campaign -->
                        <field name="campaign_id" string="Campaign" optional="hide" groups="base.group_no_one"/>

                        <!-- Medium -->
                        <field name="medium_id" string="Medium" optional="hide" groups="base.group_no_one"/>

                        <!-- Source -->
                        <field name="source_id" string="Source" optional="hide" groups="base.group_no_one"/>

                        <!-- Created By -->
                        <field name="create_uid" string="Created by" optional="hide"/>

                        <!-- Created On -->
                        <field name="create_date" string="Created on" optional="hide"/>

                        <!-- Last Updated By -->
                        <field name="write_uid" string="Last Updated by" optional="hide"/>

                        <!-- Last Updated On -->
                        <field name="write_date" string="Last Updated on" optional="hide"/>

                        <!-- Hidden technical fields -->
                        <field name="invoice_count" column_invisible="1"/>

                    </list>
                </xpath>

            </field>
        </record>

    </data>
</odoo>