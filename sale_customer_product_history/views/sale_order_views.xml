<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- inherit sale order line tree view -->
    <record id="view_order_line_tree_inherit_sale_history" model="ir.ui.view">
    <field name="name">sale.order.line.tree.inherit.sale.history</field>
    <field name="model">sale.order.line</field>
    <field name="inherit_id" ref="sale.view_order_line_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='product_uom_qty']" position="after">
            <button name="action_open_sales_history"
                    string="History"
                    type="object"
                    icon="fa-history"
                    attrs="{'invisible': [('product_id', '=', False)]}"/>
        </xpath>
    </field>
</record>

</odoo>
