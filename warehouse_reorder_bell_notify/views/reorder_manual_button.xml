<odoo>
    <record id="view_reorder_manual_button" model="ir.ui.view">
        <field name="name">reorder.manual.button</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="before">
                <header>
                    <button name="action_manual_reorder_notify"
                            string="Send Reorder Alerts Now"
                            type="object"
                            class="btn-primary"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
