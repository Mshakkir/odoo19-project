<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================== -->
    <!-- INHERIT ODOOMATES WIZARD VIEWS -->
    <!-- ============================================== -->

    <!-- Inherit the base Aged Partner Balance view to add Show Details button -->
    <record id="account_aged_balance_view_inherit" model="ir.ui.view">
        <field name="name">account.aged.trial.balance.form.inherit</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_aged_balance_view"/>
        <field name="arch" type="xml">

            <!-- Add partner_ids field if not exists -->
            <xpath expr="//field[@name='journal_ids']" position="before">
                <group>
                    <field name="partner_ids" widget="many2many_tags"
                           options="{'no_open': True, 'no_create': True}"/>
                </group>
            </xpath>

            <!-- Add Show Details button in footer -->
            <xpath expr="//footer/button[@name='check_report']" position="before">
                <button name="show_details"
                        class="oe_highlight"
                        string="Show Details"
                        type="object"
                        help="Open detailed interactive view with all partner aging data"/>
            </xpath>

            <!-- Update Print button text for clarity -->
            <xpath expr="//footer/button[@name='check_report']" position="attributes">
                <attribute name="string">Print PDF</attribute>
            </xpath>

        </field>
    </record>

    <!-- Inherit Aged Receivable view to change partner field label -->
    <record id="account_aged_receivable_view_inherit" model="ir.ui.view">
        <field name="name">account.aged.receivable.form.inherit</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_aged_receivable_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="string">Customers</attribute>
                <attribute name="placeholder">Leave empty to show all customers</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Aged Payable view to change partner field label -->
    <record id="account_aged_payable_view_inherit" model="ir.ui.view">
        <field name="name">account.aged.payable.form.inherit</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_aged_payable_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="string">Vendors</attribute>
                <attribute name="placeholder">Leave empty to show all vendors</attribute>
            </xpath>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- DETAIL LINE VIEWS (NEW) -->
    <!-- ============================================== -->

    <!-- Detail Line List View -->
    <record id="view_aged_detail_list" model="ir.ui.view">
        <field name="name">account.aged.detail.line.list</field>
        <field name="model">account.aged.detail.line</field>
        <field name="arch" type="xml">
            <list string="Aged Balance Details"
                  decoration-danger="is_overdue and (period_3 != 0 or period_4 != 0)"
                  decoration-warning="is_overdue and (period_1 != 0 or period_2 != 0)"
                  decoration-info="total &lt; 0"
                  decoration-success="not is_overdue and total &gt; 0"
                  create="false"
                  edit="false"
                  delete="false">

                <!-- Partner Information -->
                <field name="partner_name" string="Partner"/>
                <field name="trust" optional="show" widget="badge"
                       decoration-success="trust == 'good'"
                       decoration-warning="trust == 'normal'"
                       decoration-danger="trust == 'bad'"/>
                <field name="email" optional="hide"/>
                <field name="phone" optional="hide"/>
                <field name="mobile" optional="hide"/>
                <field name="vat" optional="hide"/>
                <field name="city" optional="hide"/>
                <field name="country_id" optional="hide"/>

                <!-- Aging Columns -->
                <field name="not_due"
                       string="Not Due"
                       sum="Total Not Due"
                       widget="monetary"
                       optional="show"/>

                <field name="period_4"
                       string="Period 4"
                       sum="Total"
                       widget="monetary"
                       decoration-danger="period_4 != 0"
                       optional="show"/>

                <field name="period_3"
                       string="Period 3"
                       sum="Total"
                       widget="monetary"
                       decoration-danger="period_3 != 0"
                       optional="show"/>

                <field name="period_2"
                       string="Period 2"
                       sum="Total"
                       widget="monetary"
                       decoration-warning="period_2 != 0"
                       optional="show"/>

                <field name="period_1"
                       string="Period 1"
                       sum="Total"
                       widget="monetary"
                       decoration-warning="period_1 != 0"
                       optional="show"/>

                <field name="period_0"
                       string="Period 0"
                       sum="Total"
                       widget="monetary"
                       optional="show"/>

                <field name="overdue_amount"
                       string="Total Overdue"
                       sum="Grand Overdue"
                       widget="monetary"
                       decoration-bf="1"
                       optional="hide"/>

                <field name="total"
                       string="Total"
                       sum="Grand Total"
                       widget="monetary"
                       decoration-bf="1"
                       optional="show"/>

                <!-- Hidden fields for decoration -->
                <field name="is_overdue" column_invisible="1"/>
                <field name="wizard_id" column_invisible="1"/>
                <field name="partner_id" column_invisible="1"/>

                <!-- Action Buttons -->
                <button name="action_view_partner_ledger"
                        type="object"
                        icon="fa-book"
                        title="View Partner Ledger"
                        class="btn-primary"/>

                <button name="action_view_partner_invoices"
                        type="object"
                        icon="fa-file-text-o"
                        title="View Invoices"
                        class="btn-secondary"/>

                <button name="action_open_partner"
                        type="object"
                        icon="fa-user"
                        title="Open Partner Form"
                        class="btn-info"/>
            </list>
        </field>
    </record>

    <!-- Detail Line Form View -->
    <record id="view_aged_detail_form" model="ir.ui.view">
        <field name="name">account.aged.detail.line.form</field>
        <field name="model">account.aged.detail.line</field>
        <field name="arch" type="xml">
            <form string="Aged Balance Detail" create="false" edit="false">
                <header>
                    <button name="action_view_partner_ledger"
                            type="object"
                            class="oe_highlight"
                            string="View Partner Ledger"
                            icon="fa-book"/>
                    <button name="action_view_partner_invoices"
                            type="object"
                            string="View Invoices"
                            icon="fa-file-text-o"/>
                    <button name="action_open_partner"
                            type="object"
                            string="Open Partner"
                            icon="fa-user"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_partner"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-user">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Open</span>
                                <span class="o_stat_text">Partner</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="partner_name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="trust" readonly="1" widget="badge"
                                   decoration-success="trust == 'good'"
                                   decoration-warning="trust == 'normal'"
                                   decoration-danger="trust == 'bad'"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Partner Information">
                            <field name="partner_id" readonly="1"/>
                            <field name="email" readonly="1" widget="email"/>
                            <field name="phone" readonly="1" widget="phone"/>
                            <field name="mobile" readonly="1" widget="phone"/>
                            <field name="vat" readonly="1"/>
                        </group>
                        <group string="Address">
                            <field name="street" readonly="1"/>
                            <field name="city" readonly="1"/>
                            <field name="country_id" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Current Balance">
                            <field name="not_due" readonly="1" widget="monetary"
                                   class="oe_read_only"/>
                            <field name="total" readonly="1" widget="monetary"
                                   class="oe_read_only"
                                   decoration-bf="1"
                                   decoration-danger="total &gt; 10000"/>
                        </group>
                        <group string="Overdue Summary">
                            <field name="overdue_amount" readonly="1" widget="monetary"
                                   class="oe_read_only"
                                   decoration-bf="1"
                                   decoration-danger="overdue_amount &gt; 0"/>
                            <field name="is_overdue" readonly="1" widget="boolean"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Aging Breakdown" name="aging">
                            <group>
                                <group string="Recent Periods">
                                    <field name="period_0" readonly="1" widget="monetary"
                                           decoration-danger="period_0 != 0"/>
                                    <field name="period_1" readonly="1" widget="monetary"
                                           decoration-warning="period_1 != 0"/>
                                    <field name="period_2" readonly="1" widget="monetary"
                                           decoration-warning="period_2 != 0"/>
                                </group>
                                <group string="Older Periods">
                                    <field name="period_3" readonly="1" widget="monetary"
                                           decoration-danger="period_3 != 0"/>
                                    <field name="period_4" readonly="1" widget="monetary"
                                           decoration-danger="period_4 != 0"/>
                                </group>
                            </group>
                        </page>

                        <page string="Wizard Info" name="wizard_info">
                            <group>
                                <field name="wizard_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Detail Line Search View -->
    <record id="view_aged_detail_search" model="ir.ui.view">
        <field name="name">account.aged.detail.line.search</field>
        <field name="model">account.aged.detail.line</field>
        <field name="arch" type="xml">
            <search string="Search Aged Balance Details">
                <field name="partner_name"/>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="vat"/>

                <filter string="Has Overdue" name="filter_overdue"
                        domain="[('is_overdue', '=', True)]"/>
                <filter string="No Overdue" name="filter_no_overdue"
                        domain="[('is_overdue', '=', False)]"/>

                <separator/>
                <filter string="Good Debtor" name="filter_good"
                        domain="[('trust', '=', 'good')]"/>
                <filter string="Normal Debtor" name="filter_normal"
                        domain="[('trust', '=', 'normal')]"/>
                <filter string="Bad Debtor" name="filter_bad"
                        domain="[('trust', '=', 'bad')]"/>

                <separator/>
                <filter string="Total > 0" name="filter_positive"
                        domain="[('total', '&gt;', 0)]"/>
                <filter string="Total &lt; 0" name="filter_negative"
                        domain="[('total', '&lt;', 0)]"/>

                <group expand="0" string="Group By">
                    <filter string="Trust Level" name="group_trust"
                            context="{'group_by': 'trust'}"/>
                    <filter string="Country" name="group_country"
                            context="{'group_by': 'country_id'}"/>
                    <filter string="City" name="group_city"
                            context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>