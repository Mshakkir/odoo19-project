<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add custom CSS to reduce spacing -->
            <xpath expr="//sheet" position="before">
                <style>
                    .o_sale_order .customer_balance_section label {
                        margin-top: 2px !important;
                        margin-bottom: 2px !important;
                    }
                    .o_sale_order .customer_balance_section .o_row {
                        margin-bottom: 4px !important;
                    }
                </style>
            </xpath>

            <!-- Insert balance fields at the top of right column -->
            <xpath expr="//field[@name='date_order']" position="before">

                <div class="customer_balance_section" invisible="not partner_id">
                    <!-- Total Invoiced - Clickable when non-zero -->
                    <label for="customer_total_invoiced"
                           string="Total Invoiced"
                           class="fw-normal"/>
                    <div class="o_row">
                        <button name="action_view_customer_invoices"
                                type="object"
                                class="btn btn-link p-0 oe_link"
                                style="text-decoration: underline;"
                                invisible="customer_total_invoiced == 0">
                            <field name="customer_total_invoiced"
                                   widget="monetary"
                                   readonly="1"
                                   nolabel="1"
                                   class="text-primary"/>
                        </button>
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               invisible="customer_total_invoiced != 0"
                               nolabel="1"/>
                    </div>

                    <!-- Amount Received - Clickable when non-zero -->
                    <label for="customer_total_paid"
                           string="Amount Received"
                           class="fw-normal"/>
                    <div class="o_row">
                        <button name="action_view_customer_payments"
                                type="object"
                                class="btn btn-link p-0 oe_link"
                                style="text-decoration: underline;"
                                invisible="customer_total_paid == 0">
                            <field name="customer_total_paid"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-success="customer_total_paid > 0"
                                   nolabel="1"
                                   class="text-success"/>
                        </button>
                        <field name="customer_total_paid"
                               widget="monetary"
                               readonly="1"
                               invisible="customer_total_paid != 0"
                               nolabel="1"/>
                    </div>

                    <!-- Balance Due - Not clickable -->
                    <label for="customer_balance_due"
                           string="Balance Due"
                           class="fw-normal"/>
                    <div>
                        <field name="customer_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="customer_balance_due > 0"
                               decoration-success="customer_balance_due == 0"
                               nolabel="1"/>
                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>