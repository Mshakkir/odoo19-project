<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add From/To Date Filter to Invoice Search View -->
    <record id="view_account_invoice_filter_date_range" model="ir.ui.view">
        <field name="name">account.invoice.search.date.range</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Add date range filters -->
            <xpath expr="//filter[@name='invoice_date']" position="after">
                <separator/>
                <filter string="From Date" name="filter_from_date"
                        date="invoice_date"/>
                <filter string="To Date" name="filter_to_date"
                        date="invoice_date"/>
                <separator/>
                <filter string="Date Range" name="date_range"
                        domain="[]"
                        context="{'search_default_date_range': 1}"/>
            </xpath>
        </field>
    </record>

    <!-- Enhanced invoice tree view -->
    <record id="view_invoice_tree_date_columns" model="ir.ui.view">
        <field name="name">account.invoice.tree.date.columns</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="widget">date</attribute>
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>

    <!-- Add grouping by date -->
    <record id="view_account_move_search_inherit_date" model="ir.ui.view">
        <field name="name">account.move.search.date.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <group expand="0" string="Group By">
                    <filter string="Invoice Date (Day)" name="group_invoice_date_day"
                            context="{'group_by': 'invoice_date:day'}"/>
                    <filter string="Invoice Date (Week)" name="group_invoice_date_week"
                            context="{'group_by': 'invoice_date:week'}"/>
                    <filter string="Invoice Date (Month)" name="group_invoice_date_month"
                            context="{'group_by': 'invoice_date:month'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

