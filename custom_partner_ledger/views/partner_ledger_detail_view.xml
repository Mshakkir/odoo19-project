<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_partner_ledger_detail_tree" model="ir.ui.view">
        <field name="name">partner.ledger.detail.list</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <list string="Partner Ledger Details" default_order="date asc">

                <field name="partner_id"/>
                <field name="date"/>

                <!-- Default Many2One clickable -->
                <field name="move_id" readonly="1"/>

                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="ref"/>
                <field name="name"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>

                <!-- Optional action button -->
                <button name="action_open_document"
                        type="object"
                        icon="fa-external-link"
                        title="Open Original Document"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_partner_ledger_detail_search" model="ir.ui.view">
        <field name="name">partner.ledger.detail.search</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <filter name="group_partner" string="Group by Partner"
                        context="{'group_by': 'partner_id'}"/>
            </search>
        </field>
    </record>

</odoo>
