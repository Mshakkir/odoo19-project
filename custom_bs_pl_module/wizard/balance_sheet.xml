<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Balance Sheet Wizard View -->
    <record id="accounting_report_view_balance_sheet" model="ir.ui.view">
        <field name="name">Accounting Report - Balance Sheet</field>
        <field name="model">accounting.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_common_report_view"/>
        <field name="mode">primary</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">

            <xpath expr="//footer" position="inside">
                <button name="action_view_balance_sheet_details"
                        string="View Details"
                        type="object"
                        class="btn-secondary"
                        icon="fa-list-alt"/>
            </xpath>
        </field>
    </record>

    <!-- Balance Sheet Action -->
    <record id="action_account_report_bs" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">accounting.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="accounting_report_view_balance_sheet"/>
        <field name="target">new</field>
        <field name="context"
               eval="{'default_account_report_id': ref('accounting_pdf_reports.account_financial_report_balancesheet0')}"/>
    </record>
</odoo>
