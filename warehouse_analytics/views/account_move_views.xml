<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Warehouse/Branch field to Invoice Form View -->
    <record id="view_move_form_warehouse_analytic" model="ir.ui.view">
        <field name="name">account.move.form.warehouse.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add field in the header section after invoice_date -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="warehouse_analytic_id"
                       options="{'no_create': True, 'no_open': True}"
                       placeholder="Select Warehouse/Branch..."
                       required="1"
                       invisible="state != 'draft'"/>
            </xpath>

        </field>
    </record>

    <!-- Add Warehouse/Branch field to Invoice Tree/List View -->
    <record id="view_invoice_tree_warehouse_analytic" model="ir.ui.view">
        <field name="name">account.move.tree.warehouse.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">

            <!-- Add after name/number field in tree view -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="warehouse_analytic_id" optional="show"/>
            </xpath>

        </field>
    </record>

    <!-- Add filter in search view -->
    <record id="view_account_invoice_filter_warehouse" model="ir.ui.view">
        <field name="name">account.move.search.warehouse</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">

            <!-- Add group by filter -->
            <xpath expr="//filter[@name='invoice_date']" position="after">
                <filter string="Warehouse/Branch"
                        name="warehouse_analytic_id"
                        context="{'group_by': 'warehouse_analytic_id'}"/>
            </xpath>

            <!-- Add search field -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="warehouse_analytic_id"/>
            </xpath>

        </field>
    </record>

</odoo>