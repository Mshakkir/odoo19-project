<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Invoice View -->
    <record id="view_move_form_customer_balance" model="ir.ui.view">
        <field name="name">account.move.form.customer.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Find a safe position that exists in all invoice types -->
            <xpath expr="//sheet//group[@name='header_left_group']" position="after">
                <group name="customer_balance_group" string="Customer Balance"
                       class="oe_inline" invisible="move_type not in ['out_invoice', 'out_refund']">
                    <field name="customer_total_invoiced" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                    <field name="customer_total_received" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                    <field name="customer_balance_due" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                </group>

                <group name="vendor_balance_group" string="Vendor Balance"
                       class="oe_inline" invisible="move_type not in ['in_invoice', 'in_refund']">
                    <field name="vendor_total_billed" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                    <field name="vendor_total_paid" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                    <field name="vendor_balance_due" widget="monetary"
                           options="{'currency_field': 'currency_id'}"
                           readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>