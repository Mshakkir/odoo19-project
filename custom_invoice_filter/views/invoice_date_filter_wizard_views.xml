<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_invoice_date_filter_wizard_form" model="ir.ui.view">
        <field name="name">invoice.date.filter.wizard.form</field>
        <field name="model">invoice.date.filter.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date" required="1"/>
                    </group>
                    <group>
                        <field name="to_date" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_apply_filter"
                            string="Apply Filter"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_invoice_date_filter_wizard" model="ir.actions.act_window">
        <field name="name">Filter by Date Range</field>
        <field name="res_model">invoice.date.filter.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Server Action - This adds button in gear menu -->
    <record id="action_invoice_date_filter_server" model="ir.actions.server">
        <field name="name">ðŸ“… Filter by Date Range</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'invoice.date.filter.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': context,
}
        </field>
    </record>
</odoo>


