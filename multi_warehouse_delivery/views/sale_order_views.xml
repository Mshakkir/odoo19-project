<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to sale order line -->
    <record id="view_order_line_tree_warehouse" model="ir.ui.view">
        <field name="name">sale.order.line.tree.warehouse</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="warehouse_id" optional="show" options="{'no_create': True, 'no_open': True}"/>
            </field>
        </field>
    </record>
</odoo>