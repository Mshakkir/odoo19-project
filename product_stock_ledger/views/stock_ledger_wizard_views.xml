<!-- product_stock_ledger/views/stock_ledger_wizard_views.xml -->
<odoo>
    <!-- Ledger Line List View with Filters -->
    <record id="view_ledger_line_list" model="ir.ui.view">
        <field name="name">product.stock.ledger.line.list</field>
        <field name="model">product.stock.ledger.line</field>
        <field name="arch" type="xml">
            <list string="Product Stock Ledger" create="false" edit="false" delete="false">
                <field name="product_id" string="Product"/>
                <field name="warehouse_id" string="Warehouse"/>
                <field name="date" string="Date"/>
                <field name="voucher" string="Voucher"/>
                <field name="particulars" string="Particulars"/>
                <field name="type" string="Type"/>
                <field name="rec_qty" string="Rec. Qty" widget="sum"/>
                <field name="rec_rate" string="Rate"/>
                <field name="issue_qty" string="Issue Qty" widget="sum"/>
                <field name="issue_rate" string="Rate"/>
                <field name="balance" string="Balance" widget="sum"/>
                <field name="uom" string="Unit" invisible="0"/>
                <field name="invoice_status" string="Invoice Status"/>
            </list>
        </field>
    </record>

    <!-- Search View with Filters -->
    <record id="view_ledger_line_search" model="ir.ui.view">
        <field name="name">product.stock.ledger.line.search</field>
        <field name="model">product.stock.ledger.line</field>
        <field name="arch" type="xml">
            <search string="Product Stock Ledger">
                <!-- Text Filters -->
                <field name="voucher" string="Voucher"/>
                <field name="particulars" string="Particulars"/>
                <field name="product_id" string="Product"/>
                <field name="warehouse_id" string="Warehouse"/>

                <!-- Separator -->
                <separator/>

                <!-- Date Filter -->
                <filter name="filter_today" string="Today" domain="[('date', '>=', context_today().strftime('%Y-%m-%d')), ('date', '<', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month" domain="[('date', '>=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('date', '<', (context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_year" string="This Year" domain="[('date', '>=', context_today().replace(month=1, day=1).strftime('%Y-%m-%d')), ('date', '<', context_today().replace(month=1, day=1, year=context_today().year + 1).strftime('%Y-%m-%d'))]"/>

                <!-- Separator -->
                <separator/>

                <!-- Type Filters -->
                <filter name="filter_receipts" string="Receipts" domain="[('type', '=', 'Receipts')]"/>
                <filter name="filter_delivery" string="Delivery" domain="[('type', '=', 'Delivery')]"/>
                <filter name="filter_internal" string="Internal Transfer" domain="[('type', '=', 'Internal Transfer')]"/>

                <!-- Separator -->
                <separator/>

                <!-- Invoice Status Filters -->
                <filter name="filter_invoiced" string="Invoiced" domain="[('invoice_status', '=', 'Invoiced')]"/>
                <filter name="filter_not_invoiced" string="Not Invoiced" domain="[('invoice_status', '=', 'Not Invoiced')]"/>
                <filter name="filter_to_invoice" string="To Invoice" domain="[('invoice_status', '=', 'To Invoice')]"/>

                <!-- Separator -->
                <separator/>

                <!-- Grouping Options -->
                <filter name="group_by_product" string="Product" context="{'group_by': 'product_id'}"/>
                <filter name="group_by_warehouse" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                <filter name="group_by_date" string="Date" context="{'group_by': 'date'}"/>
                <filter name="group_by_type" string="Type" context="{'group_by': 'type'}"/>
                <filter name="group_by_invoice_status" string="Invoice Status" context="{'group_by': 'invoice_status'}"/>
            </search>
        </field>
    </record>

    <!-- Action to open Ledger Lines directly (no wizard) -->
    <record id="action_product_stock_ledger_lines" model="ir.actions.act_window">
        <field name="name">Product Stock Ledger</field>
        <field name="res_model">product.stock.ledger.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'list', 'view_id': ref('view_ledger_line_list')})]"/>
        <field name="search_view_id" ref="view_ledger_line_search"/>
        <field name="target">current</field>
        <field name="context">{
            'create': False,
            'edit': False,
            'delete': False,
        }</field>
    </record>

    <!-- Menu Item - Direct Window (No Wizard) -->
    <menuitem id="menu_product_stock_ledger"
              name="Product Stock Ledger"
              parent="stock.menu_stock_root"
              action="action_product_stock_ledger_lines"
              sequence="60"
              />
</odoo>

