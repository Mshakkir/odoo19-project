<odoo>
    <!-- Just make the field visible by adding it to form context -->
    <record id="view_order_form_with_discount" model="ir.ui.view">
        <field name="name">sale.order.form.with.discount.fixed</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add discount_fixed to the default order line columns -->
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="discount_fixed"
                       groups="account_invoice_fixed_discount.group_fixed_discount"
                       optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>