<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="product_purchase_history.PurchaseHistoryDialog">
        <Dialog title="title" size="'xl'">
            <div class="o_purchase_history_dialog">
                <t t-if="hasHistory">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead style="background-color: #a3aabe; color: dark;">
                                <tr>
                                    <th>Reference</th>
                                    <th>Supplier</th>
                                    <th>Date</th>
                                    <th class="text-end">Quantity</th>
                                    <th>Unit</th>
                                    <th class="text-end">Unit Price</th>
                                    <th>Tax</th>
                                    <th class="text-end">Tax Amount</th>
                                    <th class="text-end">Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="props.purchaseHistory" t-as="record" t-key="record.id">
                                    <tr>
                                        <td><t t-esc="record.order_name"/></td>
                                        <td><t t-esc="record.partner_name"/></td>
                                        <td><t t-esc="record.date_order"/></td>
                                        <td class="text-end"><t t-esc="formatNumber(record.product_qty)"/></td>
                                        <td><t t-esc="record.product_uom"/></td>
                                        <td class="text-end">
                                            <t t-esc="record.currency"/><t t-esc="formatNumber(record.price_unit)"/>
                                        </td>
                                        <td><t t-esc="record.tax_name"/></td>
                                        <td class="text-end">
                                            <t t-esc="record.currency"/><t t-esc="formatNumber(record.tax_amount)"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-esc="record.currency"/><t t-esc="formatNumber(record.price_total)"/>
                                        </td>
                                        <td>
                                            <span t-if="record.state === 'posted'" class="badge bg-success">
                                                <t t-esc="getStateLabel(record.state)"/>
                                            </span>
                                            <span t-elif="record.state === 'draft'" class="badge bg-warning">
                                                <t t-esc="getStateLabel(record.state)"/>
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-info">
                        No purchase history found for this product.
                    </div>
                </t>
            </div>
        </Dialog>
    </t>
</templates>

