<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add From Date and To Date filter fields to invoice search -->
    <record id="view_account_invoice_filter_date_range_inherit" model="ir.ui.view">
        <field name="name">account.move.filter.date.range.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Add From Date and To Date fields after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_date" string="From Date"
                       filter_domain="[('invoice_date', '&gt;=', self)]"/>
                <field name="invoice_date" string="To Date"
                       filter_domain="[('invoice_date', '&lt;=', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>