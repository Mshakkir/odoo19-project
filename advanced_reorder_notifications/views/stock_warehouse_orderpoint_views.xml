<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warehouse_orderpoint_form_inherit" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.form.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='general']" position="after">
                <group string="Notification Settings">
                    <field name="notify_on_reorder"/>
                    <field name="notification_sent" readonly="1"/>
                    <field name="last_notification_date" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>