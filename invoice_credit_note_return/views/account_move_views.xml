<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Delivery button to Credit Note and Invoice form view -->
        <record id="view_move_form_delivery_button" model="ir.ui.view">
            <field name="name">account.move.form.delivery.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add Delivery smart button in button box -->
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_delivery"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="move_type not in ['out_invoice', 'out_refund'] or delivery_count == 0"
                            groups="stock.group_stock_user">
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>