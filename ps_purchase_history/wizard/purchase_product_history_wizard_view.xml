<odoo>
    <record id="product_history_view" model="ir.ui.view">
        <field name="name">product.history.view</field>
        <field name="model">product.purchase.history</field>
        <field name="arch" type="xml">
            <form string="Product Purchase History">

                <group>
                    <field name="product_id" readonly="1"/>
                </group>

                <notebook>
                    <page name="Product History">
                        <field name="line_ids" readonly="1">
                            <list string="Purchase History" editable="bottom">
                                <field name="vendor" string="Vendor"/>
                                <field name="po_number" string="PO Number"/>
                                <field name="po_date" string="Date"/>
                                <field name="quantity"/>
                                <field name="unit_price" string="Price"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_download_excel"
                            string="Download Excel"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="ps_purchase_product_history_action_view" model="ir.actions.act_window">
        <field name="name">Product History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.purchase.history</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
