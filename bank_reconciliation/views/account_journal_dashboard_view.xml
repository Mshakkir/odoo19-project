<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Bank Reconciliation button to journal form view -->
    <record id="view_account_journal_form_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.bank.reconciliation</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">

            <!-- Add button inside button box -->
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="create_bank_statement"
                            type="object"
                            string="Bank Reconciliation"
                            icon="fa-exchange"
                            invisible="type != 'bank'"/>
                </div>
            </xpath>

        </field>
    </record>

</odoo>



