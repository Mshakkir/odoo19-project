<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form View to make product clickable -->
    <record id="view_order_form_product_ledger_link" model="ir.ui.view">
        <field name="name">sale.order.form.product.ledger.link</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add button in list view after product -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        icon="fa-line-chart"
                        title="View Product Stock Ledger"
                        string=""
                        width="20px"
                        class="btn-link p-0"
                        invisible="not product_id"/>
            </xpath>

            <!-- Add button in form view after product field -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        string="ðŸ“Š View Stock Ledger"
                        class="btn-link"
                        invisible="not product_id"/>
            </xpath>

            <!-- Add button in kanban view -->
            <xpath expr="//field[@name='order_line']/kanban//field[@name='product_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        string="View Stock Ledger"
                        class="btn-sm btn-secondary mt-1"
                        invisible="not product_id"/>
            </xpath>

        </field>
    </record>

    <!-- Inherit Invoice/Bill Form View to add stock ledger link -->
    <record id="view_move_form_product_ledger_link" model="ir.ui.view">
        <field name="name">account.move.form.product.ledger.link</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add button in invoice line list view after product -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        icon="fa-line-chart"
                        title="View Product Stock Ledger"
                        string=""
                        width="20px"
                        class="btn-link p-0"
                        invisible="not product_id or display_type in ('line_section', 'line_subsection', 'line_note')"/>
            </xpath>

            <!-- Add button in invoice line form view after product field -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        string="ðŸ“Š View Stock Ledger"
                        class="btn-link"
                        invisible="not product_id"/>
            </xpath>

            <!-- Add button in invoice line kanban view -->
            <xpath expr="//field[@name='invoice_line_ids']/kanban//field[@name='product_id']" position="after">
                <button name="action_view_product_stock_ledger"
                        type="object"
                        string="View Stock Ledger"
                        class="btn-sm btn-secondary mt-1"
                        invisible="not product_id"/>
            </xpath>

        </field>
    </record>

</odoo>







