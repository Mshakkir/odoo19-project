<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Reordering Rule Form - Add notification button and field -->
    <record id="view_warehouse_orderpoint_form_inherit" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.form.inherit.notification</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
        <field name="arch" type="xml">

            <!-- Add button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_notification_now"
                        string="Send Notification Now"
                        type="object"
                        class="btn-primary"
                        icon="fa-bell"
                        groups="stock.group_stock_user"/>
            </xpath>

            <!-- Add last notification date field -->
            <xpath expr="//field[@name='product_max_qty']" position="after">
                <field name="last_notification_date" readonly="1"/>
            </xpath>

        </field>
    </record>

    <!-- Menu Item - Open warehouse channels -->
    <record id="action_warehouse_notification_channels" model="ir.actions.client">
        <field name="name">Warehouse Notification Channels</field>
        <field name="tag">mail.action_discuss</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_warehouse_notification_channels"
              name="Reorder Notifications"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_warehouse_notification_channels"
              sequence="5"
              groups="stock.group_stock_user"/>

    <!-- Scheduled Action - Check reorder rules every 4 hours -->
    <record id="ir_cron_check_reorder_notifications" model="ir.cron">
        <field name="name">Check Reordering Rules and Send Notifications</field>
        <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
        <field name="state">code</field>
        <field name="code">model.check_and_send_reorder_notifications()</field>
        <field name="interval_number">4</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>











