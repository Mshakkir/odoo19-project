<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the OdooMates financial report template -->
    <template id="report_financial_inherit" inherit_id="accounting_pdf_reports.report_financial">

        <!-- Insert custom header before the internal layout -->
        <xpath expr="//t[@t-call='web.internal_layout']" position="before">
            <div class="text-center" style="margin-bottom:20px;">
                <h2>Custom Balance Sheet</h2>
                <p><t t-esc="company.name"/></p>
                <p>Generated on <t t-esc="time.strftime('%Y-%m-%d %H:%M')"/></p>
            </div>
        </xpath>

        <!-- Optionally replace the title inside the layout -->
        <xpath expr="//h2" position="replace">
            <h2>Custom Balance Sheet Report</h2>
        </xpath>
    </template>
</odoo>








