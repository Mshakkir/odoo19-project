<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_customer_product_history_product_sale_order_history_view_form"
                model="ir.ui.view">
            <field name="name">product.sale.order.history.form.view</field>
            <field name="model">product.sale.order.history</field>
            <field name="arch" type="xml">
                <form string="Product Sale History" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="sale_orders_summary" readonly="1" nolabel="1" widget="text"/>
                        </group>
                        <footer>
                            <button string="Close" special="cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_customer_product_history.sale_customer_product_history_product_sale_order_history_action"
                model="ir.actions.act_window">
            <field name="name">Product sale history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.sale.order.history</field>
            <field name="view_id" ref="sale_customer_product_history_product_sale_order_history_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
