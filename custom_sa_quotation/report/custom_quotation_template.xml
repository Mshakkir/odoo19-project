<odoo>
    <template id="custom_saleorder_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">

                        <style type="text/css">
                            @page {
                                margin-top: 5mm;
                                margin-bottom: 5mm;
                                margin-left: 7mm;
                                margin-right: 7mm;
                            }

                            body {
                                font-family: Arial, sans-serif;
                            }

                            .page-content {
                                min-height: calc(100vh - 280px);
                            }

                            .custom-footer {
                                margin-top: 30px;
                                page-break-inside: avoid;
                            }
                        </style>

                        <div class="page">
                            <!-- HEADER SECTION -->
                            <div class="header" style="border-bottom: 2px solid #8B1538; margin-bottom: 10px; padding-bottom: 10px;">
                                <!-- Company Names Row -->
                                <table style="width: 100%; border-collapse: collapse; margin-bottom: 5px;">
                                    <tr>
                                        <td style="width: 50%; text-align: left; vertical-align: middle; padding: 5px;">
                                            <div style="color: #8B1538; font-size: 14px; font-weight: bold; text-transform: uppercase;">
                                                SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                            </div>
                                        </td>
                                        <td style="width: 50%; text-align: right; vertical-align: middle; padding: 5px;">
                                            <div style="color: #8B1538; font-size: 14px; font-weight: 900; direction: rtl; font-family: 'Tajawal', sans-serif;">
                                                شركة سمير شرف العتيبي التجارية
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Details and Logo Row -->
                                <table style="width: 100%; border-collapse: collapse;">
                                    <tr>
                                        <!-- Left: CR and VAT -->
                                        <td style="width: 30%; text-align: left; font-size: 11px; color: #333; vertical-align: middle; padding: 5px;">
                                            <div style="line-height: 1.4; font-weight: 500;">
                                                C.R. 4030216154<br/>
                                                VAT Regd: 311299944700003
                                            </div>
                                        </td>

                                        <!-- Center: Logo -->
                                        <td style="width: 40%; text-align: center; vertical-align: middle; padding: 5px;">
                                            <t t-if="o.company_id.logo">
                                                <img t-att-src="image_data_uri(o.company_id.logo)"
                                                     style="max-height: 80px; max-width: 100%; object-fit: contain;"/>
                                            </t>
                                        </td>

                                        <!-- Right: Arabic Address -->
                                        <td style="width: 30%; text-align: right; font-size: 10px; color: #333; vertical-align: middle; direction: rtl; padding: 5px;">
                                            <div style="line-height: 1.4; font-family: 'Tajawal', sans-serif; font-weight: 600;">
                                                ٧٦٥٥ الفيحاء، حي الفيحاء<br/>
                                                جدة ٢٢٢٤٤-٣١٠٨، المملكة العربية السعودية<br/>
                                                حي الفيحاء. JEDDAH 22244-3108<br/>
                                                Saudi Arabia
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div class="page-content">
                                <!-- Dynamic Title Section -->
                                <div style="background-color:#e8e8e8; color:black; padding:6px; text-align:center; margin-bottom:8px; font-weight:bold; font-size:14px; border: 1px solid #ccc;">
                                    <t t-if="o.state in ('draft', 'sent')">
                                        Quotation / <span style="font-family: 'Tajawal', sans-serif; font-weight:900;">عرض سعر</span>
                                    </t>
                                    <t t-if="o.state in ('sale', 'done')">
                                        Sales Order / <span style="font-family: 'Tajawal', sans-serif; font-weight:900;">طلب مبيعات</span>
                                    </t>
                                </div>

                                <!-- Customer & Quote Info -->
                                <table width="100%" style="border: 1px solid #000; border-collapse: collapse; font-size: 11px; margin-bottom:8px;">
                                    <tr>
                                        <td width="50%" style="border-right: 1px solid #000; vertical-align: top; padding: 8px;">
                                            <div style="font-weight: bold; margin-bottom: 5px; color:#000; font-size: 11px;">
                                                Customer Name &amp; Address / <span style="font-family: 'Tajawal', sans-serif; font-weight:900;">اسم العميل وعنوانه</span>
                                            </div>
                                            <div style="font-size: 10px; line-height: 1.4;">
                                                Attn: <span t-esc="o.partner_id.name"/><br/>
                                                <span t-esc="o.partner_id.city or ''"/><br/>
                                                MOB: <span t-esc="o.partner_id.phone or ''"/>
                                            </div>
                                        </td>
                                        <td width="50%" style="vertical-align: top; padding: 8px;">
                                            <div style="font-weight: bold; margin-bottom: 5px; color:#000; font-size: 11px;">
                                                <t t-if="o.state in ('draft', 'sent')">
                                                    Quote / Project Description / <span style="font-family: 'Tajawal', sans-serif; font-weight:900;">عرض سعر</span>
                                                </t>
                                                <t t-if="o.state in ('sale', 'done')">
                                                    Order Description / <span style="font-family: 'Tajawal', sans-serif; font-weight:900;">وصف الطلب</span>
                                                </t>
                                            </div>
                                            <div style="font-size: 10px; line-height: 1.4;">
                                                Date: <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/><br/>
                                                Our Reference: <span t-esc="o.name"/><br/>
                                                Your Reference: <span t-esc="o.client_order_ref or '-'"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Order Lines Table -->
                                <table width="100%" border="1" style="border-collapse: collapse; font-size: 10px; margin-top:5px;" cellpadding="4">
                                    <thead style="background-color: #d3d3d3;">
                                        <tr>
                                            <th style="width:3%; text-align:center; color:#000; padding: 4px;">SN<br/><span style="font-size: 9px;">رقم</span></th>
                                            <th style="width:40%; text-align:center; color:#000; padding: 4px;">
                                                Item Description<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">وصف المنتج</span>
                                            </th>
                                            <th style="width:8%; text-align:center; color:#000; padding: 4px;">
                                                Duration<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">مدة</span>
                                            </th>
                                            <th style="width:5%; text-align:center; color:#000; padding: 4px;">
                                                QTY<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">كمية</span>
                                            </th>
                                            <th style="width:8%; text-align:center; color:#000; padding: 4px;">
                                                U/M<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">وحدة</span>
                                            </th>
                                            <th style="width:12%; text-align:center; color:#000; padding: 4px;">
                                                Unit Price<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">سعر الوحدة</span>
                                            </th>
                                            <th style="width:12%; text-align:center; color:#000; padding: 4px;">
                                                Line Total<br/>
                                                <span style="font-family: 'Tajawal', sans-serif; font-weight:900; font-size: 9px;">المجموع</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align:center;">
                                        <tr t-foreach="o.order_line" t-as="line">
                                            <td style="padding: 4px;"><t t-esc="line_index + 1"/></td>
                                            <td style="text-align: left; padding: 4px;"><span t-field="line.name"/></td>
                                            <td style="padding: 4px;">2-3 Weeks</td>
                                            <td style="padding: 4px;"><span t-field="line.product_uom_qty"/></td>
                                            <td style="padding: 4px;"><span t-esc="line.product_uom.name"/></td>
                                            <td style="text-align: right; padding: 4px;"><span t-field="line.price_unit"/></td>
                                            <td style="text-align: right; padding: 4px;"><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </tbody>
                                </table>

                                <!-- Totals Section -->
                                <table width="100%" style="font-size: 11px; margin-top: 8px; border-collapse: collapse;">
                                    <tr>
                                        <td style="width: 55%; vertical-align: top; padding-right: 10px;">
                                            <t t-if="o.payment_term_id">
                                                <p style="margin: 3px 0; font-size: 10px;">
                                                    <strong>Payment Terms:</strong> <span t-esc="o.payment_term_id.name"/>
                                                </p>
                                            </t>
                                            <t t-if="o.note">
                                                <div style="font-size: 10px; margin-top: 5px;">
                                                    <p style="margin: 3px 0;"><strong>Terms and Conditions:</strong></p>
                                                    <p t-field="o.note" style="margin: 3px 0; font-size: 9px;"/>
                                                </div>
                                            </t>
                                        </td>
                                        <td style="width: 45%; vertical-align: top;">
                                            <table style="width:100%; border:1px solid #000; border-collapse:collapse; font-size: 10px;">
                                                <tr>
                                                    <td style="padding: 3px 6px; border-bottom: 1px solid #ccc;">Subtotal</td>
                                                    <td style="text-align:right; padding: 3px 6px; border-bottom: 1px solid #ccc;">
                                                        <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 3px 6px; border-bottom: 1px solid #ccc;">Discount</td>
                                                    <td style="text-align:right; padding: 3px 6px; border-bottom: 1px solid #ccc;">
                                                        <t t-esc="'%.2f' % (o.discount_amount or 0.0)"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 3px 6px; border-bottom: 1px solid #ccc;">Freight</td>
                                                    <td style="text-align:right; padding: 3px 6px; border-bottom: 1px solid #ccc;">
                                                        <t t-esc="'%.2f' % (o.freight_amount or 0.0)"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 3px 6px; border-bottom: 1px solid #ccc;"><strong>Gross Total</strong></td>
                                                    <td style="text-align:right; padding: 3px 6px; border-bottom: 1px solid #ccc;">
                                                        <t t-set="gross_total" t-value="o.amount_untaxed - (o.discount_amount or 0.0) + (o.freight_amount or 0.0)"/>
                                                        <strong><t t-esc="'%.2f' % gross_total"/></strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 3px 6px; border-bottom: 1px solid #ccc;">VAT (15%)</td>
                                                    <td style="text-align:right; padding: 3px 6px; border-bottom: 1px solid #ccc;">
                                                        <t t-set="vat_amount" t-value="gross_total * 0.15"/>
                                                        <t t-esc="'%.2f' % vat_amount"/>
                                                    </td>
                                                </tr>
                                                <tr style="background-color:#e8e8e8; font-weight: bold;">
                                                    <td style="padding: 4px 6px;"><strong>Net Total</strong></td>
                                                    <td style="text-align:right; padding: 4px 6px;">
                                                        <strong><t t-esc="'%.2f' % (gross_total + vat_amount)"/> SAR</strong>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- FOOTER SECTION -->
                            <div class="custom-footer" style="margin-top: 20px;">
                                <!-- Branch Address Table -->
                                <table style="width:100%; border-collapse:collapse; font-size:9px; text-align:center; line-height:1.3; margin-bottom: 8px;">
                                    <tr style="font-weight:bold; background-color:#f2f2f2;">
                                        <td style="width:33.3%; border:1px solid #8B1538; padding:4px;">Dammam Branch</td>
                                        <td style="width:33.3%; border:1px solid #8B1538; padding:4px;">Baladiya Branch</td>
                                        <td style="width:33.3%; border:1px solid #8B1538; padding:4px;">Main Office</td>
                                    </tr>
                                    <tr style="font-size: 8px;">
                                        <td style="border:1px solid #8B1538; padding:4px; line-height:1.3;">
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            8515, Qutaibah bin Muslim ST,<br/>
                                            Al Souq, Dammam 4525-32242<br/>
                                            Saudi Arabia<br/>
                                            Tel/Mobile: 0535081008<br/>
                                            ssaoe.dammam@gmail.com
                                        </td>
                                        <td style="border:1px solid #8B1538; padding:4px; line-height:1.3;">
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            شركة سمير شرف العتيبي التجارية<br/>
                                            Sookul Anwar, Al Baladeah, Aziziyah,<br/>
                                            Jeddah 31303
                                        </td>
                                        <td style="border:1px solid #8B1538; padding:4px; line-height:1.3;">
                                            Sameer Sharaf Al Otaibi Trading Company<br/>
                                            شركة سمير شرف العتيبي التجارية<br/>
                                            Jeddah, 7655 Al Fayha<br/>
                                            Al Fayha Dist. JEDDAH 22244-3108<br/>
                                            Saudi Arabia
                                        </td>
                                    </tr>
                                </table>

                                <!-- Footer Image -->
                                <div style="width:100%; text-align:center; margin-bottom: 8px;">
                                    <img t-att-src="'/custom_sa_quotation/static/src/img/footer_companies_names.jpg'"
                                        style="height:60px; width:70%; object-fit:contain;"/>
                                </div>

                                <!-- Contact Info and Page Number -->
                                <div style="text-align:center; font-size:8px; color:#666; border-top: 1px solid #ddd; padding-top: 5px;">
                                    <span>+966 540811118 saoe.jeddah@gmail.com http://www.ssaoco.com 311299944700003</span>
                                    <span style="float: right;">Page <span class="page"/> / <span class="topage"/></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>








