<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Sales Reports menu under Sales top menu -->
        <menuitem id="menu_sales_invoice_reports_root"
                  name="Sales Reports"
                  parent="sale.sale_menu_root"
                  sequence="100"/>

        <!-- Report Menus with Wizards (includes "All" option via checkbox) -->
        <menuitem id="menu_product_report"
                  name="By Products"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_product_wizard"
                  sequence="10"/>

        <menuitem id="menu_customer_report"
                  name=" By Customer"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_customer_wizard"
                  sequence="20"/>

        <menuitem id="menu_salesperson_report"
                  name="By Salesperson"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_salesperson_wizard"
                  sequence="30"/>

        <!-- NEW: Analytic Account Report -->
        <menuitem id="menu_analytic_account_report"
                  name="By Warehouse"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_analytic_account_wizard"
                  sequence="40"/>

        <!-- NEW: Invoice Number Report -->
        <menuitem id="menu_invoice_number_report"
                  name="By Invoice Number"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_invoice_number_wizard"
                  sequence="50"/>

        <!-- NEW: Product Category Report -->
        <menuitem id="menu_product_category_report"
                  name="By Product Category "
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_product_category_wizard"
                  sequence="60"/>

        <!-- PDF Report Menu -->
        <menuitem id="menu_sales_report_pdf"
                  name="Sales Report by Salesperson (PDF)"
                  parent="menu_sales_invoice_reports_root"
                  action="action_sales_report_wizard"
                  sequence="70"/>
    </data>
</odoo>