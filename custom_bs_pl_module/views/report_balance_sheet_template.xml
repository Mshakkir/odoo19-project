<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_balance_sheet_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="text-center mb-3">
                        <h2><strong>Custom Balance Sheet</strong></h2>
                        <p><small>Date: <t t-esc="o.date_to or ''"/></small></p>
                    </div>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th class="text-end">Debit</th>
                                <th class="text-end">Credit</th>
                                <th class="text-end">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td><t t-esc="line.name"/></td>
                                    <td class="text-end"><t t-esc="line.debit"/></td>
                                    <td class="text-end"><t t-esc="line.credit"/></td>
                                    <td class="text-end"><t t-esc="line.balance"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="text-end mt-4">
                        <strong>Total Balance:</strong>
                        <t t-esc="sum(line.balance for line in o.line_ids)"/>
                    </div>

                    <div class="text-end mt-5">
                        <small>Generated by Custom Balance Sheet Module</small>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
