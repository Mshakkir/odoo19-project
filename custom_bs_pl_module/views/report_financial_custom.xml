<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial_custom" inherit_id="accounting_pdf_reports.report_financial">
        <xpath expr="//div[@class='page']/h2" position="replace">
            <t t-if="data['account_report_id'][1] == 'Balance Sheet'">
                <h2><strong>Custom Balance Sheet</strong></h2>
            </t>
            <t t-if="data['account_report_id'][1] == 'Profit and Loss'">
                <h2><strong>Custom Profit and Loss</strong></h2>
            </t>
        </xpath>

        <xpath expr="//div[@class='page']" position="inside">
            <div class="text-end mt-5">
                <small t-if="data['account_report_id'][1] == 'Balance Sheet'">
                    Generated by Custom Balance Sheet Module
                </small>
                <small t-if="data['account_report_id'][1] == 'Profit and Loss'">
                    Generated by Custom Profit &amp; Loss Module
                </small>
            </div>
        </xpath>
    </template>
</odoo>
