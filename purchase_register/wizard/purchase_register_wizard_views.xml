<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_register_wizard_form" model="ir.ui.view">
        <field name="name">purchase.register.wizard.form</field>
        <field name="model">purchase.register.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Register Report">
                <sheet>
                    <group>
                        <group>
                            <field name="date_filter" widget="radio"/>
                            <field name="date_from" required="1" readonly="date_filter != 'custom'"/>
                            <field name="date_to" required="1" readonly="date_filter != 'custom'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="data_source"/>
                            <field name="report_type" widget="radio"/>
                            <field name="group_by" invisible="report_type == 'detailed'"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_purchase_register_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Register</field>
        <field name="res_model">purchase.register.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_purchase_register_root"
              name="Purchase Register"
              parent="purchase.menu_purchase_root"
              sequence="99"/>

    <menuitem id="menu_purchase_register_report"
              name="Generate Register"
              parent="menu_purchase_register_root"
              action="action_purchase_register_wizard"
              sequence="1"/>

</odoo>