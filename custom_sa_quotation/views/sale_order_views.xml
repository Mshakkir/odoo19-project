<odoo>
    <record id="view_order_form_inherit_discount_freight" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount.freight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Optional: Add editable fields above order lines -->
            <xpath expr="//field[@name='order_line']" position="before">
                <group string="Extra Charges">
                    <field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="freight_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </xpath>

            <!-- Add fields inside the totals section -->
            <xpath expr="//group[@name='sale_total']" position="inside">
                <field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="freight_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>

        </field>
    </record>
</odoo>
