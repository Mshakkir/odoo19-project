<odoo>
    <template id="custom_invoice_report" inherit_id="l10n_sa.l10n_sa_report_invoice_document">

        <!-- REMOVE DEFAULT LAYOUT -->
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">

            <!-- SALES INVOICE : SHOW CUSTOM HEADER + FOOTER -->
            <t t-if="o.move_type in ('out_invoice','out_refund')">
                <t t-call="web.html_container">

                    <!-- =================== CUSTOM HEADER =================== -->
                    <div class="page">
                        <div class="header" style="border:2px solid white; border-radius:6px; background:white; margin-bottom:15px;">

                            <!-- Company Title -->
                            <table style="width:100%; border:none;">
                                <tr>
                                    <td style="width:50%; padding-left:0px;">
                                        <div style="color:#8B1538; font-size:16px; font-weight:bold;">
                                            SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                        </div>
                                    </td>
                                    <td style="width:50%; text-align:right;">
                                        <div style="color:#8B1538; font-size:17px; font-weight:900; direction:rtl; font-family:'Tajawal';">
                                            شركة سمير شرف العتيبي التجارية
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            <!-- English / Logo / Arabic -->
                            <table style="width:100%; border-collapse:collapse;">
                                <tr>
                                    <td style="width:33%; border-bottom:2px solid #8B1538;">
                                        C.R. 4030216154<br/>
                                        VAT Regd: 311299944700003
                                    </td>

                                    <td style="width:34%; text-align:center; border-bottom:2px solid #8B1538;">
                                        <t t-if="o.company_id.logo">
                                            <img t-att-src="image_data_uri(o.company_id.logo)"
                                                 style="max-height:120px; object-fit:contain;"/>
                                        </t>
                                    </td>

                                    <td style="width:33%; text-align:right; direction:rtl; border-bottom:2px solid #8B1538;">
                                        س.ت: ٤٠٣٠٢١٦١٥٤<br/>
                                        الرقم الضريبي: ٣١١٢٩٩٩٤٤٧٠٠٠٠٣
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>
                    <!-- =================== END HEADER ======================= -->

                </t>
            </t>

            <!-- PURCHASE INVOICE : NO HEADER, NO FOOTER -->
            <t t-if="o.move_type in ('in_invoice','in_refund')">
                <t t-call="web.html_container">
                    <div class="page"></div>
                </t>
            </t>

        </xpath>

        <!-- =================== BODY (COMMON for Both) =================== -->
        <xpath expr="//div[@id='invoice_content']" position="replace">

            <!-- TITLE BAR -->
            <div style="background:#d3d3d3; padding:8px; text-align:center; font-weight:bold;">
                <t t-if="o.move_type in ('out_invoice','out_refund')">
                    Tax Invoice /
                    <span style="font-family:'Tajawal';">فاتورة ضريبية</span>
                </t>
                <t t-elif="o.move_type in ('in_invoice','in_refund')">
                    Purchase Invoice /
                    <span style="font-family:'Tajawal';">فاتورة مشتريات</span>
                </t>
            </div>

            <!-- CUSTOMER/SUPPLIER BLOCK -->
            <div style="border:1px solid #999; margin-top:5px;">
                <table style="width:100%; border-collapse:collapse;">
                    <tr style="background:#d3d3d3;">
                        <td style="padding:5px; font-weight:bold;">
                            <t t-if="o.move_type in ('out_invoice','out_refund')">Sold To — اسم العميل</t>
                            <t t-else="">Supplier — المورد</t>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:8px;">
                            <strong t-esc="o.partner_id.name"/>
                            <br/>
                            <t t-if="o.partner_id.street"><t t-esc="o.partner_id.street"/><br/></t>
                            <t t-if="o.partner_id.city"><t t-esc="o.partner_id.city"/></t>
                            <t t-if="o.partner_id.country_id">, <t t-esc="o.partner_id.country_id.name"/></t>
                            <br/><br/>
                            VAT: <t t-esc="o.partner_id.vat or 'N/A'"/>
                        </td>
                    </tr>
                </table>

                <!-- INVOICE INFO -->
                <table style="width:100%; border-top:1px solid #999;">
                    <tr>
                        <td style="padding:6px;">Inv #: <t t-esc="o.name"/></td>
                        <td style="padding:6px;">Date: <t t-esc="o.invoice_date"/></td>
                        <td style="padding:6px;">AWB: <t t-esc="o.awb_number"/></td>
                    </tr>
                </table>
            </div>

            <!-- TABLE -->
            <table width="100%" border="1" style="border-collapse:collapse; margin-top:10px;">
                <thead style="background:#eee;">
                    <tr>
                        <th>S.N</th>
                        <th>Description</th>
                        <th>Qty</th>
                        <th>Unit</th>
                        <th>Rate</th>
                        <th>Subtotal</th>
                        <th>VAT%</th>
                        <th>VAT</th>
                        <th>Total</th>
                    </tr>
                </thead>

                <tbody>
                    <tr t-foreach="enumerate(o.invoice_line_ids,start=1)" t-as="l">
                        <td t-esc="l[0]"/>
                        <td><span t-field="l[1].name"/></td>
                        <td t-field="l[1].quantity"/>
                        <td t-field="l[1].product_uom_id.name"/>
                        <td t-field="l[1].price_unit"/>
                        <td><span t-esc="l[1].price_subtotal"/></td>
                        <td>
                            <t t-if="l[1].tax_ids">
                                <span t-esc="', '.join(str(t.amount)+'%' for t in l[1].tax_ids)"/>
                            </t>
                            <t t-else="">0%</t>
                        </td>
                        <td><span t-esc="l[1].price_total - l[1].price_subtotal"/></td>
                        <td><span t-esc="l[1].price_total"/></td>
                    </tr>
                </tbody>
            </table>

            <!-- TOTALS -->
            <table width="100%" style="margin-top:10px;">
                <tr><td>Net Amount:</td><td style="text-align:right;" t-esc="o.amount_untaxed"/></tr>
                <tr><td>VAT:</td><td style="text-align:right;" t-esc="o.amount_tax"/></tr>
                <tr style="font-weight:bold;"><td>Total:</td><td style="text-align:right;" t-esc="o.amount_total"/></tr>
            </table>

        </xpath>

        <!-- =================== SALES FOOTER ONLY =================== -->
        <xpath expr="//div[@id='invoice_footer']" position="replace">
            <t t-if="o.move_type in ('out_invoice','out_refund')">

                <div style="margin-top:20px; font-size:12px;">
                    <strong>Bank Details:</strong><br/>
                    Alrajhi Bank – Sameer Sharaf Al-Otibi Trading Co.<br/>
                    IBAN: SA7880000123608010143917
                    <br/><br/>
                    SNB – Saudi National Bank<br/>
                    IBAN: SA2110000013200000678707
                </div>

            </t>
        </xpath>

    </template>
</odoo>



