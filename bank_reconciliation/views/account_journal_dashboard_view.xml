<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="inherit_account_journal_dashboard_custom" model="ir.ui.view">
        <field name="name">account.journal.dashboard.custom</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">

            <!-- Add button to right side -->
            <xpath expr="//t[@t-name='JournalBody_BankCash']//div[contains(@class, 'kanban_primary_right')]" position="inside">
                <t t-if="journal_type == 'bank'">
                    <div class="mt-2">
                        <button type="action"
                                name="%(action_custom_bank_reconciliation)d"
                                class="btn btn-primary">
                            Bank Reconciliation
                        </button>
                    </div>
                </t>
            </xpath>

        </field>
    </record>

</odoo>









