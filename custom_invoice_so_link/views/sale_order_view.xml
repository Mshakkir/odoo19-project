<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_hide_create_invoice" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.hide.invoice.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add invisible domain to header buttons -->
            <xpath expr="//header" position="inside">
                <style>
                    button[name='_create_invoices'][data-invisible="invoice_count > 0"] { display: none !important; }
                </style>
            </xpath>
        </field>
    </record>
</odoo>