<!-- custom_balance_sheet/views/menus_actions.xml -->
<odoo>
    <!-- Action to open the Balance Sheet Wizard -->
    <record id="action_balance_sheet_wizard" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">balance.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Parent Menu: Custom Reporting under Accounting -> Reporting -->
    <menuitem id="custom_accounting_reporting_menu"
              name="Custom Reporting"
              parent="account.menu_finance"
              sequence="40"/>

    <!-- Submenu: Balance Sheet -->
    <menuitem id="custom_balance_sheet_menu"
              name="Balance Sheet"
              parent="custom_accounting_reporting_menu"
              sequence="1"
              action="action_balance_sheet_wizard"/>
</odoo>
