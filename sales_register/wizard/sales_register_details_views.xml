<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View for Sales Register Details -->
    <record id="view_sales_register_details_tree" model="ir.ui.view">
        <field name="name">sales.register.details.list</field>
        <field name="model">sales.register.details</field>
        <field name="arch" type="xml">
            <list string="Sales Register Details" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="document_type"/>
                <field name="document_number"/>
                <field name="customer_name"/>
                <field name="customer_vat"/>
                <field name="warehouse"/>
                <field name="product"/>
                <field name="quantity" sum="Total Quantity"/>
                <field name="unit_price"/>
                <field name="subtotal" sum="Total Subtotal"/>
                <field name="trade_discount" sum="Total Trade Discount"/>
                <field name="addin_discount" sum="Total Additional Discount"/>
                <field name="addin_cost" sum="Total Additional Cost"/>
                <field name="tax_amount" sum="Total Tax"/>
                <field name="invoice_cash_rounding_id" sum="Total Round Off"/>
                <field name="total" sum="Grand Total"/>
                <field name="paid" sum="Total Paid"/>
                <field name="balance" sum="Total Balance"/>
                 <field name="taxes"/>
            </list>
        </field>
    </record>

    <!-- Search View for filtering -->
    <record id="view_sales_register_details_search" model="ir.ui.view">
        <field name="name">sales.register.details.search</field>
        <field name="model">sales.register.details</field>
        <field name="arch" type="xml">
            <search string="Search Sales Details">
                <field name="document_number"/>
                <field name="customer_name"/>
                <field name="product"/>
                <field name="warehouse"/>
                <filter string="Sales Orders" name="sales_orders"
                        domain="[('document_type', '=', 'Sales Order')]"/>
                <filter string="Invoices" name="invoices"
                        domain="[('document_type', '=', 'Customer Invoice')]"/>
                <separator/>
                <filter string="Customer" name="group_customer"
                        context="{'group_by': 'customer_name'}"/>
                <filter string="Document Type" name="group_type"
                        context="{'group_by': 'document_type'}"/>
                <filter string="Date" name="group_date"
                        context="{'group_by': 'date'}"/>
                <filter string="Warehouse" name="group_warehouse"
                        context="{'group_by': 'warehouse'}"/>
            </search>
        </field>
    </record>

    <!-- Form View for Sales Register Details (Optional) -->
    <record id="view_sales_register_details_form" model="ir.ui.view">
        <field name="name">sales.register.details.form</field>
        <field name="model">sales.register.details</field>
        <field name="arch" type="xml">
            <form string="Sales Detail" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group string="Document Information">
                            <field name="date"/>
                            <field name="document_type"/>
                            <field name="document_number"/>
                            <field name="warehouse"/>
                        </group>
                        <group string="Customer Information">
                            <field name="customer_name"/>
                            <field name="customer_vat"/>
                        </group>
                    </group>
                    <group>
                        <group string="Product &amp; Pricing">
                            <field name="product"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="subtotal"/>
                        </group>
                        <group string="Discounts &amp; Charges">
                            <field name="trade_discount"/>
                            <field name="addin_discount"/>
                            <field name="addin_cost"/>
                            <field name="round_off"/>
                        </group>
                    </group>
                    <group>
                        <group string="Tax &amp; Total">
                            <field name="taxes"/>
                            <field name="tax_amount"/>
                            <field name="total"/>
                            <field name="currency"/>
                        </group>
                        <group string="Payment Status">
                            <field name="paid"/>
                            <field name="balance"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>