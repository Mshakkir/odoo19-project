<?xml version="1.0" encoding="utf-8"?>
<!-- File: product_location_column/views/product_views.xml -->
<odoo>

    <!-- Add warehouse quantity columns to product.template tree view -->
    <record id="product_template_tree_view_warehouse_qty" model="ir.ui.view">
        <field name="name">product.template.tree.warehouse.qty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="after">
                <field name="qty_wh_stock"
                       string="WH/Stock"
                       optional="show"/>
                <field name="qty_dw_stock"
                       string="DW/Stock"
                       optional="show"/>
                <field name="qty_balad_stock"
                       string="Balad/Stock"
                       optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Add warehouse quantity columns to product.product tree view -->
    <record id="product_product_tree_view_warehouse_qty" model="ir.ui.view">
        <field name="name">product.product.tree.warehouse.qty</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="after">
                <field name="qty_wh_stock"
                       string="WH/Stock"
                       optional="show"/>
                <field name="qty_dw_stock"
                       string="DW/Stock"
                       optional="show"/>
                <field name="qty_balad_stock"
                       string="Balad/Stock"
                       optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>