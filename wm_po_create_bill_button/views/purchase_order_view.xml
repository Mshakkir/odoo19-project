<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_form_inherit_create_bill_btn" model="ir.ui.view">
        <field name="name">purchase.order.inherited.form.create.bill.btn</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_approve" position="after">
                  <button name="action_create_invoice" string="Create Bill" type="object" class="oe_highlight" context="{'create_bill':True}" invisible="state not in ('purchase', 'done') or invoice_status in ('no', 'invoiced')" data-hotkey="w"/>
            </button>
        </field>
    </record>
</odoo>
