<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <!-- Add custom discount breakdown section at the end of the document -->
        <xpath expr="//div[hasclass('page')]" position="inside">

            <!-- Only show this section if there's a global discount -->
            <t t-if="o.global_discount_fixed and o.global_discount_fixed &gt; 0">
                <div class="row mt-4" style="page-break-inside: avoid;">
                    <div class="col-6 offset-6">
                        <div style="border: 2px solid #000; padding: 15px; background-color: #f8f9fa;">
                            <h5 class="mb-3 text-center">Invoice Summary with Discount</h5>
                            <table class="table table-sm mb-0">
                                <tr>
                                    <td><strong>Untaxed Amount:</strong></td>
                                    <td class="text-end">
                                        <span t-field="o.amount_undiscounted"/>
                                    </td>
                                </tr>
                                <tr style="border-top: 1px solid #000;">
                                    <td><strong>Discount:</strong></td>
                                    <td class="text-end text-danger">
                                        - <span t-field="o.global_discount_fixed"/>
                                    </td>
                                </tr>
                                <tr style="border-top: 1px solid #000;">
                                    <td><strong>Untaxed Amount (After Discount):</strong></td>
                                    <td class="text-end">
                                        <span t-field="o.amount_after_discount"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>VAT Taxes:</strong></td>
                                    <td class="text-end">
                                        <span t-field="o.amount_tax"/>
                                    </td>
                                </tr>
                                <tr style="border-top: 2px solid #000; background-color: #e9ecef;">
                                    <td><strong style="font-size: 1.2em;">TOTAL:</strong></td>
                                    <td class="text-end">
                                        <strong style="font-size: 1.2em;">
                                            <span t-field="o.amount_total"/>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>

        </xpath>

    </template>
</odoo>