<odoo>
    <!-- =========================================
         CUSTOM INVOICE REPORT TEMPLATE
    ========================================== -->
    <template id="custom_invoice_report" inherit_id="l10n_sa.l10n_sa_report_invoice_document">
        <xpath expr="//div[@class='page']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-family: 'Arial'; font-size: 14px;">
                            <!-- HEADER SECTION -->
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-6">
                                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo.decode()" style="max-height: 60px;"/>
                                    <h2><strong t-esc="company.name"/></h2>
                                    <p t-esc="company.partner_id.contact_address"/>
                                    <p><strong>VAT:</strong> <span t-esc="company.vat"/></p>
                                </div>
                                <div class="col-6 text-right">
                                    <h3><strong t-esc="o.name"/></h3>
                                    <p><strong>Date:</strong> <span t-field="o.invoice_date"/></p>
                                    <p><strong>Customer:</strong> <span t-field="o.partner_id.name"/></p>
                                    <p><strong>VAT:</strong> <span t-field="o.partner_id.vat"/></p>
                                </div>
                            </div>

                            <hr/>

                            <!-- INVOICE LINES TABLE -->
                            <table class="table table-sm" style="width: 100%; border-collapse: collapse; margin-bottom: 10px;">
                                <thead>
                                    <tr style="background-color: #f2f2f2;">
                                        <th style="border: 1px solid #ddd; padding: 5px;">Description</th>
                                        <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Quantity</th>
                                        <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Unit Price</th>
                                        <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.invoice_line_ids" t-as="line">
                                        <td style="border: 1px solid #ddd; padding: 5px;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="border: 1px solid #ddd; padding: 5px; text-align: right;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="border: 1px solid #ddd; padding: 5px; text-align: right;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid #ddd; padding: 5px; text-align: right;">
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- TOTALS SECTION -->
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Payment Reference:</strong> <span t-field="o.payment_reference"/></p>
                                    <p><strong>Payment Terms:</strong> <span t-field="o.invoice_payment_term_id.name"/></p>
                                </div>
                                <div class="col-6 text-right">
                                    <p><strong>Subtotal:</strong> <span t-field="o.amount_untaxed"/></p>
                                    <p><strong>Tax:</strong> <span t-field="o.amount_tax"/></p>
                                    <p><strong>Total:</strong> <span t-field="o.amount_total"/></p>
                                </div>
                            </div>

                            <hr/>

                            <!-- FOOTER INFO -->
                            <div class="text-center" style="margin-top: 20px; font-size: 12px;">
                                <p>Thank you for your business!</p>
                                <p><strong>Company Address:</strong> <span t-esc="company.partner_id.contact_address"/></p>
                                <p><strong>Phone:</strong> <span t-esc="company.phone"/> | <strong>Email:</strong> <span t-esc="company.email"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </xpath>
    </template>

    <!-- =========================================
         CUSTOM FOOTER TEMPLATE (SEPARATE)
    ========================================== -->


    <!-- =========================================
         CUSTOM PURCHASE ORDER REPORT ACTION
    ========================================== -->
    <record id="action_report_purchase_order_custom" model="ir.actions.report">
        <field name="name">Purchase Order Custom</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_module.report_purchaseorder_custom_document</field>
        <field name="report_file">custom_module.report_purchaseorder_custom_document</field>
        <field name="print_report_name">'Purchase Order - %s' % (object.name)</field>
    </record>

    <!-- =========================================
         CUSTOM PURCHASE ORDER REPORT TEMPLATE
    ========================================== -->
    <template id="report_purchaseorder_custom_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: 'Arial'; font-size: 14px;">
                        <!-- HEADER -->
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-6">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo.decode()" style="max-height: 60px;"/>
                                <h2><strong t-esc="company.name"/></h2>
                                <p t-esc="company.partner_id.contact_address"/>
                            </div>
                            <div class="col-6 text-right">
                                <h3><strong t-esc="o.name"/></h3>
                                <p><strong>Date:</strong> <span t-field="o.date_order"/></p>
                                <p><strong>Vendor:</strong> <span t-field="o.partner_id.name"/></p>
                            </div>
                        </div>

                        <hr/>

                        <!-- ORDER LINES TABLE -->
                        <table class="table table-sm" style="width: 100%; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color: #f2f2f2;">
                                    <th style="border: 1px solid #ddd; padding: 5px;">Product</th>
                                    <th style="border: 1px solid #ddd; padding: 5px;">Description</th>
                                    <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Quantity</th>
                                    <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Unit Price</th>
                                    <th style="border: 1px solid #ddd; padding: 5px; text-align: right;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td style="border: 1px solid #ddd; padding: 5px;" t-field="line.product_id.display_name"/>
                                    <td style="border: 1px solid #ddd; padding: 5px;" t-field="line.name"/>
                                    <td style="border: 1px solid #ddd; padding: 5px; text-align: right;" t-field="line.product_qty"/>
                                    <td style="border: 1px solid #ddd; padding: 5px; text-align: right;" t-field="line.price_unit"/>
                                    <td style="border: 1px solid #ddd; padding: 5px; text-align: right;" t-field="line.price_subtotal"/>
                                </tr>
                            </tbody>
                        </table>

                        <!-- TOTAL SECTION -->
                        <div class="row" style="margin-top: 15px;">
                            <div class="col-6"></div>
                            <div class="col-6 text-right">
                                <p><strong>Total:</strong> <span t-field="o.amount_total"/></p>
                            </div>
                        </div>

                        <hr/>

                        <div class="text-center" style="margin-top: 20px; font-size: 12px;">
                            <p><strong>Company:</strong> <span t-esc="company.name"/></p>
                            <p><strong>Address:</strong> <span t-esc="company.partner_id.contact_address"/></p>
                            <p><strong>Phone:</strong> <span t-esc="company.phone"/> | <strong>Email:</strong> <span t-esc="company.email"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>






