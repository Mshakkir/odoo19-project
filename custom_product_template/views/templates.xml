<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add custom CSS classes to products page -->
    <template id="products_custom_wrapper" inherit_id="website_sale.products" name="Custom Products Wrapper">
        <xpath expr="//div[@id='products_grid']" position="attributes">
            <attribute name="class" add="custom_products_grid" separator=" "/>
        </xpath>
    </template>

    <!-- Customize individual product item styling -->
    <template id="products_item_custom" inherit_id="website_sale.products_item" name="Custom Product Item">

        <!-- Add custom wrapper class to product -->
        <xpath expr="//form" position="attributes">
            <attribute name="class" add="product_card_wrapper h-100" separator=" "/>
        </xpath>

        <!-- Enhance product image section -->
        <xpath expr="//div[hasclass('o_wsale_product_image')]" position="attributes">
            <attribute name="class" add="product_image_container position-relative" separator=" "/>
        </xpath>

        <!-- Add sale badge after image -->
        <xpath expr="//div[hasclass('o_wsale_product_image')]" position="inside">
            <t t-if="product.compare_list_price and product.compare_list_price &gt; product.list_price">
                <span class="badge bg-danger position-absolute top-0 end-0 m-2" style="z-index: 1;">
                    Sale
                </span>
            </t>
        </xpath>

        <!-- Add category information before product name -->
        <xpath expr="//h6[hasclass('o_wsale_products_item_title')]" position="before">
            <div class="product_category text-muted small mb-1">
                <t t-if="product.public_categ_ids">
                    <i class="fa fa-tag me-1"/>
                    <span t-field="product.public_categ_ids[0].name"/>
                </t>
                <t t-elif="product.categ_id">
                    <i class="fa fa-tag me-1"/>
                    <span t-field="product.categ_id.name"/>
                </t>
            </div>
        </xpath>

        <!-- Add stock indicator after price -->
        <xpath expr="//div[hasclass('o_wsale_product_information')]" position="inside">
            <div class="product_stock_info mt-2">
                <t t-if="product.detailed_type == 'product'">
                    <t t-if="product.virtual_available &gt; 0">
                        <small class="text-success">
                            <i class="fa fa-check-circle"/> In Stock
                        </small>
                    </t>
                    <t t-else="">
                        <small class="text-danger">
                            <i class="fa fa-times-circle"/> Out of Stock
                        </small>
                    </t>
                </t>
                <t t-else="">
                    <small class="text-success">
                        <i class="fa fa-check-circle"/> Available
                    </small>
                </t>
            </div>
        </xpath>

    </template>

    <!-- Add custom header to shop page -->
    <template id="shop_custom_header" inherit_id="website_sale.products" name="Shop Custom Header">
        <xpath expr="//div[@id='products_grid']" position="before">
            <div class="custom_shop_header py-4 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center text-white">
                            <h1 class="display-5 mb-2 fw-bold">Our Products</h1>
                            <p class="lead mb-0" style="opacity: 0.9;">Discover our wide range of quality products</p>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!-- Enhance Product Detail Page -->
    <template id="product_detail_custom" inherit_id="website_sale.product" name="Custom Product Detail">

        <!-- Add breadcrumb -->
        <xpath expr="//div[@id='product_detail']" position="before">
            <div class="container my-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent px-0">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <span t-field="product.name"/>
                        </li>
                    </ol>
                </nav>
            </div>
        </xpath>

        <!-- Add Related Products Section -->
        <xpath expr="//div[@id='product_detail']" position="after">
            <div class="container my-5">
                <t t-set="related_products" t-value="request.env['product.template'].sudo().search([('is_published', '=', True), ('id', '!=', product.id), ('categ_id', '=', product.categ_id.id)], limit=4)"/>
                <t t-if="related_products">
                    <h3 class="mb-4 fw-bold">Related Products</h3>
                    <div class="row g-4">
                        <t t-foreach="related_products" t-as="rel_product">
                            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card h-100 shadow-sm border-0">
                                    <a t-attf-href="/shop/product/#{ slug(rel_product) }" class="text-decoration-none">
                                        <span t-field="rel_product.image_512"
                                              t-options="{'widget': 'image', 'class': 'card-img-top', 'style': 'height: 200px; object-fit: cover;'}"/>
                                    </a>
                                    <div class="card-body">
                                        <h6 class="card-title mb-2">
                                            <a t-attf-href="/shop/product/#{ slug(rel_product) }"
                                               class="text-decoration-none text-dark">
                                                <span t-field="rel_product.name"/>
                                            </a>
                                        </h6>
                                        <p class="text-primary fw-bold mb-2">
                                            <span t-field="rel_product.list_price"
                                                  t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                        </p>
                                        <a t-attf-href="/shop/product/#{ slug(rel_product) }"
                                           class="btn btn-sm btn-outline-primary w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </xpath>

    </template>

    <!-- Featured Products Snippet for Homepage -->
    <template id="s_custom_products" name="Featured Products Section">
        <section class="s_custom_products py-5" style="background-color: #f8f9fa;">
            <div class="container">
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <h2 class="display-5 mb-3 fw-bold">Featured Products</h2>
                        <p class="lead text-muted">Check out our latest arrivals</p>
                    </div>
                </div>
                <div class="row g-4">
                    <t t-set="featured_products" t-value="request.env['product.template'].sudo().search([('is_published', '=', True)], limit=4, order='create_date desc')"/>
                    <t t-foreach="featured_products" t-as="product">
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="card h-100 shadow-sm border-0">
                                <a t-attf-href="/shop/product/#{ slug(product) }">
                                    <span t-field="product.image_512"
                                          t-options="{'widget': 'image', 'class': 'card-img-top', 'style': 'height: 250px; object-fit: cover;'}"/>
                                </a>
                                <div class="card-body text-center">
                                    <h5 class="card-title mb-2">
                                        <a t-attf-href="/shop/product/#{ slug(product) }"
                                           class="text-decoration-none text-dark">
                                            <span t-field="product.name"/>
                                        </a>
                                    </h5>
                                    <p class="text-primary h5 mb-3 fw-bold">
                                        <span t-field="product.list_price"
                                              t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                    </p>
                                    <a t-attf-href="/shop/product/#{ slug(product) }"
                                       class="btn btn-primary btn-sm px-4">
                                        View Product
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div class="row mt-5">
                    <div class="col-12 text-center">
                        <a href="/shop" class="btn btn-outline-primary btn-lg px-5">View All Products</a>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>