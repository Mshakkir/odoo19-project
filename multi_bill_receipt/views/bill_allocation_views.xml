<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Bill Allocation Display Line  –  list view inside wizard
    ============================================================ -->
    <record id="view_bill_allocation_display_line_list" model="ir.ui.view">
        <field name="name">bill.allocation.display.line.list</field>
        <field name="model">bill.allocation.display.line</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="bill_number"/>
                <field name="bill_date"/>
                <field name="amount_total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_due"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_paid"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="balance_after_payment"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Bill Allocation Display Wizard  –  form view (read-only popup)
    ============================================================ -->
    <record id="view_bill_allocation_display_wizard_form" model="ir.ui.view">
        <field name="name">bill.allocation.display.wizard.form</field>
        <field name="model">bill.allocation.display.wizard</field>
        <field name="arch" type="xml">
            <form string="Bill Allocation Details">
                <sheet>
                    <!-- Summary panel – top right -->
                    <div class="oe_right"
                         style="font-size: 13px; line-height: 2; margin-bottom: 15px;">
                        <div>
                            <span>Total Billed = </span>
                            <field name="total_billed"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   nolabel="1" readonly="1"
                                   style="font-weight: bold;"/>
                        </div>
                        <div>
                            <span>Total Paid = </span>
                            <field name="total_allocated"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   nolabel="1" readonly="1"
                                   style="font-weight: bold;"/>
                        </div>
                        <div>
                            <span>Balance Due = </span>
                            <field name="total_balance"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   nolabel="1" readonly="1"
                                   style="font-weight: bold;"/>
                        </div>
                    </div>

                    <group>
                        <group string="PAYMENT INFORMATION">
                            <field name="vendor_id" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                            <field name="payment_amount"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="PAYMENT DETAILS">
                            <field name="journal_id" readonly="1"/>
                            <field name="payment_number" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Bills Paid"/>
                    <field name="allocation_line_ids" nolabel="1" readonly="1"/>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="payment_amount"
                               string="Payment Amount"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"/>
                        <field name="total_allocated"
                               string="Total Allocated"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"/>
                        <field name="total_balance"
                               string="Remaining Amount"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               readonly="1"
                               class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Bill Allocation History  –  standalone list view
    ============================================================ -->
    <record id="view_bill_allocation_history_list" model="ir.ui.view">
        <field name="name">bill.allocation.history.list</field>
        <field name="model">bill.allocation.history</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="payment_number"/>
                <field name="payment_date"/>
                <field name="vendor_id"/>
                <field name="bill_number"/>
                <field name="bill_date"/>
                <field name="amount_total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_due"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_paid"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="balance_after_payment"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Inherit account.payment form  –  add "View Bill Allocation" button
         (vendor / outbound payments only)
    ============================================================ -->
    <record id="view_account_payment_form_inherit_bill_allocation" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.bill.allocation</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Button in the header bar -->
            <xpath expr="//header" position="inside">
                <button name="action_view_bill_allocation_history"
                        string="View Bill Allocation"
                        type="object"
                        class="btn-primary"
                        invisible="bill_allocation_count == 0"
                        help="View the bills that were paid with this payment"/>
            </xpath>

            <!-- Hidden counter field – drives the invisible condition above -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="bill_allocation_count" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>