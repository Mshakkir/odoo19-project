<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_location" model="ir.ui.view">
        <field name="name">product.template.form.inherit.location</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add at the end of Inventory tab -->
            <xpath expr="//page[@name='inventory']" position="inside">
                <group string="Storage Location" name="storage_location">
                    <field name="default_location_id" options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>