<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Base Wizard View - For All Partners -->
    <record id="account_aged_balance_custom_view" model="ir.ui.view">
        <field name="name">Custom Aged Partner Balance</field>
        <field name="model">account.aged.trial.balance.custom</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group col="4">
                    <field name="date_from"/>
                    <field name="period_length"/>
                    <field name="company_id" invisible="1"/>
                    <newline/>
                    <field name="result_selection" widget="radio"
                           invisible="context.get('hide_result_selection')"/>
                    <field name="target_move" widget="radio"/>
                </group>

                <!-- Journal field (hidden but required) -->
                <field name="journal_ids" required="0" invisible="1"/>

                <!-- Partners Field -->
                <group string="Filter by Partners">
                    <field name="partner_ids"
                           widget="many2many_tags"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Leave empty to include all partners"/>
                </group>

                <footer>
                    <button name="check_report"
                            class="oe_highlight"
                            string="Print"
                            type="object"/>
                    <button string="Cancel"
                            class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Separate View for Aged Receivable - Shows CUSTOMERS -->
    <record id="account_aged_receivable_custom_view" model="ir.ui.view">
        <field name="name">Aged Receivable Customer View</field>
        <field name="model">account.aged.trial.balance.custom</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Aged Receivable Options">
                <group col="4">
                    <field name="date_from"/>
                    <field name="period_length"/>
                    <field name="company_id" invisible="1"/>
                    <newline/>
                    <field name="result_selection" widget="radio" invisible="1"/>
                    <field name="target_move" widget="radio"/>
                </group>

                <!-- Journal field (hidden but required) -->
                <field name="journal_ids" required="0" invisible="1"/>

                <!-- CUSTOMERS Field -->
                <group string="Filter by Customers">
                    <field name="partner_ids"
                           widget="many2many_tags"
                           domain="[('customer_rank', '>', 0)]"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Leave empty to include all customers"/>
                </group>

                <footer>
                    <button name="check_report"
                            class="oe_highlight"
                            string="Print"
                            type="object"/>
                    <button string="Cancel"
                            class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Separate View for Aged Payable - Shows VENDORS -->
    <record id="account_aged_payable_custom_view" model="ir.ui.view">
        <field name="name">Aged Payable Vendor View</field>
        <field name="model">account.aged.trial.balance.custom</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Aged Payable Options">
                <group col="4">
                    <field name="date_from"/>
                    <field name="period_length"/>
                    <field name="company_id" invisible="1"/>
                    <newline/>
                    <field name="result_selection" widget="radio" invisible="1"/>
                    <field name="target_move" widget="radio"/>
                </group>

                <!-- Journal field (hidden but required) -->
                <field name="journal_ids" required="0" invisible="1"/>

                <!-- VENDORS Field -->
                <group string="Filter by Vendors">
                    <field name="partner_ids"
                           widget="many2many_tags"
                           domain="[('supplier_rank', '>', 0)]"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Leave empty to include all vendors"/>
                </group>

                <footer>
                    <button name="check_report"
                            class="oe_highlight"
                            string="Print"
                            type="object"/>
                    <button string="Cancel"
                            class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action: Aged Partner Balance (All) -->
    <record id="action_account_aged_balance_custom" model="ir.actions.act_window">
        <field name="name">Aged Partner Balance</field>
        <field name="res_model">account.aged.trial.balance.custom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_aged_balance_custom_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <!-- Action: Aged Receivable (Customers Only) -->
    <record id="action_account_aged_receivable_custom" model="ir.actions.act_window">
        <field name="name">Aged Receivable</field>
        <field name="res_model">account.aged.trial.balance.custom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_aged_receivable_custom_view"/>
        <field name="context">{
            'default_result_selection': 'customer',
            'hide_result_selection': 1
        }</field>
        <field name="target">new</field>
    </record>

    <!-- Action: Aged Payable (Vendors Only) -->
    <record id="action_account_aged_payable_custom" model="ir.actions.act_window">
        <field name="name">Aged Payable</field>
        <field name="res_model">account.aged.trial.balance.custom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_aged_payable_custom_view"/>
        <field name="context">{
            'default_result_selection': 'supplier',
            'hide_result_selection': 1
        }</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_custom_aged_reports"
              name="Custom Aged Reports"
              parent="account.menu_finance_reports"
              sequence="100"/>

    <menuitem id="menu_aged_partner_balance_custom"
              name="Aged Partner Balance"
              sequence="10"
              action="action_account_aged_balance_custom"
              parent="menu_custom_aged_reports"/>

    <menuitem id="menu_aged_receivable_custom"
              name="Aged Receivable"
              sequence="20"
              action="action_account_aged_receivable_custom"
              parent="menu_custom_aged_reports"/>

    <menuitem id="menu_aged_payable_custom"
              name="Aged Payable"
              sequence="30"
              action="account_aged_payable_custom"
              parent="menu_custom_aged_reports"/>

</odoo>