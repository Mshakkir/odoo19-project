<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field directly to invoice line in invoice form -->
    <record id="view_invoice_line_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.line.invoice.warehouse</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_tree"/>
        <field name="arch" type="xml">
            <!-- Add warehouse column after product -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

    <!-- Add warehouse field to invoice line form (popup) -->
    <record id="view_invoice_line_form_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.line.form.warehouse</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <!-- Add warehouse field after product in form -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="warehouse_id"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

</odoo>