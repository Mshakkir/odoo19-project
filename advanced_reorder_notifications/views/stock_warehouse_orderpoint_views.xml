<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Add Notification Fields -->
    <record id="view_warehouse_orderpoint_form_inherit" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.form.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
        <field name="arch" type="xml">
            <!-- Add notification settings after product_id field -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="notify_on_reorder" string="Enable Low Stock Notifications"/>
                <field name="disable_auto_purchase" string="Disable Auto Purchase Orders"
                       help="When enabled, only notifications are sent. No automatic purchase orders will be created."/>
            </xpath>

            <!-- Add notification status fields (hidden) after product_max_qty -->
            <xpath expr="//field[@name='product_max_qty']" position="after">
                <field name="notification_sent" invisible="1"/>
                <field name="last_notification_date" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>







