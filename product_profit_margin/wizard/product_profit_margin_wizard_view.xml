<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_product_profit_margin_wizard_form" model="ir.ui.view">
        <field name="name">product.profit.margin.wizard.form</field>
        <field name="model">product.profit.margin.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Profit Margin Report">
                <group>
                    <group>
                        <field name="report_type"/>
                        <field name="form_type"/>
                        <field name="product_filter"/>
                        <field name="group_id" invisible="product_filter != 'by_group'" required="product_filter == 'by_group'"/>
                        <field name="product_id" invisible="product_filter != 'by_product'" required="product_filter == 'by_product'"/>
                    </group>
                    <group>
                        <field name="filter_type"/>
                        <field name="bill_mode"/>
                        <field name="use_master_rate"/>
                    </group>
                </group>
                <group>
                    <group>
                        <label for="date_from" string="Period"/>
                        <div class="o_row">
                            <field name="date_from" class="oe_inline" readonly="filter_type != 'custom'"/>
                            <span class="oe_inline">to</span>
                            <field name="date_to" class="oe_inline" readonly="filter_type != 'custom'"/>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report" string="Show Report" type="object" class="btn-primary"/>
                    <button string="Exit" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_product_profit_margin_wizard" model="ir.actions.act_window">
        <field name="name">Product Profit Margin Report</field>
        <field name="res_model">product.profit.margin.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>