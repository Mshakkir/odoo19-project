<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="product_purchase_history.PurchaseHistoryDialog">
        <Dialog title="title" size="'xl'">
            <div class="o_purchase_history_dialog">
                <t t-if="hasHistory">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Source</th>
                                    <th>Reference</th>
                                    <th>Supplier</th>
                                    <th>Date</th>
                                    <th class="text-end">Qty</th>
                                    <th>Unit</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="props.purchaseHistory" t-as="line" t-key="line.id">
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <t t-esc="getSourceLabel(line.source)"/>
                                            </span>
                                        </td>
                                        <td><t t-esc="line.reference"/></td>
                                        <td><t t-esc="line.partner_name"/></td>
                                        <td><t t-esc="line.date"/></td>
                                        <td class="text-end">
                                            <t t-esc="formatNumber(line.qty, 2)"/>
                                        </td>
                                        <td><t t-esc="line.uom"/></td>
                                        <td class="text-end">
                                            <t t-esc="line.currency"/>
                                            <t t-esc="formatNumber(line.price_unit, 2)"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-esc="line.currency"/>
                                            <t t-esc="formatNumber(line.subtotal, 2)"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-info">
                        No purchase history found for this product.
                    </div>
                </t>
            </div>
        </Dialog>
    </t>
</templates>



