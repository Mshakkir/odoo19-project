<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report List View -->
    <record id="view_purchase_bypd_report_list" model="ir.ui.view">
        <field name="name">purchase.bypd.report.list</field>
        <field name="model">purchase.bypd.report</field>
        <field name="arch" type="xml">
            <list string="Purchase Product Report" create="false" edit="false" delete="false">
                 <header>
                    <button name="%(action_purchase_product_report_wizard)d"
                            string="Back to Filter"
                            type="action"
                            class="btn-primary"/>
                </header>
                <field name="invoice_date"/>
                <field name="invoice_number"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="price_unit"/>
                <field name="price_total"/>
            </list>
        </field>
    </record>
</odoo>