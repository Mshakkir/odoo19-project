<odoo>
    <template id="report_invoice_awb_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='row mt32 mb32']" position="after">
            <div class="row mt8">
                <div class="col-6">
                    <p><strong>Air Waybill No:</strong> <span t-esc="o.awb_number or ''"/></p>
                    <p><strong>Carrier:</strong> <span t-esc="o.carrier_name or ''"/></p>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
