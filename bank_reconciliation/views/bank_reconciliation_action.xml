<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action to open the Bank Reconciliation Wizard -->
    <record id="bank_reconciliation_custom_screen" model="ir.actions.act_window">
        <field name="name">Bank Reconciliation</field>
        <field name="res_model">bank.statement</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_journal_id': active_id}</field>
    </record>

</odoo>




