<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Invoice Form View -->
    <record id="view_move_form_customer_balance" model="ir.ui.view">
        <field name="name">account.move.form.customer.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add customer balance box for customer invoices -->
            <xpath expr="//form/sheet" position="inside">
                <div class="customer_balance_box"
                     invisible="move_type not in ['out_invoice', 'out_refund'] or not partner_id"
                     style="position: absolute;
                            top: 0px;
                            right: 120px;
                            padding: 8px 15px;
                            text-align: right;
                            z-index: 1000;">

                    <!-- Total Debits -->
                    <div style="margin-bottom: 5px;">
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Total Invoiced = </span>
                        <button name="action_view_customer_invoices"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="customer_total_invoiced == 0">
                            <field name="customer_total_invoiced"
                                   widget="monetary"
                                   readonly="1"
                                   nolabel="1"
                                   style="color: #007bff;"/>
                        </button>
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               invisible="customer_total_invoiced != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Total Credits -->
                    <div style="margin-bottom: 5px;">
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">AMT Received = </span>
                        <button name="action_view_customer_credits"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="customer_total_credits == 0">
                            <field name="customer_total_credits"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-success="customer_total_credits > 0"
                                   nolabel="1"
                                   style="color: #28a745;"/>
                        </button>
                        <field name="customer_total_credits"
                               widget="monetary"
                               readonly="1"
                               invisible="customer_total_credits != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Due Amount -->
                    <div>
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Due Amount = </span>
                        <field name="customer_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="customer_balance_due > 0"
                               decoration-success="customer_balance_due == 0"
                               decoration-info="customer_balance_due &lt; 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

    <!-- Vendor Bill Form View -->
    <record id="view_move_form_vendor_balance" model="ir.ui.view">
        <field name="name">account.move.form.vendor.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add vendor balance box for vendor bills -->
            <xpath expr="//form/sheet" position="inside">
                <div class="vendor_balance_box"
                     invisible="move_type not in ['in_invoice', 'in_refund'] or not partner_id"
                     style="position: absolute;
                            top: 0px;
                            right: 120px;
                            padding: 8px 15px;
                            text-align: right;
                            z-index: 1000;">

                    <!-- Total Debits -->
                    <div style="margin-bottom: 5px;">
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Total Billed = </span>
                        <button name="action_view_vendor_bills"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="vendor_total_billed == 0">
                            <field name="vendor_total_billed"
                                   widget="monetary"
                                   readonly="1"
                                   nolabel="1"
                                   style="color: #007bff;"/>
                        </button>
                        <field name="vendor_total_billed"
                               widget="monetary"
                               readonly="1"
                               invisible="vendor_total_billed != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Total Credits -->
                    <div style="margin-bottom: 5px;">
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">AMT Paid = </span>
                        <button name="action_view_vendor_credits"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="vendor_total_credits == 0">
                            <field name="vendor_total_credits"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-success="vendor_total_credits > 0"
                                   nolabel="1"
                                   style="color: #28a745;"/>
                        </button>
                        <field name="vendor_total_credits"
                               widget="monetary"
                               readonly="1"
                               invisible="vendor_total_credits != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Due Amount -->
                    <div>
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Due Amount = </span>
                        <field name="vendor_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="vendor_balance_due > 0"
                               decoration-success="vendor_balance_due == 0"
                               decoration-info="vendor_balance_due &lt; 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>


