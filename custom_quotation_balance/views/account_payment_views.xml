<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_partner_balance" model="ir.ui.view">
        <field name="name">account.payment.form.partner.balance</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <!-- Add partner balance after the memo field -->
            <xpath expr="//field[@name='ref']" position="after">

                <group invisible="not partner_id" colspan="2" col="2" string="Partner Balance Summary">

                    <label for="partner_total_invoiced" string="Total Invoiced/Billed"/>
                    <div class="o_row">
                        <field name="partner_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               nolabel="1"/>
                        <button name="action_view_partner_invoices"
                                type="object"
                                string="View"
                                class="btn-link"
                                invisible="partner_total_invoiced == 0"/>
                    </div>

                    <label for="partner_total_paid" string="Amount Paid"/>
                    <div class="o_row">
                        <field name="partner_total_paid"
                               widget="monetary"
                               readonly="1"
                               decoration-success="partner_total_paid > 0"
                               nolabel="1"/>
                        <button name="action_view_partner_payments"
                                type="object"
                                string="View"
                                class="btn-link"
                                invisible="partner_total_paid == 0"/>
                    </div>

                    <label for="partner_balance_due" string="Balance Due"/>
                    <field name="partner_balance_due"
                           widget="monetary"
                           readonly="1"
                           decoration-danger="partner_balance_due > 0"
                           decoration-success="partner_balance_due == 0"
                           nolabel="1"
                           class="fw-bold"/>
                </group>

            </xpath>
        </field>
    </record>
</odoo>