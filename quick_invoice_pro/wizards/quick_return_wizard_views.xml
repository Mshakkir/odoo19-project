<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_quick_return_wizard_form" model="ir.ui.view">
            <field name="name">quick.return.wizard.form</field>
            <field name="model">quick.return.wizard</field>
            <field name="arch" type="xml">
                <form string="Quick Return/Refund">
                    <sheet>
                        <group>
                            <group>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="return_type" widget="radio"/>
                            </group>
                            <group>
                                <field name="invoice_ids" widget="many2many_tags"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Return Items">
                                <field name="return_line_ids">
                                    <list editable="bottom">
                                        <field name="product_id" readonly="1"/>
                                        <field name="ordered_qty" readonly="1"/>
                                        <field name="return_qty"/>
                                        <field name="price_unit" readonly="1"/>
                                        <field name="subtotal" readonly="1"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Options">
                                <group>
                                    <group>
                                        <field name="create_credit_note"/>
                                        <field name="refund_method"
                                               invisible="create_credit_note == False"/>
                                    </group>
                                    <group>
                                        <field name="reverse_delivery"/>
                                    </group>
                                </group>

                                <group string="Return Reason">
                                    <field name="reason" nolabel="1"
                                           placeholder="Explain reason for return..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button string="Process Return"
                                name="action_process_return"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>