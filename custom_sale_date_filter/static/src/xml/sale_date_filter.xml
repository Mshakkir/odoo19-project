<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Date Filter Component -->
    <t t-name="custom_sale_date_filter.DateFilter" owl="1">
        <div class="sale_date_filter_container">
            <div class="date_filter_wrapper">
                <label class="date_label">Order Date:</label>

                <div class="date_input_group">
                    <input
                        type="date"
                        class="form-control date_input"
                        t-model="state.dateFrom"
                        t-on-change="onDateFromChange"
                    />

                    <span class="date_separator">â†’</span>

                    <input
                        type="date"
                        class="form-control date_input"
                        t-model="state.dateTo"
                        t-on-change="onDateToChange"
                    />
                </div>

                <button
                    class="btn btn-primary apply_filter_btn"
                    t-on-click="applyFilter"
                >
                    Apply Filter
                </button>

                <button
                    class="btn btn-secondary clear_filter_btn"
                    t-on-click="clearFilter"
                >
                    Clear
                </button>
            </div>
        </div>
    </t>

    <!-- Override List View Template -->
    <t t-name="custom_sale_date_filter.ListView" t-inherit="web.ListView" owl="1">
        <xpath expr="//div[hasclass('o_content')]" position="before">
            <SaleDateFilter updateDomain.bind="updateDomain"/>
        </xpath>
    </t>

</templates>