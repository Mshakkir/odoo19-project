<odoo>
    <record id="view_move_form_awb" model="ir.ui.view">
        <field name="name">account.move.form.awb</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/> <!-- Parent view -->
        <field name="arch" type="xml">

            <!-- âœ… Correct XPath: after the "invoice_date" field -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <group string="Air Waybill Information">
                    <field name="awb_number"/>
                    <field name="carrier_name"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
