<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Purchase Order List View -->
        <record id="purchase_order_view_list_extended" model="ir.ui.view">
            <field name="name">purchase.order.list.extended</field>
            <field name="model">purchase.order</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Purchase Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <field name="amount_total" sum="Total"/>
                    <field name="partially_billed_amount" sum="Total"/>
                    <field name="partially_billed_status"/>
                </list>
            </field>
        </record>

        <!-- Extend Purchase Order Form View - Inherit from parent -->
        <record id="purchase_order_form_view_partially_billed" model="ir.ui.view">
            <field name="name">purchase.order.form.partially.billed</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="after">
                    <field name="partially_billed_amount" readonly="1"/>
                    <field name="partially_billed_status" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>