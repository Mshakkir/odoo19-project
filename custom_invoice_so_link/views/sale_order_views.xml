<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_custom_invoice_workflow" model="ir.ui.view">
        <field name="name">sale.order.form.custom.invoice.workflow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='create_invoice']" position="attributes">
                <attribute name="invisible">invoice_ids or invoice_status == 'fully invoiced'</attribute>
            </xpath>
        </field>
    </record>
</odoo>


