<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Flexible approach: Try to add warehouse field to any invoice form -->
    <record id="view_move_form_add_warehouse" model="ir.ui.view">
        <field name="name">account.move.form.add.warehouse</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Try to add to end of any field in invoice_line_ids tree/list -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <field name="invoice_line_ids" invisible="1">
                    <list>
                        <field name="warehouse_id" optional="show"/>
                    </list>
                </field>
            </xpath>
        </field>
    </record>
</odoo>