<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Allow users to see their own activities -->
        <record id="mail_activity_rule_user" model="ir.rule">
            <field name="name">User: See Own Activities</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Allow users to see messages on records they follow -->
        <record id="mail_message_rule_user" model="ir.rule">
            <field name="name">User: See Messages on Followed Records</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['|', ('author_id', '=', user.partner_id.id), ('partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>