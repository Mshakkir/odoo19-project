<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- Hide portal header & footer ONLY for Sale Order pages -->
    <!-- ========================================================= -->
    <template id="portal_layout_hide_header_footer"
              inherit_id="portal.portal_layout"
              priority="100">

        <!-- Hide portal navbar -->
        <xpath expr="//header[contains(@class,'o_portal_navbar')]"
               position="attributes">
            <attribute name="t-att-style">
                "'display:none !important;' if '/my/orders/' in request.httprequest.path else ''"
            </attribute>
        </xpath>

        <!-- Hide footer -->
        <xpath expr="//footer[@id='footer']"
               position="attributes">
            <attribute name="t-att-style">
                "'display:none !important;' if '/my/orders/' in request.httprequest.path else ''"
            </attribute>
        </xpath>

        <!-- Remove top spacing -->
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="t-att-style">
                "'padding:0;margin:0;' if '/my/orders/' in request.httprequest.path else ''"
            </attribute>
        </xpath>

    </template>

    <!-- ========================================================= -->
