<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited view form of account.move-->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.sale.discount.total</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Modify discount field precision -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='discount']"
                   position="attributes">
                <attribute name="digits">[16, 2]</attribute>
            </xpath>

            <!-- Add discount_amount field after discount percentage -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='discount']"
                   position="after">
                <field name="discount_amount"
                       optional="show"
                       widget="monetary"/>
            </xpath>

            <!-- Add amount_discount field after tax_totals -->
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="amount_discount" readonly="1"/>
            </xpath>

            <!-- Add discount type and rate before narration -->
            <xpath expr="//field[@name='narration']" position="before">
                <group>
                    <field name="discount_type" width="50px"/>
                    <field name="discount_rate" class="oe_inline"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>