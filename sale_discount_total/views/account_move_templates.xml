<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited Template for invoice document-->
    <template id="report_invoice_customized"
              inherit_id="account.report_invoice_document">

        <!-- Add discount row in the totals section -->
        <xpath expr="//div[@id='total']" position="inside">
            <t t-if="o.amount_discount">
                <div class="row">
                    <div class="col-6">
                        <strong>Discount:</strong>
                    </div>
                    <div class="col-6 text-end">
                        <span t-field="o.amount_discount"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>