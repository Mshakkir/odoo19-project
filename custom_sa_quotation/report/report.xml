
<odoo>
    <!-- Single report that works for both Quotation and Sales Order -->
    <report
        id="custom_saleorder_report"
        model="sale.order"
        string="Custom Quotation / Sales Order"
        report_type="qweb-pdf"
        name="custom_sa_quotation.custom_saleorder_report"
        file="custom_sa_quotation.custom_saleorder_report"
        print_report_name="(object.state in ['draft', 'sent'] and 'Quotation - %s' or 'Sales Order - %s') % (object.name)"
    />
</odoo>