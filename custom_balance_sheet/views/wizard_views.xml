<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial_inherit" inherit_id="accounting_pdf_reports.report_financial">

        <!-- Example: Add a custom header before the content -->
        <xpath expr="//t[@t-call='web.external_layout']" position="before">
            <div class="text-center">
                <h2>Custom Balance Sheet</h2>
                <p><t t-esc="o.env.company.name"/></p>
            </div>
        </xpath>

        <!-- Example: Add a custom note after the report content -->
        <xpath expr="//t[@t-call='web.external_layout']" position="after">
            <div class="text-center" style="margin-top:20px;">
                <p><em>Generated by Custom Balance Sheet Wizard</em></p>
            </div>
        </xpath>

    </template>
</odoo>

