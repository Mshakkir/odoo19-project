<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_purchase_order_merge_wizard_form" model="ir.ui.view">
        <field name="name">purchase.order.merge.wizard.form</field>
        <field name="model">purchase.order.merge.wizard</field>
        <field name="arch" type="xml">
            <form string="Merge Purchase Orders into One Bill">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="order_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_amount" readonly="1" widget="monetary"/>
                        </group>
                    </group>

                    <group string="Purchase Orders to Merge">
                        <field name="purchase_order_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="date_order"/>
                                <field name="partner_ref"/>
                                <field name="amount_total" widget="monetary"/>
                                <field name="state"/>
                                <field name="currency_id" column_invisible="1"/>
                            </tree>
                        </field>
                    </group>

                    <group invisible="not warning_message">
                        <div class="alert alert-warning" role="alert" invisible="not warning_message">
                            <field name="warning_message" nolabel="1" readonly="1"/>
                        </div>
                    </group>

                    <div class="mt-3">
                        <p>
                            <strong>Note:</strong> This will create a single vendor bill containing all lines
                            from the selected purchase orders.
                        </p>
                    </div>
                </sheet>
                <footer>
                    <button name="action_merge_bills"
                            string="Create Merged Bill"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_purchase_order_merge_wizard" model="ir.actions.act_window">
        <field name="name">Merge into One Bill</field>
        <field name="res_model">purchase.order.merge.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>