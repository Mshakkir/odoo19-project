<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Template for Outgoing Request Notification -->
        <record id="mail_template_outgoing_request" model="mail.template">
            <field name="name">Outgoing Stock Request</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">üì§ Stock Request from {{ object.source_warehouse_id.name }}</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; font-size: 14px;">
                    <p>Hello,</p>
                    <p><strong>{{ object.source_warehouse_id.name }}</strong> has sent a stock request to your warehouse.</p>

                    <h3>Requested Products:</h3>
                    <table style="border-collapse: collapse; width: 100%; margin: 20px 0;">
                        <tr style="background-color: #f2f2f2;">
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Product</th>
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: right;">Quantity</th>
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Unit</th>
                        </tr>
                        <t t-foreach="object.move_ids" t-as="move">
                            <tr>
                                <td style="border: 1px solid #ddd; padding: 12px;"><t t-esc="move.product_id.name"/></td>
                                <td style="border: 1px solid #ddd; padding: 12px; text-align: right;"><t t-esc="move.product_uom_qty"/></td>
                                <td style="border: 1px solid #ddd; padding: 12px;"><t t-esc="move.product_uom.name"/></td>
                            </tr>
                        </t>
                    </table>

                    <p><strong>Transfer Reference:</strong> <t t-esc="object.name"/></p>
                    <p><strong>Scheduled Date:</strong> <t t-esc="object.scheduled_date"/></p>

                    <p>Please validate this request in the system to process the stock transfer.</p>
                </div>
            </field>
        </record>

        <!-- Template for Request Approved Notification -->
        <record id="mail_template_request_approved" model="mail.template">
            <field name="name">Stock Request Approved</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">‚úÖ Your Stock Request Approved - {{ object.name }}</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; font-size: 14px;">
                    <p>Hello,</p>
                    <p>Your stock request has been <strong>APPROVED</strong> by <strong>{{ object.source_warehouse_id.name }}</strong>.</p>

                    <h3>Approved Products:</h3>
                    <table style="border-collapse: collapse; width: 100%; margin: 20px 0;">
                        <tr style="background-color: #f2f2f2;">
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Product</th>
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: right;">Quantity</th>
                            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Unit</th>
                        </tr>
                        <t t-foreach="object.move_ids" t-as="move">
                            <tr>
                                <td style="border: 1px solid #ddd; padding: 12px;"><t t-esc="move.product_id.name"/></td>
                                <td style="border: 1px solid #ddd; padding: 12px; text-align: right;"><t t-esc="move.product_uom_qty"/></td>
                                <td style="border: 1px solid #ddd; padding: 12px;"><t t-esc="move.product_uom.name"/></td>
                            </tr>
                        </t>
                    </table>

                    <p><strong>‚ö†Ô∏è ACTION REQUIRED:</strong> Please validate the receipt to update your inventory.</p>
                    <p><strong>Receipt Reference:</strong> <t t-esc="object.name"/></p>
                </div>
            </field>
        </record>

    </data>
</odoo>