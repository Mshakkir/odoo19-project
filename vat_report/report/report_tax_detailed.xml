<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- NORMAL / SUMMARY REPORT -->
    <template id="report_tax" name="Tax Report">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page" style="padding-top:55px;">
                    <h3>Tax Report</h3>
                    <div class="row">
                        <div class="col-4">
                            <strong>Company:</strong>
                            <p t-esc="res_company.name"/>
                        </div>
                        <div class="col-4">
                            <strong>Date from :</strong>
                            <span t-esc="data['date_from']"/>
                            <br/>
                            <strong>Date to :</strong>
                            <span t-esc="data['date_to']"/>
                        </div>
                        <div class="col-4">
                            <strong>Target Moves:</strong>
                            <p>
                                <span t-if="data['target_move'] == 'all'">All Entries</span>
                                <span t-if="data['target_move'] == 'posted'">All Posted Entries</span>
                            </p>
                        </div>
                    </div>

                    <!-- NORMAL / SUMMARY TABLE -->
                    <t t-if="report_type == 'normal'">
                        <!-- SALES TAXES -->
                        <table class="table table-sm table-reports">
                            <thead>
                                <tr style="font-weight:bold;">
                                    <td>Sale</td>
                                    <th>Net</th>
                                    <th>Tax</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="lines.get('sale', [])" t-as="line">
                                    <td>
                                        <a t-attf-href="/web#action=accounting_pdf_reports.action_tax_detail_report&amp;tax_id={{line.get('id')}}&amp;date_from={{data['date_from']}}&amp;date_to={{data['date_to']}}">
                                            <span t-esc="line.get('name')"/>
                                        </a>
                                    </td>
                                    <td>
                                        <span t-esc="line.get('net')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.get('tax')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>
                                <tr style="font-weight:bold; border-top:2px solid #000;background:#BBBCB6;">
                                    <td>Total Sales</td>
                                    <td>
                                        <span t-esc="sum([l['net'] for l in lines.get('sale', [])])" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td>
                                        <span t-esc="sum([l['tax'] for l in lines.get('sale', [])])" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- PURCHASE TAXES -->
                        <table class="table table-sm table-reports" style="margin-top:10px;">
                            <thead>
                                <tr style="font-weight:bold;">
                                    <td>Purchase</td>
                                    <th>Net</th>
                                    <th>Tax</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="lines.get('purchase', [])" t-as="line">
                                    <td>
                                        <a t-attf-href="/web#action=accounting_pdf_reports.action_tax_detail_report&amp;tax_id={{line.get('id')}}&amp;date_from={{data['date_from']}}&amp;date_to={{data['date_to']}}">
                                            <span t-esc="line.get('name')"/>
                                        </a>
                                    </td>
                                    <td>
                                        <span t-esc="line.get('net')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.get('tax')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>
                                <tr style="font-weight:bold; border-top:2px solid #000;background:#BBBCB6;">
                                    <td>Total Purchases</td>
                                    <td>
                                        <span t-esc="sum([l['net'] for l in lines.get('purchase', [])])" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td>
                                        <span t-esc="sum([l['tax'] for l in lines.get('purchase', [])])" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <!-- DETAILED REPORT -->
                    <t t-if="report_type == 'detailed'">
                        <t t-call="accounting_pdf_reports.report_tax_detailed"/>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <!-- DETAILED REPORT TEMPLATE -->
    <template id="report_tax_detailed" name="Tax Report Detailed">
        <div class="o_tax_report">
            <h4>Detailed Tax Report</h4>

            <!-- SALE TAXES -->
            <t t-foreach="lines.get('sale', [])" t-as="line">
                <h5 style="margin-top: 10px;">
                    <strong t-esc="line.get('name')"/> (Sale)
                </h5>
                <table class="table table-sm table-reports" style="margin-bottom: 10px;">
                    <thead>
                        <tr>
                            <th>Invoice</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Base Amount</th>
                            <th>Tax Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="line.get('transactions', [])" t-as="tx">
                            <td><span t-esc="tx.get('invoice')"/></td>
                            <td><span t-esc="tx.get('date')"/></td>
                            <td><span t-esc="tx.get('partner')"/></td>
                            <td>
                                <span t-esc="tx.get('base')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td>
                                <span t-esc="tx.get('tax')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>

            <!-- PURCHASE TAXES -->
            <t t-foreach="lines.get('purchase', [])" t-as="line">
                <h5 style="margin-top: 10px;">
                    <strong t-esc="line.get('name')"/> (Purchase)
                </h5>
                <table class="table table-sm table-reports" style="margin-bottom: 10px;">
                    <thead>
                        <tr>
                            <th>Invoice</th>
                            <th>Date</th>
                            <th>Vendor</th>
                            <th>Base Amount</th>
                            <th>Tax Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="line.get('transactions', [])" t-as="tx">
                            <td><span t-esc="tx.get('invoice')"/></td>
                            <td><span t-esc="tx.get('date')"/></td>
                            <td><span t-esc="tx.get('partner')"/></td>
                            <td>
                                <span t-esc="tx.get('base')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td>
                                <span t-esc="tx.get('tax')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
    </template>
</odoo>
