<odoo>
    <!-- Add warehouse field to sale order lines -->
    <record id="view_order_form_warehouse_field" model="ir.ui.view">
        <field name="name">sale.order.form.warehouse.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to the list view of order lines -->
            <xpath expr="//field[@name='order_line']/list/field[@name='customer_lead']" position="after">
                <field name="warehouse_id"
                       optional="hide"
                       width="80px"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Add warehouse field to the form view of order lines (popup) -->
<!--            <xpath expr="//field[@name='order_line']/form//field[@name='customer_lead']" position="after">-->
<!--                <field name="warehouse_id"-->
<!--                       readonly="0"-->
<!--                       options="{'no_create': True, 'no_open': True}"/>-->
<!--            </xpath>-->

        </field>
    </record>
</odoo>