<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_quick_payment_wizard_form" model="ir.ui.view">
            <field name="name">quick.payment.wizard.form</field>
            <field name="model">quick.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                    <sheet>
                        <group>
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="sale_order_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="amount" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="payment_date"/>
                                <field name="journal_id"
                                       domain="[('type', 'in', ['cash', 'bank'])]"/>
                            </group>
                            <group>
                                <field name="memo" placeholder="Payment reference..."/>
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button string="ðŸ’° Register Payment"
                                name="action_register_payment"
                                type="object"
                                class="btn-primary"/>
                        <button string="Skip Payment"
                                name="action_skip_payment"
                                type="object"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>