<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial_balance_rename"
              inherit_id="accounting_pdf_reports.report_financial"
              name="Rename Balance Column to Amount">

        <!-- Rename "Balance" column in table with debit/credit -->
        <xpath expr="//table[@class='table table-sm table-reports'][@t-if='data[&#39;debit_credit&#39;] == 1']//th[contains(text(), 'Balance')]" position="replace">
            <th class="text-end">Amount</th>
        </xpath>

        <!-- Rename "Balance" column in table without debit/credit -->
        <xpath expr="//table[@class='table table-sm table-reports'][@t-if='not data[&#39;enable_filter&#39;] and not data[&#39;debit_credit&#39;]']//th[contains(text(), 'Balance')]" position="replace">
            <th class="text-end">Amount</th>
        </xpath>

        <!-- Rename "Balance" column in comparison table -->
        <xpath expr="//table[@class='table table-sm table-reports'][@t-if='data[&#39;enable_filter&#39;] == 1 and not data[&#39;debit_credit&#39;]']//th[contains(text(), 'Balance')]" position="replace">
            <th class="text-end">Amount</th>
        </xpath>

    </template>
</odoo>





