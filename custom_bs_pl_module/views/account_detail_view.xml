<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ✅ Balance Sheet Detail Tree -->
    <record id="view_account_list_balance_sheet" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.list</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Details">
                <field name="account_type"/>
                <field name="name"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Total Balance"/>

                <!-- ✅ Add View Ledger Button Here -->
                <button name="action_view_ledger"
                        type="object"
                        string="View Ledger"
                        class="btn-link"
                        icon="fa-book"/>
            </list>
        </field>
    </record>

    <!-- Profit & Loss Accounts (you can keep as is) -->
    <record id="view_account_list_profit_loss" model="ir.ui.view">
        <field name="name">account.account.list.profit.loss</field>
        <field name="model">account.account</field>
        <field name="arch" type="xml">
            <list string="Profit and Loss Accounts" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit_amount" sum="Total Debit"/>
                <field name="credit_amount" sum="Total Credit"/>
                <field name="balance_amount" sum="Total Balance"/>
                <button name="action_view_ledger"
                        type="object"
                        string="View Ledger"
                        class="btn-link"
                        icon="fa-book"/>
            </list>
        </field>
    </record>

</odoo>
