<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Purchase Invoice (Vendor Bill) List View -->
        <record id="view_move_list_purchase_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.list.purchase.invoice.custom</field>
            <field name="model">account.move</field>
            <field name="mode">primary</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <list string="Vendor Bills"
                      sample="1"
                      decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- COLUMN ORDER - PRIORITY ORDER -->
                    <!-- 1. Invoice Date -->
                    <field name="invoice_date" string="Bill Date"/>

                    <!-- 2. Invoice Number (Bill Number) -->
                    <field name="name" string="Bill Number" readonly="1"/>

                    <!-- 3. Vendor -->
                    <field name="partner_id" string="Vendor"/>

                    <!-- 4. Warehouse -->
                    <field name="warehouse_id" string="Warehouse"/>

                    <!-- 5. Source Document -->
                    <field name="invoice_origin" string="Source Doc."/>

                    <!-- 6. Vendor Reference -->
                    <field name="ref" string="Vendor Ref."/>

                    <!-- 7. Tax Excluded Amount -->
                    <field name="amount_untaxed" string="Tax Excluded"/>

                    <!-- 8. Tax Amount -->
                    <field name="amount_tax" string="Tax"/>

                    <!-- 9. Total Amount - FIXED DISPLAY -->
                    <field name="amount_total" string="Total"/>

                    <!-- 10. Amount Due -->
                    <field name="amount_residual" string="Amount Due"/>

                    <!-- 11. Due Date -->
                    <field name="invoice_date_due" string="Due Date"/>

                    <!-- 12. Buyer - ALWAYS VISIBLE -->
                    <field name="buyer_id" string="Buyer"/>

                    <!-- 13. Shipping Reference (AWB Number) -->
                    <field name="awb_number" string="Shipping Ref #"/>

                    <!-- 14. Delivery Note Number -->
                    <field name="goods_receipt_number" string="Delivery Note #"/>

                    <!-- 15. PO Number -->
                    <field name="po_number" string="PO Number"/>

                    <!-- 16. Status -->
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'posted'"
                           decoration-info="state == 'draft'"/>

                    <!-- 17. Payment Status -->
                    <field name="payment_state" string="Payment Status" widget="badge"
                           decoration-success="payment_state == 'paid'"
                           decoration-warning="payment_state == 'partial'"
                           decoration-danger="payment_state in ('not_paid', 'in_payment')"/>

                    <!-- ADDITIONAL OPTIONAL FIELDS (Hidden by default) -->

                    <!-- 18. Accounting Date -->
                    <field name="date" string="Accounting Date" optional="hide"/>

                    <!-- 19. Journal -->
                    <field name="journal_id" string="Journal" optional="hide"/>

                    <!-- 20. Payment Terms -->
                    <field name="invoice_payment_term_id" string="Payment Terms" optional="hide"/>

                    <!-- 21. Currency -->
                    <field name="currency_id" string="Currency" optional="hide"/>

                    <!-- 22. Company -->
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"/>

                    <!-- 23. Fiscal Position -->
                    <field name="fiscal_position_id" string="Fiscal Position" optional="hide"/>

                    <!-- 24. Bank Account -->
                    <field name="partner_bank_id" string="Vendor Bank" optional="hide"/>

                    <!-- 25. Invoice Incoterm -->
                    <field name="invoice_incoterm_id" string="Incoterm" optional="hide"/>

                    <!-- 26. Narration/Terms and Conditions -->
                    <field name="narration" string="Terms and Conditions" optional="hide"/>

                    <!-- 27. Invoice Source Email -->
                    <field name="invoice_source_email" string="Source Email" optional="hide"/>

                    <!-- 28. Auto Post -->
                    <field name="auto_post" string="Auto Post" optional="hide"/>

                    <!-- 29. Activity -->
                    <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"/>

                    <!-- 30. Activity State -->
                    <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                           decoration-success="activity_state == 'today'"
                           decoration-warning="activity_state == 'planned'"
                           decoration-danger="activity_state == 'overdue'"/>

                    <!-- 31. Activity User -->
                    <field name="activity_user_id" string="Responsible User" optional="hide"/>

                    <!-- 32. Activity Type -->
                    <field name="activity_type_id" string="Next Activity Type" optional="hide"/>

                    <!-- 33. Activity Date -->
                    <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide"/>

                    <!-- 34. Activity Summary -->
                    <field name="activity_summary" string="Activity Summary" optional="hide"/>

                    <!-- 35. Message -->
                    <field name="message_needaction" string="Action Needed" optional="hide"/>

                    <!-- Hidden technical fields -->
                    <field name="move_type" column_invisible="1"/>

                </list>
            </field>
        </record>

        <!-- Override the default vendor bill action to use custom view -->
        <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="view_ids" eval="[(6, 0, [ref('view_move_list_purchase_invoice_custom')])]"/>
        </record>

        <!-- Action to Recompute Warehouse for existing bills -->
        <record id="action_recompute_warehouse" model="ir.actions.server">
            <field name="name">Recompute Warehouse</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
if records:
    records._compute_warehouse_id()
            </field>
        </record>

    </data>
</odoo>





