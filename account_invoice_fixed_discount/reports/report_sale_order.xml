<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

        <!-- Remove discount columns from product lines -->
        <xpath expr="//th[@name='th_discount']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//td[@name='td_discount']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>

        <!-- Modify the totals section to show discount separately -->
        <xpath expr="//div[@id='total']/div[@class='row']" position="replace">
            <div class="row">
                <div class="col-6">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Untaxed Amount:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_undiscounted"/>
                            </td>
                        </tr>
                        <tr t-if="doc.global_discount_fixed &gt; 0">
                            <td><strong>Discount:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.global_discount_fixed"/>
                            </td>
                        </tr>
                        <tr t-if="doc.global_discount_fixed &gt; 0" class="border-top">
                            <td><strong>Untaxed Amount (After Discount):</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_after_discount"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>VAT Taxes:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_tax"/>
                            </td>
                        </tr>
                        <tr class="border-top border-dark">
                            <td><strong>Total:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>

    </template>
</odoo>