<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom portal with your report -->
    <template id="clean_portal_override" inherit_id="sale.sale_order_portal_content" priority="999">

        <!-- Replace everything -->
        <xpath expr="." position="replace">
            <t t-name="sale.sale_order_portal_content">

                <!-- Hidden dummy element to prevent JS errors -->
                <div style="display: none;">
                    <table id="sales_order_table" t-att-data-order-id="sale_order.id" t-att-data-token="sale_order.access_token"></table>
                </div>

                <!-- CSS for full width -->
                <style>
                    .o_portal_sale_sidebar { display: none !important; }
                    .breadcrumb { display: none !important; }
                    .o_portal .o_portal_wrap .row > div {
                        flex: 0 0 100% !important;
                        max-width: 100% !important;
                    }
                    .custom-report-container {
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 20px;
                        background: white;
                    }
                </style>

                <!-- Your custom report -->
                <div class="custom-report-container">
                    <t t-set="docs" t-value="[sale_order]"/>
                    <t t-call="custom_sa_quotation.portal_custom_saleorder_content"/>
                </div>

            </t>
        </xpath>

    </template>
</odoo>