        <!-- Dammam Warehouse: Mail Activity Access Rule -->
        <record id="rule_dammam_activity_access" model="ir.rule">
            <field name="name">Dammam Warehouse: Activity Access</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
