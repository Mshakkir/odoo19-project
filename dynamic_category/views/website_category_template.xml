<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dynamic Category Detail Template -->
    <template id="category_detail_template" name="Category Detail Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">

                <!-- Breadcrumb Navigation -->
                <nav aria-label="breadcrumb" class="breadcrumb-nav">
                    <div class="container">
                        <ol class="breadcrumb">
                            <t t-foreach="breadcrumbs" t-as="breadcrumb">
                                <li class="breadcrumb-item" t-att-class="'active' if breadcrumb_last else ''">
                                    <a t-if="not breadcrumb_last" t-att-href="breadcrumb['url']">
                                        <t t-esc="breadcrumb['name']"/>
                                    </a>
                                    <span t-if="breadcrumb_last">
                                        <t t-esc="breadcrumb['name']"/>
                                    </span>
                                </li>
                            </t>
                        </ol>
                    </div>
                </nav>

                <!-- Main Category Hero Section -->
                <section class="category-hero">
                    <div class="container-fluid p-0">
                        <div class="row g-0 align-items-center" style="min-height: 500px;">
                            <div class="col-lg-6 p-5 d-flex flex-column justify-content-center order-lg-2">
                                <div class="hero-content">
                                    <h1 class="category-title display-3">
                                        <t t-esc="main_category['name']"/>
                                    </h1>
                                    <p class="category-description lead mt-4">
                                        <t t-esc="main_category['description']"/>
                                    </p>
                                    <t t-if="child_categories">
                                        <p class="mt-4 text-muted">
                                            Explore <strong><t t-esc="len(child_categories)"/></strong> subcategories below
                                        </p>
                                    </t>
                                </div>
                            </div>
                            <div class="col-lg-6 order-lg-1 p-0 category-image-container">
                                <img t-att-src="main_category['image_url']"
                                     t-att-alt="main_category['name']"
                                     class="category-hero-image"
                                     loading="lazy"/>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Child Categories Section -->
                <t t-if="child_categories">
                    <section class="child-categories-section py-5">
                        <div class="container">
                            <div class="section-header text-center mb-5">
                                <h2>Our <t t-esc="main_category['name']"/> Collection</h2>
                                <div class="header-underline"></div>
                            </div>

                            <div class="categories-grid">
                                <t t-foreach="child_categories" t-as="child">
                                    <div class="category-card" t-att-data-id="child['id']">
                                        <div class="card-image-wrapper">
                                            <img t-att-src="child['image_url']"
                                                 t-att-alt="child['name']"
                                                 class="card-image"
                                                 loading="lazy"/>
                                            <div class="card-overlay">
                                                <a t-att-href="child['url']" class="btn btn-explore">
                                                    <span>Explore</span>
                                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <polyline points="9 18 15 12 9 6"/>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <h3 class="card-title">
                                                <t t-esc="child['name']"/>
                                            </h3>
                                            <p class="card-description">
                                                <t t-esc="child['description']"/>
                                            </p>
                                            <div class="card-footer">
                                                <span class="product-count">
                                                    <t t-esc="child['product_count']"/> items
                                                </span>
                                                <a t-att-href="child['url']" class="card-link">
                                                    View More â†’
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </t>

                <!-- No Child Categories Message -->
                <t t-if="not child_categories">
                    <section class="empty-state py-5">
                        <div class="container text-center">
                            <p class="text-muted" style="font-size: 1.2rem;">
                                No subcategories available for <t t-esc="main_category['name']"/>.
                            </p>
                        </div>
                    </section>
                </t>

                <!-- Inline CSS -->
                <style>
                    :root {
                        --primary-color: #007bff;
                        --secondary-color: #6c757d;
                        --light-bg: #f8f9fa;
                        --border-color: #dee2e6;
                        --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
                        --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.12);
                        --shadow-lg: 0 16px 40px rgba(0, 0, 0, 0.15);
                        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                    }

                    /* Breadcrumb Styles */
                    .breadcrumb-nav {
                        background: var(--light-bg);
                        border-bottom: 1px solid var(--border-color);
                        padding: 1rem 0;
                        margin-bottom: 2rem;
                    }

                    .breadcrumb {
                        margin-bottom: 0;
                        padding: 0;
                        background: transparent;
                    }

                    .breadcrumb-item {
                        font-size: 0.95rem;
                    }

                    .breadcrumb-item a {
                        color: var(--primary-color);
                        text-decoration: none;
                        transition: var(--transition);
                    }

                    .breadcrumb-item a:hover {
                        color: #0056b3;
                        text-decoration: underline;
                    }

                    /* Hero Section */
                    .category-hero {
                        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
                        overflow: hidden;
                    }

                    .category-hero .hero-content {
                        animation: slideInLeft 0.8s ease-out;
                    }

                    .category-title {
                        color: #1a1a1a;
                        font-weight: 800;
                        line-height: 1.2;
                        margin-bottom: 1rem;
                    }

                    .category-description {
                        color: var(--secondary-color);
                        line-height: 1.8;
                        max-width: 500px;
                    }

                    .category-image-container {
                        background: linear-gradient(135deg, #f0f4ff 0%, #f8f9fa 100%);
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        min-height: 500px;
                    }

                    .category-hero-image {
                        width: 100%;
                        height: 100%;
                        object-fit: contain;
                        padding: 2rem;
                        max-height: 500px;
                        animation: slideInRight 0.8s ease-out;
                    }

                    /* Child Categories Section */
                    .child-categories-section {
                        background: #ffffff;
                    }

                    .section-header {
                        margin-bottom: 3rem;
                    }

                    .section-header h2 {
                        font-size: 2.5rem;
                        font-weight: 700;
                        color: #1a1a1a;
                        margin-bottom: 1rem;
                    }

                    .header-underline {
                        width: 60px;
                        height: 4px;
                        background: var(--primary-color);
                        margin: 0 auto;
                        border-radius: 2px;
                    }

                    /* Categories Grid */
                    .categories-grid {
                        display: grid;
                        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
                        gap: 2rem;
                        animation: fadeInUp 0.8s ease-out;
                    }

                    /* Category Card */
                    .category-card {
                        background: #ffffff;
                        border: 1px solid var(--border-color);
                        border-radius: 12px;
                        overflow: hidden;
                        transition: var(--transition);
                        display: flex;
                        flex-direction: column;
                        height: 100%;
                    }

                    .category-card:hover {
                        border-color: var(--primary-color);
                        box-shadow: var(--shadow-lg);
                        transform: translateY(-8px);
                    }

                    /* Card Image */
                    .card-image-wrapper {
                        position: relative;
                        width: 100%;
                        height: 250px;
                        background: linear-gradient(135deg, #f0f4ff 0%, #f8f9fa 100%);
                        overflow: hidden;
                    }

                    .card-image {
                        width: 100%;
                        height: 100%;
                        object-fit: contain;
                        padding: 1.5rem;
                        transition: var(--transition);
                    }

                    .category-card:hover .card-image {
                        transform: scale(1.05);
                    }

                    /* Card Overlay */
                    .card-overlay {
                        position: absolute;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        background: rgba(0, 123, 255, 0.85);
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        opacity: 0;
                        transition: var(--transition);
                    }

                    .category-card:hover .card-overlay {
                        opacity: 1;
                    }

                    .btn-explore {
                        background: #ffffff !important;
                        color: var(--primary-color) !important;
                        border: none;
                        padding: 12px 28px;
                        border-radius: 25px;
                        font-weight: 600;
                        display: flex;
                        align-items: center;
                        gap: 8px;
                        text-decoration: none;
                        transition: var(--transition);
                        cursor: pointer;
                    }

                    .btn-explore:hover {
                        background: #f8f9fa !important;
                        transform: translateX(4px);
                    }

                    /* Card Content */
                    .card-content {
                        padding: 1.75rem;
                        flex-grow: 1;
                        display: flex;
                        flex-direction: column;
                    }

                    .card-title {
                        font-size: 1.25rem;
                        font-weight: 700;
                        color: #1a1a1a;
                        margin-bottom: 0.75rem;
                    }

                    .card-description {
                        color: var(--secondary-color);
                        font-size: 0.95rem;
                        line-height: 1.6;
                        margin-bottom: 1rem;
                        flex-grow: 1;
                    }

                    /* Card Footer */
                    .card-footer {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        padding-top: 1rem;
                        border-top: 1px solid var(--border-color);
                    }

                    .product-count {
                        font-size: 0.85rem;
                        color: var(--secondary-color);
                        font-weight: 600;
                    }

                    .card-link {
                        color: var(--primary-color);
                        text-decoration: none;
                        font-weight: 600;
                        transition: var(--transition);
                    }

                    .card-link:hover {
                        color: #0056b3;
                        text-decoration: underline;
                    }

                    /* Empty State */
                    .empty-state {
                        background: var(--light-bg);
                    }

                    /* Animations */
                    @keyframes slideInLeft {
                        from {
                            opacity: 0;
                            transform: translateX(-40px);
                        }
                        to {
                            opacity: 1;
                            transform: translateX(0);
                        }
                    }

                    @keyframes slideInRight {
                        from {
                            opacity: 0;
                            transform: translateX(40px);
                        }
                        to {
                            opacity: 1;
                            transform: translateX(0);
                        }
                    }

                    @keyframes fadeInUp {
                        from {
                            opacity: 0;
                            transform: translateY(30px);
                        }
                        to {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }

                    /* Responsive Design */
                    @media (max-width: 992px) {
                        .category-hero .row {
                            flex-direction: column !important;
                        }

                        .category-image-container {
                            order: -1 !important;
                        }

                        .category-title {
                            font-size: 2rem;
                        }

                        .section-header h2 {
                            font-size: 2rem;
                        }
                    }

                    @media (max-width: 768px) {
                        .category-hero {
                            padding: 2rem 0;
                        }

                        .hero-content {
                            padding: 2rem 1rem !important;
                        }

                        .category-image-container {
                            min-height: 300px;
                        }

                        .category-title {
                            font-size: 1.5rem;
                        }

                        .category-description {
                            font-size: 1rem;
                        }

                        .categories-grid {
                            grid-template-columns: 1fr;
                            gap: 1.5rem;
                        }

                        .section-header h2 {
                            font-size: 1.5rem;
                        }

                        .card-image-wrapper {
                            height: 200px;
                        }
                    }
                </style>

                <!-- Inline JavaScript -->
                <script type="text/javascript">
                    <![CDATA[
                    document.addEventListener('DOMContentLoaded', function() {
                        // Add smooth scrolling for breadcrumb links
                        const breadcrumbLinks = document.querySelectorAll('.breadcrumb-item a');
                        breadcrumbLinks.forEach(link => {
                            link.addEventListener('click', function(e) {
                                // Allow normal navigation
                            });
                        });

                        // Stagger card animations
                        const cards = document.querySelectorAll('.category-card');
                        cards.forEach((card, index) => {
                            card.style.animationDelay = (index * 0.1) + 's';
                            card.style.opacity = '0';
                            card.style.animation = 'fadeInUp 0.6s ease-out forwards';
                            card.style.animationDelay = (index * 0.1) + 's';
                        });
                    });
                    ]]>
                </script>
            </div>
        </t>
    </template>
</odoo>