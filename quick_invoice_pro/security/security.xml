<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Quick Invoice User Group -->
        <record id="group_quick_invoice_user" model="res.groups">
            <field name="name">Quick Invoice User</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Can create quick invoices for orders below approval threshold</field>
        </record>

        <!-- Quick Invoice Manager Group -->
        <record id="group_quick_invoice_manager" model="res.groups">
            <field name="name">Quick Invoice Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="implied_ids" eval="[(4, ref('quick_invoice_pro.group_quick_invoice_user'))]"/>
            <field name="comment">Can approve and create quick invoices for any amount</field>
        </record>

        <!-- Record Rules -->
        <record id="quick_invoice_user_rule" model="ir.rule">
            <field name="name">Quick Invoice: User - Own Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_quick_invoice_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="quick_invoice_manager_rule" model="ir.rule">
            <field name="name">Quick Invoice: Manager - All Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_quick_invoice_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>