<odoo>
    <record id="view_reorder_notification_list" model="ir.ui.view">
        <field name="name">reorder.notification.list</field>
        <field name="model">reorder.notification</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <field name="qty_on_hand"/>
                <field name="min_qty"/>
                <field name="max_qty"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <record id="view_reorder_notification_form" model="ir.ui.view">
        <field name="name">reorder.notification.form</field>
        <field name="model">reorder.notification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="warehouse_id"/>
                        <field name="qty_on_hand"/>
                        <field name="min_qty"/>
                        <field name="max_qty"/>
                        <field name="message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
