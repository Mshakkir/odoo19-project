<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_product_category_report_wizard_form" model="ir.ui.view">
        <field name="name">purchase.product.category.report.wizard.form</field>
        <field name="model">purchase.product.category.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Product Category Report">
                <group>
                    <group>
                        <label for="all_categories"/>
                        <div class="o_row">
                            <field name="all_categories"/>
                            <span invisible="not all_categories">All Product Categories Selected</span>
                        </div>
                        <field name="product_category_ids" widget="many2many_tags"
                               placeholder="Select Product Categories..."
                               invisible="all_categories"
                               required="not all_categories"/>
                        <field name="invoice_status"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report"
                            string="Apply"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_purchase_product_category_report_wizard" model="ir.actions.act_window">
        <field name="name">By Product Category</field>
        <field name="res_model">purchase.product.category.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
