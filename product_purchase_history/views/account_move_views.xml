<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the invoice form view to add custom widget to product field -->
    <record id="view_move_form_inherit_purchase_history" model="ir.ui.view">
        <field name="name">account.move.form.inherit.purchase.history</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add widget to product_id field in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="widget">product_many2one_with_history</attribute>
                <attribute name="options">{'no_create': False, 'no_open': False}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Add help tooltip in invoice form -->
    <record id="view_move_form_inherit_purchase_history_help" model="ir.ui.view">
        <field name="name">account.move.form.inherit.purchase.history.help</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <div class="alert alert-info" role="alert" style="margin-bottom: 10px;">
                    <i class="fa fa-info-circle"/> <strong>Tip:</strong> Select a product in the invoice line and press <strong>Ctrl+F5</strong> to view its purchase history.
                </div>
            </xpath>
        </field>
    </record>
</odoo>