<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial_inherit" inherit_id="accounting_pdf_reports.report_financial">
        <!-- Add Warehouse Selection Display -->
        <xpath expr="//div[@class='row mt32 mb32']" position="after">
            <div class="row mb16" t-if="warehouse_display">
                <div class="col-12">
                    <strong>Warehouse Selection: </strong>
                    <span t-esc="warehouse_display"/>
                </div>
            </div>
        </xpath>

        <!-- Change "Balance" column header to "Amount" -->
        <xpath expr="//th[contains(text(), 'Balance')]" position="replace">
            <th class="text-right">Amount</th>
        </xpath>

        <!-- Alternative: If the header uses t-esc or variables -->
        <xpath expr="//th[@class='text-right']/span[contains(text(), 'Balance')]" position="replace">
            <span>Amount</span>
        </xpath>

        <!-- Alternative: If using different structure, try this -->
        <xpath expr="//thead//th[last()]" position="replace">
            <th class="text-right">Amount</th>
        </xpath>
    </template>
</odoo>






