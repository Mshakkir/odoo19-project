<odoo>
    <record id="view_order_form_inherit_discount_freight" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount.freight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add Extra Charges section above order lines -->
            <xpath expr="//field[@name='order_line']" position="before">
                <group string="Extra Charges" col="4">
                    <field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="freight_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </xpath>

            <!-- Add discount and freight in the totals section -->
            <xpath expr="//div[@name='invoice_address']/following-sibling::group[@name='sale_total']" position="inside">
                <!-- Untaxed Amount (this should already exist, but we're showing it for completeness) -->
                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                    <label for="amount_untaxed" string="Untaxed Amount"/>
                </div>
                <field name="amount_untaxed" nolabel="1" class="oe_subtotal_footer_separator"/>

                <!-- Discount Amount -->
                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                    <label for="discount_amount" string="Discount"/>
                </div>
                <field name="discount_amount" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>

                <!-- Freight Amount -->
                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                    <label for="freight_amount" string="Freight"/>
                </div>
                <field name="freight_amount" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
            </xpath>

        </field>
    </record>
</odoo>