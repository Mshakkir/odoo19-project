<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_customer_balance" model="ir.ui.view">
        <field name="name">account.move.form.customer.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- Add to notebook page instead of after partner_id -->
            <xpath expr="//notebook" position="inside">
                <page string="Partner Balance" name="partner_balance_page"
                      invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']">

                    <!-- Customer Balance Section -->
                    <group name="customer_balance_section" string="Customer Balance"
                           invisible="move_type not in ['out_invoice', 'out_refund']">
                        <group>
                            <field name="customer_total_invoiced" widget="monetary"/>
                            <field name="customer_total_received" widget="monetary"/>
                            <field name="customer_balance_due" widget="monetary"/>
                        </group>
                        <group>
                            <button name="action_view_customer_invoices"
                                    string="View Invoices"
                                    type="object"
                                    class="btn-primary"/>
                            <button name="action_view_customer_payments"
                                    string="View Payments"
                                    type="object"
                                    class="btn-primary"/>
                        </group>
                    </group>

                    <!-- Vendor Balance Section -->
                    <group name="vendor_balance_section" string="Vendor Balance"
                           invisible="move_type not in ['in_invoice', 'in_refund']">
                        <group>
                            <field name="vendor_total_billed" widget="monetary"/>
                            <field name="vendor_total_paid" widget="monetary"/>
                            <field name="vendor_balance_due" widget="monetary"/>
                        </group>
                        <group>
                            <button name="action_view_vendor_bills"
                                    string="View Bills"
                                    type="object"
                                    class="btn-primary"/>
                            <button name="action_view_vendor_payments"
                                    string="View Payments"
                                    type="object"
                                    class="btn-primary"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>