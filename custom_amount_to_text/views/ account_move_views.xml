<odoo>
    <record id="view_move_form_amount_words_ar" model="ir.ui.view">
        <field name="name">account.move.form.amount.words.ar</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@string='Other Information']/group" position="inside">
                <group>
                    <field name="amount_to_text_ar" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
