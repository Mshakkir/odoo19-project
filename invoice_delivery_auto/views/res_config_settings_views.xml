<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add settings to Accounting configuration -->
    <record id="res_config_settings_view_form_inherit_stock_automation" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.automation</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Invoice Stock Automation">
                    <setting id="invoice_auto_create_delivery_setting"
                             string="Auto Create Stock Operations"
                             help="Automatically create deliveries (customer invoices) or receipts (vendor bills) when posted (for invoices/bills without orders)">
                        <field name="invoice_auto_create_delivery"/>
                        <div class="text-muted">
                            • Customer Invoices → Delivery Orders (outgoing)
                            <br/>
                            • Vendor Bills → Receipts (incoming)
                        </div>
                    </setting>
                    <setting id="invoice_auto_validate_delivery_setting"
                             string="Auto Validate Stock Operations"
                             help="Automatically validate deliveries and receipts created from invoices/bills (if stock is available)"
                             invisible="not invoice_auto_create_delivery">
                        <field name="invoice_auto_validate_delivery"/>
                    </setting>
                    <setting id="invoice_check_stock_availability_setting"
                             string="Check Stock Availability"
                             help="Prevent posting customer invoice if insufficient stock is available in selected warehouse"
                             invisible="not invoice_auto_create_delivery">
                        <field name="invoice_check_stock_availability"/>
                        <div class="text-muted">
                            Note: Only applies to customer invoices (deliveries), not vendor bills (receipts)
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>


