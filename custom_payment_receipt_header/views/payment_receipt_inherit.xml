<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ###########################################
             CUSTOM PAYMENT RECEIPT (Odoo 19 CE)
             HEADER + BODY + FOOTER
        ############################################ -->
        <template id="payment_receipt_custom_document"
                  inherit_id="account.report_payment_receipt_document">

            <!-- ============================================
                 REPLACE DEFAULT LAYOUT WITH CUSTOM HEADER
            ============================================ -->
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">

                <!-- *********** CUSTOM HEADER ************** -->
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="values" t-value="o._get_payment_receipt_report_values()"/>

                <div class="page">

                    <!-- === CUSTOM HEADER BOX === -->
                    <div style="border:2px solid #8B1538; border-radius:8px; padding:10px; margin-bottom:20px;">

                        <!-- Company Names -->
                        <table style="width:100%;">
                            <tr>
                                <td style="text-align:left; font-size:18px; font-weight:700; color:#8B1538;">
                                    <span t-esc="o.company_id.name"/>
                                </td>
                                <td style="text-align:right;">
                                    <div class="ar" style="font-size:18px; font-weight:900; color:#8B1538;">
                                        شركة سمير شرف العتيبي التجارية
                                    </div>
                                </td>
                            </tr>
                        </table>

                        <!-- Info + Logo -->
                        <table style="width:100%; margin-top:8px;">
                            <tr>

                                <!-- English -->
                                <td style="width:33%; border-bottom:2px solid #8B1538; font-weight:600;">
                                    C.R. 4030216154<br/>
                                    VAT: 311299944700003
                                </td>

                                <!-- Logo -->
                                <td style="width:34%; text-align:center; border-bottom:2px solid #8B1538;">
                                    <t t-if="o.company_id.logo">
                                        <img t-att-src="image_data_uri(o.company_id.logo)"
                                             style="max-height:120px;"/>
                                    </t>
                                </td>

                                <!-- Arabic -->
                                <td class="ar" style="width:33%; text-align:right; border-bottom:2px solid #8B1538;">
                                    س.ت: ٤٠٣٠٢١٦١٥٤<br/>
                                    الرقم الضريبي: ٣١١٢٩٩٩٤٤٧٠٠٠٠٣
                                </td>

                            </tr>
                        </table>

                    </div>

                    <!-- *********** BODY – ORIGINAL ODOO CONTENT ************** -->

                    <h3><strong>
                        <span t-field="o.payment_receipt_title"/>
                        :
                        <span t-field="o.name"/>
                    </strong></h3>

                    <div class="mt-3">

                        <div class="row">
                            <div class="col-6" t-if="o.date">
                                Payment Date:
                                <span t-field="o.date"/>
                            </div>
                        </div>

                        <div class="row mt-2">

                            <!-- CUSTOMER OR VENDOR -->
                            <div class="col-6">
                                <t t-if="o.partner_type == 'customer'">
                                    Customer:
                                </t>
                                <t t-elif="o.partner_type == 'supplier'">
                                    Vendor:
                                </t>
                                <span t-field="o.partner_id"/>
                            </div>

                            <!-- PAYMENT METHOD -->
                            <div class="col-6" t-if="values['display_payment_method'] and o.payment_method_id">
                                Payment Method:
                                <span t-field="o.payment_method_id.name"/>
                            </div>

                        </div>

                        <div class="row mt-2">
                            <div class="col-6">
                                Payment Amount:
                                <span t-field="o.amount"
                                      t-options="{'widget':'monetary','display_currency':o.currency_id}"/>
                            </div>
                            <div class="col-6" t-if="o.memo">
                                Memo: <span t-field="o.memo"/>
                            </div>
                        </div>

                    </div>

                    <!-- Odoo Default Invoice Table -->
                    <t t-if="values['display_invoices']">
                        <t t-call="account.payment_receipt_invoice_table"/>
                    </t>

                    <!-- *********** FOOTER ************** -->
                    <div style="margin-top:40px; border-top:1px solid #ddd; padding-top:10px; text-align:center; font-size:12px;">
                        <strong>Thank you for your business</strong><br/>
                        <span t-esc="o.company_id.phone"/> |
                        <span t-esc="o.company_id.email"/>
                    </div>

                </div>

            </xpath>

        </template>

    </data>
</odoo>













