<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_form_add_post_button" model="ir.ui.view">
        <field name="name">asset.form.depreciation.post.button</field>
        <field name="model">account.asset.asset</field>

        <!-- âœ… inherit the ASSET FORM -->
        <field name="inherit_id" ref="om_account_asset.view_account_asset_form"/>

        <field name="arch" type="xml">

            <!-- inject button inside depreciation list -->
            <xpath expr="//page[@string='Depreciation Board']//list" position="inside">
                <button
                    name="action_post_depreciation"
                    type="object"
                    string="Post"
                    class="btn-primary"
                    attrs="{'invisible': [('move_id', '!=', False)]}"
                />
            </xpath>

        </field>
    </record>

</odoo>
