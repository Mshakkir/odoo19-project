<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="inherit_account_journal_dashboard_custom" model="ir.ui.view">
        <field name="name">account.journal.dashboard.custom</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">

            <!-- Add button to RIGHT side -->
            <xpath expr="//div[@name='kanban_primary_right']" position="inside">
                <t t-if="record.type.raw_value == 'bank'">
                    <div class="mt-2">
                        <button type="action"
                                name="%(bank_reconciliation_custom_screen)d"
                                class="btn btn-primary">
                            Bank Reconciliation
                        </button>
                    </div>
                </t>
            </xpath>

            <!-- Add balances to LEFT side -->
            <xpath expr="//div[@name='kanban_primary_left']" position="inside">
                <t t-if="record.type.raw_value == 'bank' and dashboard.last_balance">

                    <div class="row mt-2">
                        <div class="col-7">Bank Statement Balance</div>
                        <div class="col-5 text-end">
                            <span t-out="dashboard.last_balance"/>
                        </div>
                    </div>

                    <div class="row" t-if="dashboard.difference">
                        <div class="col-7">Unreconciled Difference</div>
                        <div class="col-5 text-end">
                            <span t-out="dashboard.difference"
                                  t-attf-class="#{dashboard.difference != '0' ? 'text-danger' : ''}"/>
                        </div>
                    </div>

                </t>
            </xpath>

        </field>
    </record>

</odoo>