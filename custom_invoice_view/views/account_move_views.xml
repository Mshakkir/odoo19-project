<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Invoice List View with ALL available fields -->
        <record id="view_move_list_invoice_custom" model="ir.ui.view">
            <field name="name">account.move.list.invoice.custom</field>
            <field name="model">account.move</field>
            <field name="mode">primary</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <list string="Invoices"
                      sample="1"
                      decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'"
                      multi_edit="1">

                    <!-- YOUR REQUESTED ORDER -->
                    <!-- 1. Invoice Date -->
                    <field name="invoice_date" string="Invoice Date"/>

                    <!-- 2. Invoice Number -->
                    <field name="name" string="Invoice Number" readonly="1"/>

                    <!-- 3. Customer -->
                    <field name="partner_id" string="Customer"/>

                    <!-- 4. Warehouse (NEW - after customer) -->
                    <field name="warehouse_id" string="Warehouse"/>

                    <!-- 5. Source Document (like Sales Order) -->
                    <field name="invoice_origin" string="Source Document"/>

                    <!-- 6. Reference -->
                    <field name="ref" string="Reference"/>

                    <!-- 7. Tax Excluded Amount -->
                    <field name="amount_untaxed" string="Tax Excluded"/>

                    <!-- 8. Tax -->
                    <field name="amount_tax" string="Tax"/>

                    <!-- 9. Total -->
                    <field name="amount_total" string="Total"/>

                    <!-- 10. Amount Due -->
                    <field name="amount_residual" string="Amount Due"/>

                    <!-- 11. Salesperson -->
                    <field name="invoice_user_id" string="Salesperson" widget="many2one_avatar_user"/>

                    <!-- ADDITIONAL DEFAULT ODOO FIELDS -->

                    <!-- 12. Due Date -->
                    <field name="invoice_date_due" string="Due Date"/>

                    <!-- 13. Accounting Date -->
                    <field name="date" string="Accounting Date" optional="hide"/>

                    <!-- 14. Journal -->
                    <field name="journal_id" string="Journal" optional="hide"/>

                    <!-- 15. Payment Terms -->
                    <field name="invoice_payment_term_id" string="Payment Terms" optional="hide"/>

                    <!-- 16. Currency -->
                    <field name="currency_id" string="Currency" optional="hide"/>

                    <!-- 17. Company -->
                    <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"/>

                    <!-- 18. Status -->
                    <field name="state" string="Status" widget="badge"
                           decoration-success="state == 'posted'"
                           decoration-info="state == 'draft'"/>

                    <!-- 19. Payment Status -->
                    <field name="payment_state" string="Payment Status" widget="badge"
                           decoration-success="payment_state == 'paid'"
                           decoration-warning="payment_state == 'partial'"
                           decoration-danger="payment_state in ('not_paid', 'in_payment')"/>

                    <!-- 20. Fiscal Position -->
                    <field name="fiscal_position_id" string="Fiscal Position" optional="hide"/>

                    <!-- 21. Bank Account -->
                    <field name="partner_bank_id" string="Recipient Bank" optional="hide"/>

                    <!-- 22. Delivery Address -->
                    <field name="partner_shipping_id" string="Delivery Address" optional="hide"/>

                    <!-- 23. Invoice Incoterm -->
                    <field name="invoice_incoterm_id" string="Incoterm" optional="hide"/>

                    <!-- 24. Narration/Terms and Conditions -->
                    <field name="narration" string="Terms and Conditions" optional="hide"/>

                    <!-- 25. Invoice Source Document Type -->
                    <field name="invoice_source_email" string="Source Email" optional="hide"/>

                    <!-- 26. Auto Post -->
                    <field name="auto_post" string="Auto Post" optional="hide"/>

                    <!-- 27. Activity -->
                    <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"/>

                    <!-- 28. Activity State -->
                    <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                           decoration-success="activity_state == 'today'"
                           decoration-warning="activity_state == 'planned'"
                           decoration-danger="activity_state == 'overdue'"/>

                    <!-- 29. Activity User -->
                    <field name="activity_user_id" string="Responsible User" optional="hide"/>

                    <!-- 30. Activity Type -->
                    <field name="activity_type_id" string="Next Activity Type" optional="hide"/>

                    <!-- 31. Activity Date -->
                    <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide"/>

                    <!-- 32. Activity Summary -->
                    <field name="activity_summary" string="Activity Summary" optional="hide"/>

                    <!-- 33. Message -->
                    <field name="message_needaction" string="Action Needed" optional="hide"/>

                    <!-- 34. Sales Team (if CRM installed) -->
                    <field name="team_id" string="Sales Team" optional="hide"/>

                    <!-- 35. Campaign (if marketing installed) -->
                    <field name="campaign_id" string="Campaign" optional="hide" groups="base.group_no_one"/>

                    <!-- 36. Medium -->
                    <field name="medium_id" string="Medium" optional="hide" groups="base.group_no_one"/>

                    <!-- 37. Source -->
                    <field name="source_id" string="Source" optional="hide" groups="base.group_no_one"/>



        <!-- Override the default invoice action -->
        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="view_id" ref="view_move_list_invoice_custom"/>
        </record>

    </data>
</odoo>



