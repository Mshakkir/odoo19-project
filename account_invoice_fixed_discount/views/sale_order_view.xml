<odoo>
<record id="view_order_form_global_discount_fixed" model="ir.ui.view">
    <field name="name">sale.order.form.global.discount.fixed</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

        <!-- Add discount field in the order lines section -->
        <xpath expr="//field[@name='order_line']" position="after">
            <group>
                <group>
                    <field name="global_discount_fixed"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                </group>
            </group>
        </xpath>

        <!-- Modify the totals section -->
        <xpath expr="//field[@name='amount_untaxed']" position="replace">
            <field name="amount_untaxed_before_discount"
                   widget="monetary"
                   options="{'currency_field': 'currency_id'}"/>
            <field name="amount_discount"
                   widget="monetary"
                   options="{'currency_field': 'currency_id'}"
                   attrs="{'invisible': [('amount_discount', '=', 0)]}"/>
            <field name="amount_untaxed_after_discount"
                   widget="monetary"
                   options="{'currency_field': 'currency_id'}"
                   string="Untaxed Amount (After Discount)"/>
        </xpath>

    </field>
</record>

</odoo>