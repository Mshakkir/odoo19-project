<odoo>
    <record id="view_move_form_awb" model="ir.ui.view">
        <field name="name">account.move.form.awb</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='invoice_date']" position="after">
                <div class="o_row">
                    <field name="awb_number"/>
                    <field name="carrier_name"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
