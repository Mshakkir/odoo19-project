<odoo>
    <record id="view_order_form_inherit_discount_freight" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.discount.freight</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Insert discount and freight fields below the Order Date field -->
            <xpath expr="//group[@name='sale_total']/field[@name='date_order']" position="after">
                <field name="discount_amount" string="Discount"/>
                <field name="freight_amount" string="Freight"/>
            </xpath>

        </field>
    </record>
</odoo>
