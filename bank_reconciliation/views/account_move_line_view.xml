<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add statement_date field to move line form -->
    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.bank.reconciliation</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <field name="date_maturity" position="after">
                <field name="statement_date"/>
                <field name="bank_statement_id" readonly="1"/>
            </field>
        </field>
    </record>

    <!-- Tree view for bank statement lines (embedded in One2many) -->
    <record id="view_bank_statement_move_line_tree" model="ir.ui.view">
        <field name="name">account.bank.statement.move.line.tree</field>
        <field name="model">account.move.line</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Statement Lines"
                  create="false"
                  delete="false"
                  editable="bottom"
                  default_order="date"
                  decoration-success="statement_date != False"
                  decoration-warning="statement_date == False">
                <field name="date" readonly="1"/>
                <field name="move_id" readonly="1" optional="hide"/>
                <field name="name" readonly="1"/>
                <field name="ref" readonly="1" optional="show"/>
                <field name="partner_id" readonly="1"/>
                <field name="debit" readonly="1" sum="Total Debit"/>
                <field name="credit" readonly="1" sum="Total Credit"/>
                <field name="balance" readonly="1" optional="show" sum="Balance"/>
                <field name="amount_currency" readonly="1" optional="hide" groups="base.group_multi_currency"/>
                <field name="currency_id" readonly="1" column_invisible="1"/>
                <field name="date_maturity" readonly="1" optional="hide"/>
                <field name="statement_date"/>
                <field name="company_currency_id" column_invisible="1" readonly="1"/>
                <field name="company_id" column_invisible="1"/>
                <field name="account_id" column_invisible="1"/>
            </list>
        </field>
    </record>

</odoo>





