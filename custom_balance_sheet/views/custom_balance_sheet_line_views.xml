<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_custom_balance_sheet_line_tree" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.tree</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Details">
                <field name="name" string="Account"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
                <button name="action_view_ledger"
                        string="View Ledger"
                        type="object"
                        icon="fa-book"
                        class="btn-secondary"/>
            </list>
        </field>
    </record>

</odoo>
