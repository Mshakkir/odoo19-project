<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide default portal content and show only our custom template -->
    <template id="custom_portal_sale_order" inherit_id="sale.sale_order_portal_content" priority="100">

        <!-- Add our custom report and hide default content -->
        <xpath expr="//section[@id='details']" position="before">
            <style>
                /* Hide ALL default portal sale content */
                section#details,
                div#portal_sale_content,
                div.o_portal_html_view,
                div.row.justify-content-end.total table {
                    display: none !important;
                }

                /* Make sure our custom report is visible */
                .custom-quotation-preview {
                    display: block !important;
                    width: 100%;
                }
            </style>

            <!-- Show our custom report -->
            <div class="custom-quotation-preview">
                <t t-set="o" t-value="sale_order"/>
                <t t-set="docs" t-value="[sale_order]"/>
                <t t-call="custom_sa_quotation.custom_saleorder_report"/>
            </div>
        </xpath>

        <!-- Also hide the details section content directly -->
        <xpath expr="//section[@id='details']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

    </template>
</odoo>