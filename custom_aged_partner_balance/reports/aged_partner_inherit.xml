<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- No need to modify the wizard form - it already has show_details button -->
    <!-- Just ensure your custom report template is loaded -->

    <!-- Optional: Add custom styling or modifications to the detail views -->
    <record id="view_aged_detail_tree_custom" model="ir.ui.view">
        <field name="name">account.aged.detail.line.tree.custom</field>
        <field name="model">account.aged.detail.line</field>
        <field name="inherit_id" ref="accounting_pdf_reports.view_aged_detail_tree"/>
        <field name="arch" type="xml">
            <!-- Add any custom columns or styling here if needed -->
            <xpath expr="//field[@name='partner_name']" position="attributes">
                <attribute name="decoration-bf">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>