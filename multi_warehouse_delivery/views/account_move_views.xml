<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to customer invoice lines -->
    <record id="view_move_form_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.form.warehouse.field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to invoice lines list view -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='quantity']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       column_invisible="parent.move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Add warehouse field to invoice line form view (popup) -->
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='quantity']" position="after">
                <field name="warehouse_id"
                       readonly="0"
                       invisible="parent.move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>

    <!-- Add warehouse field to vendor bill lines -->
    <record id="view_in_invoice_form_warehouse_field" model="ir.ui.view">
        <field name="name">account.move.supplier.form.warehouse.field</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to bill lines list view -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='quantity']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>
</odoo>