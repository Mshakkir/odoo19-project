<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Balance Sheet Account List View -->
    <record id="view_account_list_balance_sheet" model="ir.ui.view">
        <field name="name">account.account.tree.balance.sheet</field>
        <field name="model">account.account</field>
        <field name="arch" type="xml">
            <tree string="Balance Sheet Accounts" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit_amount" sum="Total Debit"/>
                <field name="credit_amount" sum="Total Credit"/>
                <field name="balance_amount" sum="Total Balance"/>
                <field name="company_currency_id" invisible="1"/>
                <button name="action_view_ledger"
                        type="object"
                        string="View Ledger"
                        class="btn-link"
                        icon="fa-book"/>
            </tree>
        </field>
    </record>

    <!-- Profit & Loss Account List View -->
    <record id="view_account_list_profit_loss" model="ir.ui.view">
        <field name="name">account.account.tree.profit.loss</field>
        <field name="model">account.account</field>
        <field name="arch" type="xml">
            <tree string="Profit and Loss Accounts" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit_amount" sum="Total Debit"/>
                <field name="credit_amount" sum="Total Credit"/>
                <field name="balance_amount" sum="Total Balance"/>
                <field name="company_currency_id" invisible="1"/>
                <button name="action_view_ledger"
                        type="object"
                        string="View Ledger"
                        class="btn-link"
                        icon="fa-book"/>
            </tree>
        </field>
    </record>
</odoo>