<!-- views/tax_report_detail_views.xml -->
<odoo>
    <record id="view_tax_report_detail_tree" model="ir.ui.view">
        <field name="name">tax.report.detail.tree</field>
        <field name="model">tax.report.detail</field>
        <field name="arch" type="xml">
            <tree string="Tax Report Details">
                <field name="tax_id"/>
                <field name="invoice_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="action_tax_report_detail" model="ir.actions.act_window">
        <field name="name">Tax Report Details</field>
        <field name="res_model">tax.report.detail</field>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
    </record>
</odoo>
