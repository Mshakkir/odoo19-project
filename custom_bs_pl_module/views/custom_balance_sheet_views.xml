<odoo>
    <record id="view_custom_balance_sheet_line_list" model="ir.ui.view">
        <field name="name">custom.balance.sheet.line.list</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Details">
                <field name="account_type"/>
                <field name="name"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
                <button name="action_view_ledger"
                        string="View Ledger"
                        type="object"
                        class="btn-primary"
                        icon="fa-book"/>
            </list>
        </field>
    </record>
</odoo>
