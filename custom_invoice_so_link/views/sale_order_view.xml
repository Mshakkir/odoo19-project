<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_hide_create_invoice" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.hide.invoice.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Replace the button to add invisible condition -->
            <button name="_create_invoices" position="replace">
                <button name="_create_invoices"
                        string="Create Invoice"
                        type="object"
                        class="btn-primary"
                        invisible="invoice_count &gt; 0"
                        context="{'active_ids': [id]}"
                        data-hotkey="q"/>
            </button>
        </field>
    </record>
</odoo>