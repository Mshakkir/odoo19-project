<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_report_cashbook_analytic_view" model="ir.ui.view">
        <field name="name">Cash Book with Analytic</field>
        <field name="model">account.cashbook.report</field>
        <field name="inherit_id" ref="om_account_daily_reports.account_report_cashbook_view"/>
        <field name="arch" type="xml">
            <!-- Add analytic fields after the existing groups -->
            <xpath expr="//group[field[@name='journal_ids']]" position="after">
                <group string="Analytic Accounts">
                    <field name="report_type" widget="radio"/>
                    <field name="group_by_analytic"
                           invisible="report_type == 'separate'"/>
                    <field name="analytic_account_ids"
                           widget="many2many_tags"
                           placeholder="Leave empty for all analytic accounts"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>