<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add customer balance info after the Expiration field -->
            <xpath expr="//field[@name='validity_date']" position="after">

                <group invisible="not partner_id" string="Customer Account Summary" class="oe_subtotal_footer_separator">
                    <group class="oe_subtotal_footer">

                        <!-- 1. Total Invoiced -->
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               string="ðŸ“Š Total Invoiced"
                               style="font-weight: bold;"/>

                        <!-- 2. Amount Paid -->
                        <field name="customer_total_paid"
                               widget="monetary"
                               readonly="1"
                               decoration-success="customer_total_paid > 0"
                               string="âœ… Amount Paid"
                               style="font-weight: bold; color: green;"/>

                        <!-- Separator line -->
                        <div class="oe_subtotal_footer_separator"/>

                        <!-- 3. Balance Due -->
                        <field name="customer_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="customer_balance_due > 0"
                               decoration-success="customer_balance_due == 0"
                               string="â³ Balance Due"
                               style="font-weight: bold; font-size: 16px;"/>

                    </group>
                </group>

            </xpath>

        </field>
    </record>
</odoo>