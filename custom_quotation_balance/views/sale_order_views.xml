<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add customer balance info at the top of right side panel, after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">

                <!-- Customer Balance Fields - Compact Layout -->
                <label for="customer_total_invoiced"
                       string="Total Invoiced"
                       invisible="not partner_id"/>
                <field name="customer_total_invoiced"
                       widget="monetary"
                       readonly="1"
                       invisible="not partner_id"
                       class="oe_link"
                       style="cursor: pointer;"
                       options="{'field_to_call': 'action_view_customer_invoices'}"/>

                <label for="customer_total_paid"
                       string="Amount Received"
                       invisible="not partner_id"/>
                <field name="customer_total_paid"
                       widget="monetary"
                       readonly="1"
                       invisible="not partner_id"
                       decoration-success="customer_total_paid > 0"
                       class="oe_link"
                       style="cursor: pointer;"
                       options="{'field_to_call': 'action_view_customer_payments'}"/>

                <label for="customer_balance_due"
                       string="Balance Due"
                       invisible="not partner_id"/>
                <field name="customer_balance_due"
                       widget="monetary"
                       readonly="1"
                       invisible="not partner_id"
                       decoration-danger="customer_balance_due > 0"
                       decoration-success="customer_balance_due == 0"/>

            </xpath>

        </field>
    </record>
</odoo>