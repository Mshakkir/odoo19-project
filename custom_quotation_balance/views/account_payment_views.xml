<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_partner_balance" model="ir.ui.view">
        <field name="name">account.payment.form.partner.balance</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <!-- Add partner balance box - Vertical Layout with Dynamic Labels -->
            <xpath expr="//form/sheet" position="inside">
                <div class="partner_balance_box"
                     invisible="not partner_id"
                     style="position: absolute;
                            top: 0px;
                            right: 0px;
                            padding: 8px 15px;
                            text-align: right;
                            z-index: 1000;">

                    <!-- Total Invoiced/Billed (Dynamic Label) -->
                    <div style="margin-bottom: 5px;">
                        <!-- Customer: Total Invoiced -->
                        <span invisible="partner_type != 'customer'"
                              style="color: #6c757d; font-size: 13px; margin-right: 5px;">Total Invoiced = </span>
                        <!-- Vendor: Total Billed -->
                        <span invisible="partner_type != 'supplier'"
                              style="color: #6c757d; font-size: 13px; margin-right: 5px;">Total Billed = </span>

                        <button name="action_view_invoices"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="partner_total_invoiced == 0">
                            <field name="partner_total_invoiced"
                                   widget="monetary"
                                   readonly="1"
                                   nolabel="1"
                                   style="color: #007bff;"/>
                        </button>
                        <field name="partner_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               invisible="partner_total_invoiced != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Amount Received/Paid (Dynamic Label) -->
                    <div style="margin-bottom: 5px;">
                        <!-- Customer: Amt Received -->
                        <span invisible="partner_type != 'customer'"
                              style="color: #6c757d; font-size: 13px; margin-right: 5px;">Amt Received = </span>
                        <!-- Vendor: Amt Paid -->
                        <span invisible="partner_type != 'supplier'"
                              style="color: #6c757d; font-size: 13px; margin-right: 5px;">Amt Paid = </span>

                        <button name="action_view_credits"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="partner_total_credits == 0">
                            <field name="partner_total_credits"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-success="partner_total_credits > 0"
                                   nolabel="1"
                                   style="color: #28a745;"/>
                        </button>
                        <field name="partner_total_credits"
                               widget="monetary"
                               readonly="1"
                               invisible="partner_total_credits != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>

                    <!-- Balance Due -->
                    <div>
                        <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Balance Due = </span>
                        <field name="partner_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="partner_balance_due > 0"
                               decoration-success="partner_balance_due == 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: inline;"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>




