<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form -->
    <record id="view_warehouse_tb_wizard" model="ir.ui.view">
        <field name="name">warehouse.trial.balance.form</field>
        <field name="model">warehouse.trial.balance</field>
        <field name="arch" type="xml">
            <form string="Warehouse Trial Balance">
                <group>
                    <group string="Report Settings">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="target_move"/>
                        <field name="display_account"/>
                        <field name="journal_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Warehouse Selection">
                        <field name="report_mode" widget="radio"/>
                        <field name="analytic_account_id"
                               attrs="{'invisible': [('report_mode', '!=', 'single')]}"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Print Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_warehouse_tb_menu" model="ir.actions.act_window">
        <field name="name">Warehouse Trial Balance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">warehouse.trial.balance</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_warehouse_tb_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_warehouse_tb"
              name="Warehouse Trial Balance"
              sequence="21"
              parent="accounting_pdf_reports.menu_finance_audit_reports"
              action="action_warehouse_tb_menu"
              groups="account.group_account_user,account.group_account_manager"/>
</odoo>
