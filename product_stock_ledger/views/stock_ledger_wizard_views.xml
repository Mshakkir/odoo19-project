<odoo>
    <record id="view_stock_ledger_wizard_form" model="ir.ui.view">
        <field name="name">product.stock.ledger.wizard.form</field>
        <field name="model">product.stock.ledger.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Stock Ledger">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="warehouse_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>

                    <!-- Buttons -->
                    <footer>
                        <button name="action_preview" type="object" string="Preview" class="btn-secondary"/>
                        <button name="action_print_report" type="object" string="Print PDF" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>

                    <!-- Ledger lines preview below the footer so user sees result -->
                    <group string="Ledger Preview" attrs="{'invisible': [('line_ids','=',False)]}">
                        <field name="line_ids" nolabel="1">
                            <tree editable="false">
                                <field name="voucher"/>
                                <field name="particulars"/>
                                <field name="move_type"/>
                                <field name="rec_qty"/>
                                <field name="rec_rate"/>
                                <field name="issue_qty"/>
                                <field name="issue_rate"/>
                                <field name="balance"/>
                                <field name="unit"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_open_stock_ledger_wizard" model="ir.actions.act_window">
        <field name="name">Product Stock Ledger</field>
        <field name="res_model">product.stock.ledger.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_stock_ledger"
              name="Product Stock Ledger"
              parent="stock.menu_warehouse_report"
              action="action_open_stock_ledger_wizard"
              sequence="15"/>
</odoo>



