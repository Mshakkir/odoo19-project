<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ===================================================== -->
        <!-- Hide Header & Footer -->
        <!-- ===================================================== -->
        <template id="portal_layout_hide_header_footer"
                  inherit_id="portal.portal_layout"
                  priority="100">

            <xpath expr="." position="inside">
                <t t-if="'/my/orders/' in request.httprequest.path">
                    <style>
                        header,
                        .o_portal_navbar,
                        footer,
                        .o_footer {
                            display: none !important;
                        }
                        #wrapwrap {
                            padding-top: 0 !important;
                        }
                    </style>
                </t>
            </xpath>

        </template>


        <!-- ===================================================== -->
        <!-- Portal Sale Order: KEEP DOM, HIDE IT -->
        <!-- ===================================================== -->
        <template id="custom_portal_sale_order"
                  inherit_id="sale.sale_order_portal_content"
                  priority="200">

            <!-- Hide default content (DO NOT remove) -->
            <xpath expr="//div[@id='content']" position="attributes">
                <attribute name="style">display:none !important;</attribute>
            </xpath>

            <!-- Inject custom quotation AFTER default content -->
            <xpath expr="//div[@id='content']" position="after">
                <div class="custom-quotation-wrapper">

                    <t t-set="o" t-value="sale_order"/>
                    <t t-set="docs" t-value="[sale_order]"/>

                    <t t-call="custom_sa_quotation.custom_saleorder_report"/>

                </div>
            </xpath>

        </template>

    </data>
</odoo>
