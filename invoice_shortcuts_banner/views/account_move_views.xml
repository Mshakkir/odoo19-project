<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add shortcuts banner to invoice form -->
        <record id="view_move_form_shortcuts_banner" model="ir.ui.view">
            <field name="name">account.move.form.shortcuts.banner</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add banner after the sheet element starts -->
                <xpath expr="//sheet" position="before">
                    <div class="shortcuts_info_banner">
                        <div class="shortcuts_container">
                            <div class="shortcut_item">
                                <div class="shortcut_icon">ðŸ“¦</div>
