<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Report List View -->
    <record id="view_purchase_report_tree" model="ir.ui.view">
        <field name="name">purchase.report.view.tree</field>
        <field name="model">purchase.report.view</field>
        <field name="arch" type="xml">
            <list string="Purchase Report" create="false" edit="false" delete="false">
                <field name="order_date"/>
                <field name="order_name"/>
                <field name="partner_name"/>
                <field name="product_code"/>
                <field name="product_name"/>
                <field name="category_name"/>
                <field name="warehouse_name"/>
                <field name="user_name"/>
                <field name="product_qty" sum="Total Qty"/>
                <field name="qty_received" sum="Total Received"/>
                <field name="qty_invoiced" sum="Total Invoiced"/>
                <field name="product_uom"/>
                <field name="price_unit"/>
                <field name="price_subtotal" sum="Total Untaxed"/>
                <field name="price_total" sum="Total"/>
                <field name="state"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Purchase Report Pivot View -->
    <record id="view_purchase_report_pivot" model="ir.ui.view">
        <field name="name">purchase.report.view.pivot</field>
        <field name="model">purchase.report.view</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Analysis" sample="1">
                <field name="partner_name" type="row"/>
                <field name="price_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Purchase Report Graph View -->
    <record id="view_purchase_report_graph" model="ir.ui.view">
        <field name="name">purchase.report.view.graph</field>
        <field name="model">purchase.report.view</field>
        <field name="arch" type="xml">
            <graph string="Purchase Analysis" type="bar">
                <field name="partner_name"/>
                <field name="price_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Purchase Report Search View -->
    <record id="view_purchase_report_search" model="ir.ui.view">
        <field name="name">purchase.report.view.search</field>
        <field name="model">purchase.report.view</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_name"/>
                <field name="partner_name"/>
                <field name="product_name"/>
                <filter string="RFQ" name="rfq" domain="[('state','=','draft')]"/>
                <filter string="Purchase Order" name="purchase" domain="[('state','in',['purchase','done'])]"/>
                <group string="Group By">
                    <filter string="Vendor" name="group_partner" context="{'group_by':'partner_name'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_name'}"/>
                    <filter string="Category" name="group_category" context="{'group_by':'category_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Purchase Report Action -->
    <record id="action_purchase_report_view" model="ir.actions.act_window">
        <field name="name">Purchase Report</field>
        <field name="res_model">purchase.report.view</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="search_view_id" ref="view_purchase_report_search"/>
    </record>
</odoo>