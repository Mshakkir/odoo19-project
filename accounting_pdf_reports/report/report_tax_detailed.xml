<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_tax_detailed" name="Tax Report Detailed">
        <div class="o_tax_report">
            <h4>Detailed Tax Report</h4>
            <table class="table table-sm table-reports">
                <thead>
                    <tr>
                        <th>Tax Name</th>
                        <th>Net</th>
                        <th>Tax</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="lines.get('sale', [])" t-as="line">
                        <td><span t-esc="line.get('name')"/></td>
                        <td>
                            <span t-esc="line.get('net')"
                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                        </td>
                        <td>
                            <span t-esc="line.get('tax')"
                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
</odoo>
