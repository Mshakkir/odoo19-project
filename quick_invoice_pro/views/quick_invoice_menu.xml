<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Main Menu Item -->
        <menuitem
            id="menu_quick_invoice_root"
            name="Quick Invoice"
            sequence="5"
            web_icon="quick_invoice_pro,static/description/icon.png"
            groups="group_quick_invoice_user"/>

        <!-- Direct Invoice Menu -->
        <record id="action_quick_invoice_create" model="ir.actions.act_window">
            <field name="name">Direct Invoice</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{
                'default_quick_invoice_mode': True,
                'default_partner_id': ref('partner_walkin_customer'),
                'quick_invoice_view': True,
            }</field>
        </record>

        <menuitem
            id="menu_quick_invoice_create"
            name="ðŸ“ Direct Invoice"
            parent="menu_quick_invoice_root"
            action="action_quick_invoice_create"
            sequence="10"
            groups="group_quick_invoice_user"/>

        <!-- Quick Invoice Orders -->
        <record id="action_quick_invoice_orders" model="ir.actions.act_window">
            <field name="name">Quick Invoice Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('quick_invoice_mode', '=', True)]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="menu_quick_invoice_orders"
            name="ðŸ“‹ Quick Orders"
            parent="menu_quick_invoice_root"
            action="action_quick_invoice_orders"
            sequence="20"
            groups="group_quick_invoice_user"/>

        <!-- Configuration Menu -->
        <menuitem
            id="menu_quick_invoice_config"
            name="âš™ï¸ Configuration"
            parent="menu_quick_invoice_root"
            sequence="100"
            groups="group_quick_invoice_manager"/>

        <record id="action_quick_invoice_settings" model="ir.actions.act_window">
            <field name="name">Quick Invoice Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{'module': 'quick_invoice_pro'}</field>
        </record>

        <menuitem
            id="menu_quick_invoice_settings"
            name="Settings"
            parent="menu_quick_invoice_config"
            action="action_quick_invoice_settings"
            sequence="10"
            groups="group_quick_invoice_manager"/>

    </data>
</odoo>