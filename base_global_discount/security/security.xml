<odoo>
    <data noupdate="0">
        <!-- Global Discount Group -->
        <record id="group_global_discount" model="res.groups">
            <field name="name">Global Discounts</field>
            <field name="comment">Users with this permission can manage global discounts</field>
        </record>

        <!-- Record Rules -->
        <record id="global_discount_comp_rule" model="ir.rule">
            <field name="name">Global Discount: multi-company</field>
            <field name="model_id" ref="model_global_discount"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>