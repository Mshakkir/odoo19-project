<odoo>
    <!-- Inherit the sale order line tree view directly -->
    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree.discount.fixed</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <!-- Add after product_uom_qty -->
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field
                    name="discount_fixed"
                    groups="account_invoice_fixed_discount.group_fixed_discount"
                    optional="show"
                />
            </xpath>
        </field>
    </record>

    <!-- Inherit sale order line form view -->
    <record id="view_sales_order_line_form" model="ir.ui.view">
        <field name="name">sale.order.line.form.discount.fixed</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="after">
                <field
                    name="discount_fixed"
                    groups="account_invoice_fixed_discount.group_fixed_discount"
                />
            </xpath>
        </field>
    </record>
</odoo>