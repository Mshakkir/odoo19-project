<odoo>
    <!-- Tree View -->
    <record id="view_trial_balance_line_tree" model="ir.ui.view">
        <field name="name">trial.balance.line.tree</field>
        <field name="model">trial.balance.line</field>
        <field name="arch" type="xml">
            <tree string="Trial Balance Lines">
                <field name="account_id"/>
                <field name="opening_balance"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="ending_balance"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_trial_balance_line_form" model="ir.ui.view">
        <field name="name">trial.balance.line.form</field>
        <field name="model">trial.balance.line</field>
        <field name="arch" type="xml">
            <form string="Trial Balance Line">
                <group>
                    <field name="account_id"/>
                    <field name="opening_balance"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="ending_balance"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
