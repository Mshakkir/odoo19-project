<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add customer balance info in the right side panel, after validity_date -->
            <xpath expr="//field[@name='validity_date']" position="after">

                <!-- Customer Balance Section -->
                <group colspan="2" col="2" invisible="not partner_id" string="Customer Balance">

                    <!-- 1. Total Invoiced - Clickable -->
                    <label for="customer_total_invoiced" string="Total Invoiced"/>
                    <div class="o_row">
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               nolabel="1"/>
                        <button name="action_view_customer_invoices"
                                type="object"
                                class="btn-link"
                                icon="fa-external-link"
                                invisible="customer_total_invoiced == 0"
                                string="View"/>
                    </div>

                    <!-- 2. Amount Paid - Clickable -->
                    <label for="customer_total_paid" string="Amount Received"/>
                    <div class="o_row">
                        <field name="customer_total_paid"
                               widget="monetary"
                               readonly="1"
                               decoration-success="customer_total_paid > 0"
                               nolabel="1"/>
                        <button name="action_view_customer_payments"
                                type="object"
                                class="btn-link"
                                icon="fa-external-link"
                                invisible="customer_total_paid == 0"
                                string="View"/>
                    </div>

                    <!-- 3. Balance Due - Not clickable (just display) -->
                    <label for="customer_balance_due" string="Balance Due"/>
                    <field name="customer_balance_due"
                           readonly="1"
                           decoration-danger="customer_balance_due > 0"
                           decoration-success="customer_balance_due == 0"
                           widget="monetary"
                           nolabel="1"/>
                </group>

            </xpath>

        </field>
    </record>
</odoo>