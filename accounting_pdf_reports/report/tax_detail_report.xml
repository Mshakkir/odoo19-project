<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_tax_detail">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h3>Tax Detail Report - <span t-esc="tax.name"/></h3>
                    <p><strong>Date From:</strong> <span t-esc="data['date_from']"/> |
                       <strong>Date To:</strong> <span t-esc="data['date_to']"/></p>

                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Invoice</th>
                                <th>Date</th>
                                <th>Partner</th>
                                <th>Product</th>
                                <th>Net Amount</th>
                                <th>Tax Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="lines" t-as="l">
                                <td><span t-esc="l.move_id.name"/></td>
                                <td><span t-esc="l.date"/></td>
                                <td><span t-esc="l.partner_id.name"/></td>
                                <td><span t-esc="l.product_id.name"/></td>
                                <td><span t-esc="l.debit - l.credit"/></td>
                                <td><span t-esc="l.tax_line_id.amount"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
