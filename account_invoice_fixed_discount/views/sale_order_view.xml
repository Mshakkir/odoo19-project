<odoo>
    <!-- Simply insert discount_fixed into existing order_line tree -->
    <record id="view_order_form_with_discount_fixed" model="ir.ui.view">
        <field name="name">sale.order.form.discount.fixed</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Find product_id in order_line and add our field after it -->
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="after">
                <field name="discount_fixed"
                       groups="account_invoice_fixed_discount.group_fixed_discount"
                       optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>