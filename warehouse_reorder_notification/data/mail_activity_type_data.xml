<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Custom Activity Type for Reorder Notifications -->
        <!-- This prevents reorder notifications from appearing in "Other activities" -->
        <record id="mail_activity_type_reorder_notification" model="mail.activity.type">
            <field name="name">Minimum Inventory Rule</field>
            <field name="summary">Reorder Notification</field>
            <field name="icon">fa-bell</field>
            <field name="decoration_type">danger</field>
            <field name="delay_count">0</field>
            <field name="delay_unit">days</field>
        </record>
    </data>
</odoo>