<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template to add data attribute to country select field -->
        <template id="website_sale_checkout_country_filter"
                  inherit_id="website_sale.checkout"
                  priority="16">

            <!-- Add filter attribute to country select -->
            <xpath expr="//select[@name='country_id']" position="attributes">
                <attribute name="data-country-filter">1</attribute>
                <attribute name="class">form-select country-filter-select</attribute>
            </xpath>
        </template>

        <!-- Optional: Add a note about limited delivery countries -->
        <template id="website_sale_checkout_info"
                  inherit_id="website_sale.checkout"
                  priority="15">

            <xpath expr="//div[@id='div_country']" position="after">
                <div class="alert alert-info mt-2" id="delivery_countries_info" style="display:none;">
                    <small>
                        <i class="fa fa-info-circle"></i>
                        We deliver to selected countries only. Please choose from the available options.
                    </small>
                </div>
            </xpath>
        </template>
    </data>
</odoo>