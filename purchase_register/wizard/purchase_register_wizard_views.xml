<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_register_wizard_form" model="ir.ui.view">
        <field name="name">purchase.register.wizard.form</field>
        <field name="model">purchase.register.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Register Report">
                <sheet>
                    <group>
                        <group>
<!--                            <field name="date_filter" widget="radio"/>-->
                            <field name="date_from" required="1" readonly="date_filter != 'custom'"/>
                            <field name="date_to" required="1" readonly="date_filter != 'custom'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="partner_ids" widget="many2many_tags" placeholder="All Suppliers"/>
                        </group>
                        <group>
                            <field name="data_source"/>
                            <field name="report_type" widget="radio"/>
                            <field name="group_by" invisible="report_type == 'detailed'"/>
                            <field name="analytic_account_ids" widget="many2many_tags" placeholder="All Warehouses"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_show_details" string="Show Details" type="object" class="btn-info"/>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
<!--                    <button name="action_export_excel" string="Export Excel" type="object" class="btn-success"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Purchase Register Line Tree View -->
    <record id="view_purchase_register_line_tree" model="ir.ui.view">
        <field name="name">purchase.register.line.tree</field>
        <field name="model">purchase.register.line</field>
        <field name="arch" type="xml">
            <list string="Purchase Register Details" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="document_type"/>
                <field name="document_number"/>
                <field name="supplier_name"/>
                <field name="supplier_vat"/>
                <field name="warehouse"/>
                <field name="product"/>
                <field name="quantity" sum="Total Qty"/>
                <field name="unit_price"/>
                <field name="subtotal" sum="Total Subtotal"/>
                <field name="trade_discount" sum="Total Trade Dis"/>
                <field name="addin_discount" sum="Total AddIn Dis"/>
                <field name="addin_cost" sum="Total AddIn Cost"/>
                <field name="tax_amount" sum="Total Tax"/>
                <field name="round_off" sum="Total Round Off"/>
                <field name="total" sum="Grand Total"/>
                <field name="paid" sum="Total Paid"/>
                <field name="balance" sum="Total Balance"/>
                <field name="currency"/>
                <field name="taxes"/>
            </list>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_purchase_register_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Register</field>
        <field name="res_model">purchase.register.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_purchase_register_root"
              name="Purchase Register"
              parent="purchase.menu_purchase_root"
              sequence="99"/>

    <menuitem id="menu_purchase_register_report"
              name="Purchase"
              parent="menu_purchase_register_root"
              action="action_purchase_register_wizard"
              sequence="1"/>

</odoo>