<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Menu Item -->
    <menuitem id="menu_reorder_notification_dashboard"
              name="Reorder Notifications"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_reorder_notification_dashboard"
              sequence="5"/>

    <!-- Dashboard Action -->
    <record id="action_reorder_notification_dashboard" model="ir.actions.client">
        <field name="name">Reorder Notifications Dashboard</field>
        <field name="tag">reorder_notification_dashboard</field>
        <field name="target">current</field>
    </record>

    <!-- Add to Inventory Dashboard as well -->
    <record id="action_reorder_notification_dashboard_inventory" model="ir.actions.client">
        <field name="name">Reorder Alerts</field>
        <field name="tag">reorder_notification_dashboard</field>
        <field name="target">current</field>
    </record>

</odoo>