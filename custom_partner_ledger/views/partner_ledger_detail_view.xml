<odoo>

    <!-- List View -->
    <record id="view_partner_ledger_detail_tree" model="ir.ui.view">
        <field name="name">partner.ledger.detail.list</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <list string="Partner Ledger Details" default_order="partner_id asc, date asc"
                  decoration-muted="is_opening_balance">

                <field name="partner_id"/>
                <field name="date"/>
                <field name="move_id" optional="hide"/>
                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="name"/>
                <field name="ref"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance"/>
                <field name="is_opening_balance" column_invisible="1"/>

                <button name="action_view_invoice" type="object"
                        icon="fa-file-text-o"
                        title="View Invoice/Bill"
                        invisible="is_opening_balance or not move_id"/>

                <button name="action_view_journal_entry" type="object"
                        icon="fa-book"
                        title="View Journal Entry"
                        invisible="is_opening_balance or not move_id"/>

            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_partner_ledger_detail_search" model="ir.ui.view">
        <field name="name">partner.ledger.detail.search</field>
        <field name="model">partner.ledger.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="journal_id"/>

                <filter name="group_partner"
                        string="Group by Partner"
                        context="{'group_by': 'partner_id'}"/>
            </search>
        </field>
    </record>

</odoo>
