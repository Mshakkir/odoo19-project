<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add reconciliation indicator to Journal Entries list -->
    <record id="view_move_tree_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.bank.reconciliation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <!-- Add indicator after name field -->
            <field name="name" position="after">
                <field name="has_manual_reconciliation" invisible="1"/>
                <field name="reconciliation_info"
                       string="Bank Rec"
                       optional="show"
                       widget="badge"
                       decoration-success="has_manual_reconciliation"
                       attrs="{'invisible': [('has_manual_reconciliation', '=', False)]}"/>
            </field>
        </field>
    </record>

    <!-- Add indicator to Journal Entry form view -->
    <record id="view_move_form_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.move.form.inherit.bank.reconciliation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add alert banner at top of form -->
            <xpath expr="//form/sheet" position="before">
                <div class="alert alert-success text-center"
                     role="alert"
                     attrs="{'invisible': [('has_manual_reconciliation', '=', False)]}"
                     style="margin-bottom: 0px;">
                    <i class="fa fa-check-circle"/>
                    <strong>Manually Reconciled with Bank Statement:</strong>
                    <field name="reconciliation_info" readonly="1" class="oe_inline"/>
                    <field name="has_manual_reconciliation" invisible="1"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>