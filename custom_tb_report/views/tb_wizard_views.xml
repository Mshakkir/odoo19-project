<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Inherit the Odoo Mates Trial Balance wizard -->
  <record id="inherit_trial_balance_wizard_view" model="ir.ui.view">
    <field name="name">inherit.trial.balance.wizard.view</field>
    <field name="model">account.trial.balance.report.wizard</field>
    <field name="inherit_id" ref="accounting_pdf_reports.account_trial_balance_report_view"/>
    <field name="arch" type="xml">
      <!-- Insert our button before Print -->
      <xpath expr="//footer/button[@name='check_report']" position="before">
        <button name="open_trial_balance_details"
                string="Show Details"
                type="object"
                class="btn-secondary"/>
      </xpath>
    </field>
  </record>
</odoo>
