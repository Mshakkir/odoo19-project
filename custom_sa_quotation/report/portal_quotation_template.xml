<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================== -->
    <!-- Hide Portal Header & Footer ONLY for /my/orders/ -->
    <!-- ===================================================== -->
    <template id="portal_layout_hide_header_footer"
              inherit_id="portal.portal_layout"
              priority="200">

        <!-- Inject CSS safely at ROOT -->
        <xpath expr="." position="inside">
            <t t-if="'/my/orders/' in request.httprequest.path">
                <style>
                    /* Header */
                    header,
                    .o_portal_navbar,
                    .o_main_navbar,
                    .navbar {
                        display: none !important;
                    }

                    /* Footer */
                    footer,
                    #footer,
                    .o_footer {
                        display: none !important;
                    }

                    /* Remove spacing created by navbar */
                    .o_portal_wrap,
                    main {
                        margin-top: 0 !important;
                        padding-top: 0 !important;
                    }
                </style>
            </t>
        </xpath>

    </template>

</odoo>
