<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to sale order line tree view -->
    <record id="view_order_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.warehouse</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add warehouse column to order lines tree -->
            <xpath expr="//field[@name='order_line']//field[@name='price_subtotal']" position="before">
                <field name="warehouse_id"
                       optional="show"
                       string="Warehouse"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

    <!-- Add warehouse field to order line form view popup -->
    <record id="view_order_line_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.warehouse</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="warehouse_id"
                       string="Delivery Warehouse"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>