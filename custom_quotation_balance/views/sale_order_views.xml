<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add balance info at top right corner in clean format -->
            <xpath expr="//form/sheet" position="before">
                <div invisible="not partner_id"
                     style="position: absolute;
                            right: 20px;
                            top: 10px;
                            text-align: right;
                            font-size: 13px;
                            line-height: 2;
                            z-index: 1000;">
                    <div>
                        <span>Total Invoiced = </span>
                        <button name="action_view_customer_invoices"
                                type="object"
                                class="btn btn-link"
                                style="padding: 0; font-weight: bold; text-decoration: none; color: inherit;"
                                invisible="customer_total_invoiced == 0">
                            <field name="customer_total_invoiced"
                                   widget="monetary"
                                   nolabel="1"
                                   readonly="1"/>
                        </button>
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               nolabel="1"
                               readonly="1"
                               invisible="customer_total_invoiced != 0"
                               style="font-weight: bold; display: inline;"/>
                    </div>
                    <div>
                        <span>Total Received = </span>
                        <button name="action_view_customer_payments"
                                type="object"
                                class="btn btn-link"
                                style="padding: 0; font-weight: bold; text-decoration: none; color: inherit;"
                                invisible="customer_total_paid == 0">
                            <field name="customer_total_paid"
                                   widget="monetary"
                                   nolabel="1"
                                   readonly="1"/>
                        </button>
                        <field name="customer_total_paid"
                               widget="monetary"
                               nolabel="1"
                               readonly="1"
                               invisible="customer_total_paid != 0"
                               style="font-weight: bold; display: inline;"/>
                    </div>
                    <div>
                        <span>Balance Due = </span>
                        <field name="customer_balance_due"
                               widget="monetary"
                               nolabel="1"
                               readonly="1"
                               style="font-weight: bold; display: inline;"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>


