<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add aggressive CSS to hide category description on shop pages only -->
    <template id="shop_category_hide_description" inherit_id="website.layout" name="Hide Shop Category Descriptions">
        <xpath expr="//head" position="inside">
            <style>
                /* Hide description only on /shop/category pages */
                body.oe_website_sale section.o_wsale_products_section_header_content {
                    display: none !important;
                }

                body.oe_website_sale section.o_wsale_products_section_header_content p {
                    display: none !important;
                }

                body.oe_website_sale section.o_wsale_products_section_header_content * {
                    display: none !important;
                }

                /* Hide all paragraphs that come before products grid on shop pages */
                body.oe_website_sale div#products_grid {
                    margin-top: 2rem;
                }

                body.oe_website_sale div#products_grid ~ section > div > p,
                body.oe_website_sale section > div > p.lead {
                    display: none !important;
                }

                /* Hide category description text blocks */
                body.oe_website_sale .s_text_block > p:first-child,
                body.oe_website_sale section.s_text_block {
                    display: none !important;
                }

                /* Ensure product grid visibility */
                body.oe_website_sale div#products_grid {
                    display: grid !important;
                    visibility: visible !important;
                }
            </style>
        </xpath>
    </template>
</odoo>