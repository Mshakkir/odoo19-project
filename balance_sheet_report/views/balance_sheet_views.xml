<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="balance_sheet_form_view" model="ir.ui.view">
        <field name="name">balance.sheet.form</field>
        <field name="model">account.balance.sheet</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
