<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PDF Report Action -->
    <record id="action_report_purchase_report_pdf" model="ir.actions.report">
        <field name="name">Purchase Report</field>
        <field name="model">purchase.report.view</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_reports.report_purchase_report_document</field>
        <field name="report_file">purchase_reports.report_purchase_report_document</field>
        <field name="binding_model_id" ref="model_purchase_report_view"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Purchase Report - %s' % (object.order_date.strftime('%Y-%m-%d') if object.order_date else 'Report')</field>
    </record>

    <!-- Excel Report Action -->
    <record id="action_report_purchase_report_excel" model="ir.actions.server">
        <field name="name">Export to Excel</field>
        <field name="model_id" ref="model_purchase_report_view"/>
        <field name="binding_model_id" ref="model_purchase_report_view"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_export_excel()
        </field>
    </record>
</odoo>