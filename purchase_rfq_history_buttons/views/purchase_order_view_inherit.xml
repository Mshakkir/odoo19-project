<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_history_buttons" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.history.buttons</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert after the Other Information tab -->
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page string="Product History">
                    <group>
                        <group>
                            <button name="action_view_stock_history"
                                    type="object"
                                    string="Stock History"
                                    class="btn-primary"
                                    icon="fa-cubes"/>
                            <button name="action_view_sales_history"
                                    type="object"
                                    string="Sales History"
                                    class="btn-info"
                                    icon="fa-line-chart"/>
                            <button name="action_view_purchase_history"
                                    type="object"
                                    string="Purchase History"
                                    class="btn-success"
                                    icon="fa-shopping-cart"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
