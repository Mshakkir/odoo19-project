        <record id="group_warehouse_dammam" model="res.groups">
            <field name="name">Dammam Warehouse User</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="group_warehouse_baladiya" model="res.groups">
            <field name="name">Baladiya Warehouse User</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

