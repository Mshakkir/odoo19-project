<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View - Add Partially Billed Column -->
        <record id="purchase_order_view_tree_extended" model="ir.ui.view">
            <field name="name">purchase.order.tree.extended</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="partially_billed_amount"/>
                    <field name="partially_billed_status"/>
                </xpath>
            </field>
        </record>

        <!-- Form View - Add Fields -->
        <record id="purchase_order_view_form_extended" model="ir.ui.view">
            <field name="name">purchase.order.form.extended</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <group>
                        <field name="partially_billed_amount" readonly="1"/>
                        <field name="partially_billed_status" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>