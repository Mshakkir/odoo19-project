<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Shared Customer Payment Sequence -->
        <record id="sequence_payment_customer_shared" model="ir.sequence">
            <field name="name">Customer Payment Receipt (Shared)</field>
            <field name="code">account.payment.customer.shared</field>
            <field name="prefix"></field>  <!-- No prefix here, added dynamically -->
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Shared Vendor Payment Sequence -->
        <record id="sequence_payment_supplier_shared" model="ir.sequence">
            <field name="name">Vendor Payment (Shared)</field>
            <field name="code">account.payment.supplier.shared</field>
            <field name="prefix"></field>  <!-- No prefix here, added dynamically -->
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>


