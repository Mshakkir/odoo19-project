<odoo>
    <record id="view_move_form_inherit_discount_freight" model="ir.ui.view">
        <field name="name">account.move.form.discount.freight</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@string='Other Info']" position="inside">
                <group string="Extra Charges">
                    <field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="freight_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
