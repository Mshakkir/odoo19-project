<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Invoice View -->
    <record id="view_move_form_customer_balance" model="ir.ui.view">
        <field name="name">account.move.form.customer.balance</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- Customer Balance - Only show for customer invoices -->
                <group name="customer_balance_info" invisible="move_type not in ['out_invoice', 'out_refund']">
                    <group>
                        <label for="customer_total_invoiced" string="Total Invoiced"/>
                        <div class="o_row">
                            <field name="customer_total_invoiced" widget="monetary" readonly="1"/>
                            <button name="action_view_customer_invoices"
                                    type="object"
                                    string="View"
                                    class="btn-link"/>
                        </div>

                        <label for="customer_total_received" string="Amount Received"/>
                        <div class="o_row">
                            <field name="customer_total_received" widget="monetary" readonly="1"/>
                            <button name="action_view_customer_payments"
                                    type="object"
                                    string="View"
                                    class="btn-link"/>
                        </div>

                        <field name="customer_balance_due" widget="monetary" readonly="1"/>
                    </group>
                </group>

                <!-- Vendor Balance - Only show for vendor bills -->
                <group name="vendor_balance_info" invisible="move_type not in ['in_invoice', 'in_refund']">
                    <group>
                        <label for="vendor_total_billed" string="Total Billed"/>
                        <div class="o_row">
                            <field name="vendor_total_billed" widget="monetary" readonly="1"/>
                            <button name="action_view_vendor_bills"
                                    type="object"
                                    string="View"
                                    class="btn-link"/>
                        </div>

                        <label for="vendor_total_paid" string="Amount Paid"/>
                        <div class="o_row">
                            <field name="vendor_total_paid" widget="monetary" readonly="1"/>
                            <button name="action_view_vendor_payments"
                                    type="object"
                                    string="View"
                                    class="btn-link"/>
                        </div>

                        <field name="vendor_balance_due" widget="monetary" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>