<odoo>
  <record id="view_ledger_line_list" model="ir.ui.view">
    <field name="name">product.stock.ledger.line.list</field>
    <field name="model">product.stock.ledger.line</field>
    <field name="arch" type="xml">
      <list string="Product Stock Ledger" create="false" edit="false" delete="false">
        <field name="date" string="Date"/>
        <field name="voucher" string="Voucher"/>
        <field name="particulars" string="Particulars"/>
        <field name="type" string="Type"/>
        <field name="rec_qty" string="Rec. Qty" widget="sum"/>
        <field name="rec_rate" string="Rate" widget="sum"/>
        <field name="issue_qty" string="Issue Qty" widget="sum"/>
        <field name="issue_rate" string="Rate" widget="sum"/>
        <field name="balance" string="Balance" widget="sum"/>
        <field name="uom" string="Unit" invisible="0"/>
        <field name="invoice_status" string="Invoice Status"/>
      </list>
    </field>
  </record>

  <record id="view_ledger_line_search" model="ir.ui.view">
    <field name="name">product.stock.ledger.line.search</field>
    <field name="model">product.stock.ledger.line</field>
    <field name="arch" type="xml">
      <search string="Product Stock Ledger">
        <!-- Text Filters -->
        <field name="voucher" string="Voucher"/>
        <field name="particulars" string="Particulars"/>
        <field name="product_id" string="Product"/>
        <field name="warehouse_id" string="Warehouse"/>

        <!-- Separator -->
        <separator/>

        <!-- Date Filter -->
        <filter name="filter_today" string="Today" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
        <filter name="filter_this_month" string="This Month" domain="[('date', '&gt;=', context_today().replace(day=1).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
        <filter name="filter_this_year" string="This Year" domain="[('date', '&gt;=', context_today().replace(month=1, day=1).strftime('%Y-%m-%d')), ('date', '&lt;', context_today().replace(month=1, day=1, year=context_today().year + 1).strftime('%Y-%m-%d'))]"/>

        <!-- Separator -->
        <separator/>

        <!-- Type Filters -->
        <filter name="filter_receipts" string="Receipts" domain="[('type', '=', 'Receipts')]"/>
        <filter name="filter_delivery" string="Delivery" domain="[('type', '=', 'Delivery')]"/>
        <filter name="filter_internal" string="Internal Transfer" domain="[('type', '=', 'Internal Transfer')]"/>

        <!-- Separator -->
        <separator/>

        <!-- Invoice Status Filters -->
        <filter name="filter_invoiced" string="Invoiced" domain="[('invoice_status', '=', 'Invoiced')]"/>
        <filter name="filter_not_invoiced" string="Not Invoiced" domain="[('invoice_status', '=', 'Not Invoiced')]"/>
        <filter name="filter_to_invoice" string="To Invoice" domain="[('invoice_status', '=', 'To Invoice')]"/>

        <!-- Separator -->
        <separator/>

        <!-- Grouping Options -->
        <filter name="group_by_date" string="Date" context="{'group_by': 'date'}"/>
        <filter name="group_by_type" string="Type" context="{'group_by': 'type'}"/>
        <filter name="group_by_invoice_status" string="Invoice Status" context="{'group_by': 'invoice_status'}"/>
      </search>
    </field>
  </record>
</odoo>

