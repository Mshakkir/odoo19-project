<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ✅ Financial Report Line List View -->
    <record id="view_account_financial_report_line_list" model="ir.ui.view">
        <field name="name">account.financial.report.line.list</field>
        <field name="model">account.financial.report.line</field>
        <field name="arch" type="xml">
            <list string="Financial Report Details"
                  decoration-info="balance &lt; 0"
                  decoration-success="balance &gt; 0"
                  create="false"
                  edit="false">

                <!-- Hidden sorting -->
                <field name="sequence" invisible="1"/>

                <!-- ✅ Account Code -->
                <field name="code" string="Code"/>

                <!-- ✅ Account Name (supports bold HTML sections) -->
                <field name="name" string="Account" widget="html" options="{'sanitize': False}"/>

                <!-- ✅ Amount Columns -->
                <field name="debit" string="Debit" sum="Total Debit"/>
                <field name="credit" string="Credit" sum="Total Credit"/>
                <field name="balance" string="Amount" sum="Total Amount"/>

                <!-- ✅ Hidden helper fields -->
                <field name="is_section" invisible="1"/>
                <field name="account_id" invisible="1"/>
                <field name="company_id" invisible="1"/>

                <!-- ✅ View Ledger button (conditionally invisible) -->
                <button name="action_view_ledger"
                        type="object"
                        string="View Ledger"
                        icon="fa-book"
                        help="Open account ledger for this account.">
                    <invisible>is_section</invisible>
                </button>
            </list>
        </field>
    </record>

    <!-- ✅ Action Window -->
    <record id="action_account_financial_report_line" model="ir.actions.act_window">
        <field name="name">Financial Report Details</field>
        <field name="res_model">account.financial.report.line</field>
        <field name="view_mode">list</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No financial report details found.
            </p>
            <p>
                Click <b>View Details</b> from the Balance Sheet or Profit &amp; Loss report wizard to generate them.
            </p>
        </field>
    </record>
</odoo>








