<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- POS Session Form View -->
    <record id="view_pos_session_form_inherit_warehouse" model="ir.ui.view">
        <field name="name">pos.session.form.warehouse</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse and analytic account fields after config_id -->
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="warehouse_id"
                       options="{'no_create': True, 'no_open': True}"
                       readonly="state != 'opening_control'"/>
                <field name="analytic_account_id"
                       options="{'no_create': True, 'no_open': True}"
                       readonly="state != 'opening_control'"/>
            </xpath>

        </field>
    </record>

    <!-- POS Session Tree View -->
    <record id="view_pos_session_tree_inherit_warehouse" model="ir.ui.view">
        <field name="name">pos.session.tree.warehouse</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
        <field name="arch" type="xml">

            <!-- Add warehouse column -->
            <xpath expr="//field[@name='config_id']" position="after">
                <field name="warehouse_id" optional="show"/>
                <field name="analytic_account_id" optional="hide"/>
            </xpath>

        </field>
    </record>

    <!-- POS Session Search View -->
    <record id="view_pos_session_search_inherit_warehouse" model="ir.ui.view">
        <field name="name">pos.session.search.warehouse</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_search"/>
        <field name="arch" type="xml">

            <!-- Add warehouse filter -->
            <xpath expr="//filter[@name='config']" position="after">
                <filter string="Warehouse" name="warehouse"
                        context="{'group_by': 'warehouse_id'}"/>
                <filter string="Analytic Account" name="analytic"
                        context="{'group_by': 'analytic_account_id'}"/>
            </xpath>

        </field>
    </record>

</odoo>