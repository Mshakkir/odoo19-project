<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field and delivery/receipt smart buttons to invoice form -->
    <record id="view_move_form_inherit_invoice_stock_automation" model="ir.ui.view">
        <field name="name">account.move.form.inherit.stock.automation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add delivery smart button (Customer Invoices) -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_delivery"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="delivery_count == 0 or move_type not in ('out_invoice', 'out_refund')"
                        context="{'default_partner_id': partner_id}">
                    <field name="delivery_count" widget="statinfo" string="Delivery"/>
                </button>
            </xpath>

            <!-- Add receipt smart button (Vendor Bills) -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_receipt"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download"
                        invisible="receipt_count == 0 or move_type not in ('in_invoice', 'in_refund')"
                        context="{'default_partner_id': partner_id}">
                    <field name="receipt_count" widget="statinfo" string="Receipt"/>
                </button>
            </xpath>

            <!-- Add warehouse_id after product_id (visible, this is your intended one) -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_total']" position="after">
                <field name="warehouse_id"
                       optional="hide"
                       width="60px"
                       column_invisible="parent.move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Hide the duplicate native warehouse_id at the end of the line -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                <field name="warehouse_id" column_invisible="True"/>
            </xpath>

            <!-- Add auto create delivery/receipt checkbox -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="auto_create_delivery"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund') or state != 'draft' or not is_direct_invoice"/>
            </xpath>

            <!-- Add picking_ids and count fields (invisible, used for smart buttons) -->
            <xpath expr="//field[@name='invoice_date']" position="before">
                <field name="picking_ids" invisible="1"/>
                <field name="delivery_count" invisible="1"/>
                <field name="receipt_count" invisible="1"/>
                <field name="is_direct_invoice" invisible="1"/>
            </xpath>

        </field>
    </record>

</odoo>




