<odoo>
    <template id="balance_sheet_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <h2>Balance Sheet main</h2>
                <p>Date From: <t t-esc="date_from"/> To: <t t-esc="date_to"/></p>

                <h3>Assets</h3>
                <table border="1" cellspacing="0">
                    <tr><th>Code</th><th>Account</th><th>Balance</th><th>Action</th></tr>
                    <t t-foreach="assets" t-as="line">
                        <tr>
                            <td><t t-esc="line['code']"/></td>
                            <td><t t-esc="line['name']"/></td>
                            <td><t t-esc="line['balance']"/></td>
                            <td>
                                <a t-att-href="'#action=%s' % line['ledger_action']['id']"
                                   target="_blank">Show Details</a>
                            </td>
                        </tr>
                    </t>
                </table>

                <h3>Liabilities</h3>
                <table border="1" cellspacing="0">
                    <tr><th>Code</th><th>Account</th><th>Balance</th><th>Action</th></tr>
                    <t t-foreach="liabilities" t-as="line">
                        <tr>
                            <td><t t-esc="line['code']"/></td>
                            <td><t t-esc="line['name']"/></td>
                            <td><t t-esc="line['balance']"/></td>
                            <td>
                                <a t-att-href="'#action=%s' % line['ledger_action']['id']"
                                   target="_blank">Show Details</a>
                            </td>
                        </tr>
                    </t>
                </table>

                <h3>Equity</h3>
                <table border="1" cellspacing="0">
                    <tr><th>Code</th><th>Account</th><th>Balance</th><th>Action</th></tr>
                    <t t-foreach="equity" t-as="line">
                        <tr>
                            <td><t t-esc="line['code']"/></td>
                            <td><t t-esc="line['name']"/></td>
                            <td><t t-esc="line['balance']"/></td>
                            <td>
                                <a t-att-href="'#action=%s' % line['ledger_action']['id']"
                                   target="_blank">Show Details</a>
                            </td>
                        </tr>
                    </t>
                </table>
            </t>
        </t>
    </template>
</odoo>
