<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warehouse_orderpoint_form_inherit" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.form.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
        <field name="arch" type="xml">
            <!-- Add notification checkbox after product_id field -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="notify_on_reorder" string="Enable Notifications"/>
            </xpath>

            <!-- Add notification status fields (hidden) after product_max_qty -->
            <xpath expr="//field[@name='product_max_qty']" position="after">
                <field name="notification_sent" invisible="1"/>
                <field name="last_notification_date" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>