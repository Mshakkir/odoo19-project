<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- VERSION 3: Return button ONLY on credit notes, Smart button ONLY on invoices -->
        <!-- This keeps credit notes clean with just the Return button -->
        <!-- And keeps invoices with just the smart button -->

        <record id="view_move_form_credit_note_return_button_v3" model="ir.ui.view">
            <field name="name">account.move.form.credit.note.return.button.v3</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Return button in header - ONLY for credit notes -->
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <button name="action_view_delivery"
                            string="Return"
                            type="object"
                            class="btn-primary"
                            invisible="move_type != 'out_refund' or delivery_count == 0"
                            groups="stock.group_stock_user"
                            help="Open the original delivery to process return"/>
                </xpath>

                <!-- Smart button - ONLY shows on regular invoices (NOT on credit notes) -->
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_delivery"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_count == 0 or move_type != 'out_invoice'"
                            groups="stock.group_stock_user">
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>