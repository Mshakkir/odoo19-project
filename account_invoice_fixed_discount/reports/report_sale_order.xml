<odoo>
    <!-- Inherit from the base sale report -->
    <template id="report_saleorder_document_discount" inherit_id="sale.report_saleorder_document">

        <!-- Find and replace the entire total section -->
        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row" name="total">
                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                    <table class="table table-sm" style="page-break-inside: avoid;">

                        <!-- Untaxed Amount (before discount) -->
                        <tr>
                            <td><strong>Untaxed Amount:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_undiscounted"/>
                            </td>
                        </tr>

                        <!-- Show discount if present -->
                        <t t-if="doc.global_discount_fixed &gt; 0">
                            <tr style="border-top: 1px solid black;">
                                <td><strong>Discount:</strong></td>
                                <td class="text-end">
                                    <span t-field="doc.global_discount_fixed"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Untaxed Amount (After Discount):</strong></td>
                                <td class="text-end">
                                    <span t-field="doc.amount_after_discount"/>
                                </td>
                            </tr>
                        </t>

                        <!-- Taxes -->
                        <t t-set="tax_totals" t-value="doc.tax_totals"/>
                        <t t-if="tax_totals">
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                    <tr style="border-top: 1px solid #dee2e6;">
                                        <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) == 1">
                                            <td><span t-esc="amount_by_group['tax_group_name']"/></td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group['tax_group_name']"/>
                                                <span class="text-nowrap"> on
                                                    <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                                </span>
                                            </td>
                                        </t>
                                        <td class="text-end">
                                            <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>

                        <!-- Total -->
                        <tr class="border-black o_total" style="border-top: 2px solid black !important;">
                            <td><strong>Total:</strong></td>
                            <td class="text-end">
                                <span t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>

    </template>
</odoo>