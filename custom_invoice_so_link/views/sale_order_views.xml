<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_info" model="ir.ui.view">
        <field name="name">sale.order.form.info</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Just add the informational message - no XPath for button -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning">
                    <strong style="font-size: 16px;">⚠️ Custom Invoice Workflow Active</strong>
                    <p style="margin-top: 10px;">
                        <strong>Do NOT use the "Create Invoice" button below.</strong><br/>
                        Please use this workflow instead:<br/>
                        <strong>Invoicing → Invoices → Create</strong>
                    </p>
                    <p>
                        This allows you to select and combine multiple sales orders into a single invoice
                        with automatic line population.
                    </p>
                </div>
            </xpath>

        </field>
    </record>
</odoo>