<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add custom sequence fields to journal form -->
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.payment.sequence</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']" position="inside">
                <group string="Payment Sequences" invisible="type not in ['bank', 'cash']">
                    <field name="inbound_payment_sequence_id"
                           context="{'default_name': 'Inbound Payment ' + name, 'default_code': 'INPAY', 'default_prefix': 'IN/%(range_year)s/', 'default_padding': 5}"
                           options="{'no_create_edit': True}"/>
                    <field name="outbound_payment_sequence_id"
                           context="{'default_name': 'Outbound Payment ' + name, 'default_code': 'OUTPAY', 'default_prefix': 'OUT/%(range_year)s/', 'default_padding': 5}"
                           options="{'no_create_edit': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>