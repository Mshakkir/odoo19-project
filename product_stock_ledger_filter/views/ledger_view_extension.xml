<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the ledger list view to add column filter button -->
    <record id="view_ledger_line_list_extended" model="ir.ui.view">
        <field name="name">product.stock.ledger.line.list.extended</field>
        <field name="model">product.stock.ledger.line</field>
        <field name="inherit_id" ref="product_stock_ledger.view_ledger_line_list"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">ColumnFilterListView</attribute>
            </xpath>
        </field>
    </record>
</odoo>