<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1️⃣ Add Analytic Account field -->
    <record id="view_account_tax_report_wizard_inherit" model="ir.ui.view">
        <field name="name">account.tax.report.wizard.inherit.analytic</field>
        <field name="model">account.tax.report.wizard</field>
        <field name="inherit_id" ref="accounting_pdf_reports.accounting_tax_report_view"/>
        <field name="arch" type="xml">
            <field name="date_to" position="after">
                <field name="analytic_account_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <!-- 2️⃣ Add "Show Details" button -->
    <record id="inherit_tax_report_wizard_view" model="ir.ui.view">
        <field name="name">inherit.tax.report.wizard.view</field>
        <field name="model">account.tax.report.wizard</field>
        <field name="inherit_id" ref="accounting_pdf_reports.accounting_tax_report_view"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='check_report']" position="before">
                <button name="open_tax_report_details"
                        string="Show Details"
                        type="object"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>





