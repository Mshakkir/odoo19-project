<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trial_balance_wizard_form" model="ir.ui.view">
        <field name="name">trial.balance.wizard.form</field>
        <field name="model">trial.balance.wizard</field>
        <field name="arch" type="xml">
            <form string="Trial Balance Options">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_show_tb" string="Show Trial Balance" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
