<odoo>
    <!-- Override the default Products action to show tree view first -->
    <record id="product.product_template_action_all" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Set priority for tree view to appear first -->
    <record id="product_template_tree_view_inherit_priority" model="ir.ui.view">
        <field name="name">product.template.tree.priority</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="default_order">name</attribute>
            </tree>
        </field>
    </record>

    <!-- Lower priority for kanban view -->
    <record id="product.product_template_kanban_view" model="ir.ui.view">
        <field name="priority">100</field>
    </record>
</odoo>