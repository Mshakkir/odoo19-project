<odoo>
    <record id="view_general_ledger_detail_line_list" model="ir.ui.view">
        <field name="name">general.ledger.detail.line.list</field>
        <field name="model">general.ledger.detail.line</field>
        <field name="arch" type="xml">
            <list string="General Ledger Details">
                <field name="account_id"/>
                <field name="analytic_account_id"/>
                <field name="partner_name"/>
                <field name="date"/>
                <field name="move_name"/>
                <field name="label"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance"/>
                <button name="open_move_lines" string="Show Journal Items"
                        type="object" class="btn-link"/>
            </list>
        </field>
    </record>

    <record id="action_general_ledger_detail_line" model="ir.actions.act_window">
        <field name="name">General Ledger Details</field>
        <field name="res_model">general.ledger.detail.line</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
