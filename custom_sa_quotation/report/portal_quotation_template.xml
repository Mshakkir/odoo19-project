<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom portal with your report -->
    <template id="clean_portal_override" inherit_id="sale.sale_order_portal_content" priority="999">

        <!-- Replace everything -->
        <xpath expr="." position="replace">
            <t t-name="sale.sale_order_portal_content">

                <!-- Hidden dummy element to prevent JS errors -->
                <div style="display: none;">
                    <table id="sales_order_table" t-att-data-order-id="sale_order.id" t-att-data-token="sale_order.access_token"></table>
                </div>

                <!-- CSS for full width -->
                <style>
                    .o_portal_sale_sidebar { display: none !important; }
                    .breadcrumb { display: none !important; }
                    .o_portal .o_portal_wrap .row > div {
                        flex: 0 0 100% !important;
                        max-width: 100% !important;
                    }
                    .custom-report-container {
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 20px;
                        background: white;
                    }
                </style>

                <!-- Test: Inline content first -->
                <div class="custom-report-container" style="background: yellow; padding: 50px; margin: 20px;">
                    <h1 style="color: red;">INLINE TEST CONTENT</h1>
                    <h2>Order: <span t-esc="sale_order.name"/></h2>
                    <h3>Customer: <span t-esc="sale_order.partner_id.name"/></h3>
                    <p>Amount: <span t-esc="sale_order.amount_total"/> <span t-esc="sale_order.currency_id.name"/></p>

                    <hr/>

                    <!-- Simple header test -->
                    <div style="border: 2px solid #8B1538; padding: 20px; margin-top: 20px;">
                        <h2 style="color: #8B1538;">SAMEER SHARAF AL OTAIBI TRADING COMPANY</h2>
                        <p>C.R. 4030216154</p>
                        <p>VAT: 311299944700003</p>
                    </div>
                </div>

            </t>
        </xpath>

    </template>
</odoo>