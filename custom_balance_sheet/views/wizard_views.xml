<!-- custom_balance_sheet/views/wizard_views.xml -->
<odoo>
    <record id="view_balance_sheet_wizard_form" model="ir.ui.view">
        <field name="name">balance.sheet.wizard.form</field>
        <field name="model">balance.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Balance Sheet">
                <group>
                    <field name="move_scope"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="View Details" type="object" name="action_view_details" class="btn-primary"/>
                    <button string="Print PDF" type="object" name="action_print_pdf" class="btn-secondary"/>
                    <button string="Close" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
