<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Modify Asset Depreciation List View - Add Post Button -->
        <record id="custom_depreciation_line_list_view" model="ir.ui.view">
            <field name="name">account.asset.depreciation.line.list - Custom Post</field>
            <field name="model">account.asset.depreciation.line</field>
            <field name="type">list</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_depreciation_line_list"/>
            <field name="arch" type="xml">

                <!-- Add Post Button after move_check field -->
                <xpath expr="//field[@name='move_check']" position="after">
                    <button name="action_post_depreciation"
                            type="object"
                            icon="fa-check-circle"
                            string="Post"
                            title="Post Depreciation Entry"
                            invisible="move_check == True or parent_state != 'open'"
                            class="btn-success btn-sm"/>

                    <button name="action_unpost_depreciation"
                            type="object"
                            icon="fa-times-circle"
                            string="Unpost"
                            title="Unpost Depreciation Entry"
                            invisible="move_check == False or parent_state != 'open'"
                            class="btn-warning btn-sm"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>