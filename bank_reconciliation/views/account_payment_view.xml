<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add indicator to Payment list view -->
    <record id="view_account_payment_tree_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.bank.reconciliation</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <!-- Add reconciliation indicator -->
            <field name="state" position="after">
                <field name="move_id" invisible="1"/>
                <field name="is_bank_reconciled"
                       string="Bank Rec"
                       widget="boolean_toggle"
                       optional="show"/>
            </field>
        </field>
    </record>

    <!-- Add indicator to Payment form view -->
    <record id="view_account_payment_form_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.bank.reconciliation</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <div class="alert alert-success text-center"
                     role="alert"
                     attrs="{'invisible': [('is_bank_reconciled', '=', False)]}"
                     style="margin-bottom: 0px;">
                    <i class="fa fa-check-circle"/>
                    <strong>Reconciled with Bank Statement:</strong>
                    <field name="bank_reconciliation_ref" readonly="1" class="oe_inline"/>
                    <field name="is_bank_reconciled" invisible="1"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>