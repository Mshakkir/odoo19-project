<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the base tax report wizard -->
    <record id="account_report_tax_view" model="ir.ui.view">
        <field name="name">Tax Report Wizard</field>
        <field name="model">account.tax.report.wizard</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_common_report_view"/>
        <field name="arch" type="xml">
            <data>
                <!-- Insert our analytic (warehouse) filter -->
                <xpath expr="//field[@name='target_move']" position="after">
                    <newline/>
                    <field name="analytic_account_ids"
                           widget="many2many_tags"
                           options="{'no_create': True}"/>
                </xpath>
            </data>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_account_tax_menu" model="ir.actions.act_window">
        <field name="name">Tax Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_tax_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move_line"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_tax_report_custom"
              name="Tax Report"
              sequence="30"
              parent="menu_finance_audit_reports"
              action="action_account_tax_menu"
              groups="account.group_account_user,account.group_account_manager"/>
</odoo>



