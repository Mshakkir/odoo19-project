<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="accounting_report_view_inherit" model="ir.ui.view">
        <field name="name">accounting.report.form.inherit.analytic</field>
        <field name="model">accounting.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.accounting_report_view"/>
        <field name="arch" type="xml">

            <!-- Add warehouse selection after account_report_id -->
            <field name="account_report_id" position="after">
                <separator string="Warehouse Selection" colspan="4"/>
                <group>
                    <group>
                        <field name="analytic_filter" widget="radio"/>
                    </group>
                    <group>
                        <field name="show_analytic_breakdown"
                               invisible="analytic_filter != 'all'"
                               help="Show separate columns for each warehouse in the report"/>
                    </group>
                </group>

                <!-- Hidden field to store the analytic account ID -->
                <field name="analytic_account_id" invisible="1"/>
            </field>

        </field>
    </record>
</odoo>