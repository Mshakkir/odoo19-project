<odoo>
    <record id="view_product_history_wizard_form" model="ir.ui.view">
        <field name="name">product.history.wizard.form</field>
        <field name="model">product.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Product History">
                <sheet>
                    <notebook>
                        <page string="Stock Moves">
                            <field name="stock_move_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="location_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Purchase History">
                            <field name="purchase_line_ids">
                                <tree>
                                    <field name="order_id"/>
                                    <field name="partner_id"/>
                                    <field name="product_qty"/>
                                    <field name="price_unit"/>
                                    <field name="date_planned"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sales History">
                            <field name="sale_line_ids">
                                <tree>
                                    <field name="order_id"/>
                                    <field name="partner_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="order_id.date_order"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </record>
</odoo>
