<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_invoice_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.invoice.wizard.form</field>
        <field name="model">stock.picking.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice">
                <group>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="invoice_date" required="1"/>
                    </group>
                    <group>
                        <field name="journal_id" required="1"/>
                    </group>
                </group>
                <group string="Selected Delivery Notes">
                    <field name="picking_ids" nolabel="1" readonly="1">
                        <tree create="false" edit="false" delete="false">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="scheduled_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Create Invoice"
                            name="action_create_invoice"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>