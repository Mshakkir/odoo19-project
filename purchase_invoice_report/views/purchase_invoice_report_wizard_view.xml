<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_invoice_report_wizard_form" model="ir.ui.view">
        <field name="name">purchase.invoice.report.wizard.form</field>
        <field name="model">purchase.invoice.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Invoice Report">
                <group>
                    <group>
                        <label for="all_invoices"/>
                        <div class="o_row">
                            <field name="all_invoices"/>
                            <span invisible="not all_invoices">All Invoices Selected</span>
                        </div>
                        <field name="invoice_ids" widget="many2many_tags"
                               placeholder="Select Invoices..."
                               invisible="all_invoices"
                               required="not all_invoices"/>
                        <field name="invoice_status"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report"
                            string="Apply"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_purchase_invoice_report_wizard" model="ir.actions.act_window">
        <field name="name">By Invoice Number</field>
        <field name="res_model">purchase.invoice.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>







