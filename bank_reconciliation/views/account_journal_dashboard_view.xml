<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Simpler approach: Just add button to journal form view for easy access -->
    <record id="view_account_journal_form_inherit_bank_rec" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.bank.reconciliation</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_bank_statement"
                        type="object"
                        string="Bank Reconciliation"
                        class="btn-primary"
                        invisible="type != 'bank'"/>
            </xpath>
        </field>
    </record>

</odoo>