<odoo>
    <!-- Define the report action -->
    <record id="action_report_purchase_order_custom" model="ir.actions.report">
        <field name="name">Purchase Order Custom</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_order_custom_report.report_purchaseorder_custom_document</field>
        <field name="report_file">purchase_order_custom_report.report_purchaseorder_custom_document</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">'PO - %s' % (object.name)</field>
    </record>
</odoo>

