<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Record Rule: Stock Managers see ALL orderpoints -->
        <record id="stock_warehouse_orderpoint_manager_rule" model="ir.rule">
            <field name="name">Stock Manager: All Orderpoints</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: Regular users see ONLY their assigned warehouse orderpoints -->
        <record id="stock_warehouse_orderpoint_user_rule" model="ir.rule">
            <field name="name">Stock User: Assigned Warehouse Orderpoints Only</field>
            <field name="model_id" ref="stock.model_stock_warehouse_orderpoint"/>
            <field name="domain_force">['|', ('warehouse_id.notification_user_ids', '=', False), ('warehouse_id.notification_user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>