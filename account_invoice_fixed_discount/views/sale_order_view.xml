<odoo>
    <!-- Sale Order Line Tree View -->
    <record id="view_order_form_inherit_discount_fixed" model="ir.ui.view">
        <field name="name">sale.order.form - fixed_discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- Add discount_fixed field after price_unit in tree view -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field
                    name="discount_fixed"
                    groups="account_invoice_fixed_discount.group_fixed_discount"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
</odoo>