<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add warehouse field to purchase order lines -->
    <record id="view_purchase_order_form_warehouse_field" model="ir.ui.view">
        <field name="name">purchase.order.form.warehouse.field</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add warehouse field to the list view of order lines -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="after">
                <field name="warehouse_id"
                       optional="show"
                       readonly="0"
                       force_save="1"
                       widget="many2one"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

            <!-- Add warehouse field to the form view of order lines (popup) -->
            <xpath expr="//field[@name='order_line']/form//field[@name='date_planned']" position="after">
                <field name="warehouse_id"
                       readonly="0"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>

        </field>
    </record>
</odoo>