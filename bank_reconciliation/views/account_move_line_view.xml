<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add statement_date field to move line form -->
    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.bank.reconciliation</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <field name="date_maturity" position="after">
                <field name="statement_date"/>
            </field>
        </field>
    </record>

    <!-- Tree view for bank statement lines -->
    <record id="view_bank_statement_move_line_tree" model="ir.ui.view">
        <field name="name">account.bank.statement.move.line.tree</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <list string="Journal Items" create="false" delete="false">
                <field name="date"/>
                <field name="move_id" optional="hide"/>
                <field name="journal_id" optional="show"/>
                <field name="name"/>
                <field name="ref" optional="show"/>
                <field name="partner_id"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" optional="show"/>
                <field name="amount_currency" optional="hide" groups="base.group_multi_currency"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="date_maturity" optional="hide"/>
                <field name="statement_date"/>
                <field name="company_currency_id" column_invisible="1"/>
                <field name="company_id" column_invisible="1"/>
            </list>
        </field>
    </record>

</odoo>