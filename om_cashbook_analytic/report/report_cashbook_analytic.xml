<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cashbook_analytic_report_template">
        <t t-call="web.html_container">
            <t t-foreach="records" t-as="record">
                <h2>Cashbook Report</h2>
                <p>Date: <t t-esc="data.get('date_from')"/> to <t t-esc="data.get('date_to')"/></p>
                <p>Analytic Accounts: <t t-esc="analytic_accounts"/></p>

                <h3><t t-esc="record.date"/></h3>
                <table class="table table-sm table-hover o_main_table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Journal</th>
                            <th>Account</th>
                            <th>Partner</th>
                            <th>Analytic Account</th>
                            <th>Debit</th>
                            <th>Credit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="record.lines" t-as="line">
                            <tr>
                                <td><t t-esc="line['ldate']"/></td>
                                <td><t t-esc="line['lcode']"/></td>
                                <td><t t-esc="line['account_name']"/></td>
                                <td><t t-esc="line['partner_name'] or ''"/></td>
                                <td><t t-esc="line['analytic_account_name'] or ''"/></td>
                                <td class="text-right"><t t-esc="line['debit']"/></td>
                                <td class="text-right"><t t-esc="line['credit']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <p><strong>Total Debit:</strong> <t t-esc="record.debit"/> |
                   <strong>Total Credit:</strong> <t t-esc="record.credit"/> |
                   <strong>Balance:</strong> <t t-esc="record.balance"/></p>
            </t>
        </t>
    </template>

    <report
        id="report_cashbook_analytic_pdf"
        model="account.daybook.report"
        string="Cashbook Analytic Report"
        report_type="qweb-pdf"
        name="om_cashbook_analytic.cashbook_analytic_report_template"
        file="om_cashbook_analytic.cashbook_analytic_report_template"
    />
</odoo>
