<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Report Wizard Form -->
        <record id="view_report_by_product_wizard_form" model="ir.ui.view">
            <field name="name">report.by.product.wizard.form</field>
            <field name="model">report.by.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Report by Product">
                    <group>
                        <group>
                            <field name="show_all_products"/>
                            <field name="product_ids"
                                   options="{'no_create': True}"
                                   widget="many2many_tags"
                                   invisible="show_all_products"/>
                            <field name="invoice_state"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_apply" string="Apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Product Report Wizard -->
        <record id="action_report_by_product_wizard" model="ir.actions.act_window">
            <field name="name">Product Sales Report</field>
            <field name="res_model">report.by.product.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>