<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="daybook_analytic_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <h2>Daybook Analytic Report</h2>
                <p>Date: <t t-esc="data.get('date_from')"/> to <t t-esc="data.get('date_to')"/></p>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Journal</th>
                            <th>Account</th>
                            <th>Partner</th>
                            <th>Analytic Account</th>
                            <th>Debit</th>
                            <th>Credit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="data.get('lines')" t-as="line_id">
                            <t t-set="line" t-value="env['account.move.line'].browse(line_id)"/>
                            <tr>
                                <td><t t-esc="line.date"/></td>
                                <td><t t-esc="line.journal_id.display_name"/></td>
                                <td><t t-esc="line.account_id.display_name"/></td>
                                <td><t t-esc="line.partner_id.display_name"/></td>
                                <td><t t-esc="line.analytic_account_id.display_name or ''"/></td>
                                <td class="text-right"><t t-esc="line.debit"/></td>
                                <td class="text-right"><t t-esc="line.credit"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>

    <report
        id="report_daybook_analytic_pdf"
        model="daybook.analytic.wizard"
        string="Daybook Analytic Report"
        report_type="qweb-pdf"
        name="daybook_analytic_report.daybook_analytic_report_template"
        file="daybook_analytic_report.daybook_analytic_report_template"
    />
</odoo>
