<odoo>
    <!-- CREDIT NOTE TEMPLATE - COMPLETE -->
    <template id="custom_credit_note_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.move_type == 'out_refund'">
                    <head>
                        <meta charset="UTF-8"/>
                        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
                        <style type="text/css">
                            @import url('https://fonts.googleapis.com/css2?family=Noto+Naskh+Arabic:wght@400;700&amp;display=swap');

                            @page {
                                margin: 20mm;
                            }

                            body {
                                font-family: 'DejaVu Sans', Arial, sans-serif;
                            }

                            @media screen {
                                .header, .footer {
                                    display: none !important;
                                }
                            }

                            .ar {
                                font-family: 'Noto Naskh Arabic', 'DejaVu Sans', Arial, sans-serif !important;
                                direction: rtl;
                                unicode-bidi: bidi-override;
                                font-weight: 700;
                                display: inline-block;
                            }

                            table {
                                width: 100%;
                                border-collapse: collapse;
                            }

                            * {
                                box-sizing: border-box;
                            }
                        </style>
                    </head>

                    <!-- HEADER -->
                    <div class="page">
                        <div class="header" style="border:2px solid white; border-radius: 6px; background: white; margin-bottom: 15px;">
                            <table style="width: 100%; border-collapse: collapse;border:none">
                                <tr>
                                    <td style="width: 50%; padding: 10px 20px; text-align: left; vertical-align: middle; border: 0px;padding-left:0px;">
                                        <div style="color: #8B1538; font-size: 16px; font-weight: bold; text-transform: uppercase;">
                                            SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                        </div>
                                    </td>
                                    <td style="width: 50%; padding: 10px 20px; text-align: right; vertical-align: middle; border: 0px;padding-right:0px;">
                                        <div style="color: #8B1538; font-size: 17px; font-weight: 900; direction: rtl; font-family: 'Tajawal', sans-serif;" class="ar">
                                            شركة سمير شرف العتيبي التجارية
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            <table style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <td style="width: 33%; text-align: left; font-size: 16px; color: #333; vertical-align: top; border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;padding-top:0px;padding-left:0px;">
                                        <div style="line-height: 1.3; font-weight: 500;padding-left:0px;padding-top:0px;margin-top:0px;">
                                            C.R. 4030216154<br/>
                                            VAT Regd: 311299944700003
                                        </div>
                                    </td>
                                    <td style="width: 34%; text-align: center; vertical-align: top; padding: 5px 10px; border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;">
                                        <t t-if="o.company_id.logo">
                                            <img t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 140px; max-width: 100%; object-fit: contain; display: block; margin: -23px auto;padding-top:8px;padding-top:5px;"/>
                                        </t>
                                    </td>
                                    <td style="width: 33%; text-align: right; font-size: 15px; color: #333; vertical-align: top; direction: rtl; padding: 0px 10px 6px 10px; border-top: 1px solid white;border-right: 0px solid white; border-bottom: 2px solid #8B1538;border-left: 1px solid white;">
                                        <div style="line-height: 1.3; font-family: 'Tajawal', sans-serif; font-weight:900; padding-right:0px; margin-top:0px; text-align: right; direction: rtl;" class="ar">
                                            س.ت: ٤٠٣٠٢١٦١٥٤<br/>
                                            الرقم الضريبي: ٣١١٢٩٩٩٤٤٧٠٠٠٠٣<br/>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- FOOTER -->
                    <div class="footer" style="font-size:13px; background:#fff;width:848px;margin-top:10px;padding-top:10px;">
                        <table width="100%" style="border-collapse: collapse; margin-bottom:5px; font-size:10px;">
                            <tr>
                                <td class="ar" style="padding:2px; text-align:left;width:50%;">
                                    Sameer Sharaf Al Otaibi Trading Company<br/>
                                    شركة سمير شرف العتيبي التجارية<br/>
                                    Alrajhi Bank – مصرف الراجحي<br/>
                                    Account Number:رقم الحساب:123000010006080143917<br/>
                                    IBAN: SA7880000123608010143917 :رقم الحساب الدولي
                                </td>
                                <td class="ar" style="padding:2px; text-align:right;width:50%;">
                                    Sameer Sharaf Al Otaibi Trading Company<br/>
                                    شركة سمير شرف العتيبي التجارية<br/>
                                    SNB - Saudi National Bank/البنك الأهلي السعودي<br/>
                                    Account Number at SNB: 13200000678707 :رقم الحساب<br/>
                                    (IBAN): SA2110000013200000678707 :رقم الحساب الدولي
                                </td>
                            </tr>
                        </table>

                        <table width="100%" style="border-collapse: collapse; margin-bottom:5px; font-size:10px;">
                            <tr>
                                <td style="width:33%; padding:4px;border-right: 1px solid black;">
                                    <strong>jeddah:</strong> Jeddah, 7655 Al Fayha Al Fayha Dist. JEDDAH 22244-3108 Saudi Arabia<br/>Tel:<br/>Email:
                                </td>
                                <td style="width:33%; padding:4px;">
                                    <strong>Baladiya:</strong> Sookul Anwar, Al Baladeah, Aziziyah, Jeddah 31303 Tel: 0535081008<br/>Email: ssaoe.dammam@gmail.com
                                </td>
                                <td style="width:33%; padding:4px;border-left: 1px solid black;">
                                    <strong>Dammam:</strong> 8515, Qutaibah bin Muslim ST, Al Souq, Dammam 4525-32242 Saudi Arabia<br/>Tel/Mobile: 0535081008<br/>Email: ssaoe.dammam@gmail.com
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>

                <!-- BODY -->
                <t t-if="o.move_type == 'out_refund'">
                    <t t-call="web.external_layout">
                        <div style="padding-top:5px;">
                            <!-- CREDIT NOTE HEADING -->
                            <div style="background-color:#d3d3d3; color:black; padding:8px; text-align:center; margin-bottom:10px; font-weight:bold; font-size:16px;">
                                Credit Note / <span style="font-weight:900;" class="ar">إشعار دائن</span>
                            </div>
                        </div>

                        <!-- Customer Details -->
                        <div style="border:1px solid #999; margin-bottom:10px; font-size:12px;">
                            <table style="width:100%; border-collapse:collapse;">
                                <tr style="background-color:#d3d3d3;">
                                    <td style="padding:4px 8px; font-weight:bold; border-right:1px solid #999;">
                                        Customer &#160;&#160;&#160;&#160;&#160;&#160;&#160;<span class="ar">العميل</span>
                                    </td>
                                    <t t-if="o.partner_shipping_id and o.partner_shipping_id.id != o.partner_id.id">
                                        <td style="padding:4px 8px; font-weight:bold; width:50%;">
                                            Shipping To &#160;&#160;&#160;&#160;&#160;&#160;&#160;<span class="ar">عنوان الشحن</span>
                                        </td>
                                    </t>
                                </tr>
                                <tr>
                                    <td style="padding:6px 10px; vertical-align:top; border-right:1px solid #999;">
                                        <strong><t t-esc="o.partner_id.name"/></strong><br/>
                                        <t t-if="o.partner_id.street"><t t-esc="o.partner_id.street"/><br/></t>
                                        <t t-if="o.partner_id.street2"><t t-esc="o.partner_id.street2"/><br/></t>
                                        <t t-if="o.partner_id.city or o.partner_id.state_id or o.partner_id.zip">
                                            <t t-if="o.partner_id.city" t-esc="o.partner_id.city"/>
                                            <t t-if="o.partner_id.state_id">, <t t-esc="o.partner_id.state_id.name"/></t>
                                            <t t-if="o.partner_id.zip">- <t t-esc="o.partner_id.zip"/></t><br/>
                                        </t>
                                        <t t-if="o.partner_id.country_id"><t t-esc="o.partner_id.country_id.name"/><br/></t>
                                        <br/><strong>VAT NO:</strong> <t t-esc="o.partner_id.vat or 'N/A'"/>
                                    </td>
                                    <t t-if="o.partner_shipping_id and o.partner_shipping_id.id != o.partner_id.id">
                                        <td style="padding:6px 10px; vertical-align:top; width:50%;">
                                            <strong><t t-esc="o.partner_shipping_id.name"/></strong><br/>
                                            <t t-if="o.partner_shipping_id.street"><t t-esc="o.partner_shipping_id.street"/><br/></t>
                                            <t t-if="o.partner_shipping_id.street2"><t t-esc="o.partner_shipping_id.street2"/><br/></t>
                                            <t t-if="o.partner_shipping_id.city or o.partner_shipping_id.state_id or o.partner_shipping_id.zip">
                                                <t t-if="o.partner_shipping_id.city" t-esc="o.partner_shipping_id.city"/>
                                                <t t-if="o.partner_shipping_id.state_id">, <t t-esc="o.partner_shipping_id.state_id.name"/></t>
                                                <t t-if="o.partner_shipping_id.zip">- <t t-esc="o.partner_shipping_id.zip"/></t><br/>
                                            </t>
                                            <t t-if="o.partner_shipping_id.country_id"><t t-esc="o.partner_shipping_id.country_id.name"/></t>
                                        </td>
                                    </t>
                                </tr>
                            </table>

                            <!-- Credit Note Info -->
                            <table style="width:100%; border-top:1px solid #999; background-color:white; font-weight:bold;">
                                <tr>
                                    <td style="padding:4px 8px;">
                                        Credit Note #: <span t-esc="o.name"/> &#160;&#160;<span style="font-weight:900;" class="ar">رقم الإشعار الدائن</span>
                                    </td>
                                    <td style="padding:4px 8px;">
                                        Date: <span t-esc="o.invoice_date.strftime('%d/%b/%Y') if o.invoice_date else''"/> &#160;&#160;<span style="font-weight:900;" class="ar">التاريخ</span>
                                    </td>
                                    <td style="padding:4px 8px;">
                                        <strong>AWB No:</strong> <span t-if="o.awb_number" t-esc="o.awb_number"/><span t-else="">-</span>
                                    </td>
                                </tr>
                                <tr style="background-color:#FFFFFF;">
                                    <td style="border:1px solid #000; padding:4px; width:33%;">
                                        <strong>Original Invoice:</strong>
                                        <span t-if="o.reversed_entry_id" t-esc="o.reversed_entry_id.name"/>
                                        <span t-else="">-</span>
                                    </td>
                                    <td style="border:1px solid #000; padding:4px; width:33%;">
                                        <strong>Reason:</strong>
                                        <t t-esc="o.ref or o.narration or '-'"/>
                                    </td>
                                    <td style="border:1px solid #000; padding:4px; width:34%;">
                                        <strong>Terms:</strong>
                                        <t t-esc="o.invoice_payment_term_id.name or ''"/>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Calculations -->
                        <t t-set="total_discount_amount" t-value="sum(line.quantity * line.price_unit * (line.discount or 0.0)/100.0 for line in o.invoice_line_ids)"/>
                        <t t-set="subtotal_before_discount" t-value="sum(line.quantity * line.price_unit for line in o.invoice_line_ids)"/>
                        <t t-set="subtotal_after_discount" t-value="subtotal_before_discount - total_discount_amount"/>

                        <!-- Items Table -->
                        <table width="100%" border="1" style="border-collapse:collapse; font-size:13px; text-align:center;">
                            <thead style="background-color:#d9d9d9; color:#080808; font-size:14px;">
                                <tr>
                                    <th>S.N<br/><span style="font-weight:550;font-size:12px;" class="ar">م</span></th>
                                    <th>Item / Description<br/><span style="font-weight:550;font-size:12px;" class="ar">الصنف / الوصف</span></th>
                                    <th>QTY<br/><span style="font-weight:550;font-size:12px;" class="ar">الكمية</span></th>
                                    <th>Unit<br/><span style="font-weight:550;font-size:12px;" class="ar">الوحدة</span></th>
                                    <th>S.Rate<br/><span style="font-weight:550;font-size:12px;" class="ar">سعر الوحدة</span></th>
                                    <th>Amount<br/><span style="font-weight:550;font-size:12px;" class="ar">المبلغ</span></th>
                                    <th>VAT%<br/><span style="font-weight:550;font-size:12px;" class="ar">الضريبة</span></th>
                                    <th>VAT<br/><span style="font-weight:550;font-size:12px;" class="ar">القيمة الضريبة</span></th>
                                    <th>Total Price<br/><span style="font-weight:550;font-size:12px;" class="ar">القيمة الإجمالية</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="enumerate(o.invoice_line_ids, start=1)" t-as="l">
                                    <td style="text-align:center; width:35px; padding: 10px 8px;"><t t-esc="l[0]"/></td>
                                    <td style="text-align:left; width:300px; padding: 10px 12px;">
                                        <t t-if="l[1].product_id.default_code"><span t-esc="l[1].product_id.default_code"/> - </t>
                                        <span t-field="l[1].name"/>
                                    </td>
                                    <td style="width:70px; padding: 10px 8px;"><span t-field="l[1].quantity"/></td>
                                    <td style="width:70px; padding: 10px 8px;"><span t-field="l[1].product_uom_id.name"/></td>
                                    <td style="text-align:center; width:80px; padding: 10px 8px;">
                                        <span t-field="l[1].price_unit" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="text-align:center; width:80px; padding: 10px 8px;">
                                        <t t-set="subt" t-value="l[1].quantity * l[1].price_unit * (1 - (l[1].discount or 0)/100.0)"/>
                                        <span t-esc="subt" t-options='{"widget":"float","precision":2}'/>
                                    </td>
                                    <td style="padding: 10px 8px;">
                                        <t t-if="l[1].tax_ids"><span t-esc="', '.join(str(t.amount) + '%' for t in l[1].tax_ids)"/></t>
                                        <t t-else="">0%</t>
                                    </td>
                                    <td style="text-align:center; padding: 10px 8px;">
                                        <t t-set="vat" t-value="subt * (sum(t.amount for t in l[1].tax_ids)/100.0)"/>
                                        <span t-esc="vat" t-options='{"widget":"float","precision":2}'/>
                                    </td>
                                    <td style="text-align:center; padding: 10px 8px;">
                                        <span t-esc="subt + vat" t-options='{"widget":"float","precision":2}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Signature Table -->
                        <table width="100%" style="margin-top:10px; font-size:13px; border:1px solid #ccc; border-collapse:collapse;">
                            <tr>
                                <td width="30%" style="border:1px solid #ccc; padding:8px; vertical-align:top;">
                                    <strong>Delivered By</strong><br/><span style="font-weight:900;" class="ar">سلمت بواسطة</span>
                                    <div style="height:20px;"></div>
                                    <hr style="border:none; border-top:1px dashed #aaa; margin:5px 0;"/>
                                    <strong>Received By</strong><br/><span style="font-weight:900;" class="ar">المستلم</span>
                                    <div style="height:20px;"></div>
                                </td>
                                <td width="15%" style="border:1px solid #ccc; text-align:center; vertical-align:middle; padding:10px;">
                                    <div style="display:flex; align-items:center; justify-content:center; height:120px;">
                                        <img t-att-src="'/my_invoice_custom/static/src/img/stamp.png'" style="max-height:100%; max-width:100%; object-fit:contain;"/>
                                    </div>
                                </td>
                                <td width="15%" style="border:1px solid #ccc; text-align:center; vertical-align:middle; padding:10px;">
                                    <div style="display:flex; align-items:center; justify-content:center; height:120px;">
                                        <t t-if="o.qr_code_image">
                                            <img t-att-src="'data:image/png;base64,%s' % o.qr_code_image.decode('utf-8')" style="max-height:100%; max-width:100%; object-fit:contain;"/>
                                        </t>
                                    </div>
                                </td>
                                <td width="40%" style="border:1px solid #ccc; padding:6px; vertical-align:top;">
                                    <table width="100%" style="font-size:12px; border-collapse:collapse;">
                                        <tr>
                                            <td style="padding:4px 6px;">Subtotal:</td>
                                            <td style="text-align:right; padding:4px 6px;">
                                                <span t-esc="subtotal_before_discount" t-options='{"widget":"float","precision":2}'/>
                                            </td>
                                        </tr>
                                        <t t-if="total_discount_amount > 0">
                                            <tr>
                                                <td style="padding:4px 6px;">Total Discount:</td>
                                                <td style="text-align:right; padding:4px 6px;">
                                                    <span t-esc="total_discount_amount" t-options='{"widget":"float","precision":2}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td style="padding:4px 6px;">Net Amount:</td>
                                            <td style="text-align:right; padding:4px 6px;">
                                                <span t-esc="o.amount_untaxed" t-options='{"widget":"float","precision":2}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding:4px 6px;">VAT Amount:</td>
                                            <td style="text-align:right; padding:4px 6px;">
                                                <span t-esc="o.amount_tax" t-options='{"widget":"float","precision":2}'/>
                                            </td>
                                        </tr>
                                        <tr style="background:#f5f5f5; font-weight:bold;">
                                            <td style="padding:5px 6px;">Total Refund:</td>
                                            <td style="text-align:right; padding:5px 6px;">
                                                <span t-esc="o.amount_total" t-options='{"widget":"float","precision":2}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid #ccc; padding: 10px; background: #fafafa; font-weight: bold; text-align: center;">
                                    <div style="direction: rtl; line-height:1.5; font-weight:900; font-size: 13px;" class="ar">
                                        فقط <span style="line-height:1.5; font-weight:900;" t-esc="o.amount_to_text_arabic(o.amount_total)" class="ar"/>
                                    </div>
                                    <div style="direction: ltr; margin-top: 5px; font-size: 12px;">
                                        <span t-esc="o.currency_id.with_context(lang='en_US').amount_to_text(o.amount_total)"/> Only
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>