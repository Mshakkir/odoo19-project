<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add CSS to hide category descriptions on all shop pages -->
    <template id="shop_category_hide_description" inherit_id="website.layout" name="Hide Shop Category Descriptions">
        <xpath expr="//head" position="inside">
            <style>
                /* Hide category descriptions on shop/category pages */
                .oe_website_sale .o_wsale_products_section_header_content > p,
                .oe_website_sale .o_not_editable > section > div > p.lead,
                .oe_website_sale .o_not_editable > div > p.lead,
                .oe_website_sale .breadcrumb + section p,
                .oe_website_sale .s_text_block > p:first-of-type,
                div.o_product_list_cat_header > p,
                section.o_wsale_category_header > p {
                    display: none !important;
                }
            </style>
        </xpath>
    </template>
</odoo>