<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bank Book Details Form View -->
    <record id="view_account_bankbook_details_form" model="ir.ui.view">
        <field name="name">account.bankbook.details.form</field>
        <field name="model">account.bankbook.details</field>
        <field name="arch" type="xml">
            <form string="Bank Book Report - Detailed View">
                <sheet>
                    <div class="oe_title">
                        <h1>Bank Book Report - Detailed View</h1>
                    </div>

                    <group>
                        <group>
                            <label for="date_from" string="Date From:"/>
                            <field name="date_from" nolabel="1"/>
                            <label for="date_to" string="Date To:"/>
                            <field name="date_to" nolabel="1"/>
                        </group>

                        <group>
                            <label for="report_type" string="Report Type:"/>
                            <field name="report_type" nolabel="1"/>
                            <div class="o_form_label">Analytic Accounts:</div>
                            <div>All Accounts</div>
                        </group>
                    </group>

                    <!-- Bank Account Summaries -->
                    <group string="Bank Accounts Summary">
                        <field name="account_ids" nolabel="1">
                            <list string="Bank Accounts" create="false" edit="false" delete="false">
                                <field name="account_code" string="Account Code" width="100"/>
                                <field name="account_name" string="Account Name" width="200"/>
                                <field name="subtotal_debit" sum="Total Debit" width="120"/>
                                <field name="subtotal_credit" sum="Total Credit" width="120"/>
                                <field name="subtotal_balance" sum="Total Balance" width="120"/>
                            </list>
                        </field>
                    </group>

                    <!-- All Transaction Lines -->
                    <group string="Transaction Details">
                        <field name="all_line_ids" nolabel="1">
                            <list string="All Transactions"
                                  create="false"
                                  edit="false"
                                  delete="false"
                                  class="o_list_view">

                                <field name="account_code"
                                       string="Account"
                                       optional="show"
                                       width="90"/>

                                <field name="date"
                                       string="Date"
                                       optional="show"
                                       width="70"/>

                                <field name="reference"
                                       string="Reference"
                                       optional="show"
                                       width="170"/>

                                <!-- NEW: Memo column after Reference -->
                                <field name="memo"
                                       string="Memo"
                                       optional="show"
                                       width="150"/>

                                <field name="partner_name"
                                       string="Particulars"
                                       optional="show"
                                       width="190"/>

                                <field name="journal_code"
                                       string="Journal"
                                       optional="show"
                                       width="80"/>

                                <field name="debit"
                                       string="Debit"
                                       sum="Total Debit"
                                       optional="show"
                                       width="90"/>

                                <field name="credit"
                                       string="Credit"
                                       sum="Total Credit"
                                       optional="show"
                                       width="90"/>

                                <!-- Balance with sum total -->
                                <field name="balance"
                                       string="Balance"
                                       sum="Total Balance"
                                       optional="show"
                                       width="90"/>

                                <field name="description"
                                       string="Description"
                                       optional="show"
                                       width="120"/>

                                <field name="analytic_account_names"
                                       string="Analytic"
                                       optional="show"
                                       width="160"/>

                                <field name="move_id" column_invisible="1"/>

                                <button name="action_view_payment"
                                        type="object"
                                        string="Payment"
                                        class="btn-link"
                                        icon="fa-money"
                                        title="View Payment/Journal Entry"/>

                                <button name="action_view_bill"
                                        type="object"
                                        string="Bill"
                                        class="btn-link"
                                        icon="fa-file-text-o"
                                        title="View Related Bill/Invoice"/>
                            </list>
                        </field>
                    </group>

                    <!-- Footer Totals -->
                    <group class="oe_subtotal_footer oe_right" style="margin-top: 20px;">
                        <field name="total_debit" widget="monetary" style="font-weight: bold;"/>
                        <field name="total_credit" widget="monetary" style="font-weight: bold;"/>
                        <field name="total_balance" widget="monetary" style="font-weight: bold;"/>
                    </group>
                </sheet>

                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>









