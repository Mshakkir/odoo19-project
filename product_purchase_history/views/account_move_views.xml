<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_purchase_history" model="ir.ui.view">
        <field name="name">account.move.form.inherit.purchase.history</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add widget to invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="widget">product_purchase_history</attribute>
            </xpath>
        </field>
    </record>
</odoo>