<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_partner_balance" model="ir.ui.view">
        <field name="name">account.payment.form.partner.balance</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <!-- Add partner balance box at top right corner -->
            <xpath expr="//form/sheet" position="inside">
                <div class="partner_balance_box"
                     invisible="not partner_id"
                     style="position: absolute;
                            top: 0px;
                            right: 0px;
                            padding: 10px 15px;
                            min-width: 250px;
                            z-index: 1;">

                    <div style="margin-bottom: 8px;">
                        <label for="partner_total_invoiced"
                               string="Total Invoiced/Billed"
                               style="margin-bottom: 2px; display: block; font-weight: normal; color: #6c757d; font-size: 13px;"/>
                        <button name="action_view_partner_invoices"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="partner_total_invoiced == 0">
                            <field name="partner_total_invoiced"
                                   widget="monetary"
                                   readonly="1"
                                   nolabel="1"
                                   style="color: #007bff;"/>
                        </button>
                        <field name="partner_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               invisible="partner_total_invoiced != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: block;"/>
                    </div>

                    <div style="margin-bottom: 8px;">
                        <label for="partner_total_paid"
                               string="Amount Paid"
                               style="margin-bottom: 2px; display: block; font-weight: normal; color: #6c757d; font-size: 13px;"/>
                        <button name="action_view_partner_payments"
                                type="object"
                                class="btn btn-link p-0"
                                style="text-decoration: underline; font-size: 14px; font-weight: 600;"
                                invisible="partner_total_paid == 0">
                            <field name="partner_total_paid"
                                   widget="monetary"
                                   readonly="1"
                                   decoration-success="partner_total_paid > 0"
                                   nolabel="1"
                                   style="color: #28a745;"/>
                        </button>
                        <field name="partner_total_paid"
                               widget="monetary"
                               readonly="1"
                               invisible="partner_total_paid != 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: block;"/>
                    </div>

                    <div>
                        <label for="partner_balance_due"
                               string="Balance Due"
                               style="margin-bottom: 2px; display: block; font-weight: normal; color: #6c757d; font-size: 13px;"/>
                        <field name="partner_balance_due"
                               widget="monetary"
                               readonly="1"
                               decoration-danger="partner_balance_due > 0"
                               decoration-success="partner_balance_due == 0"
                               nolabel="1"
                               style="font-size: 14px; font-weight: 600; display: block;"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>