<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Delivery Notes List View -->
        <record id="view_picking_delivery_tree_custom" model="ir.ui.view">
            <field name="name">stock.picking.delivery.tree.custom</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="mode">primary</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Delivery Orders"
                          sample="1"
                          decoration-info="state == 'draft'"
                          decoration-muted="state == 'cancel'"
                          decoration-danger="state not in ('cancel', 'done') and scheduled_date &lt; current_date"
                          multi_edit="1">

                        <field name="scheduled_date" string="Scheduled Date"/>
                        <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                        <field name="partner_id" string="Customer" context="{'res_partner_search_mode': 'customer'}"/>
                        <field name="location_id" string="Source Location" optional="show" groups="stock.group_stock_multi_locations"/>
                        <field name="origin" string="Source Document" optional="show"/>
                        <field name="user_id" string="Responsible" optional="show" widget="many2one_avatar_user"/>
                        <field name="backorder_id" string="Backorder" optional="hide"/>
                        <field name="priority" string="Priority" optional="hide" widget="priority"/>
                        <field name="picking_type_id" string="Operation Type" optional="hide"/>
                        <field name="location_dest_id" string="Destination Location" optional="hide" groups="stock.group_stock_multi_locations"/>
                        <field name="state" string="Status" optional="show" widget="badge"
                               decoration-success="state == 'done'"
                               decoration-info="state == 'draft'"
                               decoration-warning="state == 'waiting'"
                               decoration-primary="state in ('confirmed', 'assigned')"/>
                        <field name="date_done" string="Date Done" optional="hide"/>
                        <field name="company_id" string="Company" groups="base.group_multi_company" optional="hide"/>
                        <field name="move_type" string="Shipping Policy" optional="hide"/>
                        <field name="owner_id" string="Owner" optional="hide" groups="stock.group_tracking_owner"/>
                        <field name="activity_ids" string="Next Activity" widget="list_activity" optional="hide"/>
                        <field name="activity_state" string="Activity State" optional="hide" widget="badge"
                               decoration-success="activity_state == 'today'"
                               decoration-warning="activity_state == 'planned'"
                               decoration-danger="activity_state == 'overdue'"/>
                        <field name="activity_user_id" string="Responsible User" optional="hide"/>
                        <field name="activity_type_id" string="Next Activity Type" optional="hide"/>
                        <field name="activity_date_deadline" string="Next Activity Deadline" optional="hide"/>
                        <field name="activity_summary" string="Activity Summary" optional="hide"/>
                        <field name="create_uid" string="Created by" optional="hide"/>
                        <field name="create_date" string="Created on" optional="hide"/>
                        <field name="write_uid" string="Last Updated by" optional="hide"/>
                        <field name="write_date" string="Last Updated on" optional="hide"/>
                        <field name="picking_type_code" invisible="1"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <!-- Custom Action for Delivery Notes -->
        <record id="action_picking_tree_delivery" model="ir.actions.act_window">
            <field name="name">Delivery Notes</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code', '=', 'outgoing')]</field>
            <field name="context">{'search_default_picking_type_code': 'outgoing'}</field>
            <field name="view_id" ref="view_picking_delivery_tree_custom"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new delivery note
                </p>
            </field>
        </record>

        <!-- Menu Item for Delivery Notes -->
        <menuitem
            id="menu_sales_delivery_notes"
            name="Delivery Notes"
            parent="sale.sale_menu_root"
            action="action_picking_tree_delivery"
            sequence="15"
        />

    </data>
</odoo>