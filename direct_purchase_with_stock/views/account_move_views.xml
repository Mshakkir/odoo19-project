<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vendor Bill Form View Inherit -->
    <record id="view_move_form_inherit_direct_purchase" model="ir.ui.view">
        <field name="name">account.move.form.inherit.direct.purchase</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add smart button for receipt/return -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_receipt"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download"
                        invisible="not receipt_id"
                        groups="stock.group_stock_user">
                    <field name="receipt_id" invisible="1"/>
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Receipt/Return</span>
                    </div>
                </button>
            </xpath>

            <!-- Add checkbox after partner_shipping_id (vendor bills) -->
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <label for="create_receipt"
                       string="ðŸ“¦ Auto Create Receipt"
                       invisible="move_type not in ['in_invoice', 'in_refund']"/>
                <div invisible="move_type not in ['in_invoice', 'in_refund']">
                    <field name="create_receipt"
                           widget="boolean_toggle"
                           nolabel="1"/>
                    <div class="text-muted" invisible="not create_receipt">
                        <small>
                            â€¢ Vendor Bill: Creates receipt &amp; adds stock<br/>
                            â€¢ Vendor Refund: Creates return &amp; removes stock
                        </small>
                    </div>
                </div>
            </xpath>

            <!-- Add warehouse field after create_receipt -->
            <xpath expr="//field[@name='create_receipt']" position="after">
                <field name="purchase_warehouse_id"
                       invisible="not create_receipt or move_type not in ['in_invoice', 'in_refund']"
                       options="{'no_create': True, 'no_open': True}"
                       placeholder="Auto-selected from Analytic Account"
                       string="Receiving Warehouse"/>
            </xpath>

        </field>
    </record>

</odoo>