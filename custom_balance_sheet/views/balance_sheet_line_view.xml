<odoo>
    <record id="view_balance_sheet_line_tree" model="ir.ui.view">
        <field name="name">balance.sheet.line.tree</field>
        <field name="model">custom.balance.sheet.line</field>
        <field name="arch" type="xml">
            <list string="Balance Sheet Details">
                <field name="category" />
                <field name="account_id" />
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Total Balance"/>
                <button name="action_view_ledger" string="View Ledger" type="object" icon="fa-book"/>
            </list>
        </field>
    </record>
</odoo>
