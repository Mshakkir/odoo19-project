<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Invoice Form View -->
        <record id="view_move_form_custom_fields" model="ir.ui.view">
            <field name="name">account.move.form.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add fields below Delivery Date in the right column -->
                <xpath expr="//field[@name='invoice_date_due']" position="after">
                    <field name="customer_reference" placeholder="Enter customer reference..."
                           invisible="move_type not in ('out_invoice', 'out_refund')"/>
                    <field name="delivery_note_number" placeholder="Enter delivery note number..."
                           invisible="move_type not in ('out_invoice', 'out_refund')"/>
                </xpath>
            </field>
        </record>

        <!-- Add fields to invoice tree view -->
        <record id="view_invoice_tree_custom_fields" model="ir.ui.view">
            <field name="name">account.move.tree.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="customer_reference" optional="hide"/>
                    <field name="delivery_note_number" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Add search filters for invoices -->
        <record id="view_account_invoice_filter_custom" model="ir.ui.view">
            <field name="name">account.invoice.search.custom.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="customer_reference" string="Customer Reference"
                           filter_domain="[('customer_reference', 'ilike', self)]"/>
                    <field name="delivery_note_number" string="Delivery Note"
                           filter_domain="[('delivery_note_number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>