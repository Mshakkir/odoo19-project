<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the invoice line list view to add our custom widget -->
    <record id="view_invoice_line_form_inherit_purchase_history" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.purchase.history</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add invisible field to trigger our JS service on invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="id" column_invisible="1" class="purchase_history_enabled"/>
            </xpath>
        </field>
    </record>
</odoo>