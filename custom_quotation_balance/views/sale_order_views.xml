<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_customer_balance" model="ir.ui.view">
        <field name="name">sale.order.form.customer.balance</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add balance info box in single line format at top right corner -->
            <xpath expr="//form/sheet" position="inside">
                <div class="customer_balance_box"
                     invisible="not partner_id"
                     style="position: absolute;
                            top: 0px;
                            right: 0px;
                            padding: 8px 15px;
                            min-width: 600px;
                            z-index: 1;
                            white-space: nowrap;">

                    <!-- Single line format -->
                    <span style="color: #6c757d; font-size: 13px; margin-right: 5px;">Total Invoiced:</span>
                    <button name="action_view_customer_invoices"
                            type="object"
                            class="btn btn-link p-0"
                            style="text-decoration: underline; font-size: 14px; font-weight: 600; margin-right: 20px;"
                            invisible="customer_total_invoiced == 0">
                        <field name="customer_total_invoiced"
                               widget="monetary"
                               readonly="1"
                               nolabel="1"
                               style="color: #007bff;"/>
                    </button>
                    <field name="customer_total_invoiced"
                           widget="monetary"
                           readonly="1"
                           invisible="customer_total_invoiced != 0"
                           nolabel="1"
                           style="font-size: 14px; font-weight: 600; margin-right: 20px; display: inline;"/>

                    <span style="color: #6c757d; font-size: 13px; margin-right: 5px;margin-left:5px;">Amount Received:</span>
                    <button name="action_view_customer_payments"
                            type="object"
                            class="btn btn-link p-0"
                            style="text-decoration: underline; font-size: 14px; font-weight: 600; margin-right: 20px;"
                            invisible="customer_total_paid == 0">
                        <field name="customer_total_paid"
                               widget="monetary"
                               readonly="1"
                               decoration-success="customer_total_paid > 0"
                               nolabel="1"
                               style="color: #28a745;"/>
                    </button>
                    <field name="customer_total_paid"
                           widget="monetary"
                           readonly="1"
                           invisible="customer_total_paid != 0"
                           nolabel="1"
                           style="font-size: 14px; font-weight: 600; margin-right: 20px; display: inline;"/>

                    <span style="color: #6c757d; font-size: 13px; margin-right: 5px;margin-left:5px;">Balance Due:</span>
                    <field name="customer_balance_due"
                           widget="monetary"
                           readonly="1"
                           decoration-danger="customer_balance_due > 0"
                           decoration-success="customer_balance_due == 0"
                           nolabel="1"
                           style="font-size: 14px; font-weight: 600; display: inline;"/>
                </div>
            </xpath>

        </field>
    </record>
</odoo>