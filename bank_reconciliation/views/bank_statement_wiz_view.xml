<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="bank_statement_tree" model="ir.ui.view">
        <field name="name">bank.statement.tree</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <list string="Bank Reconciliations">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="gl_balance" widget="monetary"/>
                <field name="bank_balance" widget="monetary"/>
                <field name="balance_difference" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="company_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="bank_statement_wiz" model="ir.ui.view">
        <field name="name">bank.statement.reconciliation</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <form string="Bank Statement Reconciliation">
                <header>
                    <button name="action_load_lines"
                            string="Reload Lines"
                            type="object"
                            class="btn-secondary"
                            invisible="state == 'done'"/>
                    <button name="action_save_reconciliation"
                            string="Save &amp; Close"
                            type="object"
                            class="btn-primary"
                            invisible="state == 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id" readonly="state == 'done'"/>
                            <field name="account_id" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_from" readonly="state == 'done'"/>
                            <field name="date_to" readonly="state == 'done'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Statement Lines">
                            <field name="statement_lines"
                                   nolabel="1"
                                   context="{'tree_view_ref': 'bank_reconciliation.view_bank_statement_move_line_tree', 'readonly': state == 'done'}"/>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right" col="1">
                        <field name="gl_balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="balance_difference" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="bank_balance" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bank_statement_wiz" model="ir.actions.act_window">
        <field name="name">Bank Statement Reconciliation</field>
        <field name="res_model">bank.statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Bank Statement Reconciliation
            </p>
            <p>
                Reconcile your bank transactions by marking the statement date when they appear in your bank statement.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_action_bank_reconciliation"
        name="Bank Reconciliation"
        parent="account.menu_finance"
        action="action_bank_statement_wiz"
        sequence="99"/>

</odoo>



