<odoo>

    <record id="asset_form_add_post_button" model="ir.ui.view">
        <field name="name">asset.form.depreciation.post.button</field>
        <field name="model">account.asset.asset</field>

        <!-- ✅ Correct parent view -->
        <field name="inherit_id"
               ref="om_account_asset.view_account_asset_asset_form"/>

        <field name="arch" type="xml">

            <!-- ✅ SAFE XPath (NO string attribute) -->
            <xpath expr="//page[@name='depreciation_board']//list"
                   position="inside">

                <button name="action_post_depreciation"
                        type="object"
                        string="Post"
                        class="btn-primary"
                        attrs="{'invisible': [('move_id','!=',False)]}"/>

            </xpath>

        </field>
    </record>

</odoo>
