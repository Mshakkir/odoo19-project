<template id="report_saleorder_document_custom_discount">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <div class="page">
            <!-- Your existing report content -->

            <!-- Totals Section -->
            <div class="row mt32 mb32">
                <div class="col-4 ml-auto">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Untaxed Amount</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_untaxed_before_discount"/>
                            </td>
                        </tr>
                        <tr t-if="doc.amount_discount > 0">
                            <td><strong>Discount</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_discount"/>
                            </td>
                        </tr>
                        <tr t-if="doc.amount_discount > 0">
                            <td><strong>Untaxed Amount (After Discount)</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_untaxed_after_discount"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>VAT Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_tax"/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </t>
</template>