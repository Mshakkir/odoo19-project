<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Main Menu -->
        <menuitem id="menu_sales_invoice_reports_root"
                  name="Sales Reports"
                  sequence="100"
                  web_icon="sales_invoice_reports,static/description/icon.png"/>

        <!-- Report Menus - These open wizards first -->
        <menuitem id="menu_product_invoice_report"
                  name="Product Sales Report"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_product_wizard"
                  sequence="10"/>

        <menuitem id="menu_customer_invoice_report"
                  name="Customer Sales Report"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_customer_wizard"
                  sequence="20"/>

        <menuitem id="menu_salesperson_invoice_report"
                  name="Salesperson Sales Report"
                  parent="menu_sales_invoice_reports_root"
                  action="action_report_by_salesperson_wizard"
                  sequence="30"/>

        <!-- PDF Report Menu -->
        <menuitem id="menu_sales_report_by_salesperson"
                  name="Sales Report by Salesperson (PDF)"
                  parent="menu_sales_invoice_reports_root"
                  action="action_sales_report_wizard"
                  sequence="40"/>
    </data>
</odoo>