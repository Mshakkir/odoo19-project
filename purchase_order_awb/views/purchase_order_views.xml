<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Purchase Order Form -->
        <record id="purchase_order_form_awb" model="ir.ui.view">
            <field name="name">purchase.order.form.awb</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <!-- Add AWB fields in header right group after Expected Arrival -->
                <xpath expr="//field[@name='date_planned']" position="after">
                    <label for="awb_number" string="AWB Number"/>
                    <field name="awb_number" nolabel="1" placeholder="Enter AWB Number (e.g., 1234567890)"/>
                    <label for="tracking_status" string="Tracking Status"/>
                    <field name="tracking_status" nolabel="1"/>
                </xpath>

            </field>
        </record>

        <!-- Tree view adjustment if needed -->
        <record id="purchase_order_tree_awb" model="ir.ui.view">
            <field name="name">purchase.order.tree.awb</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total" position="after">
                    <field name="awb_number" optional="show"/>
                    <field name="tracking_status" optional="show"/>
                </field>
            </field>
        </record>

    </data>
</odoo>