<odoo>
    <data>
        <!-- Custom Sales Order Report Template -->
        <template id="custom_salesorder_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <!-- Header -->
                        <div style="text-align:center; margin-bottom:10px;">
                            <h2 style="color:#800000;">Sales Order / أمر البيع</h2>
                            <p><strong>Order Reference:</strong> <span t-esc="o.name"/></p>
                            <p><strong>Date:</strong> <span t-field="o.date_order"/></p>
                        </div>

                        <!-- Customer Information -->
                        <div style="margin-bottom:10px;">
                            <strong>Customer:</strong> <span t-esc="o.partner_id.name"/>
                            <br/>
                            <strong>Address:</strong> <span t-esc="o.partner_id.contact_address"/>
                        </div>

                        <!-- Order Lines Table -->
                        <table class="table table-sm" style="width:100%; border:1px solid black; border-collapse:collapse; font-size:13px;">
                            <thead style="background:#d3d3d3;">
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td><span t-field="line.name"/></td>
                                    <td><span t-field="line.product_uom_qty"/></td>
                                    <td><span t-field="line.price_unit"/></td>
                                    <td><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <div style="text-align:right; margin-top:10px;">
                            <strong>Total: </strong><span t-field="o.amount_total"/> SAR
                        </div>

                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>
