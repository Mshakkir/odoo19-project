<odoo>
    <!-- Extend the sale order line FORM view (popup when you click a line) -->
    <record id="view_order_line_form_discount_fixed" model="ir.ui.view">
        <field name="name">sale.order.line.form.discount.fixed</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount_fixed"
                       groups="account_invoice_fixed_discount.group_fixed_discount"/>
            </field>
        </field>
    </record>

    <!-- Try to add to the tree/list view as well -->
    <record id="view_order_line_tree_discount_fixed" model="ir.ui.view">
        <field name="name">sale.order.line.tree.discount.fixed</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount_fixed"
                       groups="account_invoice_fixed_discount.group_fixed_discount"
                       optional="show"/>
            </field>
        </field>
    </record>
</odoo>