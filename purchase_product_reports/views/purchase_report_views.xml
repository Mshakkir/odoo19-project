<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_purchase_report_list" model="ir.ui.view">
        <field name="name">purchase.report.view.list</field>
        <field name="model">purchase.report.view</field>
        <field name="arch" type="xml">
            <list string="Purchase Invoice Report" create="false" edit="false" delete="false">
                <field name="invoice_date"/>
                <field name="invoice_name"/>
                <field name="product_code"/>
                <field name="product_name"/>
                <field name="analytic_account_ids"/>
                <field name="quantity" sum="Total Qty"/>
                <field name="uom_name"/>
                <field name="price_unit"/>
                <field name="price_total" sum="Grand Total"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_purchase_report_view" model="ir.actions.act_window">
        <field name="name">Purchase Invoice Report</field>
        <field name="res_model">purchase.report.view</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
    </record>
</odoo>