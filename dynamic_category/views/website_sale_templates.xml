<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inject CSS to hide category descriptions on shop pages -->
    <template id="website_layout_hide_shop_desc" inherit_id="website.layout" name="Hide Shop Description CSS">
        <xpath expr="//head" position="inside">
            <style>
                /* Hide category descriptions only on shop/category pages */
                body.oe_website_sale .o_wsale_products_section_header_content {
                    display: none !important;
                    visibility: hidden !important;
                    height: 0 !important;
                    overflow: hidden !important;
                    margin: 0 !important;
                    padding: 0 !important;
                }

                body.oe_website_sale .o_wsale_products_section_header_content * {
                    display: none !important;
                }

                /* Hide all paragraphs that might be category description */
                body.oe_website_sale section > div > p:first-of-type:not(.o_default_snippet_text),
                body.oe_website_sale section > div > h1:first-child + p,
                body.oe_website_sale section > div > p.lead {
                    display: none !important;
                }

                /* Hide category header descriptions */
                body.oe_website_sale section.s_banner > div > p,
                body.oe_website_sale .s_text_block > p:first-child {
                    display: none !important;
                }
            </style>
        </xpath>
    </template>
</odoo>