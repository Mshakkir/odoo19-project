<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Receipt List Display Wizard View -->
    <record id="view_receipt_list_display_wizard_form" model="ir.ui.view">
        <field name="name">receipt.list.display.wizard.form</field>
        <field name="model">receipt.list.display.wizard</field>
        <field name="arch" type="xml">
            <form string="Vendor Payments">
                <sheet>
                    <group>
                        <field name="partner_id" readonly="1" string="Vendor"/>
                    </group>
                    <separator string="Payment History"/>
                    <field name="payment_line_ids" nolabel="1" readonly="1">
                        <list>
                            <field name="date"/>
                            <field name="number"/>
                            <field name="journal_id"/>
                            <field name="payment_method"/>
                            <field name="amount"/>
                            <field name="state"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Receipt List Display Line List View -->
    <record id="view_receipt_list_display_line_list" model="ir.ui.view">
        <field name="name">receipt.list.display.line.list</field>
        <field name="model">receipt.list.display.line</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="date"/>
                <field name="number"/>
                <field name="journal_id"/>
                <field name="payment_method"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Multi Receipt Invoice Line List View -->
    <record id="view_multi_receipt_invoice_line_tree" model="ir.ui.view">
        <field name="name">multi.receipt.invoice.line.list</field>
        <field name="model">multi.receipt.invoice.line</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="0" delete="0" multi_edit="1">
                <field name="wizard_id" column_invisible="1"/>
                <field name="invoice_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="selected" widget="boolean_toggle" force_save="1"/>
                <field name="invoice_number" readonly="1"/>
                <field name="invoice_date" readonly="1"/>
                <field name="amount_total" readonly="1" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_residual" readonly="1" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
                <field name="amount_to_pay" widget="monetary"
                       options="{'currency_field': 'currency_id'}" force_save="1"/>
                <field name="balance_amount" readonly="1" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
            </list>
        </field>
    </record>

    <!-- Multi Receipt Wizard Form View -->
    <record id="view_multi_receipt_wizard_form" model="ir.ui.view">
        <field name="name">multi.receipt.wizard.form</field>
        <field name="model">multi.receipt.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Receipt Against Multiple Bills">
                <sheet>
                    <!-- Vendor summary – top right -->
                    <div invisible="not vendor_id" class="oe_right"
                         style="font-size: 13px; line-height: 2; margin-bottom: 15px;">
                        <div>
                            <span>Total Invoiced = </span>
                            <button name="action_view_vendor_bills" type="object"
                                    class="btn btn-link"
                                    style="padding: 0; font-weight: bold;
                                           text-decoration: none; color: inherit;">
                                <field name="total_invoiced_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       nolabel="1" readonly="1"/>
                            </button>
                        </div>
                        <div>
                            <span>Total Paid = </span>
                            <button name="action_view_vendor_payments" type="object"
                                    class="btn btn-link"
                                    style="padding: 0; font-weight: bold;
                                           text-decoration: none; color: inherit;">
                                <field name="total_amount_paid" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       nolabel="1" readonly="1"/>
                            </button>
                        </div>
                        <div>
                            <span>Balance Due = </span>
                            <field name="total_balance_due" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   nolabel="1" class="oe_inline"
                                   style="font-weight: bold;" readonly="1"/>
                        </div>
                    </div>

                    <group>
                        <group string="Receipt Information">
                            <field name="vendor_id" options="{'no_create': True}"
                                   placeholder="Select vendor..."/>
                            <field name="receipt_date"/>
                            <field name="receipt_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="auto_distribute"
                                   string="Auto Distribute"
                                   widget="boolean_toggle"
                                   invisible="not invoice_line_ids"
                                   help="Automatically distribute receipt amount to bills using FIFO method (First In First Out)"/>
                            <field name="currency_id" invisible="1"/>
                            <button name="action_load_bills"
                                    string="Load Bills"
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-download"
                                    invisible="not vendor_id"
                                    help="Click to load unpaid bills for the selected vendor"/>
                            <button name="action_apply_distribution"
                                    string="Apply Distribution"
                                    type="object"
                                    class="btn-success"
                                    icon="fa-magic"
                                    invisible="not invoice_line_ids"
                                    help="Click to manually apply FIFO distribution"/>
                        </group>
                        <group string="Receipt Details">
                            <field name="journal_id" options="{'no_create': True}"/>
                            <field name="payment_method_line_id"
                                   options="{'no_create': True}"/>
                            <field name="memo"
                                   placeholder="Payment reference or note..."/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="auto_allocate"
                                   string="Display Bills"
                                   widget="boolean_toggle"/>
                        </group>
                        <group/>
                    </group>

                    <notebook>
                        <page string="Bills to Pay" name="bills_page">
                            <div invisible="invoice_line_ids"
                                 class="alert alert-info" role="alert">
                                <p><strong>No bills loaded yet.</strong></p>
                                <p>Please click the "Load Bills" button above to fetch
                                   unpaid bills for the selected vendor.</p>
                            </div>

                            <field name="invoice_line_ids" nolabel="1"
                                   invisible="not invoice_line_ids"/>

                            <group class="oe_subtotal_footer oe_right"
                                   invisible="not invoice_line_ids">
                                <field name="receipt_amount"
                                       string="Receipt Amount"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="1"/>
                                <field name="total_allocated"
                                       string="Total Allocated"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="1"/>
                                <field name="remaining_amount"
                                       string="Remaining Amount"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       readonly="1"
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>

                        <page string="Help" name="help_page">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>How to Use:</h4>
                                    <ol>
                                        <li><strong>Select Vendor:</strong> Choose the vendor you are paying</li>
                                        <li><strong>Enter Receipt Amount:</strong> Enter the exact amount being paid (e.g., 5,000 SR)</li>
                                        <li><strong>Click "Load Bills":</strong> Fetches all unpaid bills for the vendor</li>
                                        <li><strong>Select Receipt Journal:</strong> Choose your bank or cash journal</li>
                                        <li><strong>Allocate Payment:</strong>
                                            <ul>
                                                <li><strong>Auto Distribute (FIFO):</strong> Enable this checkbox to automatically distribute the receipt amount to bills starting from the oldest bill first (First In First Out method)</li>
                                                <li><strong>Manual Selection:</strong> OR manually tick "Pay" and enter amounts per bill</li>
                                                <li>Click OUTSIDE the row after entering amounts to save</li>
                                            </ul>
                                        </li>
                                        <li><strong>Create Payment:</strong> Click "Create Payment"</li>
                                    </ol>
                                    <h4>Tips:</h4>
                                    <ul>
                                        <li><strong>Auto Distribute:</strong> Automatically pays oldest bills first (FIFO method) - great for batch payments!</li>
                                        <li>After payment is created, open the payment record to see
                                            the <strong>"View Bill Allocation"</strong> button</li>
                                        <li>Total allocated cannot exceed receipt amount</li>
                                        <li>Partial payments are fully supported</li>
                                        <li>Use "Apply Distribution" button as a backup if auto-toggle doesn't work</li>
                                    </ul>
                                    <h4>FIFO Method Example:</h4>
                                    <ul>
                                        <li>If you have 3 bills: Bill 1 (Jan 10) = 1000 SR, Bill 2 (Jan 15) = 1500 SR, Bill 3 (Jan 20) = 2000 SR</li>
                                        <li>And you enter receipt amount = 3000 SR</li>
                                        <li>Auto Distribute will allocate: Bill 1 = 1000 SR (fully paid), Bill 2 = 1500 SR (fully paid), Bill 3 = 500 SR (partial)</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_payment"
                            string="Create Payment"
                            type="object"
                            class="btn-primary"
                            invisible="not vendor_id"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Wizard -->
    <record id="action_multi_receipt_wizard" model="ir.actions.act_window">
        <field name="name">Against Payments</field>
        <field name="res_model">multi.receipt.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Main Menu Item in Accounting Top Bar -->
    <menuitem id="menu_multi_receipt_wizard"
              name="Against Payments"
              parent="account.menu_finance"
              action="action_multi_receipt_wizard"
              sequence="11"/>

</odoo>








