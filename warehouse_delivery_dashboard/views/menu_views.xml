<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main Dashboard Menu -->
    <menuitem id="menu_delivery_dashboard_root"
              name="ğŸ“Š Delivery Dashboard"
              action="action_delivery_dashboard"
              parent="stock.menu_stock_root"
              sequence="1"
              groups="stock.group_stock_user"/>

    <!-- Submenu: My Deliveries -->
    <menuitem id="menu_my_pending_deliveries"
              name="My Deliveries"
              action="action_my_pending_deliveries"
              parent="stock.menu_stock_root"
              sequence="2"
              groups="stock.group_stock_user"/>

    <!-- Separator -->
    <menuitem id="menu_delivery_separator"
              name="Quick Filters"
              parent="stock.menu_stock_root"
              sequence="3"
              groups="stock.group_stock_user"/>

    <!-- Quick Filter Actions -->
    <record id="action_pending_deliveries_quick" model="ir.actions.act_window">
        <field name="name">â³ Pending Deliveries</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('picking_type_code','=','outgoing'),('state','in',['confirmed','assigned','waiting']),'|',('warehouse_id','in',uid.warehouse_ids),('warehouse_id','=',uid.default_warehouse_id)]</field>
        <field name="context">{'search_default_pending': 1}</field>
    </record>

    <record id="action_ready_deliveries_quick" model="ir.actions.act_window">
        <field name="name">âœ… Ready to Deliver</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('picking_type_code','=','outgoing'),('state','=','assigned'),'|',('warehouse_id','in',uid.warehouse_ids),('warehouse_id','=',uid.default_warehouse_id)]</field>
    </record>

    <record id="action_urgent_deliveries_quick" model="ir.actions.act_window">
        <field name="name">âš ï¸ Urgent Deliveries</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('picking_type_code','=','outgoing'),('is_urgent','=',True),('state','in',['confirmed','assigned','waiting']),'|',('warehouse_id','in',uid.warehouse_ids),('warehouse_id','=',uid.default_warehouse_id)]</field>
    </record>

    <record id="action_today_deliveries_quick" model="ir.actions.act_window">
        <field name="name">ğŸ“… Today's Deliveries</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('picking_type_code','=','outgoing'),('is_today_delivery','=',True),('state','in',['confirmed','assigned','waiting']),'|',('warehouse_id','in',uid.warehouse_ids),('warehouse_id','=',uid.default_warehouse_id)]</field>
    </record>

    <!-- Menu Items for Quick Filters -->
    <menuitem id="menu_pending_deliveries_quick"
              name="Pending"
              action="action_pending_deliveries_quick"
              parent="menu_delivery_separator"
              sequence="1"
              groups="stock.group_stock_user"/>

    <menuitem id="menu_ready_deliveries_quick"
              name="Ready to Deliver"
              action="action_ready_deliveries_quick"
              parent="menu_delivery_separator"
              sequence="2"
              groups="stock.group_stock_user"/>

    <menuitem id="menu_urgent_deliveries_quick"
              name="Urgent"
              action="action_urgent_deliveries_quick"
              parent="menu_delivery_separator"
              sequence="3"
              groups="stock.group_stock_user"/>

    <menuitem id="menu_today_deliveries_quick"
              name="Today"
              action="action_today_deliveries_quick"
              parent="menu_delivery_separator"
              sequence="4"
              groups="stock.group_stock_user"/>

</odoo>