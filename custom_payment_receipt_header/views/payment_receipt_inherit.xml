<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Override Payment Receipt Header -->
        <template id="payment_receipt_custom_header" inherit_id="account.report_payment_receipt_document">

            <!-- Replace the web.external_layout call -->
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">

