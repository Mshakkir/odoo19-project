<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Profit & Loss Wizard View -->
    <record id="accounting_report_view_profit_loss" model="ir.ui.view">
        <field name="name">Accounting Report - Profit and Loss</field>
        <field name="model">accounting.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.account_common_report_view"/>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">

            <!-- Add custom fields -->
            <field name="target_move" position="before">
                <field name="account_report_id" domain="[('parent_id','=',False)]"/>
            </field>

            <field name="target_move" position="after">
                <field name="enable_filter"/>
                <field name="debit_credit" invisible="enable_filter == True"/>
            </field>

            <field name="journal_ids" position="after">
                <notebook tabpos="up" colspan="4">
                    <page string="Comparison" name="comparison" invisible="enable_filter == False">
                        <group>
                            <field name="label_filter" required="enable_filter == True"/>
                            <field name="filter_cmp"/>
                        </group>
                        <group string="Dates" invisible="filter_cmp != 'filter_date'">
                            <field name="date_from_cmp" required="filter_cmp == 'filter_date'"/>
                            <field name="date_to_cmp" required="filter_cmp == 'filter_date'"/>
                        </group>
                    </page>
                </notebook>
            </field>

            <!-- Insert button safely using XPath -->
            <xpath expr="//footer" position="inside">
                <button name="action_view_profit_loss_details"
                        string="View Details"
                        type="object"
                        class="btn-secondary"
                        icon="fa-list-alt"/>
                <button name="%(custom_bs_pl_module.action_custom_profit_loss_pdf)d"
                        string="Print P and L PDF"
                        type="action"
                        class="btn-primary"
                        icon="fa-print"/>

            </xpath>

        </field>
    </record>

    <!-- Profit & Loss Action -->
    <record id="action_account_report_pl" model="ir.actions.act_window">
        <field name="name">Profit and Loss</field>
        <field name="res_model">accounting.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="accounting_report_view_profit_loss"/>
        <field name="target">new</field>
        <field name="context"
               eval="{'default_account_report_id': ref('accounting_pdf_reports.account_financial_report_profitandloss0')}"/>
    </record>
</odoo>


