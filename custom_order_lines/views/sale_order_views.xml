<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_chatter_position" model="ir.ui.view">
        <field name="name">account.move.form.chatter.position</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="chatter_position">side</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_form_custom_lines" model="ir.ui.view">
        <field name="name">account.move.form.custom.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list" position="replace">
                <list string="Invoice Lines" editable="bottom" limit="200">
                    <field name="display_type" column_invisible="True"/>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="company_id" column_invisible="True"/>
                    <field name="move_id" column_invisible="True"/>

                    <field name="sequence" widget="handle" column_invisible="True"/>

                    <field name="sequence_number" string="SN" readonly="1" optional="show" width="10px"/>

                    <field name="product_code" string="P. Code" optional="show" width="30px" readonly="1"/>

                    <field name="product_id"
                           string="Product"
                           readonly="parent.state != 'draft'"
                           required="not display_type"
                           context="{'default_list_price': price_unit}"
                           options="{'show_label_warning': True}"
                           optional="show"
                           widget="many2one"
                           placeholder="Type to find a product..."
                           width="120px"/>

                    <field name="analytic_distribution"
                           string="Analytic"
                           widget="analytic_distribution"
                           options="{'product_field': 'product_id', 'business_domain': 'purchase', 'amount_field': 'price_subtotal'}"
                           optional="show"
                           groups="analytic.group_analytic_accounting"
                           width="20px"/>

                    <field name="quantity" string="Qty" readonly="parent.state != 'draft'" width="20px" optional="show"/>

                    <field name="product_uom_id"
                           string="Unit"
                           force_save="1"
                           readonly="parent.state != 'draft'"
                           required="not display_type"
                           widget="many2one_uom"
                           groups="uom.group_uom"
                           options="{'no_open': True, 'no_create': True}"
                           width="20px"
                           optional="show"/>

                    <field name="price_unit" string="Price" readonly="parent.state != 'draft'" width="60px" optional="show"/>

                    <field name="tax_ids"
                           string="Tax"
                           widget="many2many_tax_tags"
                           options="{'no_create': True}"
                           context="{'active_test': True}"
                           readonly="parent.state != 'draft'"
                           optional="show"
                           width="20px"/>

                    <field name="discount_fixed"
                           string="Disc"
                           readonly="parent.state != 'draft'"
                           width="30px"
                           optional="show"
                           groups="sale.group_discount_per_so_line"/>

                    <field name="discount" string="Disc%" width="30px" optional="hide" groups="sale.group_discount_per_so_line"/>

                    <field name="price_subtotal" string="Untax Amt" readonly="1" optional="show" width="60px"/>

                    <field name="tax_amount" string="Tax Value" readonly="1" optional="show" width="60px"/>

                    <field name="price_total" string="Total" readonly="1" optional="show" width="60px"/>

                    <field name="name" widget="text" optional="hide" width="200px" invisible="1"/>

                    <field name="account_id" string="Account" readonly="parent.state != 'draft'" required="1" optional="hide" width="80px" invisible="1"/>

                    <field name="warehouse_id" string="Warehouse" optional="hide" width="70px" invisible="1"/>
                </list>
            </xpath>
        </field>
    </record>
</odoo>
