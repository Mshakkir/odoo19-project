<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_notification" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.notification</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add notification indicator -->
            <xpath expr="//field[@name='state']" position="before">
                <field name="is_inter_warehouse_request" invisible="1"/>
            </xpath>

            <!-- Add banner for inter-warehouse requests -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info text-center" role="alert"
                     invisible="not is_inter_warehouse_request or state != 'assigned'">
                    <strong>Inter-Warehouse Request:</strong> This transfer requires approval from the source warehouse.
                </div>
            </xpath>
        </field>
    </record>
</odoo>