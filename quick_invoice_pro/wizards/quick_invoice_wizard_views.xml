<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_quick_invoice_wizard_form" model="ir.ui.view">
            <field name="name">quick.invoice.wizard.form</field>
            <field name="model">quick.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Quick Invoice">
                    <group>
                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="amount_total" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="stock_status" widget="badge"
                                   decoration-success="stock_status == 'available'"
                                   decoration-warning="stock_status == 'partial'"
                                   decoration-danger="stock_status == 'none'"/>
                            <field name="requires_approval" widget="boolean"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Options">
                            <group>
                                <field name="create_draft"/>
                                <field name="force_create"
                                       invisible="stock_status == 'available'"/>
                            </group>
                        </page>

                        <page string="Stock Warning"
                              invisible="stock_status == 'available'">
                            <field name="stock_warning" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>

                    <footer>
                        <button string="Create Invoice"
                                name="action_create_invoice"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                name="action_cancel"
                                type="object"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>