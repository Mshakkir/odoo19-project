        <!-- Add shortcuts banner to invoice form -->
        <record id="view_move_form_shortcuts_banner" model="ir.ui.view">
            <field name="name">account.move.form.shortcuts.banner</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
