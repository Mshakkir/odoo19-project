<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_so_link" model="ir.ui.view">
        <field name="name">account.move.form.inherit.so.link</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add Sales Order field after Customer -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_order_id"
                       options="{'no_create': True}"
                       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>

            <!-- Add Delivery Notes notebook page -->
            <xpath expr="//notebook" position="inside">
                <page string="Related Deliveries"
                      attrs="{'invisible': [('partner_id', '=', False)]}">
                    <field name="delivery_note_ids" mode="tree">
                        <tree string="Delivery Notes" create="false" delete="false">
                            <field name="name"/>
                            <field name="scheduled_date"/>
                            <field name="date_done"/>
                            <field name="origin"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>