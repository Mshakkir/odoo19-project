<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Cron Job to check overdue reconciliations daily -->
    <record id="cron_check_overdue_reconciliations" model="ir.cron">
        <field name="name">Bank Reconciliation: Check Overdue</field>
        <field name="model_id" ref="model_bank_statement"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_overdue_reconciliations()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
<!--        <field name="numbercall">-1</field>-->
        <field name="active" eval="True"/>
    </record>

</odoo>