<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_depreciation_line_tree_post_button" model="ir.ui.view">
        <field name="name">asset.depreciation.line.tree.post.button</field>
        <field name="model">account.asset.depreciation.line</field>

        <!-- âœ… Correct parent view from om_account_asset -->
        <field name="inherit_id"
               ref="om_account_asset.view_asset_depreciation_line_tree"/>

        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <button
                    name="action_post_depreciation"
                    type="object"
                    string="Post"
                    class="btn-primary"
                    attrs="{'invisible': [('move_id', '!=', False)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
