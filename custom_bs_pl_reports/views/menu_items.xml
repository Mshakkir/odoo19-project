<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Balance Sheet Menu -->
    <record id="action_bs_wizard" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">balance.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'report_type':'balance_sheet'}</field>
    </record>

    <menuitem id="menu_bs_wizard"
              name="Balance Sheet"
              parent="account.menu_finance_reports"
              action="action_bs_wizard"
              groups="account.group_account_user,account.group_account_manager"/>

    <!-- Profit & Loss Menu -->
    <record id="action_pl_wizard" model="ir.actions.act_window">
        <field name="name">Profit and Loss</field>
        <field name="res_model">balance.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'report_type':'profit_loss'}</field>
    </record>

    <menuitem id="menu_pl_wizard"
              name="Profit and Loss"
              parent="account.menu_finance_reports"
              action="action_pl_wizard"
              groups="account.group_account_user,account.group_account_manager"/>
</odoo>
