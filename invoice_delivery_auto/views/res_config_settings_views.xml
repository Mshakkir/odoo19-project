<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add settings to Accounting configuration -->
    <record id="res_config_settings_view_form_inherit_invoice_delivery" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.invoice.delivery</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='customer_invoices_settings']" position="inside">
                <h2>Invoice Delivery Automation</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="invoice_auto_create_delivery"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="invoice_auto_create_delivery"/>
                            <div class="text-muted">
                                Automatically create delivery orders when customer invoice is posted (for invoices without sale orders)
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="invoice_auto_validate_delivery"
                                   invisible="not invoice_auto_create_delivery"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="invoice_auto_validate_delivery"
                                   invisible="not invoice_auto_create_delivery"/>
                            <div class="text-muted"
                                 invisible="not invoice_auto_create_delivery">
                                Automatically validate delivery orders created from invoices (if stock is available)
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="invoice_check_stock_availability"
                                   invisible="not invoice_auto_create_delivery"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="invoice_check_stock_availability"
                                   invisible="not invoice_auto_create_delivery"/>
                            <div class="text-muted"
                                 invisible="not invoice_auto_create_delivery">
                                Prevent posting invoice if insufficient stock is available in selected warehouse
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>