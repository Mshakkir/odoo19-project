<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override portal to show custom report -->
    <template id="custom_portal_sale_order" inherit_id="sale.sale_order_portal_content" priority="100">

        <!-- Hide ALL default content sections -->
        <xpath expr="//div[@id='introduction']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <xpath expr="//div[@name='sol_table']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <xpath expr="//div[@id='total']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <xpath expr="//section[@id='signature']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <xpath expr="//section[@id='terms']" position="attributes">
            <attribute name="style">display: none !important;</attribute>
        </xpath>

        <!-- Add CSS and custom report -->
        <xpath expr="//div[@id='content']" position="before">
            <style>
                /* Hide the sidebar completely */
                .o_portal_sale_sidebar,
                aside.o_portal_sidebar {
                    display: none !important;
                }

                /* Make content area full width */
                .o_portal .o_portal_wrap .row > div:not(.o_portal_sale_sidebar) {
                    flex: 0 0 100% !important;
                    max-width: 100% !important;
                }

                /* Full width for custom report */
                .custom-quotation-wrapper {
                    width: 100% !important;
                    max-width: 1200px !important;
                    margin: 0 auto !important;
                    padding: 20px;
                    background: white;
                }

                /* Remove the breadcrumb */
                .breadcrumb {
                    display: none !important;
                }
            </style>

            <!-- TEST: Simple output first -->
            <div class="custom-quotation-wrapper" style="background: white; padding: 20px; min-height: 500px;">
                <h1>TEST - Custom Report Loading...</h1>
                <p>Order: <t t-esc="sale_order.name"/></p>
                <p>Customer: <t t-esc="sale_order.partner_id.name"/></p>

                <hr/>

                <!-- Now try to load the actual custom template -->
                <div style="border: 2px solid red; padding: 10px;">
                    <h3>Trying to load custom template:</h3>
                    <t t-set="o" t-value="sale_order"/>
                    <t t-set="docs" t-value="[sale_order]"/>

                    <!-- Direct content from your PDF template without the wrappers -->
                    <div class="page">
                        <div class="header" style="border:2px solid white; border-radius: 6px; background: white; margin-bottom: 15px;">
                            <table style="width: 100%; border-collapse: collapse;border:none">
                                <tr>
                                    <td style="width: 50%; padding: 10px 20px; text-align: left;">
                                        <div style="color: #8B1538; font-size: 16px; font-weight: bold;">
                                            SAMEER SHARAF AL OTAIBI TRADING COMPANY
                                        </div>
                                    </td>
                                    <td style="width: 50%; padding: 10px 20px; text-align: right;">
                                        <div style="color: #8B1538; font-size: 17px; font-weight: 900; direction: rtl;">
                                            شركة سمير شرف العتيبي التجارية
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            <h2>Order: <t t-esc="o.name"/></h2>
                            <p>Customer: <t t-esc="o.partner_id.name"/></p>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

    </template>
</odoo>