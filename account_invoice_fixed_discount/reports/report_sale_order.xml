<odoo>
    <template id="report_saleorder_document" inherit_id="sale_stock.report_saleorder_document_inherit_sale_stock">

        <!-- Add display_discount_fixed variable -->
        <xpath expr="//t[@t-set='display_discount']" position="after">
            <t t-set="display_discount_fixed"
               t-value="any([l.discount_fixed for l in doc.order_line])" />
        </xpath>

        <!-- Hide original discount column when fixed discount exists -->
        <xpath expr="//th[@name='th_discount']/span" position="attributes">
            <attribute name="t-if">not display_discount_fixed</attribute>
        </xpath>

        <!-- Add new column header -->
        <xpath expr="//th[@name='th_discount']" position="after">
            <th t-if="display_discount_fixed">
                <span>Discount Amount (%)</span>
            </th>
        </xpath>

        <!-- Add fixed discount value BEFORE normal discount -->
        <xpath expr="//span[@t-field='line.discount']" position="before">
            <t t-if="display_discount_fixed">
                <span class="text-nowrap" t-field="line.discount_fixed"/>
                <span class="text-nowrap"> (or </span>
            </t>
        </xpath>

        <!-- Add closing bracket AFTER normal discount -->
        <xpath expr="//span[@t-field='line.discount']" position="after">
            <t t-if="display_discount_fixed">
                <span class="text-nowrap"> %)</span>
            </t>
        </xpath>

    </template>

    <!-- Add global discount to sale order report -->
    <template id="report_saleorder_global_discount" inherit_id="sale.report_saleorder_document">
        <!-- Add before the total table -->
        <xpath expr="//table[@class='o_total_table table table-borderless']" position="before">
            <div t-if="doc.global_discount_fixed" class="clearfix mb-2">
                <div class="row">
                    <div class="col-6 text-end">
                        <strong>Global Discount:</strong>
                    </div>
                    <div class="col-6 text-end">
                        <span t-field="doc.global_discount_fixed"
                              t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>