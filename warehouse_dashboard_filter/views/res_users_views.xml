<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add allowed warehouses field to user form -->
        <record id="view_users_form_warehouse_filter" model="ir.ui.view">
            <field name="name">res.users.form.warehouse.filter</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page name="warehouse_access" string="Warehouse Access">
                        <group>
                            <group>
                                <field name="allowed_warehouse_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <div class="alert alert-info" role="alert">
                            <strong>Note:</strong> If no warehouses are selected, the user will have access to all warehouses in the inventory dashboard.
                            Select specific warehouses to restrict the user's view.
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>