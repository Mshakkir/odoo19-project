<odoo>
    <record id="view_account_summary_wizard_form" model="ir.ui.view">
        <field name="name">account.summary.wizard.form</field>
        <field name="model">account.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Account Summary">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_show_summary" type="object" string="Show Summary" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
                <field name="line_ids">
                    <tree>
                        <field name="account_id"/>
                        <field name="balance"/>
                        <button name="action_open_details" string="Details" type="object"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <!-- Add a menu item and action -->
    <record id="action_account_summary_wizard" model="ir.actions.act_window">
        <field name="name">Account Summary Wizard</field>
        <field name="res_model">account.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_summary_wizard"
              name="Account Summary Wizard"
              parent="menu_finance_audit_reports"
              action="action_account_summary_wizard"/>
</odoo>
