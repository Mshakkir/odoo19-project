<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Delivery button to Invoice and Credit Note form view -->
        <record id="view_move_form_delivery_button" model="ir.ui.view">
            <field name="name">account.move.form.delivery.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add Delivery button in header -->
                <xpath expr="//header" position="inside">
                    <button name="action_view_delivery"
                            string="Return"
                            type="object"
                            class="oe_highlight"
                            invisible="move_type != 'out_refund' or state != 'posted' or delivery_count == 0"
                            groups="stock.group_stock_user"
                            help="Open the original delivery to process return"/>
                </xpath>

                <!-- Add smart button for deliveries -->
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_view_delivery"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_count == 0 or move_type not in ['out_invoice', 'out_refund']"
                            groups="stock.group_stock_user">
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>