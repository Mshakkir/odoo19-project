<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dedicated list view for move lines in bank statement context -->
    <record id="view_move_line_tree_bank_statement" model="ir.ui.view">
        <field name="name">account.move.line.tree.bank.statement</field>
        <field name="model">account.move.line</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <list string="Statement Lines"
                  editable="bottom"
                  default_order="date"
                  decoration-success="statement_date != False"
                  decoration-warning="statement_date == False"
                  create="false"
                  delete="true">
                <field name="date" readonly="1"/>
                <field name="move_id" readonly="1" optional="hide"/>
                <field name="name" readonly="1"/>
                <field name="ref" readonly="1" optional="show"/>
                <field name="partner_id" readonly="1"/>
                <field name="debit" readonly="1" sum="Total Debit"/>
                <field name="credit" readonly="1" sum="Total Credit"/>
                <field name="balance" readonly="1" optional="show" sum="Balance"/>
                <field name="amount_currency" readonly="1" optional="hide" groups="base.group_multi_currency"/>
                <field name="currency_id" readonly="1" column_invisible="1"/>
                <field name="date_maturity" readonly="1" optional="hide"/>
                <field name="statement_date"/>
                <field name="company_currency_id" column_invisible="1" readonly="1"/>
                <field name="company_id" column_invisible="1"/>
                <field name="account_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- List View for Bank Statements with Color Coding -->
    <record id="bank_statement_tree" model="ir.ui.view">
        <field name="name">bank.statement.tree</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <list string="Bank Reconciliations"
                  decoration-success="state == 'cleared' or state == 'done'"
                  decoration-warning="state == 'pending'"
                  decoration-danger="state == 'overdue'"
                  decoration-muted="state == 'draft'">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="gl_balance" widget="monetary"/>
                <field name="bank_balance" widget="monetary"/>
                <field name="balance_difference" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-warning="state == 'pending'"
                       decoration-success="state == 'cleared' or state == 'done'"
                       decoration-danger="state == 'overdue'"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="company_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View with Enhanced Status Management -->
    <record id="bank_statement_wiz" model="ir.ui.view">
        <field name="name">bank.statement.reconciliation</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <form string="Bank Statement Reconciliation">
                <header>
                    <button name="action_load_lines"
                            string="Reload Lines"
                            type="object"
                            class="btn-secondary"
                            invisible="state == 'done'"/>
                    <button name="action_set_pending"
                            string="Mark as Pending"
                            type="object"
                            class="btn-warning"
                            invisible="state != 'draft'"/>
                    <button name="action_set_cleared"
                            string="Mark as Cleared"
                            type="object"
                            class="btn-success"
                            invisible="state not in ('draft', 'pending')"/>
                    <button name="action_save_reconciliation"
                            string="Save &amp; Close"
                            type="object"
                            class="btn-primary"
                            invisible="state == 'done'"/>
                    <button name="action_reopen"
                            string="Reopen"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'done'"
                            groups="account.group_account_manager"/>
                    <button name="action_print_report"
                            string="Print Report"
                            type="object"
                            class="btn-info"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,cleared,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_check_overdue"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-clock-o"
                                invisible="state not in ('draft', 'pending')">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Check</span>
                                <span class="o_stat_text">Overdue</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id" readonly="state == 'done'"/>
                            <field name="account_id" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_from" readonly="state == 'done'"/>
                            <field name="date_to" readonly="state == 'done'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Statement Lines">
                            <field name="line_ids"
                                   nolabel="1"
                                   readonly="state == 'done'"
                                   context="{'tree_view_ref': 'bank_reconciliation.view_move_line_tree_bank_statement'}"/>
                        </page>
                        <page string="Summary">
                            <group>
                                <group string="Balances">
                                    <field name="gl_balance" widget="monetary"/>
                                    <field name="bank_balance" widget="monetary"/>
                                    <field name="balance_difference" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right" col="1">
                        <field name="gl_balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="balance_difference" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="bank_balance" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_statement_wiz" model="ir.actions.act_window">
        <field name="name">Bank Statement Reconciliation</field>
        <field name="res_model">bank.statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Bank Statement Reconciliation
            </p>
            <p>
                Reconcile your bank transactions by marking the statement date when they appear in your bank statement.
            </p>
            <p>
                The color coding helps you identify the status at a glance:
                <ul>
                    <li><span class="text-success">● </span> Green - Cleared/Done</li>
                    <li><span class="text-warning">● </span> Yellow - Pending</li>
                    <li><span class="text-danger">● </span> Red - Overdue (>7 days)</li>
                    <li><span class="text-muted">● </span> Gray - Draft</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_action_bank_reconciliation"
        name="Bank Reconciliation"
        parent="account.menu_finance"
        action="action_bank_statement_wiz"
        sequence="99"/>

</odoo>




