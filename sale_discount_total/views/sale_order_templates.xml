<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited Template for sale order report-->
    <template id="report_saleorder_customized"
              inherit_id="sale.report_saleorder_document">

        <!-- Add total discount row in the totals section -->
        <xpath expr="//div[@id='total']" position="inside">
            <t t-if="doc.amount_discount">
                <div class="row">
                    <div class="col-6">
                        <strong>Total Discount:</strong>
                    </div>
                    <div class="col-6 text-end">
                        <span t-field="doc.amount_discount"
                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>