<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Date Range Input Boxes to Sale Orders List View -->
    <record id="view_sales_order_search_date_inputs" model="ir.ui.view">
        <field name="name">sale.order.search.date.inputs</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">

            <!-- Add date fields as filterable fields in search bar -->
            <xpath expr="//field[@name='name']" position="after">
                <!-- From Date Field -->
                <field name="date_order"
                       string="Order Date From"
                       filter_domain="[('date_order', '&gt;=', self)]"
                       widget="date"/>
                <!-- To Date Field -->
                <field name="date_order"
                       string="Order Date To"
                       filter_domain="[('date_order', '&lt;=', self)]"
                       widget="date"/>
            </xpath>

            <!-- Add convenient quick filters at the end of search -->
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Today" name="filter_today"
                        domain="[('date_order', '&gt;=', datetime.datetime.combine(context_today(), datetime.time.min)),
                                ('date_order', '&lt;=', datetime.datetime.combine(context_today(), datetime.time.max))]"
                        help="Orders from today"/>
                <filter string="This Week" name="filter_this_week"
                        domain="[('date_order', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday()))),
                                ('date_order', '&lt;=', context_today())]"
                        help="Orders from this week"/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('date_order', '&gt;=', (context_today().replace(day=1))),
                                ('date_order', '&lt;=', context_today())]"
                        help="Orders from this month"/>
                <filter string="This Year" name="filter_this_year"
                        domain="[('date_order', '&gt;=', (context_today().replace(month=1, day=1))),
                                ('date_order', '&lt;=', context_today())]"
                        help="Orders from this year"/>
                <separator/>
                <filter string="Last Month" name="filter_last_month"
                        domain="[('date_order', '&gt;=', (context_today().replace(day=1) - datetime.timedelta(days=1)).replace(day=1)),
                                ('date_order', '&lt;', context_today().replace(day=1))]"
                        help="Orders from last month"/>
                <filter string="Last Year" name="filter_last_year"
                        domain="[('date_order', '&gt;=', datetime.date(context_today().year - 1, 1, 1)),
                                ('date_order', '&lt;', datetime.date(context_today().year, 1, 1))]"
                        help="Orders from last year"/>
            </xpath>

        </field>
    </record>

</odoo>