<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================== -->
    <!-- Hide header & footer on portal quotation page -->
    <!-- ===================================================== -->
    <template id="portal_layout_hide_header_footer"
              inherit_id="portal.portal_layout"
              priority="200">

        <xpath expr="." position="inside">
            <t t-if="'/my/orders/' in request.httprequest.path">
                <style>
                    header,
                    .o_portal_navbar,
                    .o_main_navbar,
                    footer,
                    .o_footer {
                        display: none !important;
                    }

                    .o_portal_wrap,
                    main {
                        margin-top: 0 !important;
                        padding-top: 0 !important;
                    }
                </style>
            </t>
        </xpath>
    </template>

    <!-- ===================================================== -->
    <!-- REPLACE portal quotation content -->
    <!-- ===================================================== -->
    <template id="custom_portal_sale_order"
              inherit_id="sale.sale_order_portal_content"
              priority="300">

        <!-- Replace everything -->
        <xpath expr="." position="replace">

            <t t-set="o" t-value="sale_order"/>
            <t t-set="docs" t-value="[sale_order]"/>

            <!-- Call your custom Saudi quotation -->
            <t t-call="custom_sa_quotation.custom_saleorder_report"/>

        </xpath>

    </template>

</odoo>
