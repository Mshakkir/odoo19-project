<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_warehouse_transfer_request_tree" model="ir.ui.view">
        <field name="name">warehouse.transfer.request.tree</field>
        <field name="model">warehouse.transfer.request</field>
        <field name="arch" type="xml">
            <tree string="Transfer Requests" decoration-info="state=='draft'"
                  decoration-warning="state=='submitted'" decoration-success="state=='received'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="user_id"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-warning="state=='submitted'"
                       decoration-primary="state=='approved'"
                       decoration-muted="state=='in_transit'"
                       decoration-success="state=='received'"
                       decoration-danger="state=='rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_warehouse_transfer_request_form" model="ir.ui.view">
        <field name="name">warehouse.transfer.request.form</field>
        <field name="model">warehouse.transfer.request</field>
        <field name="arch" type="xml">
            <form string="Transfer Request">
                <header>
                    <button name="action_submit" string="Submit Request" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object"
                            class="oe_highlight" invisible="state != 'submitted'"
                            groups="stock.group_stock_manager"/>
                    <button name="action_reject" string="Reject" type="object"
                            invisible="state != 'submitted'"
                            groups="stock.group_stock_manager"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state not in ['draft', 'submitted']"/>
                    <button name="action_view_delivery" string="View Delivery" type="object"
                            class="oe_highlight" invisible="not delivery_picking_id"/>
                    <button name="action_view_receipt" string="View Receipt" type="object"
                            class="oe_highlight" invisible="not receipt_picking_id"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,in_transit,received"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_delivery" type="object"
                                class="oe_stat_button" icon="fa-truck"
                                invisible="not delivery_picking_id">
                            <field name="delivery_picking_id" widget="statinfo"
                                   string="Delivery"/>
                        </button>
                        <button name="action_view_receipt" type="object"
                                class="oe_stat_button" icon="fa-sign-in"
                                invisible="not receipt_picking_id">
                            <field name="receipt_picking_id" widget="statinfo"
                                   string="Receipt"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="source_warehouse_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="dest_warehouse_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="transit_location_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Products" name="products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                           options="{'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="available_qty"
                                           string="Available in Source"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Additional Information" name="info">
                            <group>
                                <field name="notes" placeholder="Add any special instructions or notes..."/>
                                <field name="rejection_reason"
                                       invisible="state != 'rejected'"
                                       readonly="state != 'submitted'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_warehouse_transfer_request_search" model="ir.ui.view">
        <field name="name">warehouse.transfer.request.search</field>
        <field name="model">warehouse.transfer.request</field>
        <field name="arch" type="xml">
            <search string="Transfer Requests">
                <field name="name" string="Request Number"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted"
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="In Transit" name="in_transit"
                        domain="[('state', '=', 'in_transit')]"/>
                <filter string="Received" name="received"
                        domain="[('state', '=', 'received')]"/>
                <separator/>
                <filter string="Request Date" name="request_date"
                        date="request_date"/>
                <group expand="0" string="Group By">
                    <filter string="Source Warehouse" name="group_source"
                            context="{'group_by': 'source_warehouse_id'}"/>
                    <filter string="Destination Warehouse" name="group_dest"
                            context="{'group_by': 'dest_warehouse_id'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Requested By" name="group_user"
                            context="{'group_by': 'user_id'}"/>
                    <filter string="Request Date" name="group_date"
                            context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_warehouse_transfer_request_kanban" model="ir.ui.view">
        <field name="name">warehouse.transfer.request.kanban</field>
        <field name="model">warehouse.transfer.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="user_id"/>
                <field name="request_date"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge" t-attf-class="badge-#{record.state.raw_value === 'received' ? 'success' : record.state.raw_value === 'rejected' ? 'danger' : 'primary'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="source_warehouse_id"/> â†’ <field name="dest_warehouse_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="request_date" widget="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_warehouse_transfer_request" model="ir.actions.act_window">
        <field name="name">Transfer Requests</field>
        <field name="res_model">warehouse.transfer.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_requests': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new transfer request
            </p>
            <p>
                Request products from other warehouses. The system will automatically
                handle the transfer process with notifications.
            </p>
        </field>
    </record>

</odoo>