<odoo>
    <record id="purchase_order_form_inherit_history_popup" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.history.popup</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <button name="open_purchase_history_popup"
                        string="History"
                        type="object"
                        icon="fa-history"
                        attrs="{'invisible': [('product_id', '=', False)]}"/>
            </xpath>

        </field>
    </record>
</odoo>
